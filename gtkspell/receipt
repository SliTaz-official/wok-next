# SliTaz package receipt v2.

PACKAGE="gtkspell"
VERSION="2.0.16"
CATEGORY="development"
SHORT_DESC="Provides highlighting and replacement of misspelled words"
MAINTAINER="allan316@gmail.com"
LICENSE="GPL2"
WEB_SITE="http://gtkspell.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/download/$TARBALL"

BUILD_DEPENDS="gtk+-dev enchant-dev intltool"
SPLIT="gtkspell-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		gtkspell)
			copy @std
			DEPENDS="enchant glib gtk+"
			;;
		*-dev)
			copy @dev
			DEPENDS="gtkspell enchant-dev gtk+-dev"
			;;
	esac
}
