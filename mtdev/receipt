# SliTaz package receipt v2.

PACKAGE="mtdev"
VERSION="1.1.5"
CATEGORY="development"
SHORT_DESC="Multitouch Protocol Translation Library"
MAINTAINER="mojo@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://bitmath.org/code/mtdev/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/mtdev.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$WEB_SITE$TARBALL"

SPLIT="mtdev-dev"

compile_rules() {
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		mtdev) copy @std;;
		*-dev) copy @dev;;
	esac
}
