# SliTaz package receipt v2.

PACKAGE="libedit"
VERSION="3.0"
CATEGORY="misc"
SHORT_DESC="Berkeley-style licensed command line editor library"
MAINTAINER="domcox@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://www.thrysoee.dk/editline/"

TARBALL="libedit-20100424-$VERSION.tar.gz"
WGET_URL="http://www.thrysoee.dk/editline/$TARBALL"

BUILD_DEPENDS="gettext"
SPLIT="libedit-dev"

compile_rules() {
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--enable-widec \
		$CONFIGURE_ARGS \
	&& make
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		libedit)
			copy @std
			TAGS="cli editor library"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
