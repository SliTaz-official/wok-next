# SliTaz package receipt.

PACKAGE="perl-net-telnet"
VERSION="3.04"
CATEGORY="perl"
SHORT_DESC="Net::Telnet - interact with TELNET port or other TCP ports"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Net-Telnet"
REPOLOGY="perl:net-telnet"

TARBALL="Net-Telnet-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/J/JR/JROGERS/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
