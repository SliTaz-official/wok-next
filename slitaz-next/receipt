# SliTaz package receipt v2.

PACKAGE="slitaz-next"
VERSION="170912"
CATEGORY="customization"
SHORT_DESC="SliTaz Next customization"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="BSD"
WEB_SITE="http://www.slitaz.org/"

compile_rules() {
	mkdir -p $install
	cp -a $stuff/* $install
	chown -R root:root $install
}

genpkg_rules() {
	copy @std
}

post_install() {
	sed -i 's|<name>SliTaz</name>|<name>OB-Flat-black</name>|' "$1/etc/xdg/openbox/rc.xml"
	rm -f $1/usr/share/images/slitaz-background_2.jpg
}
