# SliTaz package receipt v2.

PACKAGE="acl"
VERSION="2.2.52"
CATEGORY="system-tools"
SHORT_DESC="Commands for Manipulating POSIX Access Control Lists"
MAINTAINER="rcx@zoominternet.net"
LICENSE="LGPL2.1 GPL2"
WEB_SITE="http://savannah.nongnu.org/projects/acl/"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$VERSION.src.tar.gz"
WGET_URL="http://download.savannah.gnu.org/releases/$PACKAGE/$TARBALL"

BUILD_DEPENDS="attr-dev bash libtool gettext"
BUILD_DEPENDS_arm="attr-dev"
SPLIT="acl-dev"

# Rules to configure and make the package.
compile_rules()
{
	rm /bin/rpm
	sed -i -e 's|/@pkg_name@|&-@pkg_version@|' include/builddefs.in

	./configure \
		--bindir=/bin \
		--disable-static \
		--libexecdir=/usr/lib \
		$CONFIGURE_ARGS &&
	make &&
	make install install-lib install-dev DIST_ROOT=$DESTDIR

	mkdir $install/lib
	mv -v $install/usr/lib/libacl.so.* $install/lib
	ln -sfv ../../lib/$(readlink $install/usr/lib/libacl.so) \
		$install/usr/lib/libacl.so
	find $install -type f \( -name '*.so*' -o -name '*.la' \) \
		-exec chmod 755 \{\} \;

}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		acl)
			copy @std
			DEPENDS="attr"
			;;
		acl-dev)
			copy @dev
			DEPENDS="acl attr-dev"
			;;
	esac
}
