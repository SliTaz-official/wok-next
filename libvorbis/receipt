# SliTaz package receipt v2.

PACKAGE="libvorbis"
VERSION="1.3.5"
CATEGORY="multimedia"
SHORT_DESC="Vorbis base library"
MAINTAINER="pankso@slitaz.org"
LICENSE="other"
WEB_SITE="http://www.xiph.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://downloads.xiph.org/releases/vorbis/$TARBALL"

BUILD_DEPENDS="libogg-dev"
SPLIT="libvorbis-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure $CONFIGURE_ARGS && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		libvorbis) copy @std; DEPENDS="libogg";;
		*-dev)     copy @dev; DEPENDS="libvorbis libogg-dev";;
	esac
}
