# SliTaz package receipt v2.

PACKAGE="xorg-xextproto"
VERSION="7.3.0"
CATEGORY="development"
SHORT_DESC="XExt extension headers"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7proto.html"
REPOLOGY="xextproto"

TARBALL="xextproto-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/proto/$TARBALL"

BUILD_DEPENDS="xorg-util-macros coreutils-file-special" # for mkdir

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @dev
	DEPENDS="xorg-util-macros"
}
