# SliTaz package receipt.

PACKAGE="perl-devel-stacktrace"
VERSION="2.03"
CATEGORY="perl"
SHORT_DESC="Devel::StackTrace - An object representing a stack trace"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Devel-StackTrace"

TARBALL="Devel-StackTrace-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DR/DROLSKY/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
