BUILD_DEPENDS="symlinks"

compile_rules() {
	icodir="$install/usr/share/icons/Obsidian"
	mkdir -p $icodir
	cp -r $src/cursors $src/index.theme $icodir
	. $stuff/symdup.sh
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libXcursor"
	TAGS="cursor-theme"
}
