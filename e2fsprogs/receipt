# SliTaz package receipt v2.

PACKAGE="e2fsprogs"
VERSION="1.43.4"
CATEGORY="base-system"
SHORT_DESC="Filesystem utilities for use with ext2 and ext3"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://e2fsprogs.sourceforge.net/"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="util-linux-uuid-dev util-linux-blkid-dev gettext attr-dev \
acl-dev texinfo"
BUILD_DEPENDS_arm=" "
SPLIT="libcomerr libcomerr-dev e2fsprogs-dev e2fsprogs-fsck"

# Rules to configure and make the package.
compile_rules()
{
	sed -i -e 's:\[\.-\]::' tests/filter.sed
	mkdir ../build && cd ../build

	$src/configure \
		--bindir=/bin \
		--sysconfdir=/etc \
		--with-root-prefix="" \
		--enable-elf-shlibs \
		--disable-libblkid \
		--disable-libuuid \
		--disable-uuidd \
		--disable-fsck \
		$CONFIGURE_ARGS &&
	make && make install && make install-libs

	for i in libcom_err libe2p libext2fs libss; do
		chmod u+w $install/usr/lib/$i.a
	done

	# Make .info usable
	gunzip $install/usr/share/info/libext2fs.info.gz
	install-info --dir-file=$install/usr/share/info/dir \
		$install/usr/share/info/libext2fs.info

	# Additional documentation
	makeinfo -o      $src/doc/com_err.info $src/lib/et/com_err.texinfo
	install -m644 $src/doc/com_err.info $install/usr/share/info
	install-info --dir-file=$install/usr/share/info/dir \
		$install/usr/share/info/com_err.info

	# Remove illegal symbol '\b'
	sed -i 's|\\b||' $src/po/de.po
	msgfmt $src/po/de.po -o $src/po/de.gmo
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		e2fsprogs)
			copy bin/ sbin/ etc/ *.so*
			find $fs -name '*com_err*' -delete
			# Remove fsck provided by Busybox.
			rm $fs/sbin/fsck*
			DEPENDS="libcomerr util-linux-blkid util-linux-uuid"
			;;
		e2fsprogs-dev)
			copy @dev *.awk *.sed
			find $fs \( -name com_err.h -o -name libcom_err.a -o -name com_err.pc \) -delete
			DEPENDS="libcomerr-dev pkg-config"
			;;
		libcomerr)
			copy libcom_err.so*
			CAT="base-system|libcomerr library"
			DEPENDS=" "
			;;
		libcomerr-dev)
			copy libcom_err.a com_err.h com_err.pc
			CAT="development|libcomerr development files"
			DEPENDS="pkg-config"
			;;
		e2fsprogs-fsck)
			copy fsck.*
			rm -r $fs/usr
			CAT="system-tools|fsck tools"
			DEPENDS="e2fsprogs libcomerr util-linux-blkid util-linux-uuid"
			;;
	esac
}

# Overlap busybox
pre_install_e2fsprogs()
{
	rm -f $1/sbin/tune2fs
}
