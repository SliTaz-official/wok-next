# SliTaz package receipt v2.

PACKAGE="gtkglext"
VERSION="1.2.0"
CATEGORY="x-window"
SHORT_DESC="OpenGL extension to GTK+"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://projects-old.gnome.org/gtkglext/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="gtk2-dev glu glu-dev mesa-dev \
util-linux-uuid-dev autoconf pangox-compat-dev expat-dev xorg-libxshmfence-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	autoconf --force
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	case $PACKAGE in
		gtkglext)
			copy @std
			DEPENDS="gtk2 mesa glu pangox-compat"
			SUGGESTED="nvidia"
			;;
		*-dev)
			copy @dev
			DEPENDS="gtkglext pangox-compat-dev"
			;;
	esac
}
