# SliTaz package receipt v2.

PACKAGE="xorg-xf86-input-evdev"
VERSION="2.10.6"
CATEGORY="x-window"
SHORT_DESC="Generic Linux input driver"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7driver.html#xorg-evdev-driver"
REPOLOGY="xdrv:evdev"

TARBALL="xf86-input-evdev-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

# ARM use build system xorg-server-dev or manually install it in sysroot
BUILD_DEPENDS_arm="udev-dev"
BUILD_DEPENDS="xorg-util-macros xorg-server-dev \
xorg-xorgproto eudev-dev libevdev-dev mtdev-dev"
SPLIT="xorg-xf86-input-evdev-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-evdev)
			copy @std
			DEPENDS="eudev libevdev mtdev"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
