# SliTaz package receipt v2.

PACKAGE="python-dulwich"
VERSION="latest"
CATEGORY="development"
SHORT_DESC="Git files formats and protocols for Python"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://pypi.org/project/dulwich/"
REPOLOGY="python:dulwich"

BUILD_DEPENDS="python-dev python-urllib3 python-certifi"

compile_rules() {
	pip install --no-compile --root=$DESTDIR dulwich
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*dulwich-||p' $LOGS/$PACKAGE.log)
	copy @std @dev
	DEPENDS="python python-urllib3 python-certifi"
}
