# SliTaz package receipt v2.

PACKAGE="libsdl-image"
VERSION="1.2.12"
CATEGORY="development"
SHORT_DESC="An image file loading library"
MAINTAINER="devel@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://www.libsdl.org/projects/SDL_image/release-1.2.html"
REPOLOGY="sdl-image"

TARBALL="SDL_image-$VERSION.tar.gz"
WGET_URL="http://www.libsdl.org/projects/SDL_image/release/$TARBALL"

BUILD_DEPENDS="libsdl-dev libjpeg-turbo-dev libpng16-dev tiff-dev libwebp-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libsdl-image)
			copy @std
			DEPENDS="libsdl"
			;;
		*-dev)
			copy @dev
			DEPENDS="libsdl-image libsdl-dev"
			;;
	esac
}
