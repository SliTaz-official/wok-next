# SliTaz package receipt v2.

PACKAGE="stuntman"
VERSION="1.2.13"
CATEGORY="network"
SHORT_DESC="STUN protocol (Session Traversal Utilities for NAT)"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="Apache"
WEB_SITE="http://www.stunprotocol.org/"

TARBALL="stunserver-$VERSION.tgz"
WGET_URL="${WEB_SITE}$TARBALL"

BUILD_DEPENDS="libboost-dev openssl-dev zlib-dev"

# Rules to configure and make the package.
compile_rules()
{
	make

	mkdir -p $install/usr/bin
	cp -a stunserver stunclient stuntestcode $install/usr/bin
	cook_pick_manpages resources/stunclient.1 resources/stunserver.1
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
	DEPENDS="openssl zlib"
}

