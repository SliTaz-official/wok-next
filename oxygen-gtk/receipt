# SliTaz package receipt v2.

PACKAGE="oxygen-gtk"
VERSION="1.4.5"
CATEGORY="customization"
SHORT_DESC="Port of the default KDE widget theme (Oxygen) to GTK"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://projects.kde.org/projects/playground/artwork/oxygen-gtk"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
BRANCH="$VERSION"
WGET_URL="git|git://anongit.kde.org/oxygen-gtk"

BUILD_DEPENDS="git cmake xorg-libX11-dev gtk2-dev"

compile_rules() {
	mkdir build
	cd    build
	cmake .. &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="cairo gdk-pixbuf glib gtk2 pango xorg-libX11"
}
