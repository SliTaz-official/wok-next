# SliTaz package receipt v2.

PACKAGE="vcdimager"
VERSION="0.7.24"
CATEGORY="multimedia"
SHORT_DESC="vcd tools"
MAINTAINER="jozee@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://www.vcdimager.org/" 
WGET_URL="$GNU_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="libcdio libcdio-dev libxml2-dev popt-dev gfortran"
SPLIT="vcdimager-xmltools vcdimager vcdimager-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		vcdimager)
			copy vcdimager
			DEPENDS="libcdio libxml2 popt"
			TAGS="multimedia video vcd"
			;;
		vcdimager-xmltools)
			copy @std @rm
			DEPENDS="vcdimager"
			CAT="multimedia|vcd xml and diagnostic tools"
			TAGS="vcd"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
