# SliTaz package receipt v2.

PACKAGE="libav"
VERSION="0.6.1"
CATEGORY="multimedia"
SHORT_DESC="Open source audio and video processing tools"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2 GPL3 LGPL2.1 LGPL3"
WEB_SITE="https://www.libav.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="git|git://github.com/andoma/libav.git"
BRANCH="v$VERSION"

BUILD_DEPENDS="git coreutils-file-format \
libsdl-dev faac-dev faad2-dev lame-dev nut opencore-amr-dev openjpeg-dev \
netatalk-dev schroedinger-dev speex-dev libtheora-dev libvorbis-dev \
libvpx-dev x264 xvidcore-dev \
zlib-dev bzlib binutils "
SPLIT="$PACKAGE-dev"

compile_rules() {
	case $ARCH in
		i?86) ARCH_ARGS='--arch=i486 --cpu=i486';;
		*)    ARCH_ARGS='';;
	esac

	sed -i 's|config.h"|&\n#include "libavformat/internal.h"\n#include "libavutil/common.h"|' ffserver.c
	./configure \
		--prefix=/usr \
		--enable-shared \
		--enable-gpl \
		--enable-nonfree \
		--enable-runtime-cpudetect \
		--disable-doc \
		--enable-postproc \
		--enable-avfilter \
		--enable-avfilter-lavf \
		--enable-pthreads \
		--enable-x11grab \
		--disable-debug \
		$ARCH_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libav)
			copy @std
			DEPENDS="libsdl zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="libav zlib-dev"
			;;
	esac
}
