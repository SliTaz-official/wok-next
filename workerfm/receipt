# SliTaz package receipt v2.

PACKAGE="workerfm"
VERSION="2.19.6"
CATEGORY="system-tools"
SHORT_DESC="A light and easy to use file manager"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL2"
WEB_SITE="http://www.boomerangsworld.de/cms/worker/"

TARBALL="worker-$VERSION.tar.bz2"
WGET_URL="$WEB_SITE/downloads/$TARBALL"

BUILD_DEPENDS="avfs-dev dbus-glib-dev freetype-dev hal-dev libmagic-dev \
xorg-libX11-dev xorg-libXft-dev xorg-libXinerama-dev"

compile_rules() {
	./configure \
		--disable-silent-rules \
		$CONFIGURE_ARGS &&
	make && make install
}

genpkg_rules() {
	copy @std
	DEPENDS="avfs dbus-glib freetype hal libmagic xorg-libX11 xorg-libXft \
	xorg-libXinerama xorg-xmessage"
}
