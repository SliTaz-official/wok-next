# SliTaz package receipt v2.

PACKAGE="fakeroot"
VERSION="1.15.1"
CATEGORY="development"
SHORT_DESC="Gives a fake root environment, useful for building packages as a \
non-privileged user"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL2"
WEB_SITE="http://packages.debian.org/fakeroot"

TARBALL="${PACKAGE}_${VERSION}.orig.tar.bz2"
WGET_URL="http://ftp.debian.org/debian/pool/main/f/$PACKAGE/$TARBALL"

compile_rules() {
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
}
