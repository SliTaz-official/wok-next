# SliTaz package receipt v2.

PACKAGE="libdbusmenu-gtk2"
VERSION="16.04.0"
CATEGORY="x-window"
SHORT_DESC="Library for passing menus over DBus (GTK+2)"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3 LGPL2.1 LGPL3"
WEB_SITE="https://launchpad.net/libdbusmenu"

TARBALL="libdbusmenu-$VERSION.tar.gz"
WGET_URL="https://launchpad.net/libdbusmenu/${VERSION%.*}/$VERSION/+download/$TARBALL"

BUILD_DEPENDS="intltool gtk-doc gtk+-dev gtk+-dev json-glib-dev \
gobject-introspection-dev vala"
SPLIT="libdbusmenu-gtk2-apps libdbusmenu-gtk2 libdbusmenu-gtk2-dev"
SIBLINGS="libdbusmenu-gtk3"

compile_rules() {
	./configure \
		--with-gtk=2 \
		$CONFIGURE_ARGS &&
	make &&
	make -j1 DESTDIR=$install install # please keep DESTDIR, or it will be partial installed
}

genpkg_rules() {
	case $PACKAGE in
		libdbusmenu-gtk2-apps)
			copy libexec/
			DEPENDS="libdbusmenu-gtk2 xorg-libX11"
			CAT="development|applications"
			;;
		libdbusmenu-gtk2)
			copy @std @rm
			DEPENDS="atk cairo fontconfig freetype gdk-pixbuf glib gtk+ \
			json-glib pango"
			;;
		*-dev)
			copy @dev
			DEPENDS="${SPLIT/$PACKAGE/} atk-dev bzip2-dev cairo-dev \
			fontconfig-dev freetype-dev gdk-pixbuf-dev glib-dev gtk+-dev \
			harfbuzz-dev json-glib-dev libffi-dev libpng16-dev libxml2-dev \
			pango-dev pcre-dev util-linux-blkid-dev util-linux-mount-dev \
			util-linux-uuid-dev xorg-libX11-dev xorg-libXau-dev \
			xorg-libXdmcp-dev xorg-libXext-dev xorg-libXrender-dev \
			xorg-libxcb-dev xorg-pixman-dev xz-dev zlib-dev"
			;;
	esac
}
