PACKAGE="perl-xml-parser"
VERSION="2.44"
CATEGORY="perl"
SHORT_DESC="XML::Parser - A Perl module for parsing XML documents"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/XML-Parser"
LFS="http://www.linuxfromscratch.org/lfs/view/stable/chapter06/xml-parser.html"
REPOLOGY="perl:xml-parser"

TARBALL="XML-Parser-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/T/TO/TODDR/$TARBALL"

BUILD_DEPENDS="perl-libwww-perl expat perl-dev expat-dev"

compile_rules() {
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-libwww-perl expat"
	TAGS="LFS"
}
