# SliTaz package receipt.

PACKAGE="perl-test-simple"
VERSION="1.302136"
CATEGORY="perl"
SHORT_DESC="Basic utilities for writing tests"
MAINTAINER="nneul@neulinger.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Test-Simple"

TARBALL="Test-Simple-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/E/EX/EXODIST/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
