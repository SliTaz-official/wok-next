PACKAGE="perl-test-simple"
VERSION="1.302140"
CATEGORY="perl"
SHORT_DESC="Basic utilities for writing tests"
MAINTAINER="nneul@neulinger.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Test-Simple"
REPOLOGY="perl:test-simple"

TARBALL="Test-Simple-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/E/EX/EXODIST/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
