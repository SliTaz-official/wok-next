# SliTaz package receipt v2.

PACKAGE="thunar"
VERSION="1.6.6" # Xfce release 4.12: http://archive.xfce.org/xfce/4.12/src/
CATEGORY="x-window"
SHORT_DESC="Thunar file manager"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.xfce.org/"

TARBALL="Thunar-$VERSION.tar.bz2"
WGET_URL="http://archive.xfce.org/src/xfce/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool xorg-libX11-dev xorg-libICE-dev exo-dev libxfce4ui-dev \
libgudev-dev libnotify-dev libexif-dev xfce4-panel-dev eudev-dev \
xorg-libSM-dev startup-notification-dev xorg-xcb-util-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure \
		--disable-debug \
		--disable-gtk-doc \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		thunar)
			copy @std
			DEPENDS="atk cairo dbus dbus-glib exo gdk-pixbuf glib gtk2 libexif \
			libgudev libnotify libpcre libxfce4ui libxfce4util pango \
			xfce4-panel xfconf xorg-libICE xorg-libSM xorg-libX11"
			TAGS="Xfce file-manager"
			;;
		*-dev)
			copy @dev
			DEPENDS="thunar \
			glib-dev gtk2-dev"
			TAGS="Xfce"
			;;
	esac
}
