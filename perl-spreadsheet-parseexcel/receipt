# SliTaz package receipt.

PACKAGE="perl-spreadsheet-parseexcel"
VERSION="0.65"
CATEGORY="perl"
SHORT_DESC="Spreadsheet::ParseExcel - Read information from an Excel file"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Spreadsheet-ParseExcel"
REPOLOGY="perl:spreadsheet-parseexcel"

TARBALL="Spreadsheet-ParseExcel-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DO/DOUGW/$TARBALL"

BUILD_DEPENDS="perl-crypt-rc4 perl-digest-perl-md5 perl-io-stringy \
perl-ole-storage_lite"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-crypt-rc4 perl-digest-perl-md5 perl-io-stringy \
	perl-ole-storage_lite"
}
