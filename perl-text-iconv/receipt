# SliTaz package receipt.

PACKAGE="perl-text-iconv"
VERSION="1.7"
CATEGORY="perl"
SHORT_DESC="Text::Iconv - Perl interface to iconv() codeset conversion function"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Text-Iconv"
REPOLOGY="perl:text-iconv"

TARBALL="Text-Iconv-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/M/MP/MPIOTR/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl-dev"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
