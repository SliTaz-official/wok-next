# SliTaz package receipt v2.

PACKAGE="xorg-libXt"
VERSION="1.1.5"
CATEGORY="x-window"
SHORT_DESC="X Toolkit Intrinsics library"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7lib.html"
REPOLOGY="libxt"

TARBALL="libXt-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-libSM-dev xorg-libX11-dev glib-dev util-linux-uuid-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure \
		--with-appdefaultdir=/etc/X11/app-defaults \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXt)
			copy @std
			DEPENDS="xorg-libICE xorg-libSM xorg-libX11"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXt \
			xorg-libICE-dev xorg-libSM-dev xorg-libX11-dev xorg-xorgproto"
			;;
	esac
}
