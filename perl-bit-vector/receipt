# SliTaz package receipt v2.

PACKAGE="perl-bit-vector"
VERSION="7.4"
CATEGORY="perl"
SHORT_DESC="Bit::Vector - Efficient bit vector, set of integers and \"big \
int\" math library"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Bit-Vector"
REPOLOGY="perl:bit-vector"

TARBALL="Bit-Vector-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/S/ST/STBEY/$TARBALL"

BUILD_DEPENDS="perl-carp-clan perl-dev"

compile_rules() {
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-carp-clan"
}
