# SliTaz package receipt v2.

PACKAGE="partclone"
VERSION="0.2.49"
CATEGORY="system-tools"
SHORT_DESC="Utilities to smartly backup partitions"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://partclone.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="util-linux-uuid-dev libxslt e2fsprogs-dev \
ncurses-dev ntfsprogs-dev ntfs-3g-dev docbook-xsl"

compile_rules() {
	./configure \
		--enable-extfs \
		--enable-fat \
		--enable-exfat \
		--enable-ntfs \
		--enable-btrfs \
		--enable-hfsp \
		--enable-ncursesw \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="ncurses ntfs-3g e2fsprogs"
	TAGS="backup"
}
