# SliTaz package receipt v2.

PACKAGE="xorg-xcursorgen"
VERSION="1.0.6"
CATEGORY="x-window"
SHORT_DESC="Create an X cursor file from PNG images"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7app.html"
REPOLOGY="xcursorgen"

TARBALL="xcursorgen-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libX11-dev xorg-libXcursor-dev \
libpng16-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="libpng16 xorg-libX11 xorg-libXcursor"
}
