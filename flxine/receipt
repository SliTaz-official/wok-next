BUILD_DEPENDS="shared-mime-info fltk-dev xine-lib-dev autoconf automake \
xorg-libX11-dev"

compile_rules() {
	#export ac_cv_lib_pthread_pthread_create=yes
	./bootstrap.sh &&
	./configure $CONFIGURE_ARGS &&
	make && make install
}

genpkg_rules() {
	copy @std
	DEPENDS="fltk xine-lib"
}
