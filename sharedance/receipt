# SliTaz package receipt.

PACKAGE="sharedance"
VERSION="0.6"
CATEGORY="network"
SHORT_DESC="High-performance server to centralize ephemeral key/data"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://sharedance.pureftpd.org/project/sharedance"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://download.pureftpd.org/pub/sharedance/$TARBALL"

BUILD_DEPENDS="libevent-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	cp -a $install/* $fs
	DEPENDS="libevent"
}
