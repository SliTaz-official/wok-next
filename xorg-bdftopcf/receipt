# SliTaz package receipt v2.

PACKAGE="xorg-bdftopcf"
VERSION="1.0.5"
CATEGORY="x-window"
SHORT_DESC="Convert X font from Bitmap Distribution Format to Portable \
Compiled Format"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="bdftopcf-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libXfont-dev xorg-xtrans"
PKG_RULE="std"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
	DEPENDS="xorg-libXfont"
	TAGS="utility xorg fonts"
}
