# SliTaz package receipt.

PACKAGE="xorg-bdftopcf"
VERSION="1.0.5"
CATEGORY="x-window"
SHORT_DESC="Font compiler for the X server and font server."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
TAGS="utility xorg fonts"

TARBALL="bdftopcf-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

DEPENDS="xorg-libXfont"
BUILD_DEPENDS="xorg-util-macros xorg-libXfont-dev xorg-xtrans"

# Rules to configure and make the package.
compile_rules()
{
	./configure $CONFIGURE_ARGS && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_folders bin
}
