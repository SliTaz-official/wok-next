# SliTaz package receipt.

PACKAGE="perl-date-calc"
VERSION="6.4"
CATEGORY="perl"
SHORT_DESC="Date::Calc - Gregorian calendar date calculations"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Date-Calc"
REPOLOGY="perl:date-calc"

TARBALL="Date-Calc-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/S/ST/STBEY/$TARBALL"

BUILD_DEPENDS="perl-bit-vector perl-carp-clan"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install UNINST=1 install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-bit-vector perl-carp-clan"
}
