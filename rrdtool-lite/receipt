# SliTaz package receipt v2.

PACKAGE="rrdtool-lite"
VERSION="1.4.6"
CATEGORY="misc"
SHORT_DESC="Data logging system for time series data"
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://oss.oetiker.ch/rrdtool"

TARBALL="rrdtool-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/pub/$TARBALL"

BUILD_DEPENDS="libxml2-dev glib-dev groff"

compile_rules() {
	./configure \
		--disable-rrdcgi \
		--disable-rrd_graph \
		--disable-nls \
		--disable-libdbi \
		--disable-libwrap \
		--disable-perl \
		--disable-ruby \
		--disable-lua \
		--disable-tcl \
		--disable-python \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="zlib glib libxml2"
	TAGS="logs"
}
