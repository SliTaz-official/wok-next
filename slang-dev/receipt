# SliTaz package receipt.

PACKAGE="slang-dev"
VERSION="2.2.4"
CATEGORY="development"
SHORT_DESC="S-Lang library (development files)"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.jedsoft.org/slang/"

WANTED="slang"
DEPENDS="slang"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_files *.h *.a *.pc
	cook_copy_folders slsh
	rm -r $fs/usr/share/doc
}
