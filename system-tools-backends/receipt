# SliTaz package receipt v2.

PACKAGE="system-tools-backends"
VERSION="2.10.2"
CATEGORY="system-tools"
SHORT_DESC="GNOME System Tools backends"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3"
WEB_SITE="http://system-tools-backends.freedesktop.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="dbus-dev polkit-dev dbus-glib-dev glib-dev intltool perl-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="dbus dbus-glib glib glibc-base libffi pcre polkit zlib"
}
