# SliTaz package receipt v2.

PACKAGE="libtorrent-rasterbar"
VERSION="1.1.3"
CATEGORY="development"
SHORT_DESC="A C++ bittorrent implementation library"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="BSD"
WEB_SITE="https://www.libtorrent.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/arvidn/libtorrent/releases/download/libtorrent-${VERSION//./_}/$TARBALL"

BUILD_DEPENDS="libboost-dev libboost-system libboost-chrono libboost-random \
openssl-dev python-dev libboost-python"
SPLIT="libtorrent-rasterbar-dev"

compile_rules() {
	./configure \
		--enable-python-binding \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libtorrent-rasterbar)
			copy @std
			DEPENDS="libboost-chrono libboost-python libboost-random \
			libboost-system openssl python"
			;;
		*-dev)
			copy @dev
			DEPENDS="libtorrent-rasterbar libboost-dev libboost-chrono \
			libboost-random libboost-system openssl-dev"
			;;
	esac
}
