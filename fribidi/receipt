# SliTaz package receipt v2.

PACKAGE="fribidi"
VERSION="0.19.7"
CATEGORY="x-window"
SHORT_DESC="Implementation of the Unicode Bidirectional Algorithm"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="https://www.fribidi.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://fribidi.org/download/$TARBALL"

BUILD_DEPENDS="glib-dev"
SPLIT="fribidi-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		fribidi)
			copy @std
			DEPENDS="glib pcre"
			;;
		*-dev)
			copy @dev
			DEPENDS="fribidi glib-dev pcre-dev"
			;;
	esac
}
