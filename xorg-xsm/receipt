# SliTaz package receipt v2.

PACKAGE="xorg-xsm"
VERSION="1.0.3"
CATEGORY="x-window"
SHORT_DESC="X Session Manager"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="xsm"

TARBALL="xsm-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libX11-dev xorg-libXt-dev xorg-libICE-dev \
xorg-libSM-dev xorg-libXaw-dev"
PKG_RULE="std"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make && make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libICE xorg-libSM xorg-libX11 xorg-libXaw xorg-libXt"
	CONFIG_FILES="/etc/X11/app-defaults/XSm /etc/X11/xsm/system.xsm"
}
