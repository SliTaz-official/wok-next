# SliTaz package receipt v2.

PACKAGE="libnotify-gtk3"
VERSION="0.7.6"
CATEGORY="utilities"
SHORT_DESC="Sends desktop notifications to a notification daemon (GTK+3)"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="http://developer-next.gnome.org/libnotify/"

TARBALL="libnotify-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/libnotify/$(echo $VERSION | cut -d. -f1,2)/$TARBALL"

BUILD_DEPENDS="gtk+3-dev gobject-introspection-dev glib-dev libxml2-dev \
dbus-dev"
SPLIT="libnotify-gtk3-dev"

compile_rules() {
	./configure \
		--disable-static \
		--enable-introspection \
		--disable-gtk-doc \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	case $PACKAGE in
		libnotify-gtk3)
			copy @std
			DEPENDS="gdk-pixbuf dbus"
			TAGS="gtk3"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
