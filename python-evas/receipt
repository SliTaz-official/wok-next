# SliTaz package receipt v2.

PACKAGE="python-evas"
VERSION="1.7.0"
CATEGORY="base-system"
SHORT_DESC="Python bindings for Evas"
MAINTAINER="domcox@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://www.enlightenment.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://download.enlightenment.org/releases/BINDINGS/python/$TARBALL"

BUILD_DEPENDS="evas-dev python-dev python-cython autoconf automake \
git subversion libtool"
SPLIT="python-evas-dev"

compile_rules() {
	./autogen.sh &&
	./configure --prefix=/usr &&
	make $MAKEFLAGS all && make install
}

genpkg_rules() {
	case $PACKAGE in
		python-evas)
			copy @std
			DEPENDS="evas python"
			TAGS="e enlightenment python"
			;;
		python-evas-dev)
			copy @dev
			DEPENDS="python-evas evas-dev python-dev"
			;;
	esac
}
