VERSION="1.0.5"
CATEGORY="x-window"
SHORT_DESC="Wrap a bitmap font in a sfnt (TrueType) wrapper"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"
