# SliTaz package receipt v2.

PACKAGE="opencv"
VERSION="3.3.0"
CATEGORY="development"
SHORT_DESC="Open source computer vision library"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://opencv.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/Itseez/opencv/archive/$VERSION.tar.gz"

BUILD_DEPENDS="cmake gtk+-dev ffmpeg-dev libjpeg-turbo-dev tiff-dev \
libpng16-dev"
SPLIT="opencv opencv-dev"

compile_rules() {
	fix math
	mkdir build
	cd    build
	cmake \
		-DCMAKE_INSTALL_PREFIX=/usr \
		.. &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		opencv)
			copy @std
			DEPENDS="gtk+ ffmpeg jpeg tiff libpng16"
			;;
		opencv-dev)
			copy @dev
			;;
	esac
}
