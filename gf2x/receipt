# SliTaz package receipt v2.

PACKAGE="gf2x"
VERSION="1.2"
CATEGORY="misc"
SHORT_DESC="Library for multiplying polynomials over the binary field"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://gforge.inria.fr/projects/gf2x/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://gforge.inria.fr/frs/download.php/file/36934/$TARBALL"

SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		gf2x)  copy @std;;
		*-dev) copy @dev;;
	esac
}
