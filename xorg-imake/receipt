# SliTaz package receipt v2.

PACKAGE="xorg-imake"
VERSION="1.0.7"
CATEGORY="x-window"
SHORT_DESC="X imake utility"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="imake"

TARBALL="imake-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/util/$TARBALL"

BUILD_DEPENDS="xorg-util-macros perl xorg-xorgproto"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-cf-files"
}
