# SliTaz package receipt v2.

PACKAGE="libgsf"
VERSION="1.14.42"
CATEGORY="libs"
SHORT_DESC="GNOME Structured File Library"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://developer.gnome.org/gsf/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/libgsf.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool gtk-doc glib-dev libxml2-dev zlib-dev bzip2-dev \
gdk-pixbuf-dev gobject-introspection-dev"
SPLIT="libgsf-dev"

compile_rules() {
	./configure \
		--disable-static \
		--enable-introspection \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libgsf)
			copy @std
			DEPENDS="bzlib gdk-pixbuf glib libxml2 zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="libgsf glib-dev libxml2-dev"
			;;
	esac
}
