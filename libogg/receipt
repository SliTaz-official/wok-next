# SliTaz package receipt v2.

PACKAGE="libogg"
VERSION="1.3.2"
CATEGORY="multimedia"
SHORT_DESC="OGG library from Xiph.org project"
MAINTAINER="pankso@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://www.xiph.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/multimedia/libogg.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="http://downloads.xiph.org/releases/ogg/$TARBALL"

SPLIT="libogg-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make -j1 install
}

genpkg_rules() {
	case $PACKAGE in
		libogg) copy @std;;
		*-dev)  copy @dev;;
	esac
}
