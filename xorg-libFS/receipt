# SliTaz package receipt v2.

PACKAGE="xorg-libFS"
VERSION="1.0.7"
CATEGORY="x-window"
SHORT_DESC="X Font Service client library"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7lib.html"

TARBALL="libFS-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-xproto xorg-fontsproto xorg-xtrans"
SPLIT="xorg-libFS-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libFS)
			copy @std
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libFS xorg-fontsproto xorg-xproto"
			;;
	esac
}
