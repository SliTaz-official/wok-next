# SliTaz package receipt.

PACKAGE="perl-ipc-system-simple"
VERSION="1.25"
CATEGORY="perl"
SHORT_DESC="IPC::System::Simple - Run commands simply, with detailed \
diagnostics"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/IPC-System-Simple"
REPOLOGY="perl:ipc-system-simple"

TARBALL="IPC-System-Simple-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/P/PJ/PJF/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
