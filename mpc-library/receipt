# SliTaz package receipt v2.

PACKAGE="mpc-library"
VERSION="1.1.0"
CATEGORY="development"
SHORT_DESC="MPC library: complex numbers arithmetic"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.multiprecision.org/"
LFS="http://www.linuxfromscratch.org/lfs/view/development/chapter06/mpc.html"
REPOLOGY="gnumpc"

TARBALL="mpc-$VERSION.tar.gz"
WGET_URL="$GNU_MIRROR/mpc/$TARBALL"

BUILD_DEPENDS="mpfr-dev gmp-dev texinfo"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make html &&
	make install &&
	make install-html
}

genpkg_rules() {
	case $PACKAGE in
		mpc-library)
			copy @std
			DEPENDS="mpfr gmp"
			TAGS="LFS"
			;;
		*-dev)
			copy @dev
			DEPENDS="mpc-library mpfr-dev gmp-dev"
			;;
	esac
}
