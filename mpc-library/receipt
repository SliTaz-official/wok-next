# SliTaz package receipt v2.

PACKAGE="mpc-library"
VERSION="1.0.3"
CATEGORY="development"
SHORT_DESC="MPC library: complex numbers arithmetic"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.multiprecision.org/"
HOST_ARCH="i486 arm"

TARBALL="mpc-$VERSION.tar.gz"
WGET_URL="${WEB_SITE}mpc/download/$TARBALL"

BUILD_DEPENDS="mpfr-dev gmp-dev texinfo"
SPLIT="mpc-library-dev"

compile_rules()
{
	./configure \
		--disable-static \
		--docdir=/usr/share/doc/mpc-$VERSION \
		$CONFIGURE_ARGS &&
	make && make html && make install && make install-html
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		mpc-library)
			copy @std
			DEPENDS="mpfr gmp"
			;;
		*-dev)
			copy @dev
			DEPENDS="mpc-library mpfr-dev gmp-dev"
			;;
	esac
}
