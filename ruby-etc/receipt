# SliTaz package receipt v2.

PACKAGE="ruby-etc" # ruby-stdlib already provides etc
VERSION="1.0.1"
CATEGORY="ruby"
SHORT_DESC="Access to information typically stored in UNIX /etc directory"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="BSD"
WEB_SITE="https://rubygems.org/gems/${PACKAGE#*-}"
REPOLOGY="${PACKAGE/-/:}"

TARBALL="${PACKAGE#*-}-$VERSION.gem"
WGET_URL="https://rubygems.org/downloads/$TARBALL"

BUILD_DEPENDS="ruby-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	gem install \
		--no-document \
		--ignore-dependencies \
		--no-user-install \
		--build-root $install \
		$src/$TARBALL &&
	fix gem
}

genpkg_rules() {
	case $PACKAGE in
		*-dev)
			copy @ruby-dev
			;;
		*)
			copy @ruby
			DEPENDS="ruby"
			;;
	esac
}
