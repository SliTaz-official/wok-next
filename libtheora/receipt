# SliTaz package receipt v2.

PACKAGE="libtheora"
VERSION="1.1.1"
CATEGORY="multimedia"
SHORT_DESC="Theora video compression format"
MAINTAINER="devel@slitaz.org"
LICENSE="BSD"
WEB_SITE="https://www.theora.org/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="http://downloads.xiph.org/releases/theora/$TARBALL"

BUILD_DEPENDS="libogg-dev libvorbis-dev libpng16-dev"
SPLIT="$PACKAGE-enc $PACKAGE-dev"

compile_rules() {
	sed -i 's/png_\(sizeof\)/\1/g' examples/png2theora.c &&

	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libtheora)
			copy libtheora.so*
			DEPENDS="libogg"
			;;
		*-enc)
			copy libtheoradec.so* libtheoraenc.so*
			CAT="multimedia|encoding/decoding library"
			DEPENDS="libogg"
			;;
		*-dev)
			copy @dev
			DEPENDS="libtheora libtheora-enc libogg-dev"
			;;
	esac
}
