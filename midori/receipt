# SliTaz package receipt v2.

PACKAGE="midori"
VERSION="0.5.11"
CATEGORY="network"
SHORT_DESC="Lightweight web browser based on GTK+/WebKit"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://www.midori-browser.org/"

TARBALL="${PACKAGE}_${VERSION}_all_.tar.bz2"
WGET_URL="http://midori-browser.org/downloads/$TARBALL"
TARBALL_SHA1="64c86935028feb5f89d799c2acacaad67764da6f"

BUILD_DEPENDS_arm="glib-dev libnotify-dev gtk+-dev xorg-libXScrnSaver-dev \
webkitgtk-dev libunique-dev libsoup-dev libxslt-dev gettext intltool"
BUILD_DEPENDS="cmake vala sqlite3-dev libsoup-dev shared-mime-info gcr-dev \
webkitgtk-dev gettext rsvg-convert intltool"

compile_rules() {
	./configure \
		--prefix=/usr \
		--disable-zeitgeist &&
	make &&
	make install || return 1

	cp $stuff/config $install/etc/xdg/midori
}

genpkg_rules() {
	copy @std
	DEPENDS="atk cairo fontconfig freetype gcr-base gdk-pixbuf glib gtk+ \
	libsoup libsoup-gnome libsqlite3 libxml2 p11-kit pango webkitgtk   \
	gsettings-desktop-schemas"
	TAGS="web-browser web webkit"
}
