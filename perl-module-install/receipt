# SliTaz package receipt v2.

PACKAGE="perl-module-install"
VERSION="1.19"
CATEGORY="perl"
SHORT_DESC="Module::Install - Standalone, extensible Perl module installer"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Module-Install"
REPOLOGY="perl:module-install"

TARBALL="Module-Install-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/E/ET/ETHER/$TARBALL"

BUILD_DEPENDS="perl-file-remove perl-yaml-tiny perl-module-build \
perl-module-scandeps"

compile_rules() {
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-file-remove perl-yaml-tiny perl-module-scandeps"
}
