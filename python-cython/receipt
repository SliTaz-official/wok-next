# SliTaz package receipt v2.

PACKAGE="python-cython"
VERSION="latest"
CATEGORY="development"
SHORT_DESC="Language to write C extensions for Python"
MAINTAINER="pankso@slitaz.org"
LICENSE="Apache"
WEB_SITE="http://cython.org/"

BUILD_DEPENDS="python-dev"

compile_rules() {
	pip install --no-compile --root=$DESTDIR Cython
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*Cython-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
}
