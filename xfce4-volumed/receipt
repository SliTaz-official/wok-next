PACKAGE="xfce4-volumed"
VERSION="0.1.13"
CATEGORY="x-window"
SHORT_DESC="Volume keys daemon"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://aur.archlinux.org/packages.php?ID=31693"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://archive.xfce.org/src/apps/xfce4-volumed/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="xfconf-dev gstreamer0-dev gst0-plugins-base-dev \
libkeybinder-dev libxml2-dev libnotify-dev"

compile_rules() {
	fix ld
	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules() {
	copy @std
	DEPENDS="glib gst0-plugins-base gstreamer0 gtk+ libkeybinder libnotify \
	xfconf"
	TAGS="Xfce"
}
