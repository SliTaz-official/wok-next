# SliTaz package receipt v2.

PACKAGE="slim-theme-japan-art"
VERSION="20150603"
CATEGORY="customization"
SHORT_DESC="Japan Art - theme for SLiM"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="PublicDomain"
WEB_SITE="http://desktopstylish.tumblr.com/post/120590949085/japan-art-slim-theme-download"		# missing

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://drive.google.com/uc?export=download&id=0B4Re2DvqOMqlUkJHVDJrXzVFRUk"

COOKOPTS="!pngquant"

compile_rules() {
	theme="$install/usr/share/slim/themes/JapanArt"
	mkdir -p $theme
	cp -r $src/* $theme
}

genpkg_rules() {
	copy @std
	DEPENDS="slim"
	TAGS="hackdorte slim"
}

post_install() {
	chroot "$1/" slim-theme -s JapanArt
}

pre_remove() {
	chroot "$1/" slim-theme -f JapanArt
}
