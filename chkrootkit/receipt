# SliTaz package receipt v2.

PACKAGE="chkrootkit"
VERSION="0.50"
CATEGORY="security"
SHORT_DESC="Locally checks for signs of a rootkit"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://www.chkrootkit.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="ftp://ftp.pangeia.com.br/pub/seg/pac/$TARBALL"

compile_rules() {
	sed -i 's/.*egrep} -c "\${GENERAL.*/&\n    ls -l ${CMD} | grep -q busybox ||/' chkrootkit
	make sense || return 1

	mkdir -p $install/usr/share/chkrootkit
	for i in $(cd $src; ls); do
		case "$i" in
			README*)
				cp $src/$i $install/usr/share/chkrootkit;;
			Makefile|*.*)
				;;
			*)
				cp $src/$i $install/usr/share/chkrootkit;;
		esac
	done
}

genpkg_rules() {
	copy @std
}
