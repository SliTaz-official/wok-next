# SliTaz package receipt v2.

PACKAGE="opencore-amr"
VERSION="0.1.3"
CATEGORY="multimedia"
SHORT_DESC="Adaptive Multi Rate (AMR) speech codec"
MAINTAINER="domcox@slitaz.org"
LICENSE="Apache"
WEB_SITE="http://opencore-amr.sourceforge.net"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

SPLIT="opencore-amr-dev"

compile_rules() {
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		opencore-amr) copy @std;;
		*-dev)        copy @dev;;
	esac
}
