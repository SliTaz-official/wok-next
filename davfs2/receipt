# SliTaz package receipt v2.

PACKAGE="davfs2"
VERSION="1.5.4"
CATEGORY="network"
SHORT_DESC="Remote collaborative authoring of Web resources"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://savannah.nongnu.org/projects/davfs2"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://download.savannah.gnu.org/releases/$PACKAGE/$TARBALL"

BUILD_DEPENDS="openssl-dev krb5-dev krb5 expat-dev neon-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	copy @std
	sed \
		-e 's/# dav_user/dav_user/' \
		-e 's/# dav_group/dav_group/' \
		-e 's/ davfs2 / www /' \
		-i $fs/etc/davfs2/davfs2.conf
	DEPENDS="openssl libkrb5 krb5 expat neon zlib libcomerr3"
	CONFIG_FILES="/etc/davfs2/"
}
