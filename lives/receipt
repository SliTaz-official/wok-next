# SliTaz package receipt v2.

PACKAGE="lives"
VERSION="2.8.6"
CATEGORY="multimedia"
SHORT_DESC="Simple to use, yet powerful video editor and VJ tool"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://lives.sourceforge.net/"

TARBALL="LiVES-$VERSION.tar.bz2"
WGET_URL="http://lives-video.com/releases/$TARBALL"

BUILD_DEPENDS="alsa-lib alsa-lib-dev libpng16-dev gtk2-dev procps expat-dev \
perl gettext-tools"

compile_rules() {
	./configure \
		--disable-jack \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install || return 1

	# Fix the name (.desktop) file.
	sed -i 's|^Exec=.*|Exec=lives-exe|' $install/usr/share/applications/LiVES.desktop
}

genpkg_rules() {
	copy @std
	DEPENDS="alsa-lib libpng16 gtk2 sox mjpegtools libavc1394 liboil libtheora"
}
