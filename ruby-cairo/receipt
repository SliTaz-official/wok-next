# SliTaz package receipt v2.

PACKAGE="ruby-cairo"
VERSION="1.15.14"
CATEGORY="ruby"
SHORT_DESC="Ruby bindings for cairo"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://rubygems.org/gems/${PACKAGE#*-}"
HOST_ARCH="i486 x86_64"
REPOLOGY="${PACKAGE/-/:}"

TARBALL="${PACKAGE#*-}-$VERSION.gem"
WGET_URL="https://rubygems.org/downloads/$TARBALL"

BUILD_DEPENDS="ruby-dev ruby-pkg-config ruby-native-package-installer cairo-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	gem install \
		--no-document \
		--ignore-dependencies \
		--no-user-install \
		--build-root $install \
		$src/$TARBALL &&
	fix gem
}

genpkg_rules() {
	case $PACKAGE in
		*-dev)
			copy @ruby-dev
			DEPENDS="ruby-cairo cairo-dev"
			;;
		*)
			copy @ruby
			DEPENDS="ruby ruby-native-package-installer ruby-pkg-config cairo \
			freetype"
			;;
	esac
}
