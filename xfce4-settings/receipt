# SliTaz package receipt v2.

PACKAGE="xfce4-settings"
VERSION="4.12.0" # Xfce release 4.12: http://archive.xfce.org/xfce/4.12/src/
CATEGORY="x-window"
SHORT_DESC="Xfce settings manager"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.xfce.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://archive.xfce.org/src/xfce/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool exo-dev garcon-dev xorg-libXi-dev xorg-libXrandr-dev \
upower-dev libnotify-dev xorg-libXcursor-dev xorg-xf86-input-libinput-dev \
libxklavier-dev"

compile_rules() {
	./configure \
		--disable-debug \
		--enable-pluggable-dialogs \
		--enable-sound-settings \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std hicolor/ # only 128 icons here
	DEPENDS="cairo dbus dbus-glib exo fontconfig garcon gdk-pixbuf glib gtk+ \
	libnotify libxfce4ui libxfce4util libxklavier pango upower xfconf \
	xorg-libX11 xorg-libXcursor xorg-libXi xorg-libXrandr"
	TAGS="Xfce"
}
