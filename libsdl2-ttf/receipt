# SliTaz package receipt v2.

PACKAGE="libsdl2-ttf"
VERSION="2.0.14"
CATEGORY="x-window"
SHORT_DESC="SDL2 ttf support"
MAINTAINER="devel@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://www.libsdl.org/projects/SDL_ttf/"
REPOLOGY="sdl2-ttf"

TARBALL="SDL2_ttf-$VERSION.tar.gz"
WGET_URL="http://www.libsdl.org/projects/SDL_ttf/release/$TARBALL"

BUILD_DEPENDS="freetype-dev libsdl2-dev libx11-dev libice-dev \
mesa-dev expat-dev libxshmfence-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libsdl2-ttf)
			copy @std
			DEPENDS="freetype libsdl2"
			SUGGESTED="mesa"
			;;
		*-dev)
			copy @dev
			DEPENDS="libsdl2-ttf libsdl2-dev"
			;;
	esac
}
