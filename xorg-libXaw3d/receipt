# SliTaz package receipt v2.

PACKAGE="xorg-libXaw3d"
VERSION="1.6.2"
CATEGORY="x-window"
SHORT_DESC="Xorg server module"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="libXaw3d-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-libXmu-dev util-linux-uuid-dev"
SPLIT="xorg-libXaw3d-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXaw3d)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXext xorg-libXmu xorg-libXt"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXaw3d \
			xorg-libX11-dev xorg-libXext-dev xorg-libXmu-dev xorg-libXt-dev \
			xorg-xproto"
			;;
	esac
}
