# SliTaz package receipt v2.

PACKAGE="python-docutils"
VERSION="latest"
CATEGORY="python"
SHORT_DESC="Text processing system"
MAINTAINER="claudinei@slitaz.org"
LICENSE="PublicDomain GPL3 BSD"
WEB_SITE="http://docutils.sourceforge.net"

BUILD_DEPENDS="python"

compile_rules() {
	pip install --no-compile --root=$DESTDIR docutils
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*docutils-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
	SUGGESTED="python-pil"
}
