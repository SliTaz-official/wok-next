# SliTaz package receipt.

PACKAGE="perl-xml-sax-writer"
VERSION="0.57"
CATEGORY="perl"
SHORT_DESC="XML::SAX::Writer - SAX2 XML Writer"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/XML-SAX-Writer"
REPOLOGY="perl:xml-sax-writer"

TARBALL="XML-SAX-Writer-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/P/PE/PERIGRIN/$TARBALL"

BUILD_DEPENDS="perl-xml-filter-buffertext perl-xml-namespacesupport \
perl-xml-sax-base"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-xml-filter-buffertext perl-xml-namespacesupport \
	perl-xml-sax-base"
}
