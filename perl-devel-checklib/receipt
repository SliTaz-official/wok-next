# SliTaz package receipt.

PACKAGE="perl-devel-checklib"
VERSION="1.13"
CATEGORY="perl"
SHORT_DESC="Devel::CheckLib - check that a library is available"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Devel-CheckLib"
REPOLOGY="perl:devel-checklib"

TARBALL="Devel-CheckLib-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/M/MA/MATTN/$TARBALL"

BUILD_DEPENDS="perl-io-captureoutput perl-mock-config"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-io-captureoutput perl-mock-config"
}
