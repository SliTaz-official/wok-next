# SliTaz package receipt v2.

PACKAGE="udftools"
VERSION="1.0.0b3"
CATEGORY="utilities"
SHORT_DESC="Tools for UDF filesystems and DVD/CD-R(W) drives"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://linux-udf.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/linux-udf/$TARBALL"

BUILD_DEPENDS="ncurses-dev readline-dev bash"

compile_rules() {
	sed -i 's|^inline|extern &|' include/libudffs.h
	sed -i 's/(char\*)spm += /spm = (char*)spm + /' wrudf/wrudf.c
	sed -i 's/<stdio.h>/&\n#include <limits.h>/' \
		cdrwtool/cdrwtool.c pktsetup/pktsetup.c

	./configure &&
	fix libtool &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	copy @std
	DEPENDS="ncurses readline"
}
