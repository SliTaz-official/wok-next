# SliTaz package receipt v2.

PACKAGE="lxappearance"
VERSION="0.6.3"
CATEGORY="x-window"
SHORT_DESC="LXDE GTK+ theme switcher"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://wiki.lxde.org/en/LXAppearance"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/lxde/lxappearance.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$SF_MIRROR/lxde/$TARBALL"

BUILD_DEPENDS="intltool xorg-libX11-dev gtk2-dev dbus-dev dbus-glib-dev"
SPLIT="lxappearance-dev"

compile_rules() {
	# remove keywords from desktop file
	sed -i '/^_Keywords/d' $src/data/lxappearance.desktop.in

	./configure \
		--enable-dbus \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	TAGS="LXDE"
	case $PACKAGE in
		lxappearance)
			copy @std
			DEPENDS="atk cairo dbus dbus-glib fontconfig freetype gdk-pixbuf \
			glib gtk2 pango xorg-libX11"
			;;
		*-dev)
			copy @dev
			DEPENDS="lxappearance glib-dev gtk2-dev"
			;;
	esac
}
