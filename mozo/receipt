# SliTaz package receipt v2.

PACKAGE="mozo"
VERSION="1.18.0"
CATEGORY="x-window"
SHORT_DESC="Menu editor for MATE using the freedesktop.org menu specification"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://github.com/mate-desktop/mozo"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/mozo/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common mate-menus-dev pygobject3-dev"

compile_rules() {
	./autogen.sh \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="python   mate-menus gtk+3-dev pygobject3"
	TAGS="MATE"
}
