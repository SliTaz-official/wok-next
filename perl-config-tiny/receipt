# SliTaz package receipt v2.

PACKAGE="perl-config-tiny"
VERSION="2.23"
CATEGORY="perl"
SHORT_DESC="Config::Tiny - Read/Write .ini style files with as little code as \
possible"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://metacpan.org/release/Config-Tiny"
REPOLOGY="perl:config-tiny"

TARBALL="Config-Tiny-$VERSION.tgz"
WGET_URL="https://cpan.metacpan.org/authors/id/R/RS/RSAVAGE/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
