# SliTaz package receipt v2.

PACKAGE="clutter-gtk"
VERSION="1.8.4"
CATEGORY="x-window"
SHORT_DESC="GTK+ libraries for Clutter"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://clutter-project.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/clutter-gtk.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="clutter-dev gtk3-dev gettext gobject-introspection-dev"
SPLIT="clutter-gtk-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		clutter-gtk)
			copy @std
			DEPENDS="cairo clutter cogl gdk-pixbuf glib gtk3"
			;;
		*-dev)
			copy @dev
			DEPENDS="clutter-gtk clutter-dev gtk3-dev"
			;;
	esac
}
