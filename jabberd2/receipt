# SliTaz package receipt v2.

PACKAGE="jabberd2"
VERSION="2.2.16"
CATEGORY="network"
SHORT_DESC="XMPP server (real-time communication)"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://jabberd2.xiaoka.com/"
REPOLOGY="jabberd"

TARBALL="jabberd-$VERSION.tar.gz"
WGET_URL="https://github.com/downloads/Jabberd2/jabberd2/$TARBALL"

BUILD_DEPENDS="expat gsasl gsasl-dev udns udns-dev libidn-dev openssl-dev \
zlib-dev db-dev openldap-dev postgresql mysql sqlite3 sqlite3-dev expat-dev \
cppunit-dev"

compile_rules() {
	sed -i 's|#else /.*|&\nint set_debug_log_from_config(config_t c){}|' util/log.c
	CFLAGS="${CFLAGS/-Os/-O2}"
	./configure \
		--sysconfdir=/etc/jabberd \
		--enable-sqlite \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="expat gsasl udns libidn zlib openssl libkrb5 libcomerr3 perl"
	CONFIG_FILES="/etc/jabberd"
	TAGS="im instant-messaging server"
}
