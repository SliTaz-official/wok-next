# SliTaz package receipt.

PACKAGE="perl-digest-perl-md5"
VERSION="1.9"
CATEGORY="perl"
SHORT_DESC="Digest::Perl::MD5 - Perl implementation of Ron Rivests MD5 \
Algorithm"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Digest-Perl-MD5"

TARBALL="Digest-Perl-MD5-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DE/DELTA/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
