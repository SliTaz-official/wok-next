PACKAGE="perl-digest-perl-md5"
VERSION="1.9"
CATEGORY="perl"
SHORT_DESC="Digest::Perl::MD5 - Perl implementation of Ron Rivests MD5 \
Algorithm"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Digest-Perl-MD5"
REPOLOGY="perl:digest-perl-md5"

TARBALL="Digest-Perl-MD5-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DE/DELTA/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
