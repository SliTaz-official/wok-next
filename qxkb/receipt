# SliTaz package receipt v2.

PACKAGE="qxkb"
VERSION="0.4.6"
CATEGORY="base-system"
SHORT_DESC="The keypad switch written on Qt4"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://code.google.com/archive/p/qxkb"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://qxkb.googlecode.com/files/$TARBALL"

BUILD_DEPENDS="cmake Qt4-dev xorg-libxkbfile-dev qmake"

compile_rules() {
	mkdir build
	cd    build
	cmake \
		-DCMAKE_INSTALL_PREFIX=/usr \
		.. &&
	make &&
	make install
}

genpkg_rules() {
	cp -a $install/* $fs
	DEPENDS="glibc-base libQtSvg xorg-libxkbfile"
}
