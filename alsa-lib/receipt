# SliTaz package receipt v2.

PACKAGE="alsa-lib"
VERSION="1.1.6"
CATEGORY="multimedia"
SHORT_DESC="ALSA sound libraries"
MAINTAINER="devel@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://www.alsa-project.org/main/index.php/Main_Page"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/multimedia/alsa-lib.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="ftp://ftp.alsa-project.org/pub/lib/$TARBALL"

SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure \
		--disable-python \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make -j1 install || return 1

	install -Dm644 $stuff/asound.conf $install/etc/asound.conf
}

genpkg_rules() {
	# Enable software mixing for multiple audio streams
	case $PACKAGE in
		alsa-lib)
			copy @std
			CONFIG_FILES="/etc/asound.conf"
			DEPENDS="linux"
			;;
		*-dev) copy @dev;;
	esac
}
