# SliTaz package receipt v2.

PACKAGE="alsa-lib"
VERSION="1.1.5"
CATEGORY="multimedia"
SHORT_DESC="ALSA sound libraries"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://www.alsa-project.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/multimedia/alsa-lib.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="ftp://ftp.alsa-project.org/pub/lib/$TARBALL"

SPLIT="alsa-lib-dev"

compile_rules() {
	./configure \
		--disable-python \
		$CONFIGURE_ARGS &&
	make && make -j1 install || return 1

	mkdir -p $install/etc
	cp $stuff/asound.conf $install/etc
}

genpkg_rules() {
	# Enable software mixing for multiple audio streams
	case $PACKAGE in
		alsa-lib)
			copy @std
			CONFIG_FILES="/etc/asound.conf"
			DEPENDS="linux"
			;;
		*-dev) copy @dev;;
	esac
}
