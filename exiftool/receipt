# SliTaz package receipt.

PACKAGE="exiftool"
VERSION="8.40"
CATEGORY="system-tools"
SHORT_DESC="Reading, writing and editing meta information in a wide variety of files"
MAINTAINER="devel@slitaz.org"
LICENSE="Artistic"
WEB_SITE="http://owl.phy.queensu.ca/~phil/exiftool/"

SOURCE="Image-ExifTool"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="http://owl.phy.queensu.ca/~phil/exiftool/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	cp -a $install/usr $fs
	rm -rf $fs/usr/share
	DEPENDS="perl"
	SUGGESTED="perl-archive-zip perl-io-compress"
}
