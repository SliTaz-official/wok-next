# SliTaz package receipt v2.

PACKAGE="matchbox-desktop"
VERSION="0.9.1"
CATEGORY="x-window"
SHORT_DESC="Matchbox desktop"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://matchbox-project.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://downloads.yoctoproject.org/releases/matchbox/matchbox-desktop/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="gfortran libmatchbox-dev startup-notification-dev \
xorg-xcb-util-dev"

compile_rules() {
	export LDFLAGS="$LDFLAGS -ldl"

	./configure \
		--disable-static \
		--enable-startup-notification \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make \
		MKDIRPROG='mkdir -p' \
		install
}

genpkg_rules() {
	copy @std
	DEPENDS="libmatchbox startup-notification xorg-libX11 zlib"
	TAGS="matchbox"
}
