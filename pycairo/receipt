# SliTaz package receipt v2.

PACKAGE="pycairo"
VERSION="1.15.3"
CATEGORY="development"
SHORT_DESC="Python bindings for the cairo graphics library"
MAINTAINER="erjo@slitaz.org"
LICENSE="MPL LGPL2.1"
WEB_SITE="https://www.cairographics.org/pycairo/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/pygobject/pycairo/releases/download/v$VERSION/$TARBALL"

BUILD_DEPENDS="python-dev cairo-dev"
SPLIT="pycairo-dev"

compile_rules() {
	python setup.py build &&
	python setup.py install --root=$install
}

genpkg_rules() {
	case $PACKAGE in
		pycairo)
			copy @std
			DEPENDS="cairo python"
			;;
		*-dev)
			copy @dev
			DEPENDS="pycairo cairo-dev"
			;;
	esac
}
