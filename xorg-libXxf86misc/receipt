# SliTaz package receipt v2.

PACKAGE="xorg-libXxf86misc"
VERSION="1.0.3"
CATEGORY="x-window"
SHORT_DESC="XFree86-MISC extension library"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="libXxf86misc-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-xproto xorg-libX11-dev xorg-xextproto \
xorg-libXext-dev xorg-xf86miscproto"
SPLIT="xorg-libXxf86misc-dev"

compile_rules() {
	fix ld
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXxf86misc)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXext"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXxf86misc \
			xorg-libX11-dev xorg-libXext-dev xorg-xf86miscproto"
			;;
	esac
}
