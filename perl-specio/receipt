# SliTaz package receipt.

PACKAGE="perl-specio"
VERSION="0.42"
CATEGORY="perl"
SHORT_DESC="Specio - Type constraints and coercions for Perl"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Specio"
REPOLOGY="perl:specio"

TARBALL="Specio-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DR/DROLSKY/$TARBALL"

BUILD_DEPENDS="perl-devel-stacktrace perl-eval-closure perl-module-runtime \
perl-mro-compat perl-role-tiny perl-test-fatal perl-test-needs"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-devel-stacktrace perl-eval-closure perl-module-runtime \
	perl-mro-compat perl-role-tiny perl-test-fatal"
}
