# SliTaz package receipt.

PACKAGE="perl-datetime-format-mail"
VERSION="0.403"
CATEGORY="perl"
SHORT_DESC="DateTime::Format::Mail - Convert between DateTime and RFC2822/822 \
formats"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://metacpan.org/release/DateTime-Format-Mail"
REPOLOGY="perl:datetime-format-mail"

TARBALL="DateTime-Format-Mail-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/B/BO/BOOK/$TARBALL"

BUILD_DEPENDS="perl-datetime perl-params-validate"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-datetime perl-params-validate"
}
