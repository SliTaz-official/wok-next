# SliTaz package receipt v2.

PACKAGE="liblognorm"
VERSION="0.3.7"
CATEGORY="system-tools"
SHORT_DESC="A log normalization library"
MAINTAINER="erjo@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://www.liblognorm.com/download/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://www.liblognorm.com/files/download/$TARBALL"

BUILD_DEPENDS="libestr-dev libee-dev automake"
SPLIT="liblognorm-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		liblognorm)
			copy @std
			DEPENDS="libee libestr"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
