# SliTaz package receipt v2.

PACKAGE="libnxml"
VERSION="0.18.3"
CATEGORY="libs"
SHORT_DESC="nXML is a C library for parsing, writing and creating XML 1.0 and \
1.1 files or streams"
MAINTAINER="tcg.thegamer@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://www.autistici.org/bakunin/libnxml/doc/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://www.autistici.org/bakunin/libnxml/$TARBALL"

BUILD_DEPENDS="gfortran curl-dev"
SPLIT="libnxml-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libnxml)
			copy @std
			DEPENDS="libcurl"
			;;
		*-dev)
			copy @dev
			DEPENDS="libnxml curl-dev openssl-dev zlib-dev"
			;;
	esac
}
