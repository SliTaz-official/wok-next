# SliTaz package receipt v2.

PACKAGE="gdbm"
VERSION="1.16"
CATEGORY="misc"
SHORT_DESC="GNU database manager"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://www.gnu.org/software/gdbm"
LFS="http://www.linuxfromscratch.org/lfs/view/development/chapter06/gdbm.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$GNU_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="gettext readline-dev"
SPLIT="gdbm-tools gdbm-dev"

compile_rules() {
	./configure \
		--disable-static \
		--enable-libgdbm-compat \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		gdbm)
			copy *.so*
			TAGS="LFS"
			;;
		gdbm-tools)
			copy bin/
			DEPENDS="gdbm ncurses readline"
			CAT="misc|tools"
			;;
		*-dev) copy @dev;;
	esac
}
