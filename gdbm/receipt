# SliTaz package receipt v2.

PACKAGE="gdbm"
VERSION="1.18.1"
CATEGORY="misc"
SHORT_DESC="GNU database manager"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://www.gnu.org/software/gdbm/" # How to avoid redirection to local GNU mirror?
LFS="http://www.linuxfromscratch.org/lfs/view/development/chapter06/gdbm.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$GNU_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="gettext-dev readline-dev"
SPLIT="lib$PACKAGE $PACKAGE $PACKAGE-dev"

DEPENDS_libgdbm=" "
DEPENDS_std="libgdbm readline"

CAT_libgdbm="libs|library"
TAGS_std="LFS"

compile_rules() {
	./configure \
		--disable-static \
		--enable-libgdbm-compat \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}
