# SliTaz package receipt v2.

PACKAGE="jwm"
VERSION="2.2.0"
CATEGORY="x-window"
SHORT_DESC="Lightweight Window Manager for the X window system"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://joewing.net/programs/jwm/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="http://www.joewing.net/programs/jwm/releases/$TARBALL"

BUILD_DEPENDS="xorg-libX11-dev xorg-libXft-dev jpeg-dev libpng16-dev \
xorg-libXext-dev gettext-dev"

compile_rules() {
	./configure \
		--sysconfdir=/etc/xdg/jwm \
		--disable-fribidi \
		--disable-rpath \
		--disable-rsvg \
		--disable-confirm \
		$CONFIGURE_ARGS &&
	make &&
	make install || return 1

	# Simple and default config file
	install -Dm644 $stuff/simple.jwmrc          $install/etc/xdg/jwm/simple.jwmrc
	install -Dm644 $stuff/slitaz.jwmrc          $install/etc/xdg/jwm/system.jwmrc
	install -Dm644 $stuff/xsessions/jwm.desktop $install/usr/share/xsessions/jwm.desktop
}

testsuite() {
	readelf -h $install/usr/bin/jwm
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libXft xorg-libXrender xorg-libXpm xorg-libXext \
	xorg-libXmu xorg-libXinerama xorg-libXau xorg-libXdmcp xorg-libXt libjpeg \
	libpng16 slitaz-configs-base xorg-xload xorg-xclock imlib2 hsetroot \
	compton nano"
	TAGS="window-manager"
}

post_install() {
	if [ -d "$1/etc/jwm" ]; then
		# Removing old system wide configs: /etc/jwm
		rm -rf "$1/etc/jwm"
	fi
	res=$(cat "$1/etc/slim.conf" | grep ^session | sed s/"sessions. *"//)
	# Adding WM to SLIM available sessions.
	if ! echo "$res" | grep -q $PACKAGE; then
		sed -i "s/^sessions.*/sessions            $res,$PACKAGE/" "$1/etc/slim.conf"
	fi
	true
}

post_remove() {
	# Remove WM from SLIM available sessions.
	if grep -q $PACKAGE "$1/etc/slim.conf"; then
		sed -i s/,$PACKAGE// "$1/etc/slim.conf"
	fi
}
