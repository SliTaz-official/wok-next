# SliTaz package receipt v2.

PACKAGE="python-blessings"
VERSION="latest"
CATEGORY="development"
SHORT_DESC="A thin, practical wrapper around terminal coloring, styling, and positioning"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://pypi.org/project/blessings/"
REPOLOGY="python:blessings"

BUILD_DEPENDS="python-six"

compile_rules() {
	pip install --no-compile --root=$DESTDIR blessings
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*blessings-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python-six"
}
