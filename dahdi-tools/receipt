# SliTaz package receipt v2.

PACKAGE="dahdi-tools"
VERSION="2.11.1"
CATEGORY="network"
SHORT_DESC="Digium Asterisk Hardware Device Interface"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.asterisk.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://downloads.asterisk.org/pub/telephony/$PACKAGE/releases/$TARBALL"

BUILD_DEPENDS="dahdi-linux-dev ppp-dev newt-dev libpri-dev gtk+-dev file"
SPLIT="dahdi-man dahdi-perl dahdi-ppp dahdi-dev dahdi-tools"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make -C ppp &&
	make DESTDIR=$DESTDIR install &&
	make DESTDIR=$DESTDIR -C ppp install &&
	make DESTDIR=$DESTDIR config
}

genpkg_rules() {
	case $PACKAGE in
		dahdi-man)
			copy man/
			CAT="network|man pages"
			;;
		dahdi-perl)
			copy *.pm
			CAT="development|PERL modules"
			DEPENDS="perl"
			PROVIDE="zaptel-perl"
			;;
		dahdi-ppp)
			copy dahdi.so
			CAT="network|PPP plugin"
			DEPENDS="ppp"
			;;
		dahdi-dev)
			copy @dev
			DEPENDS="dahdi-linux-dev"
			PROVIDE="zaptel-dev"
			;;
		dahdi-tools)
			copy @std @rm
			CAT="network|userland tools"
			DEPENDS="libusb-compat newt libpri dahdi-perl"
			CONFIG_FILES="/etc/dahdi/"
			;;
	esac
}
