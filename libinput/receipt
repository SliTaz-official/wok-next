# SliTaz package receipt v2.

PACKAGE="libinput"
VERSION="1.8.1"
CATEGORY="x-window"
SHORT_DESC="Library that handles input devices for display servers"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.freedesktop.org/wiki/Software/libinput/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7driver.html#libinput"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="http://www.freedesktop.org/software/libinput/$TARBALL"

BUILD_DEPENDS="mtdev-dev eudev-dev libevdev-dev cairo-dev gtk+3-dev check-dev"
SPLIT="libinput-debug-gui libinput libinput-dev"

compile_rules() {
	fix ld
	./configure \
		--disable-static \
		--disable-libwacom \
		--with-udev-dir=/lib/udev \
		--disable-documentation \
		--without-libunwind \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		*-gui)
			copy libinput-debug-gui
			CAT="x-window|debug GUI"
			DEPENDS="cairo eudev glib gtk+3 libevdev libinput"
			;;
		libinput)
			copy @std @rm
			DEPENDS="eudev libevdev mtdev"
			;;
		*-dev)
			copy @dev
			DEPENDS="libinput eudev-dev"
			;;
	esac
}
