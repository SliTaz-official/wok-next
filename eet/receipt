# SliTaz package receipt v2.

PACKAGE="eet"
VERSION="1.7.10"
CATEGORY="base-system"
SHORT_DESC="EFL Data encode/decode and storage library"
MAINTAINER="pankso@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://www.enlightenment.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://download.enlightenment.org/releases/$TARBALL"

BUILD_DEPENDS="eina-dev libjpeg-turbo-dev openssl-dev zlib-dev"
SPLIT="eet-dev"

compile_rules() {
	case "$ARCH" in
		arm) LDFLAGS="$LDFLAGS -L/cross/$ARCH/sysroot/usr/lib" ;;
	esac
	export CFLAGS="$CFLAGS -fvisibility=hidden"
	export LDFLAGS="$LDFLAGS -fvisibility=hidden"

	./configure \
		--disable-doc \
		--disable-old-eet-file-format \
		--disable-install-examples \
		$CONFIGURE_ARGS &&
	make $MAKEFLAGS && make install
}

genpkg_rules() {
	case $PACKAGE in
		eet)
			copy @std
			DEPENDS="eina libjpeg-turbo openssl"
			TAGS="e enlightenment efl"
			;;
		eet-dev)
			copy @dev
			DEPENDS="eina-dev libjpeg-turbo-dev openssl-dev pkg-config"
			;;
	esac
}
