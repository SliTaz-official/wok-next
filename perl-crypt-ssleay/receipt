# SliTaz package receipt.

PACKAGE="perl-crypt-ssleay"
VERSION="0.72"
CATEGORY="perl"
SHORT_DESC="Crypt::SSLeay - OpenSSL support for LWP"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Crypt-SSLeay"

TARBALL="Crypt-SSLeay-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/N/NA/NANIS/$TARBALL"

DEPENDS="perl openssl perl-lwp-protocol-https"
BUILD_DEPENDS="$DEPENDS perl-dev openssl-dev perl-path-class"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
