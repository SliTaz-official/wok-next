# SliTaz package receipt v2.

PACKAGE="xorg-xmag"
VERSION="1.0.6"
CATEGORY="x-window"
SHORT_DESC="Magnify parts of the screen"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xmag-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libXaw-dev xorg-libXmu-dev xorg-libXt-dev \
xorg-libX11-dev"
PKG_RULE="std"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libXaw xorg-libXmu xorg-libXt"
	CONFIG_FILES="/etc/X11/app-defaults/Xmag"
}
