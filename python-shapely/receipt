#HOST_ARCH
REPOLOGY="python:shapely"

BUILD_DEPENDS="python python3 geos-dev"
SPLIT="${PACKAGE/python/python3}:3"

compile_rules() {
	pip$SET install --no-compile --root=$install $ORIGIN==$VERSION
}

genpkg_rules() {
	copy @std
	py="${PACKAGE%%-*}" # python/python3
	DEPENDS="$py geos"
}
