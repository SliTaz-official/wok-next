# SliTaz package receipt v2.

PACKAGE="libbytesize"
VERSION="1.3"
CATEGORY="libs"
SHORT_DESC="C class for working with arbitrary big sizes"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://github.com/storaged-project/libbytesize/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/general/libbytesize.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/storaged-project/libbytesize/releases/download/$VERSION/$TARBALL"

BUILD_DEPENDS="gettext gmp-dev mpfr-dev pcre-dev"
SPLIT="libbytesize-python libbytesize libbytesize-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libbytesize-python)
			copy *.py
			DEPENDS="libbytesize python"
			CAT="libs|python bindings"
			;;
		libbytesize)
			copy @std @rm
			DEPENDS="gmp libpcre mpfr"
			;;
		*-dev)
			copy @dev
			DEPENDS="libbytesize libbytesize-python \
			gmp-dev mpfr-dev"
			;;
	esac
}
