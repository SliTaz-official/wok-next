# SliTaz package receipt v2.

PACKAGE="libglade"
VERSION="2.6.4"
CATEGORY="x-window"
SHORT_DESC="The Glade libs"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="https://developer.gnome.org/libglade/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="gtk2-dev"
SPLIT="libglade-dev"

compile_rules() {
	sed -i '/DG_DISABLE_DEPRECATED/d' glade/Makefile.in || exit 1
	mkdir po; touch po/POTFILES.in

	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libglade)
			copy @std
			DEPENDS="atk gdk-pixbuf glib gtk2 libxml2 pango"
			;;
		*-dev)
			copy @dev
			DEPENDS="libglade gtk2-dev libxml2-dev"
			;;
	esac
}
