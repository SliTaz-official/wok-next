# SliTaz package receipt v2.

PACKAGE="gnome-keyring"
VERSION="2.32.1"
CATEGORY="x-window"
SHORT_DESC="A program that keep password and other secrets for users"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.gnome.org"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="libgcrypt-dev libtasn1-dev python-dev dbus-dev intltool gtk+-dev"
SPLIT="gnome-keyring-dev"

compile_rules() {
	sed -i	-e 's|<glib.h>|&\n#include <libtasn1.h>|' \
		-e  's|const struct static_struct_asn|const ASN1_ARRAY_TYPE|' \
		egg/egg-asn1x.h
	./configure \
		--libexecdir=/usr/lib/$PACKAGE \
		--sysconfdir=/etc/gnome \
		--disable-pam &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		gnome-keyring)
			copy @std
			DEPENDS="libgcrypt libtasn1 python dbus gtk+"
			;;
		*-dev)
			copy @dev
			;;
	esac
}

