# SliTaz package receipt v2.

PACKAGE="pygobject"
VERSION="2.28.6"
CATEGORY="development"
SHORT_DESC="Python bindings for the GObject library"
MAINTAINER="erjo@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://www.pygtk.org/docs/pygobject/index.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="python python-dev pkg-config glib-dev pycairo-dev \
cairo-dev libffi-dev util-linux-mount-dev"
SPLIT="pygobject-dev"

compile_rules() {
	./configure \
		--disable-introspection \
		$CONFIGURE_ARGS &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		pygobject)
			copy @std
			DEPENDS="python pycairo glib libffi"
			;;
		*-dev)
			copy @dev
			DEPENDS="pygobject libffi-dev"
			;;
	esac
}
