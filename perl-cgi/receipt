# SliTaz package receipt v2.

PACKAGE="perl-cgi"
VERSION="4.40"
CATEGORY="perl"
SHORT_DESC="CGI - Handle Common Gateway Interface requests and responses"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/CGI"
REPOLOGY="perl:cgi"

TARBALL="CGI-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/L/LE/LEEJO/$TARBALL"

BUILD_DEPENDS="perl-html-parser perl-test-deep perl-test-nowarnings \
perl-test-warn"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-html-parser"
}
