# SliTaz package receipt.

PACKAGE="perl-cgi"
VERSION="4.38"
CATEGORY="perl"
SHORT_DESC="CGI - Handle Common Gateway Interface requests and responses"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/CGI"

TARBALL="CGI-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/L/LE/LEEJO/$TARBALL"

DEPENDS="perl-html-parser"
BUILD_DEPENDS="$DEPENDS perl-test-deep perl-test-nowarnings perl-test-warn"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
