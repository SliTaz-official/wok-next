# SliTaz package receipt v2.

PACKAGE="atk"
VERSION="2.24.0"
CATEGORY="x-window"
SHORT_DESC="Accessibility toolkit"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.gnome.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/atk.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS_arm="glib-dev"
BUILD_DEPENDS="glib-dev gettext gobject-introspection-dev"
SPLIT="atk-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules() {
	case $PACKAGE in
		atk)
			copy @std
			DEPENDS="glib"
			TAGS="accessibility"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
