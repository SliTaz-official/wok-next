# SliTaz package receipt v2.

PACKAGE="atk"
VERSION="2.30.0"
CATEGORY="x-window"
SHORT_DESC="Accessibility toolkit"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://developer.gnome.org/atk/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/atk.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="meson ninja glib-dev gobject-introspection-dev gettext-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	mkdir build
	cd    build

	meson-wrapper &&
	ninja &&
	ninja install
}

genpkg_rules() {
	case $PACKAGE in
		atk)
			copy @std
			DEPENDS="glib"
			TAGS="accessibility"
			;;
		*-dev)
			copy @dev
			DEPENDS="atk glib-dev"
			;;
	esac
}
