# SliTaz package receipt v2.

PACKAGE="fdutils"
VERSION="5.5"
CATEGORY="system-tools"
SHORT_DESC="Utilities for configuring and formatting floppy"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.fdutils.linux.lu/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE$TARBALL"

BUILD_DEPENDS="flex"

compile_rules() {
	mkdir -p $DESTDIR/etc
	sed \
		-e "s|^bindir.*|bindir = $DESTDIR/usr/bin|" \
		-e "s|^sysconfdir.*|sysconfdir = $DESTDIR/etc|" \
		-i src/Makefile*

	./configure $CONFIGURE_ARGS &&
	make DESTDIR=$DESTDIR install-prog
}

genpkg_rules() {
	copy @std
	TAGS="floppy formatter"
}
