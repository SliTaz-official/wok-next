# SliTaz package receipt v2.

PACKAGE="perl-crypt-cbc"
VERSION="2.33"
CATEGORY="perl"
SHORT_DESC="Crypt::CBC - Encrypt Data with Cipher Block Chaining Mode"
MAINTAINER="devel@slitaz.org"
LICENSE="Perl"
WEB_SITE="https://metacpan.org/release/Crypt-CBC"
REPOLOGY="perl:crypt-cbc"

TARBALL="Crypt-CBC-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/L/LD/LDS/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
