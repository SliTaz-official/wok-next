# SliTaz package receipt.

PACKAGE="perl-date-manip"
VERSION="6.72"
CATEGORY="perl"
SHORT_DESC="Date::Manip - Date manipulation routines"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Date-Manip"

TARBALL="Date-Manip-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/S/SB/SBECK/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
