# SliTaz package receipt v2.

PACKAGE="perl-date-manip"
VERSION="6.73"
CATEGORY="perl"
SHORT_DESC="Date::Manip - Date manipulation routines"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Date-Manip"
REPOLOGY="perl:date-manip"

TARBALL="Date-Manip-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/S/SB/SBECK/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
