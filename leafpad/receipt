# SliTaz package receipt v2.

PACKAGE="leafpad"
VERSION="0.8.18.1"
CATEGORY="utilities"
SHORT_DESC="Simple GTK text editor"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://tarot.freeshell.org/leafpad/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://savannah.nongnu.org/download/$PACKAGE/$TARBALL"

BUILD_DEPENDS="gtk+-dev xorg-libXrender-dev xorg-xorgproto intltool"
GENERIC_PIXMAPS="no"

compile_rules() {
	chmod +x install-sh

	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules() {
	copy leafpad
	DEPENDS="gtk+ xorg-libXdamage"
	TAGS="text-editor"
}
