# SliTaz package receipt v2.

PACKAGE="leafpad"
VERSION="0.8.18.1"
CATEGORY="utilities"
SHORT_DESC="Simple GTK text editor"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://tarot.freeshell.org/leafpad/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://savannah.nongnu.org/download/$PACKAGE/$TARBALL"

BUILD_DEPENDS="gtk2-dev xorg-libXrender-dev xorg-xorgproto intltool"

COOKOPTS="!pixmaps"

compile_rules() {
	chmod +x install-sh

	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy leafpad
	DEPENDS="gtk2 xorg-libXdamage"
	TAGS="text-editor"
}
