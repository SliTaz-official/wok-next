# SliTaz package receipt v2.

PACKAGE="xorg-xproto"
VERSION="7.0.31"
CATEGORY="development"
SHORT_DESC="Xproto headers"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7proto.html"

TARBALL="xproto-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/proto/$TARBALL"

BUILD_DEPENDS="xorg-util-macros"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make MKDIRPROG="mkdir -p" install
}

genpkg_rules() {
	copy @dev
	DEPENDS="xorg-util-macros"
}
