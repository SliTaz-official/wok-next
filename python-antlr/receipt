# SliTaz package receipt v2.

PACKAGE="python-antlr"
VERSION="latest"
CATEGORY="development"
SHORT_DESC="Language tool for constructing recognizers, compilers for Python"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://www.antlr.org/"
REPOLOGY="antlr4"

BUILD_DEPENDS="python"

compile_rules() {
	pip install --no-compile --root=$DESTDIR antlr4-python2-runtime
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*antlr4-python2-runtime-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
}
