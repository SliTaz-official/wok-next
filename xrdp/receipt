# SliTaz package receipt v2.

PACKAGE="xrdp"
VERSION="0.6.1"
CATEGORY="network"
SHORT_DESC="An open source remote desktop protocol(rdp) server"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.xrdp.org/"

TARBALL="$PACKAGE-v$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="autoconf automake libtool openssl-dev pam-dev xorg-dev"

compile_rules() {
	./bootstrap &&
	./configure $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install || return 1

	mkdir -p $install/etc/init.d/
	mv $install/etc/xrdp/xrdp.sh $install/etc/init.d/xrdp
	sed \
		-e 's|/usr/local|/usr|;s|xrdp\.sh|xrdp|' \
		-e 's|--noheading -C||' \
		-e 's,grep -q -i,grep /usr/sbin | &,' \
		-i $install/etc/init.d/xrdp

	sed -i 's|gnome|lxde-session &|' $install/etc/xrdp/startwm.sh
}

genpkg_rules() {
	copy @std
	DEPENDS="openssl zlib xorg-libX11 xorg-libXfixes xorg-libxcb xorg-libXau \
	xorg-libXdmcp pam tightvnc"
}
