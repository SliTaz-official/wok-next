# SliTaz package receipt v2.

PACKAGE="nanoshot"
VERSION="0.2.15"
CATEGORY="utilities"
SHORT_DESC="Take screenshots of screen area, windows, web pages and videos"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://sourceforge.net/projects/nanoshot/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="xdg-utils python pygobject pygtk pycurl gnome-python-desktop \
python-dbus python-pil bash sed gettext"

compile_rules() {
	mkdir -p /usr/share/man

	./configure $CONFIGURE_ARGS &&
	sed -i 's/cp -T/cp/g' ./install
	# fix install paths
	sed -i "s|\"/usr|\"$install/usr|g" ./install

	./install

	# fix paths
	sed -i "s|$install||g" $install/usr/bin/Nanoshot
}

genpkg_rules() {
	copy @std
	DEPENDS="xdg-utils python pygobject pygtk pycurl gnome-python-desktop \
	python-dbus python-pil gst0-python"
}
