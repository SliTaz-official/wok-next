# SliTaz package receipt v2.

PACKAGE="xorg-fstobdf"
VERSION="1.0.6"
CATEGORY="x-window"
SHORT_DESC="Generate BDF font from X font server"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="fstobdf"

TARBALL="fstobdf-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-xorgproto xorg-libX11-dev xorg-libFS-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libFS xorg-libX11"
}
