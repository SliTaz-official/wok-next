# SliTaz package receipt v2.

PACKAGE="sg3_utils"
VERSION="1.42"
CATEGORY="system-tools"
SHORT_DESC="Low level utilities for devices that use a SCSI command set"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL BSD"
WEB_SITE="http://sg.danny.cz/sg/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="http://sg.danny.cz/sg/p/$TARBALL"

SPLIT="libsgutils2 sg3_utils sg3_utils-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libsgutils2)
			copy libsgutils2.so*
			CAT="system-tools|library"
			;;
		sg3_utils)
			copy @std @rm
			DEPENDS="libsgutils2"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
