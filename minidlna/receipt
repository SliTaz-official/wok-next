# SliTaz package receipt v2.

PACKAGE="minidlna"
VERSION="1.1.4"
CATEGORY="network"
SHORT_DESC="Simple media server fully compliant with DLNA/UPnP-AV clients"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://minidlna.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="ffmpeg-dev jpeg-dev sqlite3-dev libexif-dev libid3tag-dev \
libogg-dev libvorbis-dev flac-dev gettext-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$install install || return 1

	install -Dm644 $src/minidlna.conf $install/etc/minidlna.conf
}

genpkg_rules() {
	copy @std
	DEPENDS="ffmpeg jpeg libsqlite3 libexif libid3tag libogg libvorbis flac"
	CONFIG_FILES="/etc/minidlna.conf"
}
