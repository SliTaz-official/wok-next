# SliTaz package receipt v2.

PACKAGE="libepoxy"
VERSION="1.4.0"
CATEGORY="x-window"
SHORT_DESC="Library for handling OpenGL function pointer management"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://github.com/anholt/libepoxy/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/libepoxy.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="https://github.com/anholt/libepoxy/releases/download/v${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="xorg-util-macros python mesa-dev"
SPLIT="libepoxy-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libepoxy) copy @std;;
		*-dev)    copy @dev;;
	esac
}
