# SliTaz package receipt v2.

PACKAGE="faac"
VERSION="1.28"
CATEGORY="multimedia"
SHORT_DESC="Open source MPEG-4 and MPEG-2 AAC encoder"
MAINTAINER="paul@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.audiocoding.com/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/multimedia/faac.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/faac/$TARBALL"

SPLIT="faac-dev"

compile_rules() {
	sed -i '/obj-type/d; /Long Term/d' frontend/main.c

	CFLAGS=-std=c99 CXXFLAGS=-std=c++98 \
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		faac)  copy @std; TAGS="mp4 mpeg encoder";;
		*-dev) copy @dev;;
	esac
}
