# SliTaz package receipt.

PACKAGE="perl-io-tty"
VERSION="1.12"
CATEGORY="perl"
SHORT_DESC="IO::Tty - Low-level allocate a pseudo-Tty, import constants"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/IO-Tty"
REPOLOGY="perl:io-tty"

TARBALL="IO-Tty-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/T/TO/TODDR/$TARBALL"

BUILD_DEPENDS="perl-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
