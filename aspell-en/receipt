# SliTaz package receipt v2.

PACKAGE="aspell-en"
VERSION="2017.01.22-0"
CATEGORY="text"
SHORT_DESC="English aspell dictionary"
MAINTAINER="paul@slitaz.org"
LICENSE="PublicDomain"
WEB_SITE="https://ftp.gnu.org/gnu/aspell/dict/0index.html"
HOST_ARCH="i486 arm"

TARBALL="aspell6-en-$VERSION.tar.bz2"
WGET_URL="$GNU_MIRROR/aspell/dict/en/$TARBALL"

BUILD_DEPENDS="aspell-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
	DEPENDS="aspell"
}
