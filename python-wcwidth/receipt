# SliTaz package receipt.

PACKAGE="python-wcwidth"
VERSION="latest"
CATEGORY="development"
SHORT_DESC="Measures number of Terminal column cells of wide-character codes"
MAINTAINER="paul@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://pypi.python.org/pypi/wcwidth"
REPOLOGY="python:wcwidth"

BUILD_DEPENDS="python"

compile_rules() {
	pip install --no-compile --root=$DESTDIR wcwidth
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*wcwidth-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
}
