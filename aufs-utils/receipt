BUILD_DEPENDS="git linux-module-headers aufs coreutils-operations"
# coreutils-operations for 'install -T' in Makefile

compile_rules() {
	KERNEL_VERSION=$(. $WOK/linux/receipt; echo $VERSION)

	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	copy @std
	DEPENDS="aufs"
}
