# SliTaz package receipt.

PACKAGE="patch"
VERSION="2.7.5"
CATEGORY="utilities"
SHORT_DESC="Utilitie to patch file with diff file."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://savannah.gnu.org/projects/patch/"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNU_MIRROR/$PACKAGE/$TARBALL"

DEPENDS="attr"
BUILD_DEPENDS="attr-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure $CONFIGURE_ARGS && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/bin
	cp -a $install/usr/bin/patch $fs/usr/bin
}

# Prevent erasing busybox...
pre_install()
{
	rm -f "$1/usr/bin/patch"
}

post_remove()
{
	ln -s /bin/busybox "$1/usr/bin/patch"
}
