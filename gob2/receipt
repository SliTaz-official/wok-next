# SliTaz package receipt v2.

PACKAGE="gob2"
VERSION="2.0.17"
CATEGORY="x-window"
MAINTAINER="jozee@slitaz.org"
LICENSE="GPL2"
SHORT_DESC="GTK Object Builder (GOB) is a simple preprocessor for easily \
creating GTK objects"
WEB_SITE="http://www.5z.com/jirka/gob.html"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://ftp.gnome.org/pub/GNOME/sources/${PACKAGE}/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="flex glib-dev"
SPLIT="gob2-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS && make -j1 && make install
}

genpkg_rules() {
	case $PACKAGE in
		gob2)
			mkdir -p $fs/usr
			cp -a $install/usr/bin $fs/usr
			DEPENDS="glib"
			;;
		*-dev)
			mkdir -p $fs/usr/share
			cp -a $install/usr/share/aclocal* $fs/usr/share	
			;;
	esac
}
