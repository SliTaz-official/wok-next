# SliTaz package receipt v2.

PACKAGE="irrlicht"
VERSION="1.8.4"
CATEGORY="development"
SHORT_DESC="High performance realtime 3D engine written in C++"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="zlib/libpng"
WEB_SITE="http://irrlicht.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.zip"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="xorg-dev mesa-dev"
SPLIT="irrlicht-dev"

compile_rules() {
	cd $src/source/Irrlicht
	sed -i "s|^INSTALL_DIR.*|INSTALL_DIR = $DESTDIR/usr/lib|" Makefile
	make sharedlib &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		irrlicht)
			mkdir -p $fs/usr
			cp -a $install/usr/lib $fs/usr
			DEPENDS="mesa gcc-lib-base xorg-libxcb xorg-libXfixes"
			;;
		*-dev)
			mkdir -p $fs/usr
			cp -a $install/usr/include $fs/usr
			DEPENDS="irrlicht"
			;;
	esac
}
