# SliTaz package receipt v2.

PACKAGE="yad"
VERSION="0.40.0"
CATEGORY="utilities"
SHORT_DESC="Yet Another Dialog"
MAINTAINER="devl547@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://sourceforge.net/projects/yad-dialog/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$SF_MIRROR/yad-dialog/$TARBALL"

BUILD_DEPENDS="patch gtk2-dev gtk3-dev webkitgtk-dev intltool"
SPLIT="$PACKAGE-html:html $PACKAGE-gtk3:gtk3"

compile_rules() {
	case $SET in
		'')   SET_ARGS='--with-gtk=gtk2 --disable-html';;
		html) SET_ARGS='--with-gtk=gtk2 --enable-html';;
		gtk3) SET_ARGS='--with-gtk=gtk3 --disable-html';;
	esac

	./configure \
		--enable-icon-browser \
		$SET_ARGS \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		yad)
			copy @std
			CAT="utilities|GTK+2"
			DEPENDS="cairo gdk-pixbuf glib gtk2 pango"
			TAGS="gtk2"
			;;
		yad-html)
			copy @std
			CAT="utilities|GTK+2, with HTML widget"
			DEPENDS="cairo gdk-pixbuf glib gtk2 libsoup pango webkitgtk"
			TAGS="gtk2"
			PROVIDE="yad:webkitgtk"
			;;
		yad-gtk3)
			copy @std
			CAT="utilities|GTK+3"
			DEPENDS="cairo gdk-pixbuf glib gtk3 pango"
			TAGS="gtk3"
			PROVIDE="yad:gtk3"
			;;
	esac
}
