# SliTaz package receipt v2.

PACKAGE="yad"
VERSION="0.39.0"
CATEGORY="utilities"
SHORT_DESC="Yet Another Dialog"
MAINTAINER="devl547@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://sourceforge.net/projects/yad-dialog/"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$SF_MIRROR/yad-dialog/$TARBALL"

BUILD_DEPENDS="patch gtk+-dev gtk+3-dev webkitgtk-dev intltool"
SPLIT="yad-html yad-gtk3"

compile_rules() {
	sed -i '/^SUBDIRS/ s|.*|SUBDIRS = 16x16 48x48|' data/icons/Makefile.in
	rm -rf $install-*
	cp -a $src $src-h
	cp -a $src $src-3

while read Pkg Src Gtk Html Install; do
	title "Making $Pkg"
	cd $Src
	./configure \
		--enable-icon-browser \
		--with-gtk=$Gtk \
		--$Html-html \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$Install install || return 1
done <<EOT
yad      $src    gtk2 disable $install
yad-html $src-h  gtk2 enable  $install-h
yad-gtk3 $src-3  gtk3 disable $install-3
EOT
}

genpkg_rules() {
	case $PACKAGE in
		yad)
			copy @std
			CAT="utilities|GTK+2"
			DEPENDS="atk cairo fontconfig freetype gdk-pixbuf glib gtk+ pango"
			TAGS="gtk2"
			;;
		yad-html)
			install=$install-h copy @std
			CAT="utilities|GTK+2, with HTML widget"
			DEPENDS="atk cairo fontconfig freetype gdk-pixbuf glib gtk+ \
			libsoup pango webkitgtk"
			TAGS="gtk2"
			PROVIDE="yad:webkitgtk"
			;;
		yad-gtk3)
			install=$install-3 copy @std
			CAT="utilities|GTK+3"
			DEPENDS="atk cairo gdk-pixbuf glib gtk+3 pango"
			TAGS="gtk3"
			PROVIDE="yad:gtk+3"
			;;
	esac
}
