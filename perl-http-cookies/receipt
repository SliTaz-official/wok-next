# SliTaz package receipt.

PACKAGE="perl-http-cookies"
VERSION="6.03"
CATEGORY="perl"
SHORT_DESC="HTTP::Cookies - HTTP cookie jars"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/HTTP-Cookies"

TARBALL="HTTP-Cookies-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/O/OA/OALDERS/$TARBALL"

DEPENDS="perl-http-date perl-http-message"
BUILD_DEPENDS="$DEPENDS"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
