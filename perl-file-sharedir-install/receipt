# SliTaz package receipt.

PACKAGE="perl-file-sharedir-install"
VERSION="0.13"
CATEGORY="perl"
SHORT_DESC="File::ShareDir::Install - Install shared files"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/File-ShareDir-Install"
REPOLOGY="perl:file-sharedir-install"

TARBALL="File-ShareDir-Install-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/E/ET/ETHER/$TARBALL"

BUILD_DEPENDS="perl-module-build-tiny"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
