# SliTaz package receipt v2.

PACKAGE="evince"
VERSION="2.32.0"
CATEGORY="office"
SHORT_DESC="Document viewer for Gnome"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://projects.gnome.org/evince/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION:0:4}/$TARBALL"

BUILD_DEPENDS="gnome-doc-utils docbook-xml libxml2-dev \
gnome-icon-theme gtk2-dev intltool lcms-dev util-linux-uuid-dev \
poppler-dev tiff-dev dbus-glib-dev xorg-dev lcms2-dev"
SPLIT="evince-dev"

compile_rules() {
	export LDFLAGS="$LDFLAGS -lICE"

	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib/$PACKAGE \
		--disable-nautilus \
		--disable-scrollkeeper \
		--disable-comics \
		--without-gconf \
		--without-keyring \
		--disable-schemas-install \
		--disable-gtk-doc-html \
		--with-help-formats=none \
		--disable-help \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make -j1 &&
	make -j1 DESTDIR=$DESTDIR install || return 1

	install -Dm644 $stuff/evince.desktop $install/usr/share/applications/evince.desktop
}

genpkg_rules() {
	case $PACKAGE in
		evince)
			copy @std
			TAGS="viewer pdf tiff ps postscript dvi"
			DEPENDS="lcms poppler tiff dbus-glib glib util-linux-uuid"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
