# SliTaz package receipt v2.

PACKAGE="bluez"
VERSION="5.43"
CATEGORY="system-tools"
SHORT_DESC="Bluetooth protocol stack"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.bluez.org/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="http://www.kernel.org/pub/linux/bluetooth/$TARBALL"

BUILD_DEPENDS="alsa-lib-dev dbus-dev glib-dev libusb-dev pkg-config libusb-compat"
SPLIT="bluez-tools bluez-tools-experimental bluez bluez-dev"

BUILD_DEPENDS="glib-dev dbus-dev eudev-dev libical-dev readline-dev"

# Rules to configure and make the package.
compile_rules()
{
	# http://www.linuxfromscratch.org/blfs/view/stable/general/bluez.html
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-library \
		--disable-systemd \
		--enable-experimental \
		$CONFIGURE_ARGS &&
	make && make install || return 1

	mkdir -p $install/usr/sbin
	ln -svf ../libexec/bluetooth/bluetoothd $install/usr/sbin

	mkdir -p $install/etc/bluetooth
	cp src/main.conf $install/etc/bluetooth

	docdir="$install/usr/share/doc/$PACKAGE-$VERSION"
	mkdir -p $docdir
	cp doc/*.txt $docdir

	cp $stuff/*.conf $install/etc/bluetooth/
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		bluez-tools)
			copy bccmd bluemoon ciptool hciattach hciconfig hcidump hcitool \
			hex2hcd l2ping l2test mpris-proxy rctest rfcomm sdptool
			CAT="system-tools|tools"
			;;
		bluez-tools-experimental)
			copy bin/
			rm $fs/usr/bin/bluetoothctl $fs/usr/bin/btmon	# -> main package
			remove_already_packed
			CAT="system-tools|experimental tools"
			;;
		bluez)
			copy @std
			remove_already_packed
			TAGS="bluetooth"
			DEPENDS="dbus eudev glib libical ncurses readline   linux-bluetooth"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
