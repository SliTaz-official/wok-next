# SliTaz package receipt v2.

PACKAGE="xorg-font-alias"
VERSION="1.0.3"
CATEGORY="x-window"
SHORT_DESC="X font aliases"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="other"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7font.html"
HOST_ARCH="any"
REPOLOGY="font-alias"

TARBALL="font-alias-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/font/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-font-util-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
}
