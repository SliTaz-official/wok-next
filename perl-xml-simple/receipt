# SliTaz package receipt.

PACKAGE="perl-xml-simple"
VERSION="2.25"
CATEGORY="perl"
SHORT_DESC="XML::Simple module is used to read and write XML"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/XML-Simple"

TARBALL="XML-Simple-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/G/GR/GRANTM/$TARBALL"

DEPENDS="perl-xml-namespacesupport perl-xml-sax perl-xml-sax-expat"
BUILD_DEPENDS="$DEPENDS"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
