# SliTaz package receipt v2.

PACKAGE="xorg-font-util"
VERSION="1.3.1"
CATEGORY="x-window"
SHORT_DESC="Font utilities dirs"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7font.html"

TARBALL="font-util-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/font/$TARBALL"

BUILD_DEPENDS="xorg-util-macros"
SPLIT="xorg-font-util-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-font-util) copy @std;;
		*-dev)       copy @dev;;
	esac
}
