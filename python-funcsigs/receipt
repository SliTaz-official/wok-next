# SliTaz package receipt v2.

PACKAGE="python-funcsigs"
VERSION="latest"
CATEGORY="development"
SHORT_DESC="Python function signatures"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="BSD"
WEB_SITE="https://pypi.org/project/funcsigs/"
REPOLOGY="python:funcsigs"

BUILD_DEPENDS="python"

compile_rules() {
	pip install --no-compile --root=$DESTDIR funcsigs
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*funcsigs-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
}
