# SliTaz package receipt v2.

PACKAGE="xorg-xsetmode"
VERSION="1.0.0"
CATEGORY="x-window"
SHORT_DESC="Set the mode for an X Input device"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="xsetmode"

TARBALL="xsetmode-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-libXi-dev xorg-libX11-dev"
PKG_RULE="std"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libXi"
}
