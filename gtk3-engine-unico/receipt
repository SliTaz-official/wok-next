# SliTaz package receipt v2.

PACKAGE="gtk3-engine-unico"
VERSION="1.0.2"
CATEGORY="customization"
SHORT_DESC="Unico GTK3 theme engine"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://launchpad.net/unico"

TARBALL="unico-$VERSION.tar.gz"
WGET_URL="https://launchpad.net/unico/${VERSION%.*}/$VERSION/+download/$TARBALL"

BUILD_DEPENDS="gtk+3-dev libxml2-dev"
SPLIT="gtk3-engine-unico-dev"

compile_rules() {
	./configure \
		--disable-static \
		--disable-debug \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		gtk3-engine-unico)
			copy @std
			DEPENDS="gtk+3"
			TAGS="gtk3"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
