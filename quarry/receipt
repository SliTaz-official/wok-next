# SliTaz package receipt v2.

PACKAGE="quarry"
VERSION="0.2.0"
CATEGORY="games"
SHORT_DESC="Multi-purpose GUI for Go, Amazons and Reversi"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://home.gna.org/quarry/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://download.gna.org/$PACKAGE/$TARBALL"

BUILD_DEPENDS="gtk2-dev librsvg-dev libgsf"

compile_rules() {
	sed -i 's/mozilla/firefox/' src/gui-gtk/gtk-help.c

	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		--enable-sgf-utils \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	copy @std
	DEPENDS="gtk2 librsvg libgsf xcb-util"
	SUGGESTED="gnugo"
}
