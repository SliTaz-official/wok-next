# SliTaz package receipt.

PACKAGE="perl-fcgi"
VERSION="0.78"
CATEGORY="perl"
SHORT_DESC="FCGI - Fast CGI module"
MAINTAINER="devel@slitaz.org"
LICENSE="unknown"
WEB_SITE="https://metacpan.org/release/FCGI"
REPOLOGY="perl:fcgi"

TARBALL="FCGI-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/E/ET/ETHER/$TARBALL"

BUILD_DEPENDS="perl-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
