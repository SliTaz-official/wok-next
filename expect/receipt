# SliTaz package receipt v2.

PACKAGE="expect"
VERSION="5.45"
CATEGORY="utilities"
SHORT_DESC="A tool for automating interactive applications"
MAINTAINER="samuel_trassare@yahoo.com"
LICENSE="PublicDomain"
WEB_SITE="http://expect.sourceforge.net"

TARBALL="$PACKAGE$VERSION.tar.gz"
WGET_URL="http://sourceforge.net/projects/$PACKAGE/files/Expect/$VERSION/$TARBALL"

BUILD_DEPENDS="tcl-dev"
COOKOPTS="!skip-log-errors" # for:
# chmod: cannot access './install-sh': No such file or directory

compile_rules() {
	./configure $CONFIGURE_ARGS && make && make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="tcl"
}
