# SliTaz package receipt v2.

PACKAGE="sslh"
VERSION="1.17"
CATEGORY="network"
SHORT_DESC="Accept HTTPS SSH OpenVPN Tinc & XMPP connections on the same port"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.rutschle.net/tech/sslh.shtml"

TARBALL="$PACKAGE-v$VERSION.tar.gz"
WGET_URL="http://www.rutschle.net/tech/$TARBALL"

BUILD_DEPENDS="libwrap-dev libwrap libconfig-dev"

compile_rules() {
	make || return 1
	install -Dm755 sslh-fork   $install/usr/sbin/sslh-fork
	install -Dm755 sslh-select $install/usr/sbin/sslh-select
}

genpkg_rules() {
	copy @std
	DEPENDS="libwrap libconfig"
	TAGS="ssh vpn tunnel"
}
