# SliTaz package receipt v2.

PACKAGE="librevenge"
VERSION="0.0.4"
CATEGORY="libs"
SHORT_DESC="Library for REVerses ENGineered formats filters"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MPL"
WEB_SITE="http://libwpd.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$SF_MIRROR/libwpd/$TARBALL"

BUILD_DEPENDS="libboost-dev cppunit-dev doxygen zlib-dev"
SPLIT="librevenge-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules() {
	case $PACKAGE in
		librevenge)
			copy @std
			DEPENDS="zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="librevenge zlib-dev"
			;;
	esac
}
