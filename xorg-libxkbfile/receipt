# SliTaz package receipt v2.

PACKAGE="xorg-libxkbfile"
VERSION="1.0.9"
CATEGORY="x-window"
SHORT_DESC="XKB file handling routines"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7lib.html"

TARBALL="libxkbfile-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-libX11-dev libxcb-dev xorg-libXau-dev xorg-libXdmcp-dev"
SPLIT="xorg-libxkbfile-dev"

compile_rules() {
	fix ld
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libxkbfile)
			copy @std
			DEPENDS="xorg-libX11"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libxkbfile \
			xorg-kbproto xorg-libX11-dev"
			;;
	esac
}
