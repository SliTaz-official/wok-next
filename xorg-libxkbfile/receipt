# SliTaz package receipt.

PACKAGE="xorg-libxkbfile"
VERSION="1.0.9"
CATEGORY="x-window"
SHORT_DESC="Xorg server keyboard library."
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki"
HOST_ARCH="i486 arm"

TARBALL="libxkbfile-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

DEPENDS="xorg-libX11 libxcb xorg-libXau xorg-libXdmcp"
BUILD_DEPENDS="xorg-libX11-dev libxcb-dev xorg-libXau-dev xorg-libXdmcp-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_files *.so*
}
