# SliTaz package receipt v2.

PACKAGE="xorg-libxkbfile"
VERSION="1.0.9"
CATEGORY="x-window"
SHORT_DESC="XKB file handling routines"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7lib.html"
REPOLOGY="libxkbfile"

TARBALL="libxkbfile-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-libX11-dev xorg-libxcb-dev xorg-libXau-dev xorg-libXdmcp-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libxkbfile)
			copy @std
			DEPENDS="xorg-libX11"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libxkbfile \
			xorg-xorgproto xorg-libX11-dev"
			;;
	esac
}
