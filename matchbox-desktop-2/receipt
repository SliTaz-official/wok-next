# SliTaz package receipt v2.

PACKAGE="matchbox-desktop-2"
VERSION="2.2"
CATEGORY="x-window"
SHORT_DESC="Matchbox desktop v2"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://matchbox-project.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://git.yoctoproject.org/cgit/cgit.cgi/matchbox-desktop-2/snapshot/$TARBALL"

BUILD_DEPENDS="gtk+-dev dbus-dev dbus-glib-dev util-linux-uuid-dev"
BUILD_DEPENDS="automake glib-dev gtk+3-dev xorg-libX11-dev"

compile_rules() {
	mkdir m4
	autoreconf -v --install || return 1

	./configure \
		--disable-startup-notification \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="atk gdk-pixbuf glib gtk+3 pango xorg-libX11"
	TAGS="matchbox"
}
