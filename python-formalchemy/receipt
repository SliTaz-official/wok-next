# SliTaz package receipt.

PACKAGE="python-formalchemy"
VERSION="1.4.2"
CATEGORY="development"
SHORT_DESC="Auto-generated, customizable HTML output form fields from SQLAlchemy mapped classes."
MAINTAINER="claudinei@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://docs.formalchemy.org"
REPOLOGY="python:formalchemy"

SOURCE="formalchemy"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="https://github.com/FormAlchemy/$SOURCE/archive/$VERSION.tar.gz"

DEPENDS="python python-sqlalchemy python-webhelpers python-markupsafe \
python-tempita python-webob"
BUILD_DEPENDS="python-dev"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}
