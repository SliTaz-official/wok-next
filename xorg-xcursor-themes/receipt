# SliTaz package receipt v2.

PACKAGE="xorg-xcursor-themes"
VERSION="1.0.4"
CATEGORY="x-window"
SHORT_DESC="Standard set of X cursors"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/xcursor-themes.html"

TARBALL="xcursor-themes-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/data/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-xcursorgen xorg-libXcursor-dev"

compile_rules() {
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
}
