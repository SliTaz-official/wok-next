# SliTaz package receipt v2.

PACKAGE="ccid"
VERSION="1.4.8"
CATEGORY="base-system"
SHORT_DESC="Chip/Smart Card Interface Devices driver"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://pcsclite.alioth.debian.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://alioth.debian.org/frs/download.php/3768/$TARBALL"

BUILD_DEPENDS="wget pcsc-lite-dev libusb-dev perl"

compile_rules() {
	./configure \
		--enable-usbdropdir=/usr/lib/pcsc/drivers \
		--enable-twinserial \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install &&
	make DESTDIR=$DESTDIR -C src install_ccidtwin || return 1

	mkdir -p \
		$install/etc/udev/rules.d/ \
		$install/usr/bin/ \
		$install/usr/sbin/
	cp  $src/src/92_pcscd_ccid.rules                               $install/etc/udev/rules.d/
	cp  $src/contrib/RSA_SecurID/RSA_SecurID_getpasswd             $install/usr/bin/
	cp  $src/contrib/Kobil_mIDentity_switch/Kobil_mIDentity_switch $install/usr/sbin/

	mv  $install/usr/lib/pcsc/drivers/ifd-ccid.bundle/Contents/Info.plist \
		$install/etc/libccid_Info.plist
	ln -s       /etc/libccid_Info.plist \
		$install/usr/lib/pcsc/drivers/ifd-ccid.bundle/Contents/Info.plist
}

genpkg_rules() {
	copy @std
	DEPENDS="libusb pcsc-lite"
}

# addgroup pcscd if needed
post_install() {
	if ! grep -q pcscd "$1/etc/group"; then
		chroot "$1/" addgroup pcscd
	fi
}
