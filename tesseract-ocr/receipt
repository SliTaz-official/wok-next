# SliTaz package receipt v2.

PACKAGE="tesseract-ocr"
VERSION="3.05.01"
CATEGORY="office"
SHORT_DESC="The most accurate open source OCR engine available"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="Apache"
WEB_SITE="http://code.google.com/p/tesseract-ocr/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/tesseract-ocr/tesseract/archive/$VERSION.tar.gz"

BUILD_DEPENDS="libtool autoconf automake libpng16-dev jpeg-dev tiff-dev \
giflib-dev zlib-dev icu-dev pango-dev cairo-dev leptonica-dev"
SPLIT="tesseract-ocr-dev"

compile_rules() {
	./autogen.sh
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		tesseract-ocr)
			copy @std
			DEPENDS="leptonica libpng16 jpeg tiff giflib"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
