# SliTaz package receipt v2.

PACKAGE="colord"
VERSION="1.2.12"
CATEGORY="utilities"
SHORT_DESC="System activated daemon that maps devices to color profiles"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://www.freedesktop.org/software/colord/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/colord.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="http://www.freedesktop.org/software/colord/releases/$TARBALL"

BUILD_DEPENDS="glib-dev gobject-introspection-dev gtk-doc intltool libxslt \
libgusb-dev lcms2-dev sqlite3-dev libgudev-dev polkit-dev dbus-dev vala"
SPLIT="colord-dev"

compile_rules() {
	if ! grep -q colord "/etc/passwd"; then
		addgroup -g 71 colord
		adduser -g "Color Daemon Owner" -h /var/lib/colord -u 71 \
			-G colord -s /bin/false -D colord
	fi

	fix ld
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--with-daemon-user=colord \
		--enable-vala \
		--enable-systemd-login=no \
		--disable-argyllcms-sensor \
		--disable-bash-completion \
		--disable-static \
		--with-systemdsystemunitdir=no \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		colord)
			copy @std
			DEPENDS="eudev glib lcms2 libgudev libgusb libsqlite3 polkit"
			;;
		colord-dev)
			copy @dev
			DEPENDS="colord eudev-dev glib-dev lcms2-dev libgusb-dev"
			;;
	esac
}

post_install_colord() {
	chroot "$1/" /usr/sbin/addgroup -g 71 colord &&
	chroot "$1/" /usr/sbin/adduser -g "Color Daemon Owner"  -h /var/lib/colord \
		-u 71  -G colord  -s /bin/false  -D colord
}
