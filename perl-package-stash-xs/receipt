# SliTaz package receipt.

PACKAGE="perl-package-stash-xs"
VERSION="0.28"
CATEGORY="perl"
SHORT_DESC="Package::Stash::XS - faster and more correct implementation of the \
Package::Stash API"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Package-Stash-XS"
REPOLOGY="perl:package-stash-xs"

TARBALL="Package-Stash-XS-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DO/DOY/$TARBALL"

BUILD_DEPENDS="perl-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
