# SliTaz package receipt.

PACKAGE="perl-extutils-helpers"
VERSION="0.026"
CATEGORY="perl"
SHORT_DESC="ExtUtils::Helpers - Various portability utilities for module \
builders"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/ExtUtils-Helpers"
REPOLOGY="perl:extutils-helpers"

TARBALL="ExtUtils-Helpers-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/L/LE/LEONT/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
