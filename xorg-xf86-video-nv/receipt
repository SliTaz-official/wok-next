# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-nv"
VERSION="2.1.21"
CATEGORY="x-window"
SHORT_DESC="Xorg driver for NVIDIA video cards"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="xdrv:nv"

TARBALL="xf86-video-nv-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-server"
	TAGS="xorg display"
}
