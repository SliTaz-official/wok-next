# SliTaz package receipt v2.

PACKAGE="sudo-pam"
VERSION="1.8.20p2"
CATEGORY="security"
SHORT_DESC="Execute a command as another user, with PAM support"
MAINTAINER="erjo@slitaz.org"
LICENSE="ISC"
WEB_SITE="https://www.sudo.ws/"

TARBALL="sudo-$VERSION.tar.gz"
WGET_URL="${WEB_SITE}dist/$TARBALL"

BUILD_DEPENDS="gettext groff pam-dev"
SPLIT="sudo-pam-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--with-secure-path \
		--with-all-insults \
		--with-env-editor \
		--docdir=/usr/share/doc/sudo-$VERSION \
		--with-passprompt="[sudo] password for %p" \
		--with-pam \
		$CONFIGURE_ARGS &&
	make &&
	make install &&

	ln -sfv libsudo_util.so.0.0.0 $install/usr/lib/sudo/libsudo_util.so.0 &&

	mkdir -p $install/etc/pam.d &&
	cp $stuff/sudo $install/etc/pam.d/
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		sudo-pam)
			copy @std
			DEPENDS="pam zlib"
			PROVIDE="sudo:pam"
			CONFIG_FILES="/etc/sudoers /etc/pam.d/sudo"
			;;
		*-dev)
			copy @dev
			DEPENDS="pam-dev zlib-dev"
			PROVIDE="sudo-dev:pam"
			;;
	esac
}

# FIXME: you will not be able to remove 'sudo-pam' until you remove 'pam'...
pre_remove_sudo_pam()
{
	tazpkg -gi sudo
}
