# SliTaz package receipt v2.

PACKAGE="xorg-libXpm"
VERSION="3.5.12"
CATEGORY="x-window"
SHORT_DESC="XPM format pixmap library"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7lib.html"
REPOLOGY="libxpm"

TARBALL="libXpm-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-libXt-dev xorg-libXext-dev xorg-libSM-dev \
util-linux-uuid-dev gettext-dev"
SPLIT="$PACKAGE-util $PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXpm)
			copy *.so*
			DEPENDS="xorg-libX11"
			;;
		*-util)
			copy bin/
			CAT="x-window|utilities"
			DEPENDS="xorg-libX11 xorg-libXext xorg-libXpm xorg-libXt"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXpm xorg-libXpm-util \
			xorg-libX11-dev"
			;;
	esac
}
