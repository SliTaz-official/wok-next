# SliTaz package receipt v2.

PACKAGE="xorg-libXpm"
VERSION="3.5.12"
CATEGORY="x-window"
SHORT_DESC="XPM format pixmap library"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7lib.html"

TARBALL="libXpm-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-libXt-dev xorg-libXext-dev xorg-libSM-dev \
util-linux-uuid-dev gettext"
SPLIT="xorg-libXpm-util xorg-libXpm-dev"

compile_rules() {
	case "$ARCH" in
		arm*) # ARM Hack
			for la in libICE.la libSM.la libuuid.la; do
				if grep -q "^libdir='/usr/lib'" /usr/lib/$la; then
					sed -i s"#/usr/lib#/cross/$ARCH/sysroot/usr/lib#" \
						/usr/lib/$la
				fi
			done ;;
	esac

	fix ld
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXpm)
			copy *.so*
			DEPENDS="xorg-libX11"
			;;
		*-util)
			copy bin/
			CAT="x-window|utilities"
			DEPENDS="xorg-libX11 xorg-libXext xorg-libXpm xorg-libXt"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXpm xorg-libXpm-util \
			xorg-libX11-dev"
			;;
	esac
}
