# SliTaz package receipt v2.

PACKAGE="zlib"
VERSION="1.2.11"
CATEGORY="base-system"
SHORT_DESC="Compression library"
MAINTAINER="pankso@slitaz.org"
LICENSE="zlib/libpng"
WEB_SITE="http://www.zlib.net/"
LFS="http://www.linuxfromscratch.org/lfs/view/stable/chapter06/zlib.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$WEB_SITE$TARBALL"

SPLIT="zlib-dev"

compile_rules() {
	./configure \
		--prefix=/usr &&
	make && make install || return 1

	mkdir -p $install/lib
	mv -v $install/usr/lib/libz.so.* $install/lib
	ln -sf ../../lib/$(readlink $install/usr/lib/libz.so) \
		$install/usr/lib/libz.so
}

# Important cross compiled package so run readelf.
testsuite() {
	readelf -h $install/lib/libz.so.$VERSION
}

genpkg_rules() {
	case $PACKAGE in
		zlib)  copy @std; TAGS="LFS";;
		*-dev) copy @dev;;
	esac
}
