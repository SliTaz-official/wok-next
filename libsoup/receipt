# SliTaz package receipt v2.

PACKAGE="libsoup"
VERSION="2.60.3"
CATEGORY="network"
SHORT_DESC="HTTP client/server library for GNOME"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="https://wiki.gnome.org/Projects/libsoup"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/basicnet/libsoup.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS_arm="glib-networking glib-dev libxml2-dev libgcrypt-dev \
libtasn1-dev gnutls-dev zlib-dev libgnome-keyring-dev sqlite3-dev dbus-dev"
BUILD_DEPENDS="glib-dev libxml2-dev sqlite3-dev intltool gtk-doc \
gobject-introspection-dev vala glib-networking"
SPLIT="libsoup-gnome libsoup-dev"

compile_rules() {
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libsoup)
			copy libsoup-2*.so*
			DEPENDS="glib glibc-base libffi liblzma libsqlite3 libxml2 pcre \
			util-linux-blkid util-linux-mount util-linux-uuid zlib"
			;;
		libsoup-gnome)
			copy libsoup-gnome*.so*
			CAT="x-window|GNOME specific library"
			DEPENDS="libsoup glib libffi liblzma libsqlite3 libxml2 pcre \
			util-linux-blkid util-linux-mount util-linux-uuid zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="libsoup libsoup-gnome glib-dev glibc-dev libffi-dev \
			xz-dev libxml2-dev pcre-dev sqlite3-dev util-linux-blkid-dev \
			util-linux-mount-dev util-linux-uuid-dev zlib-dev"
			;;
	esac
}
