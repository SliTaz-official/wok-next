# SliTaz package receipt.

PACKAGE="perl-http-parser"
VERSION="0.06"
CATEGORY="perl"
SHORT_DESC="HTTP::Parser - parse HTTP/1.1 request into HTTP::Request/Response \
object"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/HTTP-Parser"
REPOLOGY="perl:http-parser"

TARBALL="HTTP-Parser-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/E/ED/EDECA/$TARBALL"

BUILD_DEPENDS="perl-http-message perl-uri"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-http-message perl-uri"
}
