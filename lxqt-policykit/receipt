# SliTaz package receipt v2.

PACKAGE="lxqt-policykit"
VERSION="0.11.1"
CATEGORY="system-tools"
SHORT_DESC="The LXQt PolicyKit agent"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://github.com/lxde/lxqt-policykit"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/lxqt/lxqt-policykit.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="https://github.com/lxde/lxqt-policykit/releases/download/$VERSION/$TARBALL"

BUILD_DEPENDS="cmake polkit-dev polkit-qt-dev mesa17-dev liblxqt-dev \
kwindowsystem-dev lxqt-build-tools"

compile_rules() {
	mkdir build; cd build
	cmake \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DPULL_TRANSLATIONS=no \
		.. &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="glib kwindowsystem liblxqt libqtxdg polkit polkit-qt qt5-base \
	qt5-svg qt5-x11extras"
	TAGS="LXQt"
}
