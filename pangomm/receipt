# SliTaz package receipt v2.

PACKAGE="pangomm"
VERSION="2.40.1"
CATEGORY="x-window"
SHORT_DESC="Pango binding for GTKmm"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="https://developer.gnome.org/pangomm/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/pangomm.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="glibmm-dev cairomm-dev pango-dev"
SPLIT="pangomm-dev"

compile_rules() {
	sed -i "/^libdocdir =/ s|\$(book_name)|pangomm-$VERSION|" docs/Makefile.in

	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		pangomm)
			copy @std
			DEPENDS="cairo cairomm glib glibmm libsigc++ pango"
			;;
		*-dev)
			copy @dev
			DEPENDS="pangomm bzip2-dev cairo-dev cairomm-dev fontconfig-dev \
			freetype-dev glib-dev glibmm-dev harfbuzz-dev libffi-dev \
			libpng16-dev libsigc++-dev libxml2-dev pango-dev pcre-dev \
			xorg-libX11-dev xorg-libXau-dev xorg-libXdmcp-dev xorg-libXext-dev \
			xorg-libXrender-dev xorg-libxcb-dev xorg-pixman-dev xz-dev zlib-dev"
			;;
	esac
}

