# SliTaz package receipt v2.

PACKAGE="pangomm"
VERSION="2.40.1"
CATEGORY="x-window"
SHORT_DESC="Pango binding for GTKmm"
MAINTAINER="devel@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="https://developer.gnome.org/pangomm/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/pangomm.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="glibmm-dev cairomm-dev pango-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	sed -i "/^libdocdir =/ s|\$(book_name)|pangomm-$VERSION|" docs/Makefile.in

	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		pangomm)
			copy @std
			DEPENDS="cairomm glib glibmm libsigc++ pango"
			;;
		*-dev)
			copy @dev
			DEPENDS="pangomm cairomm-dev glibmm-dev pango-dev"
			;;
	esac
}

