# SliTaz package receipt v2.

PACKAGE="perl-dbd-mysql"
VERSION="4.048"
CATEGORY="perl"
SHORT_DESC="DBD::mysql - MySQL driver for the Perl5 Database Interface (DBI)"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/DBD-mysql"
HOST_ARCH="any"
REPOLOGY="perl:dbd-mysql"

TARBALL="DBD-mysql-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/M/MI/MICHIELB/$TARBALL"

BUILD_DEPENDS="perl-dev perl-dbi mysql-dev perl-devel-checklib"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl perl-dbi libmysqlclient zlib"
}
