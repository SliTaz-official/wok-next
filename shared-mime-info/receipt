# SliTaz package receipt v2.

PACKAGE="shared-mime-info"
VERSION="1.9"
CATEGORY="system-tools"
SHORT_DESC="Core database of common types"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://freedesktop.org/wiki/Software/shared-mime-info/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/shared-mime-info.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="https://people.freedesktop.org/~hadess/$TARBALL"

BUILD_DEPENDS_arm="glib-dev libxml2-dev"
BUILD_DEPENDS="intltool libxml2-dev glib-dev"
SPLIT="shared-mime-info-dev"

compile_rules() {
	# Remove unsupported locales
	for i in $(grep '^-[a-z]' $stuff/patches/slitaz-locales.patch); do
		rm $src/po/${i#-}.po
	done

	./configure \
		--disable-update-mimedb \
		$CONFIGURE_ARGS &&
	make -j1 &&
	make -j1 install || return 1

	# Additional MIME-types supported by SliTaz
	cp $stuff/*.xml $install/usr/share/mime/packages

	# strip a bit
	sed -i 's|^ *||' "$install/usr/share/mime/packages/freedesktop.org.xml"
}

genpkg_rules() {
	case $PACKAGE in
		shared-mime-info)
			copy bin/ packages/
			DEPENDS="glib libxml2"
			;;
		*-dev) copy @dev;;
	esac
}
