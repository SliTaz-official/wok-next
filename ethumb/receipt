# SliTaz package receipt v2.

PACKAGE="ethumb"
VERSION="1.7.10"
CATEGORY="graphics"
SHORT_DESC="EFL Thumbnail generation library"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://www.enlightenment.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://download.enlightenment.org/releases/$TARBALL"

BUILD_DEPENDS="shared-mime-info eet-dev ecore-dev eio-dev evas-dev edje-dev \
embryo-dev eeze-dev emotion-dev edbus-dev libexif-dev lua-dev"
SPLIT="ethumb-dev"

compile_rules() {
	./configure \
		--libexecdir=/usr/lib/$PACKAGE \
		--disable-doc \
		$CONFIGURE_ARGS &&
	make $MAKEFLAGS && make install
}

genpkg_rules() {
	case $PACKAGE in
		ethumb)
			copy @std
			DEPENDS="eet ecore eio evas edje embryo emotion eeze edbus libexif"
			TAGS="e enlightenment efl"
			;;
		ethumb-dev)
			copy @dev
			DEPENDS="emotion-dev edbus-dev libexif-dev"
			;;
	esac
}
