# SliTaz package receipt v2.

PACKAGE="ufraw"
VERSION="0.18"
CATEGORY="graphics"
SHORT_DESC="Utility to read and manipulate raw images from digital cameras."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://ufraw.sourceforge.net/"
WGET_URL="$SF_MIRROR/project/ufraw/ufraw/ufraw-$VERSION/$TARBALL"

BUILD_DEPENDS="gimp gimp-dev lcms-dev tiff-dev exiv2-dev gtk2-dev \
libgtkimageview-dev bzip2-dev gettext-tools"
SPLIT="ufraw gimp-plugin-ufraw ufraw-locales"

# Rules to configure and make the package.
compile_rules()
{
	export CXXFLAGS="-Wno-narrowing"
	./configure \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
	ufraw)
		SUGGESTED="ufraw-locales gimp-plugin-ufraw"
		DEPENDS="gtk2 exiv2 lcms tiff libgtkimageview libgomp bzip2"
		mkdir -p $fs/usr/share/applications
		cp -a $install/usr/bin $fs/usr
		cp -a $src/ufraw.desktop $fs/usr/share/applications
		;;
	gimp-plugin-ufraw)
		CAT="graphics|Add raw files support to GIMP with UFRaw."
		SUGGESTED="ufraw-locales"
		DEPENDS="gimp"
		mkdir -p $fs/usr
		cp -a $install/usr/lib $fs/usr
		;;
	ufraw-locales)
		CAT="misc|Locales for ufraw and gimp-plugin-ufraw."
		mkdir -p $fs/usr $fs/usr/share
		cp -a $install/usr/share/locale $fs/usr/share
		;;
	esac
}
