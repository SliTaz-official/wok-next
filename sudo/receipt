# SliTaz package receipt v2.

PACKAGE="sudo"
VERSION="1.8.20p2"
CATEGORY="security"
SHORT_DESC="Execute a command as another user"
MAINTAINER="erjo@slitaz.org"
LICENSE="ISC"
WEB_SITE="https://www.sudo.ws/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="${WEB_SITE}dist/$TARBALL"

BUILD_DEPENDS="gettext groff"
SPLIT="sudo-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--with-secure-path \
		--with-all-insults \
		--with-env-editor \
		--docdir=/usr/share/doc/sudo-$VERSION \
		--with-passprompt="[sudo] password for %p" \
		--without-pam \
		$CONFIGURE_ARGS &&
	make &&
	make install &&

	ln -sfv libsudo_util.so.0.0.0 $install/usr/lib/sudo/libsudo_util.so.0
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		sudo)
			copy @std
			DEPENDS="zlib"
			CONFIG_FILES="/etc/sudoers"
			;;
		*-dev)
			copy @dev
			DEPENDS="zlib-dev"
			;;
	esac
}
