# SliTaz package receipt v2.

PACKAGE="sudo"
VERSION="1.8.20p2"
CATEGORY="security"
SHORT_DESC="Execute a command as another user"
MAINTAINER="erjo@slitaz.org"
LICENSE="ISC"
WEB_SITE="https://www.sudo.ws/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="${WEB_SITE}dist/$TARBALL"

BUILD_DEPENDS="gettext groff pam-dev"
SPLIT="sudo sudo-dev sudo-pam:pam sudo-pam-dev:pam"

compile_rules() {
	case $SET in
		'')  SET_ARGS='--without-pam';;
		pam) SET_ARGS='--with-pam';;
	esac

	./configure \
		--libexecdir=/usr/lib \
		--with-secure-path \
		--with-all-insults \
		--with-env-editor \
		--docdir=/usr/share/doc/sudo-$VERSION \
		--with-passprompt="[sudo] password for %p" \
		$SET_ARGS \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install || return 1

	ln -sfv libsudo_util.so.0.0.0 $install/usr/lib/sudo/libsudo_util.so.0

	if [ "$SET" == 'pam' ]; then
		install -Dm644 $stuff/sudo $install/etc/pam.d/sudo
	fi
}

genpkg_rules() {
	case $PACKAGE in
		sudo)
			copy @std
			DEPENDS="zlib"
			CONFIG_FILES="/etc/sudoers"
			;;
		sudo-dev)
			copy @dev
			DEPENDS="zlib-dev"
			;;

		sudo-pam)
			copy @std
			DEPENDS="zlib pam"
			PROVIDE="sudo:pam"
			CONFIG_FILES="/etc/sudoers /etc/pam.d/sudo"
			;;
		sudo-pam-dev)
			copy @dev
			DEPENDS="zlib-dev pam-dev"
			PROVIDE="sudo-dev:pam"
			;;
	esac
}
