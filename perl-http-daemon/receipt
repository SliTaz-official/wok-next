# SliTaz package receipt.

PACKAGE="perl-http-daemon"
VERSION="6.01"
CATEGORY="perl"
SHORT_DESC="HTTP::Daemon - a simple http server class"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/HTTP-Daemon"

TARBALL="HTTP-Daemon-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/G/GA/GAAS/$TARBALL"

DEPENDS="perl-http-date perl-http-message perl-lwp-mediatypes"
BUILD_DEPENDS="$DEPENDS"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
