# SliTaz package receipt v2.

PACKAGE="perl-http-daemon"
VERSION="6.01"
CATEGORY="perl"
SHORT_DESC="HTTP::Daemon - a simple http server class"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/HTTP-Daemon"
REPOLOGY="perl:http-daemon"

TARBALL="HTTP-Daemon-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/G/GA/GAAS/$TARBALL"

BUILD_DEPENDS="perl-http-date perl-http-message perl-lwp-mediatypes"

compile_rules() {
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="$BUILD_DEPENDS"
}
