# SliTaz package receipt.

PACKAGE="perl-common-sense"
VERSION="3.74"
CATEGORY="perl"
SHORT_DESC="common::sense - save a tree AND a kitten, use common::sense!"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/common-sense"
REPOLOGY="perl:common-sense"

TARBALL="common-sense-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/M/ML/MLEHMANN/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
