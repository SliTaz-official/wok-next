# SliTaz package receipt v2.

PACKAGE="xorg-libXrender"
VERSION="0.9.10"
CATEGORY="x-window"
SHORT_DESC="RENDER extension library"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7lib.html"
REPOLOGY="libxrender"

TARBALL="libXrender-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-libX11-dev xorg-renderproto"
SPLIT="xorg-libXrender-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXrender)
			copy @std
			DEPENDS="xorg-libX11"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXrender \
			xorg-libX11-dev xorg-renderproto xorg-xproto"
			;;
	esac
}
