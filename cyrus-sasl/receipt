# SliTaz package receipt v2.

PACKAGE="cyrus-sasl"
VERSION="2.1.26"
CATEGORY="network"
SHORT_DESC="SASL authentication server"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://cyrusimap.web.cmu.edu/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="ftp://ftp.cyrusimap.org/cyrus-sasl/$TARBALL"

BUILD_DEPENDS="automake libtool openldap-dev db-dev openssl-dev krb5-dev pam-dev"
SPLIT="libsasl libsasl-modules cyrus-sasl cyrus-sasl-dev \
cyrus-sasl-pam:pam libsasl-without-ldap:wo"

compile_rules() {
	autoreconf -fi || return 1

	mkdir -p $src/saslauthd/cmulocal

	case "$SET" in
		'')  SET_ARGS='--enable-auth-sasldb --without-pam --with-ldap';;
		pam) SET_ARGS='--enable-auth-sasldb --with-pam    --with-ldap';;
		wo)  SET_ARGS="--without-pam --disable-anon --disable-cram \
			--disable-digest --disable-gssapi --enable-login --disable-otp \
			--enable-plain";;
	esac

	./configure \
		--sysconfdir=/etc \
		--with-dbpath=/var/lib/sasl/sasldb2 \
		--with-saslauthd=/var/run/saslauthd \
		--with-devrandom=/dev/urandom \
		--with-openssl \
		$SET_ARGS \
		$CONFIGURE_ARGS &&
	make && make install || return 1

	cp -a $stuff/etc $install
	chown -R root:root $inst/etc

	cook_pick_docs doc/*.html doc/*.txt doc/ONEWS doc/TODO \
		saslauthd/LDAP_SASLAUTHD
}

genpkg_rules() {
	case $PACKAGE in
		libsasl)
			copy libsasl2*.so*
			CAT="system-tools|library"
			DEPENDS=" "
			;;
		libsasl-modules)
			copy sasl2/*.so*
			CAT="system-tools|library modules"
			PROVIDE="libsasl-without-ldap"
			DEPENDS="libcomerr3 libcrypto libdb libkrb5"
			;;
		cyrus-sasl)
			copy @std @rm
			DEPENDS="libcomerr3 libcrypto libdb libkrb5 libldap \
			libsasl libsasl-modules libssl"
			;;
		*-dev)
			copy @dev
			DEPENDS="db-dev krb5-dev libcrypto-dev"
			;;
		cyrus-sasl-pam)
			copy @std
			rm -rf $fs/usr/lib
			CAT="network|using PAM"
			DEPENDS="libcomerr3 libcrypto libdb libkrb5 libldap \
			libsasl libsasl-modules libssl pam"
			;;
		libsasl-without-ldap)
			copy libsasl2*.so*
			CAT="system-tools|library"
			DEPENDS=" "
			;;
	esac
}

post_install_cyrus_sasl() {
	[ -d "$1/var/lib/sasl" ] || install -v -dm700 "$1/var/lib/sasl"
}

post_install_cyrus_sasl_pam() {
	[ -d "$1/var/lib/sasl" ] || install -v -dm700 "$1/var/lib/sasl"
}
