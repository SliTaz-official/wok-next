# SliTaz package receipt v2.

PACKAGE="ario"
VERSION="1.5.1"
CATEGORY="multimedia"
SHORT_DESC="GTK client for MPD"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://ario-player.sourceforge.net/index.php?en"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/ario-player/$TARBALL"

BUILD_DEPENDS="intltool libgcrypt-dev gtk+-dev libunique-dev curl-dev \
gnutls-dev libmpdclient-dev taglib-dev libgpg-error-dev"

compile_rules() {
	sed -i 's|.glib/gslist.h.|<glib.h>|' src/ario-util.h src/ario-profiles.h
	sed -i 's|<glib/gkeyfile.h>|<glib.h>|' src/plugins/ario-plugin-info.c

	./configure \
		--disable-dbus \
		--disable-notify \
		--disable-mpdidle \
		--disable-audioscrobbler \
		--disable-avahi \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make -j1 &&
	make -j1 DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="gdk-pixbuf glib gtk+ libcurl libgcrypt libmpdclient libunique \
	libxml2 pango taglib"
	TAGS="music audio player mp3 ogg"
}
