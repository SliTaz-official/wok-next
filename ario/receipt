# SliTaz package receipt v2.

PACKAGE="ario"
VERSION="1.6"
CATEGORY="multimedia"
SHORT_DESC="GTK client for MPD"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://ario-player.sourceforge.net/index.php?en"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/ario-player/$TARBALL"

BUILD_DEPENDS="automake libtool gettext glib-dev intltool gtk3-dev \
libxml2-dev curl-dev libmpdclient-dev taglib-dev"

compile_rules() {
	autoreconf -fi &&
	./configure \
		--disable-static \
		--disable-dbus \
		--disable-mpdidle \
		--disable-avahi \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std @ico
	DEPENDS="gdk-pixbuf glib gtk3 libcurl libmpdclient libxml2 pango taglib"
	TAGS="music audio player mp3 ogg"
}
