# SliTaz package receipt v2.

PACKAGE="automake"
VERSION="1.15.1"
CATEGORY="development"
SHORT_DESC="A GNU tool for automatically creating Makefiles"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.gnu.org/software/automake/"
LFS="http://www.linuxfromscratch.org/lfs/view/stable/chapter06/automake.html"
HOST_ARCH="i486 x86_64"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNU_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="autoconf bison flex gfortran"

compile_rules() {
	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules() {
	copy @std @dev
	DEPENDS="autoconf"
	TAGS="LFS"
}
