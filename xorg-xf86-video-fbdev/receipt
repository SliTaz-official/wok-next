# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-fbdev"
VERSION="0.4.4"
CATEGORY="x-window"
SHORT_DESC="Xorg video driver for framebuffer device"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/fbdev/"

TARBALL="xf86-video-fbdev-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

# ARM use build system xorg-server-dev or manually install it in sysroot
BUILD_DEPENDS_arm=" "
BUILD_DEPENDS="xorg-util-macros xorg-server-dev xorg-libXrandr-dev \
xorg-libXrender-dev xorg-libXv-dev xorg-xproto xorg-fontsproto"
SPLIT="xorg-xf86-video-fbdev-dev"
PKG_RULE="std-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-fbdev)
			copy @std
			DEPENDS="xorg-server"
			TAGS="xorg display"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xf86-video-fbdev xorg-server-dev"
			;;
	esac
}
