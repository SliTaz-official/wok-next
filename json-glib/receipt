# SliTaz package receipt v2.

PACKAGE="json-glib"
VERSION="1.4.2"
CATEGORY="development"
SHORT_DESC="JSON parser for GLib"
MAINTAINER="devel@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="https://wiki.gnome.org/Projects/JsonGlib"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/general/json-glib.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="meson ninja glib-dev gobject-introspection-dev gettext-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	mkdir build
	cd    build

	meson-wrapper .. &&
	ninja &&
	ninja install
}

genpkg_rules() {
	case $PACKAGE in
		json-glib)
			copy @std
			rm -r $fs/usr/lib/installed-tests/ $fs/usr/share/
			DEPENDS="glib"
			TAGS="javascript"
			;;
		*-dev)
			copy @std @rm @dev
			DEPENDS="json-glib glib-dev"
			;;
	esac
}
