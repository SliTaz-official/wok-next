# SliTaz package receipt v2.

PACKAGE="lensfun"
VERSION="0.2.5"
CATEGORY="multimedia"
SHORT_DESC="Database of photographic lenses and a library that allows advanced \
access to the database"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="LGPL3 GPL3"
WEB_SITE="http://lensfun.berlios.de/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://download.berlios.de/$PACKAGE/$TARBALL"

BUILD_DEPENDS="python libpng16 glib-dev"
SPLIT="lensfun-dev"

compile_rules() {
	sed -i 's/.*GNU Make*/# &/' configure
	./configure \
		--prefix=/usr \
		--libdir=/usr/lib &&
	make all &&
	make INSTALL_PREFIX="$DESTDIR" install
}

genpkg_rules() {
	case $PACKAGE in
		lensfun)
			copy @std
			DEPENDS="glib"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
