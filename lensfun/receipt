# SliTaz package receipt v2.

PACKAGE="lensfun"
VERSION="0.3.2"
CATEGORY="multimedia"
SHORT_DESC="Database of photographic lenses and a library that allows advanced \
access to the database"
MAINTAINER="devel@slitaz.org"
LICENSE="LGPL3 GPL3"
WEB_SITE="http://lensfun.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/lensfun/$TARBALL"

BUILD_DEPENDS="cmake glib-dev libpng16-dev"
SPLIT="lenstool $PACKAGE $PACKAGE-dev"

compile_rules() {
	case $ARCH in
		i?86) ARCH_ARGS='-DBUILD_FOR_SSE=off -DBUILD_FOR_SSE2=off';;
		*)    ARCH_ARGS='';;
	esac

	mkdir build
	cd    build
	cmake \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_LENSTOOL=on \
		$ARCH_ARGS \
		.. &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		lenstool)
			copy lenstool
			CAT="multimedia|reference implementation for Lenstool"
			DEPENDS="glib lensfun libpng16"
			;;
		lensfun)
			copy @std @rm
			DEPENDS="glib"
			;;
		*-dev)
			copy @dev
			DEPENDS="lensfun glib-dev"
			;;
	esac
}
