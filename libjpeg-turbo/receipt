# SliTaz package receipt v2.

PACKAGE="libjpeg-turbo"
VERSION="1.5.1"
CATEGORY="libs"
SHORT_DESC="Accelerated JPEG image codec"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://libjpeg-turbo.virtualgl.org/"
HOST_ARCH="i486 x86_64"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="nasm"
SPLIT="jpeg-turbo libjpeg-turbo-dev"

compile_rules() {
	./configure \
		--with-jpeg8 \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libjpeg-turbo)
			copy *.so*
			TAGS="jpeg jpg"
			PROVIDE="libjpeg"
			;;
		jpeg-turbo)
			copy bin/
			CAT="x-window|programs"
			TAGS="jpeg jpg"
			;;
		*-dev) copy @dev;;
	esac
}
