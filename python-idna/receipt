# SliTaz package receipt v2.

PACKAGE="python-idna"
VERSION="latest"
CATEGORY="network"
SHORT_DESC="Internationalized Domain Names in Applications"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="BSD"
WEB_SITE="https://pypi.python.org/pypi/idna"

BUILD_DEPENDS="python"

compile_rules() {
	pip install --no-compile --root=$DESTDIR idna
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*idna-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
}
