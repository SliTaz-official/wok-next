# SliTaz package receipt.

PACKAGE="xorg-xf86-video-intel"
VERSION="20160902"
CATEGORY="x-window"
SHORT_DESC="Xorg server Intel driver."
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
TAGS="xorg display"

TARBALL="xf86-video-intel-$VERSION.tar.bz2"
WGET_URL="http://anduin.linuxfromscratch.org/BLFS/xf86-video-intel/$TARBALL"

DEPENDS="eudev libdrm libdrm-intel libxcb pixman xcb-util xorg-libpciaccess \
xorg-libX11 xorg-libXau xorg-libXcursor xorg-libXdamage xorg-libXdmcp \
xorg-libXext xorg-libXfixes xorg-libXi xorg-libXinerama xorg-libXrandr \
xorg-libXrender xorg-libXScrnSaver xorg-libxshmfence xorg-libXtst xorg-libXv \
xorg-libXvMC"
BUILD_DEPENDS="xorg-util-macros eudev-dev xorg-libX11-dev xorg-libXcomposite-dev \
xorg-libXdamage-dev xorg-libXrender-dev xorg-libXrandr-dev cairo-dev \
xorg-libxshmfence-dev xorg-libXxf86vm-dev libdrm-dev xorg-libXinerama-dev \
xorg-libXcursor-dev xorg-libXtst-dev xorg-libXScrnSaver-dev xorg-server-dev \
xorg-libXvMC-dev xcb-util-dev xorg-libXfont-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-kms-only \
		--enable-uxa \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy bin/ libexec/ polkit-1/ *.so*
}
