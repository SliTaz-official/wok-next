# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-intel"
VERSION="2.99.917"
CATEGORY="x-window"
SHORT_DESC="Xorg driver for Intel integrated graphics chipsets"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/intel/"
REPOLOGY="xdrv:intel"

TARBALL="xf86-video-intel-$VERSION.tar.bz2"
WGET_URL="https://www.x.org/releases/individual/driver/$TARBALL"

BUILD_DEPENDS="xorg-util-macros eudev-dev xorg-libX11-dev \
xorg-libXcomposite-dev xorg-libXdamage-dev xorg-libXrender-dev \
xorg-libXrandr-dev cairo-dev xorg-libxshmfence-dev xorg-libXxf86vm-dev \
libdrm-dev xorg-libXinerama-dev xorg-libXcursor-dev xorg-libXtst-dev \
xorg-libXScrnSaver-dev xorg-server-dev xorg-libXvMC-dev xorg-xcb-util-dev \
xorg-libXfont2-dev automake libtool git"

compile_rules() {
	autoreconf -vif
	export LDFLAGS="$LDFLAGS -Wl,-z,lazy"

	./configure \
		--enable-kms-only \
		--enable-uxa \
		--enable-xvmc \
		--disable-selective-werror \
		--with-default-dri=3 \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install || return 1

	chmod o-x $install/usr/libexec/xf86-video-intel-backlight-helper
}

genpkg_rules() {
	copy @std
	DEPENDS="eudev libdrm libdrm-intel xorg-libX11 xorg-libXScrnSaver \
	xorg-libXcursor xorg-libXdamage xorg-libXext xorg-libXfixes \
	xorg-libXinerama xorg-libXrandr xorg-libXrender xorg-libXtst xorg-libXv \
	xorg-libXvMC xorg-libxcb xorg-libxshmfence xorg-pixman xorg-xcb-util"
	TAGS="xorg display"
}
