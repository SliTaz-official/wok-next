LICENSE="BSD"
WEB_SITE="http://www.php.net/docs.php"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://www.php.net/distributions/manual/php_manual_en.tar.gz"

genpkg_rules() {
	mkdir -p $fs/usr/share/doc
	cp -a $src $fs/usr/share/doc/php-en
}
