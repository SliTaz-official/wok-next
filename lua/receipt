# SliTaz package receipt v2.

PACKAGE="lua"
VERSION="5.3.4"
CATEGORY="development"
SHORT_DESC="Powerful, fast, light-weight, embeddable scripting language"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.lua.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://www.lua.org/ftp/$TARBALL"

BUILD_DEPENDS="readline-dev"
SPLIT="liblua lua-dev"

# Rules to configure and make the package.
compile_rules()
{
	sed -i '/#define LUA_ROOT/s:/usr/local/:/usr/:' src/luaconf.h &&

	case "$ARCH" in
		arm)
			make CC=${HOST_SYSTEM}-gcc posix
			;;
		i486)
			sed -i s"/-O2/-Os -march=$ARCH/" src/Makefile
			make MYCFLAGS="-DLUA_COMPAT_5_2 -DLUA_COMPAT_5_1" linux
			;;
	esac &&

	make \
		INSTALL_TOP=$DESTDIR/usr \
		INSTALL_DATA="cp -d" \
		INSTALL_MAN=$DESTDIR/usr/share/man/man1 \
		TO_LIB="liblua.so liblua.so.${VERSION%.*} liblua.so.$VERSION" \
		install &&

	docdir="$install/usr/share/doc/lua-$VERSION" &&
	mkdir -p $docdir &&
	cp -a doc/* $docdir && rm $docdir/*.1 &&

	mkdir -p $install/usr/lib/pkgconfig &&
	cp $stuff/lua.pc $install/usr/lib/pkgconfig
}

testsuite() {
	readelf -h $install/usr/bin/lua
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		lua)
			copy bin/
			DEPENDS="ncurses readline"
			;;
		liblua)
			copy *.so*
			CAT="libs|library"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
