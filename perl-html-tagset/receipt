# SliTaz package receipt.

PACKAGE="perl-html-tagset"
VERSION="3.20"
CATEGORY="perl"
SHORT_DESC="HTML::Tagset - data tables useful in parsing HTML"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/HTML-Tagset"

TARBALL="HTML-Tagset-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/P/PE/PETDANCE/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
