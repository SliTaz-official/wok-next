# SliTaz package receipt v2.

PACKAGE="xorg-libXxf86dga"
VERSION="1.1.4"
CATEGORY="x-window"
SHORT_DESC="Xorg server module"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7lib.html"
REPOLOGY="libxxf86dga"

TARBALL="libXxf86dga-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-xproto xorg-libX11-dev xorg-xextproto \
xorg-libXext-dev xorg-xf86dgaproto"
SPLIT="xorg-libXxf86dga-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXxf86dga)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXext"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXxf86dga \
			xorg-libX11-dev xorg-libXext-dev xorg-xf86dgaproto"
			;;
	esac
}
