# SliTaz package receipt.

PACKAGE="xorg-libXxf86dga"
VERSION="1.1.4"
CATEGORY="x-window"
SHORT_DESC="Xorg server module."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki"

TARBALL="libXxf86dga-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

DEPENDS=""
BUILD_DEPENDS="pkg-config xorg-util-macros xorg-xproto \
xorg-libX11-dev xorg-libXext-dev \
xorg-xf86dgaproto"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy *.so*
}
