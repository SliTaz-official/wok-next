# SliTaz package receipt v2.

PACKAGE="perl-test-fatal"
VERSION="0.014"
CATEGORY="perl"
SHORT_DESC="Test::Fatal - incredibly simple helpers for testing code with \
exceptions"
MAINTAINER="nneul@neulinger.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Test-Fatal"

TARBALL="Test-Fatal-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/R/RJ/RJBS/$TARBALL"

BUILD_DEPENDS="perl-try-tiny"

compile_rules() {
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-try-tiny"
}
