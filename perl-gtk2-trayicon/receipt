# SliTaz package receipt.

PACKAGE="perl-gtk2-trayicon"
VERSION="0.06"
CATEGORY="perl"
SHORT_DESC="Gtk2::TrayIcon - Perl interface to the EggTrayIcon library"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Gtk2-TrayIcon"
REPOLOGY="perl:gtk2-trayicon"

TARBALL="Gtk2-TrayIcon-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/B/BO/BORUP/$TARBALL"

BUILD_DEPENDS="perl-gtk2 perl-dev perl-extutils-depends perl-extutils-pkgconfig \
gtk2-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std @dev
	DEPENDS="perl-gtk2"
}
