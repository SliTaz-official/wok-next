# SliTaz package receipt v2.

PACKAGE="gigolo"
VERSION="0.4.2"
CATEGORY="network"
SHORT_DESC="Frontend to manage connections to filesystems using GIO/GVfs"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://goodies.xfce.org/projects/applications/gigolo"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://archive.xfce.org/src/apps/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="xfce4-dev-tools gtk+-dev xorg-libX11-dev"

compile_rules() {
	./autogen.sh \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="glib gtk+ xorg-libX11"
	TAGS="Xfce"
}
