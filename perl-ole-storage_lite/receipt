PACKAGE="perl-ole-storage_lite"
VERSION="0.19"
CATEGORY="perl"
SHORT_DESC="OLE::Storage_Lite - Simple Class for OLE document interface"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/OLE-Storage_Lite"
REPOLOGY="perl:ole-storage-lite"

TARBALL="OLE-Storage_Lite-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/J/JM/JMCNAMARA/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
