# SliTaz package receipt v2.

PACKAGE="python-ipaddr"
VERSION="latest"
CATEGORY="python"
SHORT_DESC="Google's Python IP address manipulation library"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="Apache"
WEB_SITE="https://pypi.org/project/ipaddr/"
REPOLOGY="python:ipaddr"

BUILD_DEPENDS="python"

compile_rules() {
	pip install --no-compile --root=$DESTDIR ipaddr
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*ipaddr-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
}
