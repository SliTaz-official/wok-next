# SliTaz package receipt v2.

PACKAGE="androguard"
VERSION="3.2.0"
CATEGORY="development"
SHORT_DESC="Reverse engineering, malware and goodware analysis of Android \
applications and more"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="Apache2"
WEB_SITE="https://github.com/androguard/androguard/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/androguard/androguard/releases/download/v$VERSION/$TARBALL"

BUILD_DEPENDS="python"

compile_rules() {
	python setup.py build &&
	python setup.py install --root=$DESTDIR
}

genpkg_rules() {
	copy @std
	DEPENDS="python"
}
