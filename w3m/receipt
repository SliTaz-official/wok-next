# SliTaz package receipt v2.

PACKAGE="w3m"
VERSION="0.5.3"
CATEGORY="network"
SHORT_DESC="Text Mode Web Browser"
MAINTAINER="mojo@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://w3m.sourceforge.net"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$PACKAGE/$TARBALL"

BUILD_DEPENDS="gc-dev openssl10-dev zlib-dev perl gettext"

compile_rules() {
	export CPPFLAGS="$CPPFLAGS -I/usr/include/openssl-1.0"
	export LDFLAGS="$LDFLAGS -L/usr/lib/openssl-1.0"

	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="gc ncurses openssl10 zlib"
	SUGGESTED="perl"
	TAGS="web-browser"
}
