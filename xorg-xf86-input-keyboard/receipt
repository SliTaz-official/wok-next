# SliTaz package receipt v2.

PACKAGE="xorg-xf86-input-keyboard"
VERSION="1.9.0"
CATEGORY="x-window"
SHORT_DESC="Xorg input driver for keyboards"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="xdrv:keyboard"

TARBALL="xf86-input-keyboard-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-server"
}
