# SliTaz package receipt.

PACKAGE="linux-drm"
VERSION="4.9.0"
CATEGORY="base-system"
SHORT_DESC="The Linux Kernel DRM module"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.kernel.org/"

WANTED="linux"
DEPENDS="linux-agp"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	. $wanted_stuff/copy_modules.sh
	copy_modules drivers/gpu/drm

	# Remove drivers/char/agp kernel modules cause there in linux-agp package
	cook linux-agp >/dev/null 2>&1
	cook_split_rm linux-agp
}
