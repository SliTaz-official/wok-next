# SliTaz package receipt v2.

PACKAGE="gftp"
VERSION="2.0.19"
CATEGORY="network"
SHORT_DESC="Small and fast FTP client"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.gftp.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://www.gftp.org/$TARBALL"

BUILD_DEPENDS="gtk+-dev gettext"

compile_rules() {
	./configure \
		--disable-ssl \
		--disable-textport \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	cp -r $stuff/gftp $fs/usr/share/
	cd $fs/usr/share/gftp
	rm COPYING gftp.xpm gftp-*.png gftp-*.svg
	DEPENDS="glib gtk+"
}
