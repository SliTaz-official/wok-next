# SliTaz package receipt v2.

PACKAGE="directfb"
VERSION="1.4.3"
CATEGORY="system-tools"
SHORT_DESC="Thin library that provides hardware graphics acceleration"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://www.directfb.org/"

SOURCE="DirectFB"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="http://www.directfb.org/downloads/Core/$SOURCE-${VERSION%.*}/$TARBALL"

BUILD_DEPENDS_arm="libpng12-dev jpeg-dev freetype-dev"
BUILD_DEPENDS="libpng12-dev jpeg-dev freetype-dev tslib-dev perl"
SPLIT="directfb-dev"


compile_rules() {
	case "$ARCH" in
		arm)
			ARCH_ARGS="--with-gfxdrivers=none --disable-x11"
			export LDFLAGS="$LDFLAGS -L/cross/arm/sysroot/usr/lib"
			export CPPFLAGS="$CPPFLAGS -I/cross/arm/sysroot/usr/include"
			;;
	esac
	./configure \
		--with-dither-rgb16=none \
		$ARCH_ARGS \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		directfb)
			copy @std
			DEPENDS="libpng12 libjpeg freetype tslib zlib"
			case "$SLITAZ_ARCH" in
				arm) DEPENDS="libpng12 libjpeg freetype zlib" ;;
			esac
			;;
		*-dev)
			copy @dev
			;;
	esac
}
