# SliTaz package receipt v2.

PACKAGE="python-babel"
VERSION="latest"
CATEGORY="python"
SHORT_DESC="A collection of tools for internationalizing Python applications"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="https://pypi.python.org/pypi/Babel"
REPOLOGY="python:babel"

BUILD_DEPENDS="python-pytz"

compile_rules() {
	pip install --no-compile --root=$DESTDIR Babel
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*Babel-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python-pytz"
}
