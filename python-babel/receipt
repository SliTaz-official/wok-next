# SliTaz package receipt v2.

PACKAGE="python-babel"
VERSION="2.4.0"
CATEGORY="development"
SHORT_DESC="A collection of tools for internationalizing Python applications"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="https://pypi.python.org/pypi/Babel"

BUILD_DEPENDS="python-pytz"

# Rules to configure and make the package.
compile_rules()
{
	pip install --no-compile --root=$DESTDIR Babel
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
	DEPENDS="python-pytz"
}
