# SliTaz package receipt.

PACKAGE="python-phonenumbers"
VERSION="5.4b1"
CATEGORY="development"
SHORT_DESC="common library for parsing, formatting, storing and validating international phone numbers."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="Apache"
WEB_SITE="https://github.com/daviddrysdale/python-phonenumbers"
#https://pypi.org/project/phonenumbers/
REPOLOGY="python:phonenumbers"

SOURCE="phonenumbers"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="https://files.pythonhosted.org/packages/source/p/$SOURCE/$TARBALL"

DEPENDS="python"
BUILD_DEPENDS="python-dev python"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py build &&
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs
	cp -a $install/usr $fs
}
