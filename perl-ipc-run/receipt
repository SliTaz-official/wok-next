# SliTaz package receipt.

PACKAGE="perl-ipc-run"
VERSION="20180523.0"
CATEGORY="perl"
SHORT_DESC="IPC::Run - system() and background procs w/ piping, redirs, ptys \
(Unix, Win32)"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/IPC-Run"
REPOLOGY="perl:ipc-run"

TARBALL="IPC-Run-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/T/TO/TODDR/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
