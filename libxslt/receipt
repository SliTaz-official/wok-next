# SliTaz package receipt v2.

PACKAGE="libxslt"
VERSION="1.1.32"
CATEGORY="system-tools"
SHORT_DESC="XSLT support for libxml2"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://www.xmlsoft.org/XSLT/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/libxslt.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://xmlsoft.org/sources/$TARBALL"

BUILD_DEPENDS_arm="libgcrypt-dev libgpg-error-dev libxml2-dev"
BUILD_DEPENDS="libgcrypt-dev libgpg-error-dev libxml2-dev zlib-dev python-dev"
SPLIT="libxslt-python libxslt-dev"
COOKOPTS="skip-log-errors"

compile_rules() {
	sed -i 's|3000|5000|' libxslt/transform.c doc/xsltproc.1 doc/xsltproc.xml

	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libxslt)
			copy xsltproc libxslt.so* libexslt.so*
			DEPENDS="libgcrypt libgpg-error liblzma libxml2 zlib"
			;;
		libxslt-python)
			copy python*/
			find $fs -name '*.la' -delete
			DEPENDS="libgcrypt libgpg-error liblzma libxml2 libxslt python zlib"
			CAT="development|python module"
			;;
		libxslt-dev)
			copy @dev xsltConf.sh
			DEPENDS="libxslt libxslt-python libgcrypt-dev libgpg-error-dev \
			libxml2-dev xz-dev zlib-dev"
			;;
	esac
}
