# SliTaz package receipt v2.

PACKAGE="perl-gd"
VERSION="2.69"
CATEGORY="perl"
SHORT_DESC="GD - Interface to Gd Graphics Library"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/GD"
REPOLOGY="perl:gd"

TARBALL="GD-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/R/RU/RURBAN/$TARBALL"

BUILD_DEPENDS="perl-dev libgd-dev libgd perl-extutils-pkgconfig"

compile_rules() {
	# avoid interactive questions
	PERL_MM_USE_DEFAULT=1 \
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl libgd"
}
