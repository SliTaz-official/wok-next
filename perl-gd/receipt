# SliTaz package receipt.

PACKAGE="perl-gd"
VERSION="2.68"
CATEGORY="perl"
SHORT_DESC="GD - Interface to Gd Graphics Library"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/GD"

TARBALL="GD-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/R/RU/RURBAN/$TARBALL"

DEPENDS="perl libgd"
BUILD_DEPENDS="perl-dev libgd-dev libgd perl-extutils-pkgconfig"

# Rules to configure and make the package.
compile_rules()
{
	# avoid interactive questions
	PERL_MM_USE_DEFAULT=1 \
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
