# SliTaz package receipt.

PACKAGE="linux-zram"
VERSION="4.9.4"
CATEGORY="base-system"
SHORT_DESC="The Linux Kernel compressed caching support"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.kernel.org/"
CONFIG_FILES="/etc/compcache.conf"
PROVIDE="compcache"

WANTED="linux"
DEPENDS="linux"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	. $wanted_stuff/tools/copy_modules.sh

	mkdir -p $fs/etc/init.d
	install -o root -m 755 $stuff/compcache $fs/etc/init.d/
	install -o root -m 644 $stuff/compcache.conf $fs/etc/
}

# Post install/remove commands for Tazpkg.
post_install()
{
	chroot "$1/" depmod -a $VERSION-slitaz &&
	RAM=$(cat /proc/meminfo | grep MemTotal | sed s/[^0-9]//g) &&
	echo "SIZE_KB="$(($RAM/2)) > /etc/compcache.conf
	[ -z "$quiet" ] && cat <<EOT

You can add compressed swap according /etc/compcache.conf configuration with:
# /etc/init.d/compcache start
Or add compcache to the RUN_DAEMONS list of /etc/rcS.conf.
EOT
}
