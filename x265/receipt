# SliTaz package receipt v2.

PACKAGE="x265"
VERSION="2.4"
CATEGORY="multimedia"
SHORT_DESC="Free H.265/MPEG-H HEVC encoder"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.videolan.org/developers/x265.html"

TARBALL="${PACKAGE}_$VERSION.tar.gz"
WGET_URL="http://ftp.videolan.org/pub/videolan/x265/$TARBALL"

BUILD_DEPENDS="cmake yasm"
SPLIT="x265-dev"

# Rules to configure and make the package.
compile_rules()
{
	cd $src/build
	cmake -DCMAKE_INSTALL_PREFIX=/usr ../source &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		x265) copy @std;;
		*-dev) copy @dev;;
	esac
}
