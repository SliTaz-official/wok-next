# SliTaz package receipt v2.

PACKAGE="wayland-protocols"
VERSION="1.13"
CATEGORY="system-tools"
SHORT_DESC="Additional Wayland protocols"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://wayland.freedesktop.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/wayland-protocols.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="https://wayland.freedesktop.org/releases/$TARBALL"

BUILD_DEPENDS="wayland-dev"
SPLIT="wayland-protocols-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		wayland-protocols) copy @std;;
		*-dev)             copy @dev;;
	esac
}
