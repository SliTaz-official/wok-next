# SliTaz package receipt v2.

PACKAGE="xfce4-panel"
VERSION="4.12.0" # Xfce release 4.12: http://archive.xfce.org/xfce/4.12/src/
CATEGORY="x-window"
SHORT_DESC="Xfce panel"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.xfce.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://archive.xfce.org/src/xfce/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool xorg-libX11-dev xorg-libICE-dev libxfce4util-dev \
garcon-dev exo-dev libwnck2-dev xorg-libSM-dev"
SPLIT="xfce4-panel-dev"

compile_rules() {
	fix ld
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-debug \
		--disable-gtk-doc \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		xfce4-panel)
			copy @std
			DEPENDS="atk cairo dbus dbus-glib exo garcon gdk-pixbuf glib gtk+ \
			libwnck2 libxfce4ui libxfce4util pango xfconf xorg-libX11 \
			xorg-libXext"
			;;
		*-dev)
			copy @dev
			DEPENDS="xfce4-panel \
			glib-dev gtk+-dev libxfce4util-dev"
			;;
	esac
	TAGS="Xfce"
}
