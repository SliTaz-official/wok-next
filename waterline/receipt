# SliTaz package receipt v2.

PACKAGE="waterline"
VERSION="ed8ddef"
CATEGORY="x-window"
SHORT_DESC="A lightweight framework for desktop widgets and applets"
MAINTAINER="psychomaniak@xakep.ru"
LICENSE="GPL2"
WEB_SITE="http://git.make-linux.org/sde/waterline.git"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="http://git.make-linux.org/sde/$PACKAGE.git/snapshot/$TARBALL"

BUILD_DEPENDS="automake autoconf intltool libtool gtk+-dev jansson-dev \
libsde-utils libsde-utils-x11 libsde-utils-jansson libsde-utils-gtk \
xorg-libXcomposite-dev menu-cache-dev alsa-lib-dev xorg-dev gettext"
# libsde-utils-dev libsde-utils-x11-dev libsde-utils-jansson-dev libsde-utils-gtk-dev
SPLIT="waterline-dev"

compile_rules() {
	rm -rf $src/.git
	sed 's/lxsession-logout/tazbox logout/' -i src/defaultapplications.c
	./autogen.sh || return 1
	./configure \
		--libexec=/usr/lib \
		--disable-static \
		--disable-maintainer-mode \
		--enable-silent-rules \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		waterline)
			copy @std
			mkdir -p $fs/etc/xdg/autostart
			cat > $fs/etc/xdg/autostart/waterline.desktop <<EOT
[Desktop Entry]
Type=Application
Name=Waterline Desktop panel
Exec=waterline
EOT
			DEPENDS="libsde-utils-jansson libsde-utils-x11"
			TAGS="desktop panel taskbar"
			;;
		*-dev)
			copy @dev
			DEPENDS="waterline libsde-utils-jansson libsde-utils-x11"
			;;
	esac
}
