# SliTaz package receipt v2.

PACKAGE="dconf"
VERSION="0.26.0"
CATEGORY="system-tools"
SHORT_DESC="A low-level configuration system"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://wiki.gnome.org/Projects/dconf"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/gnome/dconf.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="vala libxslt-dev gtk-doc dbus-dev"
SPLIT="dconf-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		dconf)
			copy @std
			DEPENDS="glib   dbus"
			;;
		*-dev)
			copy @dev
			DEPENDS="dconf glib-dev"
			;;
	esac
}
