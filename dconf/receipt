# SliTaz package receipt v2.

PACKAGE="dconf"
VERSION="0.30.0"
CATEGORY="system-tools"
SHORT_DESC="A low-level configuration system"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://wiki.gnome.org/Projects/dconf"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/gnome/dconf.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="meson ninja vala libxslt-dev gtk-doc dbus-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	mkdir build
	cd    build
	meson-wrapper \
		-Dbash_completion=false \
		&&
	ninja &&
	ninja install
}

genpkg_rules() {
	case $PACKAGE in
		dconf)
			copy @std
			DEPENDS="glib   dbus"
			;;
		*-dev)
			copy @dev
			DEPENDS="dconf glib-dev"
			;;
	esac
}
