# SliTaz package receipt.

PACKAGE="xorg-libXres"
VERSION="1.0.7"
CATEGORY="x-window"
SHORT_DESC="Xorg server module."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki"

TARBALL="libXres-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

DEPENDS="xorg-libX11 xorg-libXext"
BUILD_DEPENDS="pkg-config xorg-util-macros xorg-libX11-dev xorg-libXext-dev \
xorg-resourceproto"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_files *.so*
}
