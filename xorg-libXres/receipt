# SliTaz package receipt v2.

PACKAGE="xorg-libXres"
VERSION="1.0.7"
CATEGORY="x-window"
SHORT_DESC="X Resource extension"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7lib.html"

TARBALL="libXres-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libX11-dev xorg-libXext-dev \
xorg-resourceproto"
SPLIT="xorg-libXres-dev"

compile_rules() {
	fix ld
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXres)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXext"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXres \
			xorg-libX11-dev xorg-libXext-dev xorg-xproto"
			;;
	esac
}
