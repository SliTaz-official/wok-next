# SliTaz package receipt v2.

PACKAGE="xorg-libXres"
VERSION="1.0.7"
CATEGORY="x-window"
SHORT_DESC="X Resource extension"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="libXres-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libX11-dev xorg-libXext-dev \
xorg-resourceproto"
SPLIT="xorg-libXres-dev"
PKG_RULE="std-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		*-libXres)
			copy @std
			DEPENDS="xorg-libxcb xorg-libX11 xorg-libXau xorg-libXdmcp \
			xorg-libXext"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXres xorg-libxcb-dev xorg-libX11-dev \
			xorg-libXau-dev xorg-libXdmcp-dev xorg-libXext-dev xorg-xproto"
			;;
	esac
}
