# SliTaz package receipt v2.

PACKAGE="xorg-xf86vidmodeproto"
VERSION="2.3.1"
CATEGORY="development"
SHORT_DESC="XF86VidMode extension headers"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7proto.html"
REPOLOGY="xf86vidmodeproto"

TARBALL="xf86vidmodeproto-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/proto/$TARBALL"

BUILD_DEPENDS="xorg-util-macros"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @dev
	DEPENDS="xorg-xproto"
}
