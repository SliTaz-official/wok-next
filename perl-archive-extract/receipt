# SliTaz package receipt v2.

PACKAGE="perl-archive-extract"
VERSION="0.80"
CATEGORY="perl"
SHORT_DESC="Archive::Extract - A generic archive extracting mechanism"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Archive-Extract"
HOST_ARCH="any"
REPOLOGY="perl:archive-extract"

TARBALL="Archive-Extract-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/B/BI/BINGOS/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
