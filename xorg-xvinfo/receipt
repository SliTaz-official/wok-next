# SliTaz package receipt v2.

PACKAGE="xorg-xvinfo"
VERSION="1.1.3"
CATEGORY="x-window"
SHORT_DESC="Print out X-Video extension adaptor information"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7app.html"
REPOLOGY="xvinfo"

TARBALL="xvinfo-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libXv-dev xorg-libX11-dev xorg-xorgproto"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libXv"
}
