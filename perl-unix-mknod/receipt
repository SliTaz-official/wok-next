# SliTaz package receipt.

PACKAGE="perl-unix-mknod"
VERSION="0.04"
CATEGORY="perl"
SHORT_DESC="Unix::Mknod - Perl extension for mknod, major, minor, and makedev"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Unix-Mknod"
REPOLOGY="perl:unix-mknod"

TARBALL="Unix-Mknod-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/P/PI/PIRZYK/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl-dev"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
