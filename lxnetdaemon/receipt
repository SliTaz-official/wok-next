# SliTaz package receipt v2.

PACKAGE="lxnetdaemon"
VERSION="0.1.1"
CATEGORY="network"
SHORT_DESC="Network manager for LXpanel"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://lxde.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/lxde/$TARBALL"

BUILD_DEPENDS="glib-dev"

compile_rules() {
	sed -i "s|for script in .(datadir)|for script in $DESTDIR/\$(datadir)|" \
		Makefile.in

	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install || return 1

	chmod +x $install/usr/share/lxnetdaemon/*.sh
	# Config
	cp -a $stuff/lxnetdaemon.conf $install/usr/share/lxnetdaemon/
	cp -a $stuff/etc $install
}

genpkg_rules() {
	copy @std
	DEPENDS="glib"
}
