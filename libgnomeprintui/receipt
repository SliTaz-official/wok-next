# SliTaz package receipt v2.

PACKAGE="libgnomeprintui"
VERSION="2.18.6"
CATEGORY="x-window"
SHORT_DESC="GNOME print user interface library"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.gnome.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="gnome-icon-theme flex libgnomeprint-dev \
xorg-libXinerama-dev xorg-libXrandr-dev xorg-libXcursor-dev \
xorg-libXcomposite-dev xorg-libXdamage-dev \
libgnomecanvas-dev libart_lgpl-dev intltool"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure \
		--with-html-dir=/usr/share/doc \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libgnomeprintui)
			copy @std
			DEPENDS="atk gdk-pixbuf glib gtk2 libart_lgpl libgnomecanvas \
			libgnomeprint"
			;;
		*-dev)
			copy @dev
			DEPENDS="libgnomeprintui libgnomecanvas-dev libgnomeprint-dev"
			;;
	esac
}
