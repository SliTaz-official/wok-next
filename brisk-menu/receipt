# SliTaz package receipt v2.

PACKAGE="brisk-menu"
VERSION="0.5.0"
CATEGORY="x-window"
SHORT_DESC="An efficient menu for the MATE Desktop"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://github.com/solus-project/brisk-menu"

TARBALL="$PACKAGE-v$VERSION.tar.xz"
WGET_URL="https://github.com/solus-project/brisk-menu/releases/download/v$VERSION/$TARBALL"

BUILD_DEPENDS="meson ninja gtk+3-dev mate-panel-dev mate-menus-dev \
libnotify-dev gettext"

compile_rules() {
	mkdir build
	cd    build
	meson-wrapper &&
	ninja &&
	ninja install
}

genpkg_rules() {
	copy @std *.mo
	DEPENDS="glib gtk+3 mate-menus mate-panel xorg-libX11"
	TAGS="MATE Solus menu GUI"
}
