# SliTaz package receipt v2.

PACKAGE="xorg-font-winitzki-cyrillic"
VERSION="1.0.3"
CATEGORY="x-window"
SHORT_DESC="Winitzki Cyrillic bitmap font: Proof"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="PublicDomain"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="fonts:winitzki-cyrillic"

TARBALL="font-winitzki-cyrillic-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/font/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-font-util-dev xorg-mkfontdir xorg-bdftopcf"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	TAGS="font"
}

post_install() {
	chroot "$1/" fc-cache -r /usr/share/fonts/X11/cyrillic
}
post_remove() {
	chroot "$1/" fc-cache -r
}
