# SliTaz package receipt.

PACKAGE="perl-file-slurp"
VERSION="9999.19"
CATEGORY="perl"
SHORT_DESC="File::Slurp - Simple and Efficient Reading/Writing/Modifying of \
Complete Files"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/File-Slurp"
REPOLOGY="perl:file-slurp"

TARBALL="File-Slurp-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/U/UR/URI/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
