# SliTaz package receipt v2.

PACKAGE="perl-file-slurp"
VERSION="9999.21"
CATEGORY="perl"
SHORT_DESC="File::Slurp - Simple and Efficient Reading/Writing/Modifying of \
Complete Files"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/File-Slurp"
HOST_ARCH="any"
REPOLOGY="perl:file-slurp"

TARBALL="File-Slurp-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/C/CA/CAPOEIRAB/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
