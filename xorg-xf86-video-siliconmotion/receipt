# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-siliconmotion"
VERSION="1.7.9"
CATEGORY="x-window"
SHORT_DESC="Xorg driver for Silicon Motion based video cards"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xf86-video-siliconmotion-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev"
SPLIT="xorg-xf86-video-siliconmotion-dev"
PKG_RULE="std-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-siliconmotion)
			copy @std
			DEPENDS="xorg-server"
			TAGS="xorg display"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xf86-video-siliconmotion xorg-server-dev"
			;;
	esac
}
