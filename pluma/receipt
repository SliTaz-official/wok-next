# SliTaz package receipt v2.

PACKAGE="pluma"
VERSION="1.20.2"
CATEGORY="text"
SHORT_DESC="A powerful text editor for MATE"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://github.com/mate-desktop/pluma"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/pluma/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common yelp-tools gtk-doc gobject-introspection-dev \
enchant-dev iso-codes-dev gtk+3-dev gtksourceview3-dev libpeas-dev itstool \
xorg-libSM-dev"
SPLIT="pluma-dev pluma-plugins pluma"

compile_rules() {
	./autogen.sh \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-dev)
			copy @dev
			DEPENDS="pluma pluma-plugins gtksourceview3-dev libpeas-dev"
			;;
		*-plugins)
			copy plugins/ @rm
			find $fs -name '*.la' -delete
			DEPENDS="pluma enchant gdk-pixbuf glib gtk+3 gtksourceview3 \
			libpeas libpeas-gtk libxml2 pango python"
			CAT="text|plugins"
			;;
		pluma)
			copy @std @rm
			rm -r $fs/usr/lib # -> plugins
			DEPENDS="atk cairo gdk-pixbuf glib gobject-introspection gtk+3 \
			gtksourceview3 libpeas libpeas-gtk pango xorg-libICE xorg-libSM \
			xorg-libX11"
			;;
	esac
	TAGS="MATE"
}
