# SliTaz package receipt.

PACKAGE="perl-jcode"
VERSION="2.07"
CATEGORY="perl"
SHORT_DESC="Jcode - Japanese Charset Handler"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Jcode"
REPOLOGY="perl:jcode"

TARBALL="Jcode-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DA/DANKOGAI/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
