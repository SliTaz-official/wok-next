# SliTaz package receipt.

PACKAGE="linux64-zram"
VERSION="4.9.0"
CATEGORY="base-system"
SHORT_DESC="The Linux Kernel compressed caching support"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.kernel.org/"
CONFIG_FILES="/etc/compcache.conf"
PROVIDE="compcache:linux64 linux-zram:linux64"

WANTED="linux"
DEPENDS="linux64"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	. $wanted_stuff/copy_modules.sh
	copy_modules drivers/block/zram

	mkdir -p $fs/etc/init.d
	install -o root -m 755 $stuff/compcache $fs/etc/init.d/
	install -o root -m 644 $stuff/compcache.conf $fs/etc/
}

# Post install/remove commands for Tazpkg.
post_install()
{
	cat <<EOT

You can add compressed swap according /etc/compcache.conf configuration with:
# /etc/init.d/compcache start
Or add compcache in the RUN_DAEMONS list of /etc/rcS.conf.
EOT
}
