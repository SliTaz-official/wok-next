# SliTaz package receipt v2.

PACKAGE="xorg-xf86-input-mutouch"
VERSION="1.3.0"
CATEGORY="x-window"
SHORT_DESC="Xorg input driver for Microtouch devices"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xf86-input-mutouch-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev"
SPLIT="xorg-xf86-input-mutouch-dev"
PKG_RULE="std-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-mutouch)
			copy @std
			DEPENDS="xorg-server"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xf86-input-mutouch xorg-server-dev"
			;;
	esac
}
