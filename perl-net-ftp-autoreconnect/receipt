PACKAGE="perl-net-ftp-autoreconnect"
VERSION="0.3"
CATEGORY="perl"
SHORT_DESC="Net::FTP::AutoReconnect - FTP client class with automatic \
reconnect on failure"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Net-FTP-AutoReconnect"
REPOLOGY="perl:net-ftp-autoreconnect"

TARBALL="Net-FTP-AutoReconnect-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/G/GI/GIFF/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
