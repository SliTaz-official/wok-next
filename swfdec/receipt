# SliTaz package receipt v2.

PACKAGE="swfdec"
VERSION="0.9.2"
CATEGORY="multimedia"
SHORT_DESC="Macromedia Flash decoding library"
MAINTAINER="devl547@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="http://swfdec.freedesktop.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://swfdec.freedesktop.org/download/swfdec/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="glib-dev liboil-dev pango-dev gtk+-dev libsoup-dev \
cairo-dev alsa-lib-dev gstreamer0-dev gst0-plugins-base-dev sqlite3-dev"
SPLIT="swfdec-dev"

compile_rules() {
	./configure \
		--enable-gtk \
		--with-audio="alsa" \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		swfdec)
			copy @std
			DEPENDS="glib liboil pango gtk+ libsoup cairo alsa-lib gstreamer0 \
			gst0-plugins-base"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
