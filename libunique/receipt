# SliTaz package receipt v2.

PACKAGE="libunique"
VERSION="1.1.6"
CATEGORY="development"
SHORT_DESC="Library for writing single instance application"
MAINTAINER="devel@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="https://wiki.gnome.org/Attic/LibUnique"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/general/libunique.html"
REPOLOGY="unique"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="patch automake glib-dev gettext-dev libtool gtk2-dev \
xorg-libICE-dev gobject-introspection-dev gtk-doc"
SPLIT="$PACKAGE-dev"

compile_rules() {
	autoreconf -fi &&
	./configure \
		--disable-dbus \
		--disable-static \
		--disable-debug \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libunique)
			copy @std
			DEPENDS="glib gtk2 xorg-libX11"
			;;
		*-dev)
			copy @dev
			DEPENDS="libunique gtk2-dev"
			;;
	esac
}
