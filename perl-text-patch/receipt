# SliTaz package receipt v2.

PACKAGE="perl-text-patch"
VERSION="1.8"
CATEGORY="perl"
SHORT_DESC="Text::Patch - Patches text with given patch"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Text-Patch"
HOST_ARCH="any"
REPOLOGY="perl:text-patch"

TARBALL="Text-Patch-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/C/CA/CADE/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
