# SliTaz package receipt.

PACKAGE="perl-locale-gettext"
VERSION="1.07"
CATEGORY="perl"
SHORT_DESC="Locale::gettext - message handling functions"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/gettext"

TARBALL="gettext-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/P/PV/PVANDRY/$TARBALL"

DEPENDS="perl gettext-base"
BUILD_DEPENDS="$DEPENDS"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
