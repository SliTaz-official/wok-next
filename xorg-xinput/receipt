# SliTaz package receipt v2.

PACKAGE="xorg-xinput"
VERSION="1.6.2"
CATEGORY="x-window"
SHORT_DESC="Utility to configure and test X input devices"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7app.html"

TARBALL="xinput-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libX11-dev xorg-libXext-dev \
xorg-libXi-dev xorg-inputproto xorg-libXrandr-dev xorg-libXinerama-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libXi xorg-libXinerama xorg-libXrandr"
}
