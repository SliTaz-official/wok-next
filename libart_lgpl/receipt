# SliTaz package receipt v2.

PACKAGE="libart_lgpl"
VERSION="2.3.21"
CATEGORY="x-window"
SHORT_DESC="A library for high-performance 2D graphics"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.levien.com/libart/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://ftp.gnome.org/pub/GNOME/sources/libart_lgpl/${VERSION%.*}/$TARBALL"

SPLIT="libart_lgpl-dev"

compile_rules() {
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		libart_lgpl) copy @std;;
		*-dev)       copy @dev;;
	esac
}
