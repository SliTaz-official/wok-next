# SliTaz package receipt v2.

PACKAGE="xorg-xf86-input-wacom"
VERSION="0.36.1"
CATEGORY="x-window"
SHORT_DESC="X input driver for Wacom and Wacom-like tablets"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://linuxwacom.github.io/"
REPOLOGY="xdrv:wacom"

TARBALL="xf86-input-wacom-$VERSION.tar.bz2"
WGET_URL="https://github.com/linuxwacom/xf86-input-wacom/releases/download/xf86-input-wacom-$VERSION/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-server-dev xorg-libXext-dev \
xorg-xorgproto xorg-libXi-dev xorg-libXrandr-dev \
xorg-libXinerama-dev eudev-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure \
		--with-systemd-unit-dir=no \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-wacom)
			copy @std
			DEPENDS="eudev xorg-libX11 xorg-libXau xorg-libXdmcp xorg-libXext \
			xorg-libXi xorg-libXinerama xorg-libXrandr xorg-libXrender \
			xorg-libxcb"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xf86-input-wacom xorg-server-dev"
			;;
	esac
}
