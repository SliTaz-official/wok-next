# SliTaz package receipt.

PACKAGE="xorg-xf86-input-wacom"
VERSION="0.33.0"
CATEGORY="x-window"
SHORT_DESC="X.Org X11 driver for Wacom and Wacom-like tablets"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="http://linuxwacom.sourceforge.net/wiki/index.php/Main_Page"

TARBALL="xf86-input-wacom-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/linuxwacom/$TARBALL"

DEPENDS="eudev glibc-base libxcb xorg-libX11 xorg-libXau xorg-libXdmcp \
xorg-libXext xorg-libXi xorg-libXinerama xorg-libXrandr xorg-libXrender"
BUILD_DEPENDS="xorg-util-macros doxygen xorg-server-dev xorg-xproto \
xorg-libXext-dev xorg-kbproto xorg-inputproto xorg-randrproto xorg-libXi-dev \
xorg-libXrandr-dev xorg-libXinerama-dev eudev-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--with-systemd-unit-dir=no \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_folders bin rules.d xorg.conf.d
	cook_copy_files *.so
}
