# SliTaz package receipt v2.

PACKAGE="perl-image-librsvg"
VERSION="0.07"
CATEGORY="perl"
SHORT_DESC="Image::LibRSVG - Perl extension for librsvg"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Image-LibRSVG"
REPOLOGY="perl:image-librsvg"

TARBALL="Image-LibRSVG-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/T/TO/TOMSON/$TARBALL"

BUILD_DEPENDS="perl-dev librsvg-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl cairo gdk-pixbuf glib librsvg"
}
