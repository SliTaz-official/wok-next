# SliTaz package receipt.

PACKAGE="perl-image-librsvg"
VERSION="0.07"
CATEGORY="perl"
SHORT_DESC="Image::LibRSVG - Perl extension for librsvg"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Image-LibRSVG"

TARBALL="Image-LibRSVG-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/T/TO/TOMSON/$TARBALL"

DEPENDS="perl cairo gdk-pixbuf glib libgio librsvg"
BUILD_DEPENDS="perl-dev librsvg-dev"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
