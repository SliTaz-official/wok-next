# SliTaz package receipt v2.

PACKAGE="xorg-libpciaccess"
VERSION="0.14"
CATEGORY="x-window"
SHORT_DESC="Xorg server module"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7lib.html"
REPOLOGY="libpciaccess"

TARBALL="libpciaccess-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-util-macros"
SPLIT="xorg-libpciaccess-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libpciaccess) copy @std;;
		*-dev)          copy @dev;;
	esac
}
