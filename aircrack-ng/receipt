# SliTaz package receipt v2.

PACKAGE="aircrack-ng"
VERSION="1.2-rc4"
CATEGORY="network"
SHORT_DESC="802.11 WEP and WPA-PSK keys cracking program"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.aircrack-ng.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://download.aircrack-ng.org/$TARBALL"

BUILD_DEPENDS="libnl-dev coreutils-file-special openssl-dev sqlite3-dev \
zlib-dev"

compile_rules() {
	make \
		sqlite=true \
		experimental=true &&
	make \
		sqlite=true \
		experimental=true \
		bindir=/usr/bin \
		sbindir=/usr/sbin \
		mandir=/usr/share/man/man1/ \
		smandir=/usr/share/man/man8/ \
		DESTDIR=$install \
		install
}

genpkg_rules() {
	copy @std
	DEPENDS="openssl libnl libsqlite3 zlib   aircrack-ng-oui iw"
	PROVIDE="aircrack-ng-scripts"
}
