# SliTaz package receipt v2.

PACKAGE="aircrack-ng"
VERSION="1.4"
CATEGORY="network"
SHORT_DESC="802.11 WEP and WPA-PSK keys cracking program"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.aircrack-ng.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://download.aircrack-ng.org/$TARBALL"

BUILD_DEPENDS="automake libtool openssl-dev ethtool libnl-dev python-dev \
libpcap-dev pcre-dev sqlite3-dev zlib-dev cmocka-dev"

compile_rules() {
	autoreconf -fiv

	./configure \
		--with-experimental \
		--with-ext-scripts \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install || return 1

	find $install -type f -name '*.pyc' -delete
}

genpkg_rules() {
	copy @std
	DEPENDS="libnl libpcap libpcre libsqlite3 openssl python zlib   \
	aircrack-ng-oui iw"
	PROVIDE="aircrack-ng-scripts"
}
