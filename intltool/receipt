# SliTaz package receipt v2.

PACKAGE="intltool"
VERSION="0.51.0"
CATEGORY="development"
SHORT_DESC="Internationalization tool"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://freedesktop.org/wiki/Software/intltool/"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://launchpad.net/intltool/trunk/$VERSION/+download/$TARBALL"

BUILD_DEPENDS="perl perl-xml-parser wget"

# Rules to configure and make the package.
compile_rules()
{
	sed -i 's:\\\${:\\\$\\{:' intltool-update.in

	./configure $CONFIGURE_ARGS && make && make install

	docdir="$install/usr/share/doc/intltool-$VERSION"
	mkdir -p $docdir; cp doc/I18N-HOWTO $docdir
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
	DEPENDS="perl-xml-parser gettext"
}
