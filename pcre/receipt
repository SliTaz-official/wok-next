# SliTaz package receipt v2.

PACKAGE="pcre"
VERSION="8.40"
CATEGORY="system-tools"
SHORT_DESC="Perl 5 Compatible Regular Expression"
MAINTAINER="pankso@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://www.pcre.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="ftp://ftp.csx.cam.ac.uk/pub/software/programming/pcre/$TARBALL"

BUILD_DEPENDS="zlib-dev bzip2-dev readline-dev valgrind-dev"
SPLIT="pcre-apps pcre-dev"

compile_rules() {
	# http://www.linuxfromscratch.org/blfs/view/stable/general/pcre.html
	./configure \
		--docdir=/usr/share/doc/pcre-$VERSION \
		--enable-unicode-properties \
		--enable-pcre16 \
		--enable-pcre32 \
		--enable-pcregrep-libz \
		--enable-pcregrep-libbz2 \
		--enable-pcretest-libreadline \
		--disable-static \
		--enable-jit \
		--enable-valgrind \
		$CONFIGURE_ARGS &&
	make && make install &&

	mkdir -p $install/lib &&
	mv -v $install/usr/lib/libpcre.so.* $install/lib &&
	ln -sfv ../../lib/$(readlink $install/usr/lib/libpcre.so) \
		$install/usr/lib/libpcre.so
}

genpkg_rules() {
	case $PACKAGE in
		pcre)
			copy *.so*
			CAT="system-tools|library"
			;;
		*-apps)
			copy @std @rm
			DEPENDS="pcre bzlib ncurses readline zlib"
			CAT="development|applications"
			;;
		*-dev) copy @dev;;
	esac
}
