# SliTaz package receipt v2.

PACKAGE="gtk2-engine-murrine"
VERSION="0.98.2"
CATEGORY="customization"
SHORT_DESC="GTK2 engine to make your desktop look like a murrina"
MAINTAINER="jozee@slitaz.org"
LICENSE="LGPL3"
#WEB_SITE="http://www.cimitan.com/murrine"
WEB_SITE="http://ubuntuforums.org/showthread.php?t=239378"

TARBALL="murrine-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/murrine/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="gtk+-dev libxml2-dev intltool"

compile_rules() {
	./configure \
		--disable-static \
		--enable-animation \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	TAGS="gtk2"
	DEPENDS="gtk+"
}
