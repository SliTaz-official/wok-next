PACKAGE="compiz-compizconfig-python"
VERSION="0.8.12.1"
CATEGORY="x-window"
SHORT_DESC="Compiz Config Python module"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://github.com/compiz-reloaded"
REPOLOGY="compizconfig-python"

TARBALL="compizconfig-python-$VERSION.tar.xz"
WGET_URL="$WEB_SITE/compizconfig-python/releases/download/v$VERSION/$TARBALL"

BUILD_DEPENDS="compiz-libcompizconfig-dev glib-dev compiz-core-dev \
xorg-libX11-dev xorg-libXcomposite-dev xorg-libXext-dev xorg-libXdamage-dev \
xorg-libXrandr-dev xorg-libXi-dev xorg-libXinerama-dev xorg-libXcursor-dev \
xorg-libICE-dev xorg-libSM-dev libxml2-dev startup-notification-dev \
python-cython python-dev xorg-xcb-util-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="python compiz-core compiz-libcompizconfig"
}
