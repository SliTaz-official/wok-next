# SliTaz package receipt.

PACKAGE="libfm-dev"
VERSION="1.2.5"
CATEGORY="development"
SHORT_DESC="File management support (GTK+ GUI development files)"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://pcmanfm.sourceforge.net"
HOST_ARCH="i486 arm"

WANTED="libfm"
DEPENDS="libfm libfm-gtk libfm-extra-dev atk-dev bzip2-dev cairo-dev \
fontconfig-dev freetype-dev gdk-pixbuf-dev glib-dev glibc-dev gtk+-dev \
harfbuzz-dev libexif-dev libffi-dev libgio-dev liblzma-dev libpng-dev \
libxcb-dev libxml2-dev menu-cache-dev pango-dev pcre-dev pixman-dev \
xorg-libX11-dev xorg-libXau-dev xorg-libXdmcp-dev xorg-libXext-dev \
xorg-libXrender-dev zlib-dev"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_files *.h *.la *.pc libfm
	cook_split_rm libfm-extra-dev
}
