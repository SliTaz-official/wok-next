# SliTaz package receipt v2.

PACKAGE="libwnck2"
VERSION="2.30.7"
CATEGORY="x-window"
SHORT_DESC="Window Navigator Construction Kit"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="https://developer.gnome.org/libwnck/"

TARBALL="libwnck-$VERSION.tar.bz2"
WGET_URL="$GNOME_MIRROR/libwnck/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool startup-notification-dev xorg-libX11-dev gtk+-dev \
gobject-introspection-dev xorg-xcb-util-dev"
SPLIT="libwnck2-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libwnck2)
			copy @std
			PROVIDE="libwnck"
			DEPENDS="atk cairo gdk-pixbuf glib gtk+ pango startup-notification \
			xorg-libX11"
			;;
		*-dev)
			copy @dev
			PROVIDE="libwnck-dev"
			DEPENDS="libwnck2 cairo-dev glib-dev gtk+-dev pango-dev \
			startup-notification-dev xorg-libX11-dev"
			;;
	esac
}
