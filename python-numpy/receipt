# SliTaz package receipt v2.

PACKAGE="python-numpy"
VERSION="latest"
CATEGORY="development"
SHORT_DESC="NumPy: array processing for numbers, strings, records, and objects"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://www.numpy.org/"
REPOLOGY="python:numpy"

BUILD_DEPENDS="python"

compile_rules() {
	pip install --no-compile --root=$DESTDIR numpy
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*numpy-||p' $LOGS/$PACKAGE.log)
	copy @std @dev
	DEPENDS="python"
}
