# SliTaz package receipt v2.

PACKAGE="gcolor2"
VERSION="0.4"
CATEGORY="graphics"
SHORT_DESC="Light and simple color selector"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://gcolor2.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="gfortran intltool perl-xml-parser gtk+-dev file"

compile_rules() {
	cp $stuff/*.po* $src/po
	sed -i 's|@CATALOGS@|ru.gmo|' po/Makefile.in.in

	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	COOKOPTS="!pixmaps"
	copy bin/
	DEPENDS="atk bzlib cairo fontconfig freetype gdk-pixbuf glib gtk+ libffi \
	libharfbuzz liblzma libpng16 libxml2 pango pcre util-linux-blkid \
	util-linux-mount util-linux-uuid xorg-libX11 xorg-libXau xorg-libXdmcp \
	xorg-libXext xorg-libXrender xorg-libxcb xorg-pixman zlib"
	SUGGESTED="xorg-rgb"
}
