# SliTaz package receipt v2.

PACKAGE="gcolor2"
VERSION="0.4"
CATEGORY="graphics"
SHORT_DESC="Light and simple color selector"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://gcolor2.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="gfortran intltool perl-xml-parser gtk2-dev file"

compile_rules() {
	cp $stuff/*.po* $src/po
	sed -i 's|@CATALOGS@|ru.gmo|' po/Makefile.in.in

	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	COOKOPTS="!pixmaps"
	copy bin/
	DEPENDS="atk gdk-pixbuf glib gtk2"
	SUGGESTED="xorg-rgb"
}
