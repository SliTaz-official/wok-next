# SliTaz package receipt v2.

PACKAGE="xfe"
VERSION="1.40"
CATEGORY="system-tools"
SHORT_DESC="Xfe File manager and utility using Fox toolkit."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://roland65.free.fr/xfe/"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"
TAGS="file-manager"
#HOST_ARCH="i486 arm"

BUILD_DEPENDS="libpng-dev jpeg-dev tiff-dev xorg-libXft-dev fox-dev automake"
GENERIC_MENUS="no"
SPLIT="xfe xfe-extras xfi xfw"

# Handle cross compilation.
case "$ARCH" in
	i?86) BUILD_DEPENDS="$BUILD_DEPENDS intltool" ;;
	arm)
		export LDLAGS="-L/cross/$ARCH/sysroot/usr/lib" ;;
esac

# Rules to configure and make the package.
compile_rules()
{
	# Required by freetype-dev-2.4.11
	sed -i 's|config/ftheader.h|freetype/config/ftheader.h|' configure.ac
	./autogen.sh
	./configure $CONFIGURE_ARGS && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
	xfe)
		SUGGESTED="adie calculator shutterbug xfe-extras xfi"
		DEPENDS="libpng jpeg tiff xorg-libXft fox"
		mkdir -p $fs/usr/bin $fs/usr/share/xfe/icons
		cp -a $install/usr/bin/$PACKAGE $fs/usr/bin
		cp -a $install/usr/share/xfe/xferc $fs/usr/share/xfe
		sed -i 's/gnomeblue-theme/tango-theme/' $fs/usr/share/xfe/xferc
		# Tango/Gnome icons theme only
		cp -a $install/usr/share/xfe/icons/tango-theme \
			$fs/usr/share/xfe/icons
		cp -a $install/usr/share/xfe/icons/gnome-theme \
			$fs/usr/share/xfe/icons	
		;;
	xfe-extras)
		CAT="system-tools|Xfe File manager tools."
		DEPENDS="xfe"
		GENERIC_MENUS="no"
		mkdir -p $fs/usr/bin \
			$fs/usr/share/applications \
			$fs/usr/share/icons 

		cp -a $install/usr/bin/xf[i,v,p,w] $fs/usr/bin
		cp -a $install/usr/share/applications/xf[i,v,p,w]* $fs/usr/share/applications
		cp -a $src/xf[i,v,p,w].png $fs/usr/share/icons
		;;
	xfi)
		CAT="x-window|X File Image viewer using the Fox Toolkit."
		LOCALE=""
		DEPENDS="fox"
		mkdir -p $fs/usr/bin
		cp -a $install/usr/bin/$PACKAGE $fs/usr/bin
		copy_generic_files
		;;
	xfw)
		CAT="x-window|X File Writer - Text editor using the Fox Toolkit."
		LOCALE=""
		TAGS="text-editor"
		DEPENDS="fox"
		mkdir -p $fs/usr/bin
		cp -a $install/usr/bin/$PACKAGE $fs/usr/bin
		copy_generic_files
		;;
	esac
}
