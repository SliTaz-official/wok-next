# SliTaz package receipt v2.

PACKAGE="xorg-xkbprint"
VERSION="1.0.4"
CATEGORY="x-window"
SHORT_DESC="Print an XKB keyboard description"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="xkbprint"

TARBALL="xkbprint-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libxkbfile-dev xorg-libX11-dev xorg-xproto"
PKG_RULE="std"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libxkbfile"
}
