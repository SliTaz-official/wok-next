# SliTaz package receipt v2.

PACKAGE="xorg-xlsclients"
VERSION="1.1.3"
CATEGORY="x-window"
SHORT_DESC="List client applications running on a display"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xlsclients-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libxcb-dev"
PKG_RULE="std"

# Rules to configure and make the package.
compile_rules()
{
	touch /root/missing

	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
	DEPENDS="xorg-libxcb"
}
