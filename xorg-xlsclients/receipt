# SliTaz package receipt v2.

PACKAGE="xorg-xlsclients"
VERSION="1.1.3"
CATEGORY="x-window"
SHORT_DESC="List client applications running on a display"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7app.html"
REPOLOGY="xlsclients"

TARBALL="xlsclients-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libxcb-dev"

compile_rules() {
	touch /root/missing /missing

	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libxcb"
}
