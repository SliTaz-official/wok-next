# SliTaz package receipt v2.

PACKAGE="ladspa"
VERSION="1.13"
CATEGORY="multimedia"
SHORT_DESC="LADSPA: Linux Audio Developer's Simple Plugin API"
MAINTAINER="jozee@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://www.ladspa.org/"

TARBALL="ladspa_sdk_$VERSION.tgz"
WGET_URL="https://github.com/OpenMandrivaAssociation/ladspa/raw/master/$TARBALL"

SPLIT="ladspa-dev"

compile_rules() {
	cd src
	sed -i \
		-e 's/mkdirhier/mkdir -p/' \
		-e "s#-O3#${CFLAGS} ${LDFLAGS/,--as-needed/}#" \
		makefile
	make targets &&
	make INSTALL_PLUGINS_DIR=$DESTDIR/usr/lib/ladspa/ \
		INSTALL_INCLUDE_DIR=$DESTDIR/usr/include/ \
		INSTALL_BINARY_DIR=$DESTDIR/usr/bin/ \
		install
}

genpkg_rules() {
	case $PACKAGE in
		ladspa)
			copy @std
			TAGS="multimedia"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
