# SliTaz package receipt v2.

PACKAGE="perl-xml-sax"
VERSION="1.00"
CATEGORY="perl"
SHORT_DESC="XML::SAX - Simple API for XML"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/XML-SAX"

TARBALL="XML-SAX-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/G/GR/GRANTM/$TARBALL"

BUILD_DEPENDS="perl-xml-namespacesupport perl-xml-sax-base"

compile_rules() {
	# Please keep `make -j1 install` to FS before installing to the DESTDIR
	perl Makefile.PL &&
	make -j1 install &&
	make -j1 DESTDIR=$install install || return 1

	chmod -R u+w $install
#	cp -v       /usr/lib/perl5/site_perl/5.24.1/XML/SAX/ParserDetails.ini \
#		$install/usr/lib/perl5/site_perl/5.24.1/XML/SAX/
}

genpkg_rules() {
	copy @std
	DEPENDS="$BUILD_DEPENDS"
}
