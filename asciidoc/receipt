# SliTaz package receipt v2.

PACKAGE="asciidoc"
VERSION="8.6.9"
CATEGORY="system-tools"
SHORT_DESC="Text based document generation"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.methods.co.nz/asciidoc/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/asciidoc.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/asciidoc/$TARBALL"

BUILD_DEPENDS="python"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install &&
	make DESTDIR=$install docs
}

genpkg_rules() {
	copy @std
	DEPENDS="python"
}
