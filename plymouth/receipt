# SliTaz package receipt v2.

PACKAGE="plymouth"
VERSION="0.8.6.1"
CATEGORY="base-system"
SHORT_DESC="A graphical boot splash screen with KMS support"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.freedesktop.org/wiki/Software/Plymouth"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://www.freedesktop.org/software/plymouth/releases/$TARBALL"

BUILD_DEPENDS="libpng16-dev pango-dev gtk+-dev xorg-libpciaccess-dev libdrm-dev"

compile_rules() {
	./configure \
		--libexecdir=/usr/lib \
		--with-system-root-install \
		--with-log-viewer \
		--with-release-file=/etc/slitaz-release \
		--disable-libdrm_nouveau \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="libpng16 pango gtk+ xorg-libpciaccess libdrm"
}
