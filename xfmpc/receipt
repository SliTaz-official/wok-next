# SliTaz package receipt v2.

PACKAGE="xfmpc"
VERSION="0.2.3"
CATEGORY="x-window"
SHORT_DESC="MPD client for Xfce"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://goodies.xfce.org/projects/applications/xfmpc"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://archive.xfce.org/src/apps/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool xorg-libX11-dev xorg-libICE-dev gtk+-dev \
libxfce4ui-dev libmpd-dev xorg-libSM-dev startup-notification-dev \
xorg-xcb-util-dev"

compile_rules() {
	sed -i 's|\\r||' po/es.po # tiny patch

	./configure \
		--disable-debug \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="gdk-pixbuf glib gtk+ libmpd libxfce4ui libxfce4util pango"
	TAGS="Xfce"
}
