# SliTaz package receipt.

PACKAGE="perl-net-snmp"
VERSION="6.0.1"
CATEGORY="perl"
SHORT_DESC="Net::SNMP - Object oriented interface to SNMP"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Net-SNMP"
REPOLOGY="perl:net-snmp"

TARBALL="Net-SNMP-v$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DT/DTOWN/$TARBALL"

BUILD_DEPENDS="perl-crypt-des perl-digest-hmac perl-digest-sha1"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-crypt-des perl-digest-hmac perl-digest-sha1"
}
