# SliTaz package receipt v2.

PACKAGE="xorg-libXrandr"
VERSION="1.5.1"
CATEGORY="x-window"
SHORT_DESC="Xrandr extension library"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/libraries/libxrandr/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7lib.html"
REPOLOGY="libxrandr"

TARBALL="libXrandr-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-xorgproto xorg-libXext-dev xorg-libXrender-dev"
SPLIT="xorg-libXrandr-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXrandr)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXext xorg-libXrender"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXrandr \
			xorg-libX11-dev xorg-libXext-dev xorg-libXrender-dev \
			xorg-xorgproto"
			;;
	esac
}
