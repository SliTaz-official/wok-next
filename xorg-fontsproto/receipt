# SliTaz package receipt v2.

PACKAGE="xorg-fontsproto"
VERSION="2.1.3"
CATEGORY="development"
SHORT_DESC="Font library header files"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7proto.html"
REPOLOGY="fontsproto"

TARBALL="fontsproto-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/proto/$TARBALL"

BUILD_DEPENDS="xorg-util-macros"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @dev
	DEPENDS="xorg-xproto"
}
