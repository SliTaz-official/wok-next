# SliTaz package receipt.

PACKAGE="xorg-xkbcomp"
VERSION="1.3.1"
CATEGORY="x-window"
SHORT_DESC="XKB keymap compiler"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
HOST_ARCH="i486 arm"

TARBALL="xkbcomp-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

DEPENDS="xorg-libX11 xorg-libxkbfile"
# xkbcomp.pc requires xorg-libX11-dev xorg-libxkbfile-dev xorg-xproto
BUILD_DEPENDS="xorg-util-macros xorg-libX11-dev xorg-libxkbfile-dev xorg-xproto"

# Rules to configure and make the package.
compile_rules()
{
	./configure $CONFIGURE_ARGS && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_folders bin lib
}
