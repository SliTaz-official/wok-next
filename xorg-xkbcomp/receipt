# SliTaz package receipt v2.

PACKAGE="xorg-xkbcomp"
VERSION="1.4.0"
CATEGORY="x-window"
SHORT_DESC="Compile XKB keyboard description"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7app.html"
REPOLOGY="xkbcomp"

TARBALL="xkbcomp-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libX11-dev xorg-libxkbfile-dev xorg-xproto"
SPLIT="xorg-xkbcomp-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-xkbcomp)
			copy @std
			DEPENDS="xorg-libX11 xorg-libxkbfile"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xkbcomp \
			xorg-libX11-dev xorg-libxkbfile-dev xorg-xproto"
			;;
	esac
}
