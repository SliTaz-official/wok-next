# SliTaz package receipt v2.

PACKAGE="gucharmap3"
VERSION="10.0.4"
CATEGORY="utilities"
SHORT_DESC="GNOME Character Map for GTK+3"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://wiki.gnome.org/Apps/Gucharmap"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/gnome/gucharmap.html"
REPOLOGY="gucharmap"

TARBALL="gucharmap-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/gucharmap/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="gtk-doc automake gettext libtool gobject-introspection-dev \
intltool yelp-tools itstool gtk+3-dev desktop-file-utils-extra wget \
coreutils-file-summarize unzip vala"
SPLIT="gucharmap3-i18n gucharmap-gnome gucharmap3 gucharmap3-dev"

compile_rules() {
	./autogen.sh \
		--enable-vala \
		--with-unicode-data=download \
		--program-suffix=3 \
		PROG_UNZIP=/bin/unzip &&
	fix libtool &&
	make &&
	make install || return 1

	find $install/usr/bin -type l -delete
}

genpkg_rules() {
	case $PACKAGE in
		*-i18n)
			copy *.mo
			CAT="localization|language files"
			;;
		*-gnome)
			copy help/ metainfo/
			CAT="gnome|GNOME integration"
			;;
		gucharmap3)
			copy @std @rm
			DEPENDS="atk cairo glib gtk+3 pango"
			;;
		*-dev)
			copy @dev
			DEPENDS="${SPLIT/$PACKAGE/} glib-dev gtk+3-dev"
			;;
	esac
}
