# SliTaz package receipt v2.

PACKAGE="xorg-libXdamage"
VERSION="1.1.4"
CATEGORY="x-window"
SHORT_DESC="Damage extension"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
HOST_ARCH="i486 arm"

TARBALL="libXdamage-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-damageproto xorg-libXfixes-dev"
SPLIT="xorg-libXdamage-dev"
PKG_RULE="std-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		*-libXdamage)
			copy @std
			DEPENDS="xorg-libxcb xorg-libX11 xorg-libXau xorg-libXdmcp \
			xorg-libXfixes"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXdamage xorg-libxcb-dev xorg-damageproto \
			xorg-libX11-dev xorg-libXau-dev xorg-libXdmcp-dev \
			xorg-libXfixes-dev xorg-xproto"
			;;
	esac
}
