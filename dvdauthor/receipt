# SliTaz package receipt v2.

PACKAGE="dvdauthor"
VERSION="0.7.2"
CATEGORY="multimedia"
SHORT_DESC="A simple set of tools to help you author a DVD"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://dvdauthor.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="libpng16-dev freetype-dev libdvdread-dev libxml2-dev   \
fontconfig-dev fribidi-dev"

compile_rules() {
	./configure \
		--disable-rpath \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="fontconfig freetype fribidi libdvdread libpng16 libxml2"
}
