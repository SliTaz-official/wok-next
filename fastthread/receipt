# SliTaz package receipt.

PACKAGE="fastthread"
VERSION="1.0.7"
CATEGORY="development"
SHORT_DESC="Optimized replacement for thread.rb primitives"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://rubygems.org/gems/fastthread"
REPOLOGY="ruby:fastthread"

TARBALL="$PACKAGE-$VERSION.gem"
WGET_URL="http://rubygems.org/downloads/$TARBALL"
COOK_OPT="!repack_src !unpack"

DEPENDS="ruby"
BUILD_DEPENDS="ruby-dev"

# Rules to configure and make the package.
compile_rules()
{
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	gem install --ignore-dependencies -i "$DESTDIR/$_gemdir" $SRC/$TARBALL
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}