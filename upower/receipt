# SliTaz package receipt v2.

PACKAGE="upower"
VERSION="0.99.5"
CATEGORY="system-tools"
SHORT_DESC="UPower is an abstraction for enumerating power devices"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://upower.freedesktop.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/upower.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="https://upower.freedesktop.org/releases/$TARBALL"

BUILD_DEPENDS="gobject-introspection-dev libxslt gtk-doc glib-dev eudev-dev \
libgudev-dev libusb-dev intltool dbus-introspect"
SPLIT="upower-dev"

compile_rules() {
	./configure \
		--enable-deprecated \
		--disable-static \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		upower)
			copy @std
			DEPENDS="glib libffi libgudev libusb pcre util-linux-blkid \
			util-linux-mount util-linux-uuid zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="upower glib-dev libffi-dev pcre-dev util-linux-blkid-dev \
			util-linux-mount-dev util-linux-uuid-dev zlib-dev"
			;;
	esac
}
