# SliTaz package receipt v2.

PACKAGE="libexif"
VERSION="0.6.21"
CATEGORY="graphics"
SHORT_DESC="Library for easy access to EXIF data"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://libexif.sourceforge.net/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/libexif.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="gettext"
SPLIT="libexif-dev"

compile_rules() {
	./configure \
		--with-doc-dir=/usr/share/doc/$PACKAGE-$VERSION \
		--disable-static \
		$CONFIGURE_ARGS &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		libexif) copy @std;;
		*-dev)   copy @dev;;
	esac
}
