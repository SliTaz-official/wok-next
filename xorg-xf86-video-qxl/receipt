# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-qxl"
VERSION="0.1.5"
CATEGORY="x-window"
SHORT_DESC="Xorg driver for QXL virtual GPU"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="xdrv:qxl"

TARBALL="xf86-video-qxl-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev xorg-libXfont2-dev xorg-xorgproto \
spice-protocol"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-server eudev"
	TAGS="xorg display"
}
