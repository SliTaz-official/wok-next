# SliTaz package receipt.

PACKAGE="matplotlib"
VERSION="1.0.0"
CATEGORY="graphics"
SHORT_DESC="2D plotting library for the Python."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="PSL BSD"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WEB_SITE="http://matplotlib.sourceforge.net/"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

DEPENDS="python zlib libpng16 freetype python-numpy gtk2 expat xorg-libXau \
xorg-libXcomposite xorg-libXcursor xorg-libXdmcp xorg-libXext xorg-libXfixes \
xorg-libXinerama xorg-libXrandr xorg-libXrender python-pygtk gcc-lib-base"
BUILD_DEPENDS="python python-dev zlib-dev libpng16-dev freetype-dev python-numpy \
python-pygtk-dev"

# Rules to configure and make the package.
compile_rules()
{
	cp -a $stuff/setup.cfg .
	python setup.py build
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}
