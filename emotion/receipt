# SliTaz package receipt v2.

PACKAGE="emotion"
VERSION="1.7.10"
CATEGORY="x-window"
SHORT_DESC="EFL video and audio codec playback library"
MAINTAINER="pankso@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://www.enlightenment.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://download.enlightenment.org/releases/$TARBALL"

BUILD_DEPENDS="shared-mime-info eet-dev evas-dev ecore-dev embryo-dev edje-dev \
eio-dev eeze-dev xine-lib-dev lua-dev"
SPLIT="emotion-dev"

compile_rules() {
	export CFLAGS="$CFLAGS -fvisibility=hidden"
	export LDFLAGS="$LDFLAGS -fvisibility=hidden"

	./configure \
		--disable-doc \
		--enable-emotion-test \
		--enable-xine \
		$CONFIGURE_ARGS &&
	make $MAKEFILE && make install
}

genpkg_rules() {
	case $PACKAGE in
		emotion)
			copy @std
			DEPENDS="eet evas ecore edje eio eeze embryo xine-lib lua"
			OPTIONAL_DEPENDS="gstreamer0-dev gst0-plugins-base-dev"
			TAGS="e enlightenment efl"
			;;
		emotion-dev)
			copy @dev
			DEPENDS="edje-dev eio-dev eeze-dev xine-lib-dev"
			OPTIONAL_DEPENDS="gstreamer0-dev gst0-plugins-base-dev"
			;;
	esac
}
