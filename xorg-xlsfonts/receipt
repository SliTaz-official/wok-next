# SliTaz package receipt v2.

PACKAGE="xorg-xlsfonts"
VERSION="1.0.5"
CATEGORY="x-window"
SHORT_DESC="List X fonts available on X server"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="xlsfonts"

TARBALL="xlsfonts-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libX11-dev xorg-xproto"
PKG_RULE="std"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11"
}
