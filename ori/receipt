# SliTaz package receipt v2.

PACKAGE="ori"
VERSION="0.8.1"
CATEGORY="network"
SHORT_DESC="A Secure Distributed File System"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://ori.scs.stanford.edu/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="https://bitbucket.org/orifs/ori/downloads/$TARBALL"

BUILD_DEPENDS="scons2 libboost-dev libboost-math-tr1 \
util-linux-uuid-dev fuse2-dev libevent-dev openssl-dev zlib-dev"

compile_rules() {
	scons PREFIX=$DESTDIR/usr install
}

genpkg_rules() {
	copy @std
	DEPENDS="openssl libevent fuse2 liblzma libxml2 util-linux-uuid" # + mDNSResponder
}
