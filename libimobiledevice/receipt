# SliTaz package receipt v2.

PACKAGE="libimobiledevice"
VERSION="1.1.1"
CATEGORY="misc"
SHORT_DESC="Software library that talks the protocols to support iPhone and \
iPod Touch devices on Linux"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL2"
WEB_SITE="http://libimobiledevice.org"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$WEB_SITE/downloads/$TARBALL"

BUILD_DEPENDS="gnutls-dev glib-dev libplist-dev usbmuxd-dev python-dev swig \
libxml2-dev libgcrypt-dev"
SPLIT="libimobiledevice-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libimobiledevice)
			copy @std
			DEPENDS="gnutls glib libplist usbmuxd"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
