# SliTaz package receipt v2.

PACKAGE="libhubbub"
COMMIT="0eb6188c3a931063f78b017c621b79709746706e"
VERSION="0.3.3-170909"
CATEGORY="system-tools"
SHORT_DESC="Hubbub is an HTML5 compliant parsing library, written in C"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://www.netsurf-browser.org/projects/hubbub/"

TARBALL="$PACKAGE-${COMMIT:-$VERSION}.tar.bz2"
BASE_URL="http://source.netsurf-browser.org/$PACKAGE.git/snapshot"
if [ -n "$COMMIT" ]; then
	WGET_URL="$BASE_URL/$PACKAGE-$COMMIT.tar.bz2"
else
	WGET_URL="$BASE_URL/release/$VERSION.tar.bz2"
fi

BUILD_DEPENDS="netsurf-buildsystem libparserutils-dev"
SPLIT="libhubbub-dev"

compile_rules() {
	[ -z "$COMMIT" ] && cd $VERSION

	make \
		PREFIX=/usr \
		LIBDIR=lib \
		INCLUDEDIR=include \
		COMPONENT_TYPE=lib-shared \
		install
}

genpkg_rules() {
	case $PACKAGE in
		libhubbub)
			copy @std
			DEPENDS="libparserutils"
			PROVIDE="hubbub" # old package name
			;;
		*-dev)
			copy @dev
			DEPENDS="libhubbub libparserutils-dev"
			PROVIDE="hubbub-dev"
			;;
	esac
}
