# SliTaz package receipt v2.

PACKAGE="bluefish"
VERSION="2.2.8"
CATEGORY="development"
SHORT_DESC="A powerful editor"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://bluefish.openoffice.nl/index.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://www.bennewitz.com/bluefish/stable/source/$TARBALL"

BUILD_DEPENDS="gtk2-dev pcre-dev intltool libxml2-dev expat-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="libcairo gdk-pixbuf glib gtk2 libxml2 pango python   aspell \
	shared-mime-info"
	TAGS="text-editor language HTML programming scripting"
}
