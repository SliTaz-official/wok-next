# SliTaz package receipt v2.

PACKAGE="gmpc"
VERSION="11.8.16"
CATEGORY="multimedia"
SHORT_DESC="A GTK2 client for MPD"
MAINTAINER="jozee@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://gmpclient.org"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://download.sarine.nl/Programs/${PACKAGE}/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS_arm="gob2-dev libglade-dev libmpd libmpd-dev curl-dev \
sqlite3-dev xorg-libSM-dev libsoup-dev libsexy-dev xorg-xcb-util-dev \
util-linux-uuid-dev flex intltool"
BUILD_DEPENDS="gob2-dev libglade-dev libmpd libmpd-dev curl-dev sqlite3-dev \
xorg-libSM-dev libsoup-dev libsexy-dev xorg-xcb-util-dev util-linux-uuid-dev \
flex intltool vala"
SPLIT="gmpc-dev"

compile_rules() {
	./configure \
		--enable-system-libsexy \
		--disable-shave \
		--disable-unique \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make || return 1
	sed -i 's|GNOME;AudioVideo;|GTK;AudioVideo;Player;|' data/$PACKAGE.desktop
	make install
}

genpkg_rules() {
	case $PACKAGE in
		gmpc)
			copy @std
			DEPENDS="libglade libmpd curl xorg-libSM libsoup libsexy mpd \
			sqlite3 libtasn1"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
