# SliTaz package receipt v2.

PACKAGE="iptstate"
VERSION="2.2.5"
CATEGORY="network"
SHORT_DESC="IPTState is a top-like interface to your netfilter \
connection-tracking table"
MAINTAINER="paul@slitaz.org"
LICENSE="zlib/libpng"
WEB_SITE="https://www.phildev.net/iptstate/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="ncurses-dev libnetfilter_conntrack-dev libnfnetlink-dev"

compile_rules() {
	make &&
	install -Dm755 $src/iptstate $install/usr/sbin/iptstate
}

genpkg_rules() {
	copy @std
	DEPENDS="ncurses libnetfilter_conntrack libnfnetlink iptables"
}
