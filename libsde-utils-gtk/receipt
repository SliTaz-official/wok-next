# SliTaz package receipt v2.

PACKAGE="libsde-utils-gtk"
VERSION="git20161208" # no releases there
COMMIT="d2dea90"
CATEGORY="development"
SHORT_DESC="SDE GTK Utility Library"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://github.com/sde-gui/libsde-utils-gtk"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/sde-gui/libsde-utils-gtk/archive/$COMMIT.tar.gz"

BUILD_DEPENDS="automake libtool glib-dev gtk+-dev gdk-pixbuf-dev \
libsde-utils-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./autogen.sh &&
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libsde-utils-gtk)
			copy @std
			DEPENDS="gdk-pixbuf glib gtk+ libsde-utils pango"
			;;
		*-dev)
			copy @dev
			DEPENDS="libsde-utils-gtk glib-dev"
			;;
	esac
}
