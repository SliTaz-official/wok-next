# SliTaz package receipt v2.

PACKAGE="moosefs"
VERSION="1.6.20-2"
CATEGORY="system-tools"
SHORT_DESC="Fault tolerant, network distributed file system"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://moosefs.com/"

TARBALL="mfs-$VERSION.tar.gz"
WGET_URL="${WEB_SITE}tl_files/mfscode/$TARBALL"

BUILD_DEPENDS="python fuse2-dev zlib-dev"

compile_rules() {
	sed -i 's/bash/sh/' mfsmount/mfssnapshot

	./configure $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	copy @std
	DEPENDS="python fuse2 zlib"
}
