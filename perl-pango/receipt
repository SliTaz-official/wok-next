# SliTaz package receipt v2.

PACKAGE="perl-pango"
VERSION="1.227"
CATEGORY="perl"
SHORT_DESC="Pango - Layout and render international text"
MAINTAINER="claudinei@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="https://metacpan.org/release/Pango"
REPOLOGY="perl:pango"

TARBALL="Pango-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/X/XA/XAOC/$TARBALL"

BUILD_DEPENDS="perl-cairo perl-glib cairo freetype glib pango perl-dev \
perl-extutils-depends perl-extutils-pkgconfig pango-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std @dev
	DEPENDS="perl-cairo perl-glib cairo freetype glib pango"
}
