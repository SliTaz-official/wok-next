# SliTaz package receipt v2.

PACKAGE="tar"
VERSION="1.30"
CATEGORY="utilities"
SHORT_DESC="GNU tar archiving tools"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://www.gnu.org/software/tar/"
LFS="http://www.linuxfromscratch.org/lfs/view/stable/chapter06/tar.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNU_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="acl-dev gettext-dev texinfo"

compile_rules() {
	FORCE_UNSAFE_CONFIGURE=1 \
	./configure \
		--bindir=/bin \
		$CONFIGURE_ARGS &&
	make &&
	make install &&
	make -C doc install-html
}

genpkg_rules() {
	copy @std
	DEPENDS="acl"
	TAGS="LFS archive compression"
}
