# SliTaz package receipt v2.

PACKAGE="xorg-libXi"
VERSION="1.7.9"
CATEGORY="x-window"
SHORT_DESC="X Input Extension library"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7lib.html"
REPOLOGY="libxi"

TARBALL="libXi-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-libXext-dev xorg-libXfixes-dev xorg-xorgproto"
SPLIT="xorg-libXi-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXi)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXext"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXi \
			xorg-xorgproto xorg-libX11-dev xorg-libXext-dev xorg-libXfixes-dev"
			;;
	esac
}
