# SliTaz package receipt v2.

PACKAGE="xorg-showfont"
VERSION="1.0.5"
CATEGORY="x-window"
SHORT_DESC="Show information about X font from font server"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="showfont-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libFS-dev"
PKG_RULE="std"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libFS"
}
