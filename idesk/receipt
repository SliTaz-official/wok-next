# SliTaz package receipt v2.

PACKAGE="idesk"
VERSION="0.7.5"
CATEGORY="x-window"
SHORT_DESC="IDesk gives users icons on their desktop"
MAINTAINER="pankso@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://idesk.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="imlib2-dev xorg-libXft-dev"

compile_rules() {
	./configure \
		--enable-xft \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install || return 1

	# Custom default.lnk with Home icon
	install -Dm644 $stuff/default.lnk $install/usr/share/idesk/default.lnk
}

genpkg_rules() {
	copy @std
	rm -f \
		$fs/usr/share/idesk/*.xpm \
		$fs/usr/share/idesk/README
	DEPENDS="imlib2 xorg-libXft"
}
