# SliTaz package receipt v2.

PACKAGE="libzen"
VERSION="0.4.32"
CATEGORY="development"
SHORT_DESC="ZenLib - small C++ derivative class to have a simpler life"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="zlib/libpng"
WEB_SITE="http://mediaarea.net/"

TARBALL="${PACKAGE}_$VERSION.tar.bz2"
WGET_URL="${WEB_SITE}download/source/$PACKAGE/$VERSION/$TARBALL"

BUILD_DEPENDS="libtool"

compile_rules() {
	cd Project/GNU/Library
	./autogen.sh
	./configure $CONFIGURE_ARGS &&
	make &&
	make install || return 1

	sed \
		-e "s|$src/Project/GNU/Library|/usr/lib|" \
		-e 's|/.libs||' \
		-i $install/usr/bin/libzen-config
}

genpkg_rules() {
	copy @dev
}
