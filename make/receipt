# SliTaz package receipt v2.

PACKAGE="make"
VERSION="4.2.1"
CATEGORY="development"
SHORT_DESC="GNU Make to generate executables and other files from source"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://www.gnu.org/software/make/"
LFS="http://www.linuxfromscratch.org/lfs/view/stable/chapter06/make.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$GNU_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="gettext"

compile_rules() {
	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules() {
	copy @std
	TAGS="LFS"
}
