# SliTaz package receipt v2.

PACKAGE="xorg-libSM"
VERSION="1.2.2"
CATEGORY="x-window"
SHORT_DESC="Session Management library"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7lib.html"
REPOLOGY="libsm"

TARBALL="libSM-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-libICE-dev xorg-xtrans util-linux-uuid-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libSM)
			copy @std
			DEPENDS="util-linux-uuid xorg-libICE"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libSM \
			xorg-libICE-dev xorg-xorgproto"
			;;
	esac
}
