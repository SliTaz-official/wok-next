# SliTaz package receipt v2.

PACKAGE="lucene++"
VERSION="3.0.7"
CATEGORY="utilities"
SHORT_DESC="C++ port of the Java Lucene library"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="Apache"
WEB_SITE="https://github.com/luceneplusplus/LucenePlusPlus"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/archive/rel_$VERSION.tar.gz"

BUILD_DEPENDS="cmake libboost-dev libboost-date-time libboost-filesystem \
libboost-regex libboost-thread libboost-iostreams python"
SPLIT="lucene++-dev"

compile_rules() {
	mkdir build; cd build
	cmake \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DLIB_DESTINATION=/usr/lib \
		-DBoost_LIBRARY_DIR=/usr/lib \
		-DENABLE_CUSTOM_ALLOCATOR='FALSE' \
		-DCMAKE_CXX_FLAGS='-DBOOST_VARIANT_USE_RELAXED_GET_BY_DEFAULT' \
		.. &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		lucene++)
			copy @std
			DEPENDS="libboost-date-time libboost-filesystem libboost-iostreams \
			libboost-regex libboost-system libboost-thread libboost-chrono"
			;;
		*-dev)
			copy @dev
			DEPENDS="libboost-dev libboost-date-time libboost-filesystem \
			libboost-iostreams libboost-regex libboost-system libboost-thread \
			libboost-chrono"
			;;
	esac
}
