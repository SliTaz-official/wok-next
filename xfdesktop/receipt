# SliTaz package receipt v2.

PACKAGE="xfdesktop"
VERSION="4.12.0" # Xfce release 4.12: http://archive.xfce.org/xfce/4.12/src/
CATEGORY="x-window"
SHORT_DESC="Xfce desktop"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.xfce.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://archive.xfce.org/src/xfce/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool xorg-libX11-dev xorg-libICE-dev xorg-libSM-dev \
dbus-glib-dev gtk+-dev libxfce4util-dev libxfce4ui-dev libwnck2-dev exo-dev \
thunar-dev garcon-dev libnotify-dev"
SPLIT="xfdesktop-extras xfdesktop"

compile_rules() {
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-debug \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-extras)
			copy backgrounds/
			CAT="x-window|backgrounds"
			;;
		xfdesktop)
			copy @std @rm
			DEPENDS="atk bzlib cairo dbus dbus-glib exo fontconfig freetype \
			garcon gdk-pixbuf glib gtk+ libffi libharfbuzz liblzma libnotify \
			libpng16 libwnck2 libxfce4ui libxfce4util libxml2 pango pcre \
			startup-notification thunar util-linux-blkid util-linux-mount \
			util-linux-uuid xfconf xorg-libICE xorg-libSM xorg-libX11 \
			xorg-libXau xorg-libXdmcp xorg-libXext xorg-libXrender xorg-libxcb \
			xorg-pixman xorg-xcb-util zlib"
			;;
	esac
	TAGS="Xfce"
}
