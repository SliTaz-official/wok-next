# SliTaz package receipt v2.

PACKAGE="libva"
VERSION="1.8.2"
CATEGORY="x-window"
SHORT_DESC="Userspace Video Acceleration (VA) library"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.freedesktop.org/wiki/Software/vaapi/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://www.freedesktop.org/software/vaapi/releases/libva/$TARBALL"

BUILD_DEPENDS="libdrm-dev xorg-libX11-dev xorg-libXext-dev xorg-libXfixes-dev \
mesa-dev expat-dev xorg-libxshmfence-dev wayland-dev"
SPLIT="libva-dev"

compile_rules() {
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libva)
			copy @std
			DEPENDS="libdrm mesa mesa-libegl wayland xorg-libX11 xorg-libXext \
			xorg-libXfixes"
			;;
		*-dev)
			copy @dev
			DEPENDS="libva expat-dev libdrm-dev libffi-dev mesa-dev \
			wayland-dev xorg-libX11-dev xorg-libXau-dev xorg-libXdamage-dev \
			xorg-libXdmcp-dev xorg-libXext-dev xorg-libXfixes-dev \
			xorg-libXxf86vm-dev xorg-libxcb-dev xorg-libxshmfence-dev"
			;;
	esac
}
