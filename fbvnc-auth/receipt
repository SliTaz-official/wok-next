compile_rules() {
	sed -i s"/cc/${HOST_SYSTEM}-gcc/" Makefile &&
	make &&
	install -Dm755 $src/fbvnc $install/usr/bin/fbvnc
}

genpkg_rules() {
	copy @std
	PROVIDE="fbvnc"
	TAGS="vnc remote-desktop"
}
