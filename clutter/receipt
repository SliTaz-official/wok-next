# SliTaz package receipt v2.

PACKAGE="clutter"
VERSION="1.6.20"
CATEGORY="x-window"
SHORT_DESC="Animated graphical user interfaces library"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://clutter-project.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://www.clutter-project.org/sources/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="atk-dev glib-dev gdk-pixbuf-dev cairo-dev pango-dev \
json-glib-dev mesa-dev libdrm-dev xorg-libXcomposite-dev \
gobject-introspection-dev pkg-config libxml2-dev expat-dev xorg-libxshmfence-dev"
SPLIT="clutter-dev"

compile_rules() {
	./configure \
		--enable-introspection \
		$CONFIGURE_ARGS &&
	make && make install || return 1

	ln -s clutter-1.0.pc $install/usr/lib/pkgconfig/clutter.pc
}

genpkg_rules() {
	case $PACKAGE in
		clutter)
			copy @std
			DEPENDS="atk glib gdk-pixbuf cairo pango json-glib mesa libdrm \
			xorg-libXcomposite"
			SUGGESTED="nvidia"
			;;
		*-dev)
			copy @dev
			DEPENDS="clutter mesa-dev json-glib-dev xorg-libXcomposite-dev"
			;;
	esac
}
