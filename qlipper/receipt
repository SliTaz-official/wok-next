# SliTaz package receipt v2.

PACKAGE="qlipper"
VERSION="5.0.0"
CATEGORY="utilities"
SHORT_DESC="Clipboard history tool"
MAINTAINER="psychomaniak@xakep.ru"
LICENSE="GPL2"
WEB_SITE="https://github.com/pvanek/qlipper"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/pvanek/qlipper/archive/$VERSION.tar.gz"

BUILD_DEPENDS="cmake qt5-dev mesa17-dev"

compile_rules() {
	mkdir build; cd build
	cmake \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		.. &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="qt5-base xorg-libX11"
}
