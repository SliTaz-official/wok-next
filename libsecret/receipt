# SliTaz package receipt v2.

PACKAGE="libsecret"
VERSION="0.18.5"
CATEGORY="security"
SHORT_DESC="GObject bindings for Secret Service API"
MAINTAINER="devl547@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://wiki.gnome.org/Projects/Libsecret"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="libtool intltool libxslt docbook-xsl libgcrypt-dev \
gobject-introspection-dev vala util-linux-mount-dev"
SPLIT="libsecret-dev"

compile_rules() {
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libsecret)
			copy @std
			DEPENDS="glib libgcrypt"
			;;
		*-dev)
			copy @dev
			DEPENDS="libsecret glib-dev"
			;;
	esac
}
