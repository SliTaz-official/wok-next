# SliTaz package receipt.

PACKAGE="aspell-pt_PT"
VERSION="20070510-0"
CATEGORY="text"
SHORT_DESC="Portuguese aspell dictionary."
MAINTAINER="paul@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://ftp.gnu.org/gnu/aspell/dict/0index.html"

TARBALL="aspell6-pt_PT-$VERSION.tar.bz2"
WGET_URL="$GNU_MIRROR/aspell/dict/pt_PT/$TARBALL"

DEPENDS="aspell"
BUILD_DEPENDS="aspell-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_folders lib
}
