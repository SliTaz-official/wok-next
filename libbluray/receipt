# SliTaz package receipt v2.

PACKAGE="libbluray"
VERSION="1.0.0"
CATEGORY="libs"
SHORT_DESC="Blu-Ray Discs playback library"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="http://www.videolan.org/developers/libbluray.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="ftp://ftp.videolan.org/pub/videolan/libbluray/$VERSION/$TARBALL"

BUILD_DEPENDS="libxml2-dev freetype-dev fontconfig-dev"
SPLIT="libbluray-dev"

compile_rules() {
	./configure \
		--disable-bdjava \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libbluray)
			copy @std
			DEPENDS="freetype libxml2"
			;;
		*-dev)
			copy @dev
			DEPENDS="libbluray \
			fontconfig-dev freetype-dev libxml2-dev"
			;;
	esac
}
