PACKAGE="vnc2flv"
VERSION="20100207"
CATEGORY="network"
SHORT_DESC="VNC recorder"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://www.unixuser.org/~euske/python/vnc2flv"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://pypi.python.org/packages/source/v/vnc2flv/$TARBALL"

compile_rules() {
	make || return 1

	mkdir -p              $install/usr/share/$PACKAGE
	cp -r $src/$PACKAGE/* $install/usr/share/$PACKAGE
}

genpkg_rules() {
	copy @std
	DEPENDS="python"
	SUGGESTED="x11vnc"
	TAGS="vnc"
}
