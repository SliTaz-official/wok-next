# SliTaz package receipt v2.

PACKAGE="geeqie"
VERSION="1.3"
CATEGORY="utilities"
SHORT_DESC="A lightweight image browser and viewer"
MAINTAINER="devl547@gmail.com"
LICENSE="GPL2"
WEB_SITE="http://www.geeqie.org/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="http://www.geeqie.org/$TARBALL"

BUILD_DEPENDS="automake gettext intltool lcms2-dev gtk2-dev"

compile_rules() {
	./autogen.sh \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="atk cairo fontconfig freetype gdk-pixbuf glib gtk2 lcms2 \
	libjpeg-turbo pango tiff"
}
