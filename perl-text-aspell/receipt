# SliTaz package receipt.

PACKAGE="perl-text-aspell"
VERSION="0.09"
CATEGORY="perl"
SHORT_DESC="Text::Aspell - Perl interface to the GNU Aspell library"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Text-Aspell"
REPOLOGY="perl:text-aspell"

TARBALL="Text-Aspell-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/H/HA/HANK/$TARBALL"

BUILD_DEPENDS="perl-dev aspell aspell-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl aspell gcc-lib-base"
}
