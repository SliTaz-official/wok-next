# SliTaz package receipt v2.

PACKAGE="xorg-libXp"
VERSION="1.0.2"
CATEGORY="development"
SHORT_DESC="Allow client applications to render to non-display devices"
MAINTAINER="rcx@zoominternet.net"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="libXp-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libX11-dev xorg-libXext-dev \
xorg-xextproto xorg-libXau-dev xorg-printproto"
SPLIT="xorg-libXp-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXp)
			copy @std
			DEPENDS="xorg-libxcb xorg-libX11 xorg-libXau xorg-libXdmcp \
			xorg-libXext"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXp xorg-libxcb-dev xorg-libX11-dev \
			xorg-libXau-dev xorg-libXdmcp-dev xorg-libXext-dev xorg-printproto"
			;;
	esac
}
