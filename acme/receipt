SHORT_DESC="A Crossassembler for Multiple Environments (6502, 65c02 and 65816)"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.esw-heim.tu-clausthal.de/~marco/smorbrod/acme"

TARBALL="$PACKAGE${VERSION/./}src.tar.bz2"
WGET_URL="$WEB_SITE/current/$TARBALL"

compile_rules() {
	cd $src/src
	make &&
	install -Dm755 $src/src/acme $install/usr/bin/acme
}

genpkg_rules() {
	copy @std
}
