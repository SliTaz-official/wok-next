# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-glint"
VERSION="1.2.9"
CATEGORY="x-window"
SHORT_DESC="Xorg driver for 3Dlabs & Texas Instruments GLINT/Permedia based \
video cards"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="xdrv:glint"

TARBALL="xf86-video-glint-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev xorg-xorgproto"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-server"
	TAGS="xorg display"
}
