# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-glint"
VERSION="1.2.9"
CATEGORY="x-window"
SHORT_DESC="Xorg driver for 3Dlabs & Texas Instruments GLINT/Permedia based \
video cards"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xf86-video-glint-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev xorg-xf86dgaproto"
SPLIT="xorg-xf86-video-glint-dev"
PKG_RULE="std-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-glint)
			copy @std
			DEPENDS="xorg-server"
			TAGS="xorg display"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xf86-video-glint xorg-server-dev"
			;;
	esac
}
