# SliTaz package receipt v2.

PACKAGE="varka"
VERSION="0.1"
CATEGORY="development"
SHORT_DESC="A library on top of gtk to build applications"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://launchpad.net/varka"

BRANCH="15"
TARBALL="$PACKAGE-$BRANCH.tar.bz2"
WGET_URL="bzr|lp:varka"

BUILD_DEPENDS="bazaar cmake gobject-introspection-dev gtk+3-dev glib-dev vala \
gettext-tools"
SPLIT="varka-dev"

compile_rules() {
	export LDFLAGS="$LDFLAGS $(pkg-config --libs gio-unix-2.0 gmodule-2.0)"
	mkdir build
	cd    build
	cmake \
		-DCMAKE_INSTALL_PREFIX=/usr \
		.. &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	case $PACKAGE in
		varka)
			copy @std
			DEPENDS="gtk+3"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
