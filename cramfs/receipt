# SliTaz package receipt v2.

PACKAGE="cramfs"
VERSION="1.1"
CATEGORY="base-system"
SHORT_DESC="Simple and small, compressed filesystem"
LICENSE="GPL2"
MAINTAINER="pascal.bellard@slitaz.org"
WEB_SITE="http://cramfs.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$PACKAGE/$VERSION/$TARBALL"

BUILD_DEPENDS="zlib-dev"

compile_rules() {
	make || return 1
	install -Dm755 $src/mkcramfs $install/usr/sbin/mkcramfs
	install -Dm755 $src/cramfsck $install/usr/sbin/cramfsck
}

genpkg_rules() {
	copy @std
	DEPENDS="zlib"
}
