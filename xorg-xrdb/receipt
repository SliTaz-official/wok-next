# SliTaz package receipt v2.

PACKAGE="xorg-xrdb"
VERSION="1.1.0"
CATEGORY="x-window"
SHORT_DESC="X server resource database utility"
MAINTAINER="rocky@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xrdb-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libXmu-dev xorg-libX11-dev xorg-xproto"
PKG_RULE="std"

# Rules to configure and make the package.
compile_rules()
{
	touch /root/missing /missing

	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
	DEPENDS="xorg-libX11 xorg-libXmu"
}
