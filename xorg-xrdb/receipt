# SliTaz package receipt v2.

PACKAGE="xorg-xrdb"
VERSION="1.1.1"
CATEGORY="x-window"
SHORT_DESC="X server resource database utility"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7app.html"
REPOLOGY="xrdb"

TARBALL="xrdb-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libXmu-dev xorg-libX11-dev xorg-xorgproto"

compile_rules() {
	touch /root/missing /missing

	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libXmu"
}
