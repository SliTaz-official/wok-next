# SliTaz package receipt.

PACKAGE="perl-xml-writer"
VERSION="0.625"
CATEGORY="perl"
SHORT_DESC="XML::Writer - Perl extension for writing XML documents"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/XML-Writer"
REPOLOGY="perl:xml-writer"

TARBALL="XML-Writer-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/J/JO/JOSEPHW/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
