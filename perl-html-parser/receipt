# SliTaz package receipt.

PACKAGE="perl-html-parser"
VERSION="3.72"
CATEGORY="perl"
SHORT_DESC="HTML::Parser - HTML parser class"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/HTML-Parser"

TARBALL="HTML-Parser-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/G/GA/GAAS/$TARBALL"

DEPENDS="perl-html-tagset"
BUILD_DEPENDS="$DEPENDS"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
