# SliTaz package receipt.

PACKAGE="perl-crypt-rc4"
VERSION="2.02"
CATEGORY="perl"
SHORT_DESC="Crypt::RC4 - Perl implementation of the RC4 encryption algorithm"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Crypt-RC4"
REPOLOGY="perl:crypt-rc4"

TARBALL="Crypt-RC4-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/S/SI/SIFUKURT/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="$DEPENDS"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
