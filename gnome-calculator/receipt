# SliTaz package receipt v2.

PACKAGE="gnome-calculator"
VERSION="3.28.1"
CATEGORY="utilities"
SHORT_DESC="GNOME Calculator is a powerful graphical calculator with \
financial, logical and scientific modes"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://wiki.gnome.org/Apps/Calculator"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="meson ninja vala gtk+3-dev gtksourceview3-dev libsoup-dev \
gettext mpfr-dev gmp-dev mpc-library-dev itstool yelp-xsl"

compile_rules() {
	meson-wrapper build &&
	ninja -C build &&
	DESTDIR="$install" ninja -C build install
}

genpkg_rules() {
	copy @std
	DEPENDS="atk glib gtk+3 gtksourceview3 libsoup libxml2 mpc-library mpfr"
}
