# SliTaz package receipt v2.

PACKAGE="xcb-util-xrm"
VERSION="1.3"
CATEGORY="x-window"
SHORT_DESC="XCB utility functions for the X resource manager"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://github.com/Airblader/xcb-util-xrm"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/Airblader/xcb-util-xrm/releases/download/v$VERSION/$TARBALL"

BUILD_DEPENDS="xorg-libxcb-dev xorg-xcb-util-dev xorg-libX11-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		xcb-util-xrm)
			copy @std
			DEPENDS="xorg-libxcb xorg-xcb-util"
			;;
		*-dev)
			copy @dev
			DEPENDS="xcb-util-xrm xorg-libxcb-dev xorg-xcb-util-dev"
			;;
	esac
}
