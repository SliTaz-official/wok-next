# SliTaz package receipt v2.

PACKAGE="pinentry"
VERSION="1.0.0"
CATEGORY="security"
SHORT_DESC="Collection of dialog programs that allow GnuPG to read passphrases \
and PIN numbers in a secure manner"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.gnupg.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://www.gnupg.org/ftp/gcrypt/pinentry/$TARBALL"
# https://www.gnupg.org/download/integrity_check.html
TARBALL_SHA1="85d9ac81ebad3fb082514c505c90c39a0456f1f6"

BUILD_DEPENDS="libassuan-dev libgpg-error-dev ncurses-dev libcap-dev \
libsecret-dev libgcrypt-dev"
SIBLINGS="pinentry-gtk"

# Rules to gen a SliTaz package suitable for Tazpkg.

compile_rules()
{
	./configure --prefix=/usr &&
	make && make install
}

genpkg_rules()
{
	copy @std
	DEPENDS="glib libassuan libcap libgio libgpg-error libsecret ncurses"
}
