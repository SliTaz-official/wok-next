# SliTaz package receipt v2.

PACKAGE="pinentry"
VERSION="1.1.0"
CATEGORY="security"
SHORT_DESC="Collection of dialog programs that allow GnuPG to read passphrases \
and PIN numbers in a secure manner"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.gnupg.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/pinentry.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://www.gnupg.org/ftp/gcrypt/pinentry/$TARBALL"
# https://www.gnupg.org/download/integrity_check.html
TARBALL_SHA1="693bdf9f48dfb3e040d92f50b1bb464e268b9fb0"

BUILD_DEPENDS="libassuan-dev libgpg-error-dev ncurses-dev libcap-dev \
libsecret-dev libgcrypt-dev fltk-dev" # gtk+-dev gcr-dev
SIBLINGS="pinentry-gtk"

compile_rules() {
	./configure \
		--enable-pinentry-tty \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="glib libassuan libcap libgpg-error libsecret ncurses"
}
