# SliTaz package receipt v2.

PACKAGE="encfs"
VERSION="1.7.4"
CATEGORY="security"
SHORT_DESC="Encryption filesystem for FUSE"
MAINTAINER="b1+slitaz@nagel.org"
LICENSE="GPL3"
WEB_SITE="http://www.arg0.net/encfs"

TARBALL="$PACKAGE-$VERSION.tgz"
WGET_URL="http://encfs.googlecode.com/files/$TARBALL"

BUILD_DEPENDS="fuse2-dev rlog rlog-dev openssl-dev libboost-dev \
libboost-system libboost-serialization libboost-filesystem"

compile_rules() {
	mv $PACKAGE-${VERSION%-*} $src 2>/dev/null
	cd $src

	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="fuse2 rlog openssl libboost-system libboost-serialization \
	libboost-filesystem gcc-lib-base"
	TAGS="filesystem"
}
