# SliTaz package receipt v2.

PACKAGE="encfs"
VERSION="1.9.5"
CATEGORY="security"
SHORT_DESC="Encryption filesystem for FUSE"
MAINTAINER="maintainer@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://www.arg0.net/encfs"
REPOLOGY="fusefs:encfs"

TARBALL="$PACKAGE-$VERSION.tgz"
WGET_URL="https://github.com/vgough/$PACKAGE/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="boost-dev boost-filesystemboost-serialization boost-system 
	fuse2-dev openssl-dev rlog rlog-dev"

compile_rules()
{
	mv $PACKAGE-${VERSION%-*} $src 2>/dev/null
	cd $src

	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules()
{
	copy @std
	DEPENDS="boost-filesystem boost-serialization boost-system fuse2
		gcc-lib-base openssl rlog"
	TAGS="filesystem"
}
