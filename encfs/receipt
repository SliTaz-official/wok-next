# SliTaz package receipt v2.

PACKAGE="encfs"
VERSION="1.7.4"
CATEGORY="security"
SHORT_DESC="Encryption filesystem for FUSE"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://www.arg0.net/encfs"
REPOLOGY="fusefs:encfs"

TARBALL="$PACKAGE-$VERSION.tgz"
WGET_URL="http://encfs.googlecode.com/files/$TARBALL"

BUILD_DEPENDS="fuse2-dev rlog rlog-dev openssl-dev boost-dev \
boost-system boost-serialization boost-filesystem"

compile_rules() {
	mv $PACKAGE-${VERSION%-*} $src 2>/dev/null
	cd $src

	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	copy @std
	DEPENDS="fuse2 rlog openssl boost-system boost-serialization \
	boost-filesystem gcc-lib-base"
	TAGS="filesystem"
}
