# SliTaz package receipt v2.

PACKAGE="xorg-libXdmcp"
VERSION="1.1.2"
CATEGORY="x-window"
SHORT_DESC="X Display Manager Control Protocol routines"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/libXdmcp.html"
REPOLOGY="libxdmcp"

TARBALL="libXdmcp-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-xorgproto"
SPLIT="xorg-libXdmcp-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXdmcp)
			copy @std
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXdmcp xorg-xorgproto"
			;;
	esac
}
