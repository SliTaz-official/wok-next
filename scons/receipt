# SliTaz package receipt v2.

PACKAGE="scons"
VERSION="3.0.1"
CATEGORY="development"
SHORT_DESC="SCons is an Open Source software construction tool"
MAINTAINER="chadi.elahmad@gmail.com"
LICENSE="MIT"
WEB_SITE="https://scons.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/general/scons.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="python-dev"

compile_rules() {
	python setup.py install \
		--prefix=/usr \
		--standard-lib \
		--optimize=1 \
		--install-data=/usr/share \
		--root=$install || return 1

	find $install -perm 775 -exec chmod 755 '{}' \;
}

genpkg_rules() {
	copy @std
	DEPENDS="python"
}
