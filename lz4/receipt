# SliTaz package receipt v2.

PACKAGE="lz4"
VERSION="1.8.2"
CATEGORY="base-system"
SHORT_DESC="High speed lossless compressor"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://lz4.github.io/lz4/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$GITHUB/lz4/lz4/tarball/v$VERSION"

SPLIT="$PACKAGE-lib $PACKAGE-dev"

compile_rules() {
	export AR="$HOST_SYSTEM-ar"
	make &&
	make PREFIX=/usr DESTDIR=$install install
}

genpkg_rules() {
	case $PACKAGE in
		lz4)
			copy lz4 unlz4 lz4cat
			DEPENDS=" "
			TAGS="compression"
			;;
		*-lib)
			copy *.so*
			CAT="base-system|shared library"
			DEPENDS=" "
			;;
		*-dev)
			copy @dev
			;;
	esac
}
