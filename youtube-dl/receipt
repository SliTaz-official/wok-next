# SliTaz package receipt v2.

PACKAGE="youtube-dl"
VERSION="2018.03.14"
CATEGORY="utilities"
SHORT_DESC="Downloads videos from various streaming websites"
MAINTAINER="gokhlayeh@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://rg3.github.io/youtube-dl/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://yt-dl.org/downloads/$VERSION/$TARBALL"

BUILD_DEPENDS="python"

compile_rules() {
	chmod +x $src/youtube-dl
	echo | $src/youtube-dl

	install -Dm755 $src/youtube-dl $install/usr/bin/youtube-dl
}

genpkg_rules() {
	copy @std
	DEPENDS="python"
}
