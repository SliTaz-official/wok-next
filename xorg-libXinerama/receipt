# SliTaz package receipt v2.

PACKAGE="xorg-libXinerama"
VERSION="1.1.4"
CATEGORY="x-window"
SHORT_DESC="Xinerama protocol library"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7lib.html"
REPOLOGY="libxinerama"

TARBALL="libXinerama-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-libXext-dev xorg-xorgproto"
SPLIT="xorg-libXinerama-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXinerama)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXext"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXinerama \
			xorg-libX11-dev xorg-libXext-dev xorg-xorgproto"
			;;
	esac
}
