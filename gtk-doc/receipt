# SliTaz package receipt.

PACKAGE="gtk-doc"
VERSION="1.25"
CATEGORY="development"
SHORT_DESC="Generate API documentation from comments added to C code."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://www.gtk.org/gtk-doc/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION:0:4}/$TARBALL"

DEPENDS="docbook-xsl"
BUILD_DEPENDS="docbook-xml docbook-xsl libxslt python perl itstool gettext"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--prefix=/usr \
		--build=$HOST_SYSTEM --host=$HOST_SYSTEM &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}

post_install()
{
	mkdir -p "$1/usr/share/gtk-doc/html"
}
