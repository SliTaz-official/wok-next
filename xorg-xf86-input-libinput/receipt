# SliTaz package receipt v2.

PACKAGE="xorg-xf86-input-libinput"
VERSION="0.25.1"
CATEGORY="x-window"
SHORT_DESC="libinput-based X.Org input driver"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xf86-input-libinput-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev libinput-dev mtdev-dev libevdev-dev"
SPLIT="xorg-xf86-input-libinput-dev"
PKG_RULE="std-dev"

compile_rules() {
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libinput)
			copy @std
			DEPENDS="xorg-server eudev libevdev libinput mtdev"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xf86-input-libinput xorg-server-dev eudev-dev \
			libevdev-dev libinput-dev mtdev-dev"
			;;
	esac
}
