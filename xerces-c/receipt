# SliTaz package receipt v2.

PACKAGE="xerces-c"
VERSION="3.1.1"
CATEGORY="development"
SHORT_DESC="A validating XML parser written in a portable subset of C++"
MAINTAINER="rcx@zoominternet.net"
LICENSE="Apache"
WEB_SITE="http://xerces.apache.org/xerces-c"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://apache.osuosl.org/xerces/c/3/sources/$TARBALL"

SPLIT="xerces-c-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make $MAKEFLAGS &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		xerces-c)
			mkdir -p $fs/usr/lib
			cp -a $install/usr/lib/*.so* $fs/usr/lib
			cp -a $install/usr/bin $fs/usr
			DEPENDS="glibc-base gcc-lib-base libcurl openssl icu"
			;;
		*-dev)
			mkdir -p $fs/usr/lib
			cp -a $install/usr/lib/pkgconfig $fs/usr/lib
			cp -a $install/usr/lib/*.*a $fs/usr/lib
			cp -a $install/usr/include $fs/usr
			;;
	esac
}
