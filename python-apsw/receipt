# SliTaz package receipt v2.

PACKAGE="python-apsw"
VERSION="3.19.3-r1"
CATEGORY="development"
SHORT_DESC="Python wrapper for SQLite"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="zlib/libpng"
WEB_SITE="https://rogerbinns.github.io/apsw/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/rogerbinns/apsw/archive/$VERSION.tar.gz"

BUILD_DEPENDS="python-dev sqlite3-dev"

compile_rules() {
	python setup.py build &&
	python setup.py install --root=$DESTDIR
}

genpkg_rules() {
	copy @std
	DEPENDS="python libsqlite3"
}
