# SliTaz package receipt v2.

PACKAGE="python-apsw"
VERSION="3.18.0-r1"
CATEGORY="development"
SHORT_DESC="Python wrapper for SQLite"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="zlib/libpng"
WEB_SITE="https://github.com/rogerbinns/apsw"

TARBALL="apsw-$VERSION.zip"
WGET_URL="$WEB_SITE/releases/download/$VERSION/$TARBALL"

BUILD_DEPENDS="python-dev sqlite-dev"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py build &&
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
	DEPENDS="python libsqlite"
}
