# SliTaz package receipt v2.

PACKAGE="python-curtsies"
VERSION="latest"
CATEGORY="development"
SHORT_DESC="Curses-like terminal wrapper, with colored strings"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://pypi.python.org/pypi/curtsies"
REPOLOGY="python:curtsies"

BUILD_DEPENDS="python-wcwidth python-blessings python-typing"

compile_rules() {
	pip install --no-compile --root=$DESTDIR curtsies
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*curtsies-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="$BUILD_DEPENDS"
}
