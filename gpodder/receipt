# SliTaz package receipt.

PACKAGE="gpodder"
VERSION="3.5.2"
CATEGORY="multimedia"
SHORT_DESC="A simple and usable podcast consumption"
MAINTAINER="claudinei@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://gpodder.github.io/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/src/$TARBALL"

BUILD_DEPENDS="python-dev python-mygpoclient feedparser intltool"

compile_rules() {
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="python python-dbus python-pygtk python-mygpoclient feedparser"
}
