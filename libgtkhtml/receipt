# SliTaz package receipt v2.

PACKAGE="libgtkhtml"
VERSION="2.11.1"
CATEGORY="x-window"
SHORT_DESC="A gtk-based HTML rendering/editing library"
MAINTAINER="rcx@zoominternet.net"
LICENSE="LGPL2"
WEB_SITE="http://freshmeat.net/projects/libgtkhtml/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="ftp://ftp.gnome.org/pub/GNOME/sources/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="libxml2-dev gtk+-dev xorg-libXdamage-dev expat-dev"
SPLIT="libgtkhtml-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		libgtkhtml)
			copy @std
			DEPENDS="glibc-base glib expat libxml2 zlib gtk+ cairo atk \
			fontconfig freetype pango xorg-pixman libpng16 xorg-libX11 \
			xorg-libXau xorg-libXcomposite xorg-libXcursor xorg-libXcursor \
			xorg-libXdamage xorg-libXdmcp xorg-libXext xorg-libXfixes \
			xorg-libXinerama xorg-libXrender"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
