# SliTaz package receipt v2.

PACKAGE="libsdl2-mixer"
VERSION="2.0.1"
CATEGORY="multimedia"
SHORT_DESC="A multichannel sample and music mixer"
MAINTAINER="tcg.thegamer@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="http://www.libsdl.org/projects/SDL_mixer/"
HOST_ARCH="i486 arm"

TARBALL="SDL2_mixer-$VERSION.tar.gz"
WGET_URL="http://www.libsdl.org/projects/SDL_mixer/release/$TARBALL"

BUILD_DEPENDS="libsdl2-dev libmodplug-dev libvorbis-dev flac-dev \
libmad-dev" # fluidsynth-dev old
SPLIT="libsdl2-mixer-dev"

compile_rules() {
	./configure \
		--enable-music-mp3-mad-gpl \
		$CONFIGURE_ARGS &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		libsdl2-mixer)
			copy @std
			DEPENDS="libsdl2 libmad tslib"
			SUGGESTED="libmodplug libvorbis libogg flac"
			;;
		*-dev)
			copy @dev
			DEPENDS="libsdl2-mixer libsdl2-dev tslib-dev"
			;;
	esac
}
