# SliTaz package receipt v2.

PACKAGE="perl-template-toolkit"
VERSION="2.28"
CATEGORY="perl"
SHORT_DESC="Template::Toolkit - Template Processing System"
MAINTAINER="devel@slitaz.org"
LICENSE="Perl"
WEB_SITE="https://metacpan.org/release/Template-Toolkit"
REPOLOGY="perl:template-toolkit"

TARBALL="Template-Toolkit-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/A/AT/ATOOMIC/$TARBALL"

BUILD_DEPENDS="perl-dev perl-appconfig"

compile_rules() {
	perl Makefile.PL TT_XS_ENABLE=y TT_XS_DEFAULT=y TT_ACCEPT=y TT_QUIET=n &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl perl-appconfig"
}
