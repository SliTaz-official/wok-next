# SliTaz package receipt.

PACKAGE="perl-test-manifest"
VERSION="2.021"
CATEGORY="perl"
SHORT_DESC="Test::Manifest - interact with a t/test_manifest file"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Test-Manifest"
REPOLOGY="perl:test-manifest"

TARBALL="Test-Manifest-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/B/BD/BDFOY/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
