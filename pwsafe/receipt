# SliTaz package receipt v2.

PACKAGE="pwsafe"
VERSION="0.2.0"
CATEGORY="utilities"
SHORT_DESC="Commandline program that manages encrypted password databases"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://sourceforge.net/projects/pwsafe/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="openssl-dev readline-dev ncurses-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	copy @std
	DEPENDS="readline ncurses xorg-libSM xorg-libICE xorg-libXmu xorg-libX11 \
	openssl gcc-lib-base xorg-libXt xorg-libXext xorg-libXau xorg-libXdmcp"
}

post_install() {
	chmod u+s "$1/usr/bin/pwsafe"
}
