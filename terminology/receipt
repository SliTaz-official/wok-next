# SliTaz package receipt v2.

PACKAGE="terminology"
VERSION="1.2.0"
CATEGORY="base-system"
SHORT_DESC="Terminology is a terminal emulator with innovative features"
MAINTAINER="domcox@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://www.enlightenment.org/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="https://download.enlightenment.org/rel/apps/terminology/$TARBALL"

BUILD_DEPENDS="meson ninja gettext intltool efl-dev curl-dev"

COOKOPTS="skip-log-errors"

compile_rules() {
	mkdir build
	cd    build

	meson-wrapper .. &&
	ninja &&
	ninja install
}

genpkg_rules() {
	copy @std *.mo
	DEPENDS="efl"
	TAGS="e enlightenment terminal"
}
