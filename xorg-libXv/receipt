# SliTaz package receipt.

PACKAGE="xorg-libXv"
VERSION="1.0.10"
CATEGORY="x-window"
SHORT_DESC="Xorg server module."
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki"
HOST_ARCH="i486 arm"

TARBALL="libXv-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

DEPENDS="xorg-libXext"
BUILD_DEPENDS="xorg-libXext-dev xorg-videoproto"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy *.so*
}
