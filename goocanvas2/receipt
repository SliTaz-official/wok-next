# SliTaz package receipt v2.

PACKAGE="goocanvas2"
VERSION="2.0.4"
CATEGORY="x-window"
SHORT_DESC="Cairo canvas widget for GTK+3"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://wiki.gnome.org/Projects/GooCanvas"
REPOLOGY="goocanvas"

TARBALL="goocanvas-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/goocanvas/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="gtk3-dev gettext-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		goocanvas2)
			copy @std
			DEPENDS="atk cairo gdk-pixbuf glib gtk3 pango"
			;;
		*-dev)
			copy @dev
			DEPENDS="goocanvas2 cairo-dev gtk3-dev"
			;;
	esac
}
