# SliTaz package receipt v2.

PACKAGE="geoip"
VERSION="1.4.8"
CATEGORY="network"
SHORT_DESC="Non-DNS IP-to-country resolver C library & utils"
MAINTAINER="devel@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="https://dev.maxmind.com/geoip/legacy/downloadable/"

TARBALL="GeoIP-$VERSION.tar.gz"
WGET_URL="http://www.maxmind.com/download/geoip/api/c/$TARBALL"

BUILD_DEPENDS="zlib-dev automake autoconf libtool"
SPLIT="$PACKAGE-dev"

compile_rules() {
	autoreconf -i
	./configure \
		--sysconfdir=/etc/geoip \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	case $PACKAGE in
		geoip)
			copy @std
			DEPENDS="zlib"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
