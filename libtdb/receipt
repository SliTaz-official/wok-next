# SliTaz package receipt v2.

PACKAGE="libtdb"
VERSION="1.3.15"
CATEGORY="misc"
SHORT_DESC="A trivial database"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="LGPL3"
WEB_SITE="https://tdb.samba.org/"

TARBALL="tdb-$VERSION.tar.gz"
WGET_URL="https://www.samba.org/ftp/tdb/$TARBALL"

BUILD_DEPENDS="python-dev libxslt-dev docbook-xsl"
SPLIT="libtdb-python libtdb libtdb-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--prefix=/usr \
		--localstatedir=/var \
		--sysconfdir=/etc/samba \
		$CONFIGURE_ARGS &&
	make && make install || return 1

	cook_pick_docs docs/README web/index.html
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		libtdb-python)
			copy python*/
			DEPENDS="libtdb python"
			;;
		libtdb)
			copy @std @rm
			DEPENDS="attr"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
