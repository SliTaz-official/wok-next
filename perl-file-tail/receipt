# SliTaz package receipt.

PACKAGE="perl-file-tail"
VERSION="1.3"
CATEGORY="perl"
SHORT_DESC="File::Tail - Perl extension for reading from continously updated \
files"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/File-Tail"

TARBALL="File-Tail-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/M/MG/MGRABNAR/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
