# SliTaz package receipt.

PACKAGE="perl-config-inifiles"
VERSION="2.98"
CATEGORY="perl"
SHORT_DESC="Config::IniFiles - A module for reading .ini-style configuration \
files"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Config-IniFiles"

TARBALL="Config-IniFiles-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/S/SH/SHLOMIF/$TARBALL"

DEPENDS="perl-io-stringy"
BUILD_DEPENDS="$DEPENDS perl-module-build"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
