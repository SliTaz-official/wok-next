PACKAGE="perl-config-inifiles"
VERSION="3.000000"
CATEGORY="perl"
SHORT_DESC="Config::IniFiles - A module for reading .ini-style configuration \
files"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Config-IniFiles"
HOST_ARCH="any"
REPOLOGY="perl:config-inifiles"

TARBALL="Config-IniFiles-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/S/SH/SHLOMIF/$TARBALL"

BUILD_DEPENDS="perl-io-stringy perl-module-build"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-io-stringy"
}
