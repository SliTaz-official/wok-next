# SliTaz package receipt v2.

PACKAGE="libftdi"
VERSION="0.18"
CATEGORY="system-tools"
SHORT_DESC="A library to talk to FTDI chips using libusb"
MAINTAINER="rcx@zoominternet.net"
LICENSE="BSD GPL2 LGPL2"
WEB_SITE="http://www.intra2net.com/en/developer/libftdi/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://www.intra2net.com/en/developer/libftdi/download/$TARBALL"

BUILD_DEPENDS="slitaz-toolchain libusb-dev libusb libusb-compat-dev udev-dev"
SPLIT="libftdi-dev"

compile_rules() {
	./configure \
		--prefix=/usr \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		libftdi)
			mkdir -p $fs/usr/lib
			cp -a $install/usr/lib/*.so* $fs/usr/lib
			cp -a $install/usr/bin $fs/usr
			DEPENDS="glibc-base libusb libusb-compat gcc-lib-base"
			;;
		*-dev)
			mkdir -p $fs/usr/lib
			cp -a $install/usr/lib/*.*a $fs/usr/lib
			cp -a $install/usr/lib/pkgconfig $fs/usr/lib
			cp -a $install/usr/include $fs/usr
			;;
	esac
}
