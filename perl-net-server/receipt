# SliTaz package receipt.

PACKAGE="perl-net-server"
VERSION="2.009"
CATEGORY="perl"
SHORT_DESC="Net::Server - Extensible, general Perl server engine"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Net-Server"
REPOLOGY="perl:net-server"

TARBALL="Net-Server-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/R/RH/RHANDOM/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
