# SliTaz package receipt v2.

PACKAGE="perl-test2-suite"
VERSION="0.000115"
CATEGORY="perl"
SHORT_DESC="Distribution with a rich set of tools built upon the Test2 \
framework"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Test2-Suite"
REPOLOGY="perl:test2-suite"

TARBALL="Test2-Suite-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/E/EX/EXODIST/$TARBALL"

BUILD_DEPENDS="perl-importer perl-sub-info perl-term-table perl-test-simple"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-importer perl-sub-info perl-term-table perl-test-simple"
}
