# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-neomagic"
VERSION="1.2.9"
CATEGORY="x-window"
SHORT_DESC="Xorg driver for the Neomagic graphics chipsets found in many \
laptop computers"
MAINTAINER="domcox@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/neomagic/"
REPOLOGY="xdrv:neomagic"

TARBALL="xf86-video-neomagic-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev xorg-xorgproto"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-server"
	TAGS="xorg display"
}
