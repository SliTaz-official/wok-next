# SliTaz package receipt v2.

PACKAGE="newsbeuter"
VERSION="2.9"
CATEGORY="network"
SHORT_DESC="RSS/Atom feed reader for text terminals"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://newsbeuter.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="${WEB_SITE}downloads/$TARBALL"

BUILD_DEPENDS="gettext libxml2-dev libjson-c-dev curl-dev sqlite3-dev stfl-dev \
ncurses-dev gcc49"

compile_rules() {
	sed -i 's|/usr/local|/usr|;s|^include config.mk|-&|' Makefile
	export LD_LIBRARY_PATH="/usr/libgcc49:$LD_LIBRARY_PATH"

	make CC=gcc-49 CXX=g++-49 &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="gcc49-lib-base libxml2 libjson-c curl sqlite3 stfl"
}
