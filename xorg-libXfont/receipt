# SliTaz package receipt v2.

PACKAGE="xorg-libXfont"
VERSION="1.5.4"
CATEGORY="x-window"
SHORT_DESC="X font handling library for server & utilities"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="libxfont"

TARBALL="libXfont-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="bzip2-dev freetype-dev zlib-dev xorg-xtrans xorg-xorgproto \
xorg-libfontenc-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXfont)
			copy @std
			DEPENDS="freetype xorg-libfontenc zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXfont freetype-dev xorg-xorgproto \
			xorg-libfontenc-dev zlib-dev"
			;;
	esac
}
