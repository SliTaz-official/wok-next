# SliTaz package receipt v2.

PACKAGE="xorg-libXfont"
VERSION="1.5.1"
CATEGORY="x-window"
SHORT_DESC="X font handling library for server & utilities"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="libxfont"

TARBALL="libXfont-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="bzip2-dev freetype-dev zlib-dev xorg-xtrans xorg-fontsproto \
xorg-libfontenc-dev"
SPLIT="xorg-libXfont-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXfont)
			copy @std
			DEPENDS="freetype xorg-libfontenc zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXfont freetype-dev xorg-fontsproto \
			xorg-libfontenc-dev xorg-xproto zlib-dev"
			;;
	esac
}
