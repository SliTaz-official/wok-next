# SliTaz package receipt.

PACKAGE="terminator"
VERSION="0.96"
CATEGORY="x-window"
SHORT_DESC="Tool for arranging terminals"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://launchpad.net/terminator/"

TARBALL="${PACKAGE}_$VERSION.tar.gz"
WGET_URL="https://launchpad.net/terminator/trunk/$VERSION/+download/$TARBALL"

BUILD_DEPENDS="python-dev gettext-dev intltool"

compile_rules() {
	python -B setup.py install --root=$install
}

genpkg_rules() {
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib $fs/usr
	DEPENDS="python python-pygtk notify-python"
}
