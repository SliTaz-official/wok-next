# SliTaz package receipt v2.

PACKAGE="zsnes"
VERSION="1.51"
CATEGORY="games"
SHORT_DESC="Super Nintendo emulator"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL2"
WEB_SITE="http://www.zsnes.com/"

TARBALL="$PACKAGE${VERSION//./}src.tar.bz2"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="nasm libsdl-dev libpng16-dev ncurses-dev mesa-dev \
automake autoconf zlib-dev patch"

compile_rules() {
	sed -i -e '/info_ptr->color_type = /d' \
	  -e 's/info_ptr->color_type/png_get_color_type(png_ptr, info_ptr)/' \
		src/zip/zpng.c
	sed -i 's/cstdio.*/&\n#include <unistd.h>/' src/tools/depbuild.cpp
	patch -p1 -i $stuff/zsnes.patch

	cd $src/src

	sed -i 's|/usr/man/|/usr/share/man/|' Makefile*
	./configure \
		--prefix=/usr \
		--x-libraries=/usr/lib \
		--enable-release \
		force_arch=$ARCH \
		$CONFIGURE_ARGS &&
	make &&
	make -j 1 install
}

genpkg_rules() {
	copy @std
#	mkdir -p $fs/usr/bin
#	cp -a $src/src/zsnes $fs/usr/bin
	DEPENDS="gcc-lib-base libsdl libpng16 ncurses mesa zlib"
	TAGS="emulator nintendo snes"
}
