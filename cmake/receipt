# SliTaz package receipt.

PACKAGE="cmake"
VERSION="3.6.1"
CATEGORY="development"
SHORT_DESC="Cross-platform build system generator"
MAINTAINER="pankso@slitaz.org"
LICENSE="BSD"
WEB_SITE="https://cmake.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://www.cmake.org/files/v${VERSION%.*}/$TARBALL"

DEPENDS="expat libarchive libcurl ncurses-libform zlib"
BUILD_DEPENDS="zlib-dev curl-dev bzip2-dev liblzma-dev libarchive-dev \
expat-dev ncurses-dev gfortran"

# Rules to configure and make the package.
compile_rules()
{
	./bootstrap \
		--prefix=/usr \
		--system-libs \
		--mandir=/share/man \
		--no-system-jsoncpp \
		--docdir=/share/doc/$PACKAGE-$VERSION &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_folders bin aclocal cmake-${VERSION%.*}
}
