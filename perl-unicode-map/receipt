# SliTaz package receipt.

PACKAGE="perl-unicode-map"
VERSION="0.112"
CATEGORY="perl"
SHORT_DESC="Unicode::Map - An utility to map texts from and to unicode"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Unicode-Map"
REPOLOGY="perl:unicode-map"

TARBALL="Unicode-Map-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/M/MS/MSCHWARTZ/$TARBALL"

BUILD_DEPENDS="perl-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
