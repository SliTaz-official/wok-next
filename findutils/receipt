# SliTaz package receipt v2.

PACKAGE="findutils"
VERSION="4.6.0"
CATEGORY="utilities"
SHORT_DESC="GNU utilities and tools to find/locate"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://www.gnu.org/software/findutils/"
LFS="http://www.linuxfromscratch.org/lfs/view/stable/chapter06/findutils.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$GNU_MIRROR/$PACKAGE/$TARBALL"

compile_rules() {
	./configure \
		--localstatedir=/var/lib/locate \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="glibc-base slitaz-base-files"
	TAGS="LFS"
}
