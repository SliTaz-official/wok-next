# SliTaz package receipt v2.

PACKAGE="slim-theme-clean"
VERSION="20150602"
CATEGORY="customization"
SHORT_DESC="Clean - theme for SLiM"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="PublicDomain"
WEB_SITE="http://desktopstylish.tumblr.com/post/120566561330/clean-slim-theme-download"		# missing

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://drive.google.com/uc?export=download&id=0B4Re2DvqOMqlczlac2tXa01wbTQ"

COOKOPTS="!pngquant"

compile_rules() {
	theme="$install/usr/share/slim/themes/Clean"
	mkdir -p $theme
	cp -r $src/* $theme
}

genpkg_rules() {
	copy @std
	DEPENDS="slim"
	TAGS="hackdorte slim"
}

post_install() {
	chroot "$1/" slim-theme -s Clean
}

pre_remove() {
	chroot "$1/" slim-theme -f Clean
}
