# SliTaz package receipt v2.

PACKAGE="perl-berkeleydb"
VERSION="0.55"
CATEGORY="perl"
SHORT_DESC="BerkeleyDB - Perl extension for Berkeley DB version 2, 3, 4 or 5"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/BerkeleyDB"
REPOLOGY="perl:berkeleydb"

TARBALL="BerkeleyDB-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/P/PM/PMQS/$TARBALL"

BUILD_DEPENDS="perl-dev db-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl db"
}
