# SliTaz package receipt v2.

PACKAGE="lftp"
VERSION="4.8.4"
CATEGORY="network"
SHORT_DESC="Small but powerful FTP client"
MAINTAINER="mimas@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://lftp.yar.ru/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="${WEB_SITE}ftp/$TARBALL"

BUILD_DEPENDS="gmp-dev ncurses-dev readline-dev expat-dev gperf gnutls-dev \
gettext"

compile_rules() {
	./configure \
		--disable-static \
		--with-gnutls \
		--without-openssl \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="expat libgnutls libidn2 ncurses readline zlib"
}
