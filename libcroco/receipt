# SliTaz package receipt v2.

PACKAGE="libcroco"
VERSION="0.6.12"
CATEGORY="system-tools"
SHORT_DESC="Cascading Style Sheet (CSS2) parsing and manipulation toolkit"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="https://developer.gnome.org/libcroco/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/libcroco.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="libxml2-dev glib-dev zlib-dev gtk-doc"
SPLIT="libcroco-dev"

compile_rules() {
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libcroco)
			copy @std
			DEPENDS="glib libxml2"
			;;
		*-dev)
			copy @dev
			DEPENDS="libcroco glib-dev libxml2-dev"
			;;
	esac
}
