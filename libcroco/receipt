# SliTaz package receipt.

PACKAGE="libcroco"
VERSION="0.6.11"
CATEGORY="system-tools"
SHORT_DESC="Cascading Style Sheet (CSS) parsing and manipulation toolkit."
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="https://developer.gnome.org/libcroco/"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION:0:3}/$TARBALL"

DEPENDS="glib liblzma libxml2 pcre zlib"
BUILD_DEPENDS="libxml2-dev glib-dev zlib-dev gtk-doc"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_files csslint-${VERSION%.*} *.so*
}
