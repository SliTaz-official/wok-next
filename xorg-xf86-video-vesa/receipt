# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-vesa"
VERSION="2.3.4"
CATEGORY="x-window"
SHORT_DESC="Xorg driver for generic VESA video cards"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/vesa/"

TARBALL="xf86-video-vesa-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	# We can use xorg-server-light with evdev and vesa driver.
	#DEPENDS="xorg-server"
	TAGS="xorg display"
}
