# SliTaz package receipt v2.

PACKAGE="xorg-xcb-util-renderutil"
VERSION="0.3.9"
CATEGORY="x-window"
SHORT_DESC="Additional extension to the XCB library"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://xcb.freedesktop.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/xcb-util-renderutil.html"

TARBALL="xcb-util-renderutil-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/xcb/$TARBALL"

BUILD_DEPENDS="xorg-libxcb-dev xorg-util-macros"
SPLIT="xorg-xcb-util-renderutil-dev"

compile_rules() {
	fix ld
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-renderutil)
			copy @std
			DEPENDS="xorg-libxcb"
			PROVIDE="xcb-util-renderutil"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xcb-util-renderutil xorg-libxcb-dev"
			PROVIDE="xcb-util-renderutil-dev"
			;;
	esac
}
