# SliTaz package receipt v2.

PACKAGE="xorg-xcb-util-renderutil"
VERSION="0.3.9"
CATEGORY="x-window"
SHORT_DESC="Additional extension to the XCB library"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://xcb.freedesktop.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/xcb-util-renderutil.html"
REPOLOGY="xcb-util-renderutil"

TARBALL="xcb-util-renderutil-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/xcb/$TARBALL"

BUILD_DEPENDS="xorg-libxcb-dev xorg-util-macros"
SPLIT="xorg-xcb-util-renderutil-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-renderutil)
			copy @std
			DEPENDS="xorg-libxcb"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xcb-util-renderutil xorg-libxcb-dev"
			;;
	esac
}
