# SliTaz package receipt.

PACKAGE="perl-log-agent"
VERSION="1.003"
CATEGORY="perl"
SHORT_DESC="Log::Agent - logging agent"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Log-Agent"
REPOLOGY="perl:log-agent"

TARBALL="Log-Agent-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/M/MR/MROGASKI/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
