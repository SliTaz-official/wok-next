PACKAGE="perl-log-agent"
VERSION="1.003"
CATEGORY="perl"
SHORT_DESC="Log::Agent - logging agent"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Log-Agent"
REPOLOGY="perl:log-agent"

TARBALL="Log-Agent-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/M/MR/MROGASKI/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
