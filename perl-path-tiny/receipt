# SliTaz package receipt v2.

PACKAGE="perl-path-tiny"
VERSION="0.108"
CATEGORY="perl"
SHORT_DESC="Path::Tiny - File path utility"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Path-Tiny"
REPOLOGY="perl:path-tiny"

TARBALL="Path-Tiny-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DA/DAGOLDEN/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
