# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-geode"
VERSION="2.11.19"
CATEGORY="x-window"
SHORT_DESC="Xorg video driver for AMD Geode GX and LX video cards"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/GeodeDriver/"

TARBALL="xf86-video-geode-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev"
SPLIT="xorg-xf86-video-geode-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-geode)
			copy @std
			DEPENDS="xorg-server"
			TAGS="xorg display"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xf86-video-geode xorg-server-dev"
			;;
	esac
}
