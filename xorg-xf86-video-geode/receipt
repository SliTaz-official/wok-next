# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-geode"
VERSION="2.11.19"
CATEGORY="x-window"
SHORT_DESC="Xorg video driver for AMD Geode GX and LX video cards"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/GeodeDriver/"
REPOLOGY="xdrv:geode"
HOST_ARCH="i486"

TARBALL="xf86-video-geode-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-server"
	TAGS="xorg display"
}
