# SliTaz package receipt v2.

PACKAGE="edbus"
VERSION="1.7.10"
CATEGORY="x-window"
SHORT_DESC="EFL Dbus wrapping and glue layer library"
MAINTAINER="pankso@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://www.enlightenment.org/"
HOST_ARCH="i486 arm"

TARBALL="e_dbus-$VERSION.tar.bz2"
WGET_URL="http://download.enlightenment.org/releases/$TARBALL"

BUILD_DEPENDS="ecore-dev dbus-dev"
SPLIT="edbus-dev"

compile_rules() {
	export CFLAGS="$CFLAGS -fvisibility=hidden"
	export LDFLAGS="$LDFLAGS -fvisibility=hidden"

	./configure \
		--disable-doc \
		$CONFIGURE_ARGS &&
	make $MAKEFILE && make install
}

genpkg_rules() {
	case $PACKAGE in
		edbus)
			copy @std
			DEPENDS="ecore dbus"
			TAGS="e enlightenment efl"
			;;
		edbus-dev)
			copy @dev
			DEPENDS="ecore-dev dbus-dev pkg-config"
			;;
	esac
}
