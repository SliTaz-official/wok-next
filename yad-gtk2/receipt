# SliTaz package receipt v2.

PACKAGE="yad-gtk2"
VERSION="0.39.0"
CATEGORY="utilities"
SHORT_DESC="Yet Another Dialog (GTK+2)"
MAINTAINER="devl547@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://sourceforge.net/projects/yad-dialog/"
HOST_ARCH="i486 arm"

TARBALL="yad-$VERSION.tar.xz"
WGET_URL="$SF_MIRROR/yad-dialog/$TARBALL"

BUILD_DEPENDS="gtk+-dev intltool"
SIBLINGS="yad-gtk3 yad-gtk2-html"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--enable-icon-browser \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy yad yad-icon-browser
	cook_copy_icons
	DEPENDS="atk cairo fontconfig freetype gdk-pixbuf glib glibc-base gtk+ \
	libffi pango pcre zlib"
	TAGS="gtk2"
	PROVIDE="yad"
}
