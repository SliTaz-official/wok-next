# SliTaz package receipt.

PACKAGE="libcomerr-dev"
VERSION="1.43.1"
CATEGORY="development"
SHORT_DESC="The libcomerr devel files."
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://e2fsprogs.sourceforge.net/"
HOST_ARCH="i486 arm"

WANTED="e2fsprogs"
DEPENDS="pkg-config"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_folders et
	cook_copy_files libcom_err.h libcom_err.a libcom_err.pc
	ln $fs/usr/include/et/com_err.h $fs/usr/include/com_err.h
}
