# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-fbturbo"
VERSION="0.4.0.postgit20151006"
COMMIT="f9a6ed7"
CATEGORY="x-window"
SHORT_DESC="Xorg DDX driver for ARM devices (Allwinner, RPi and others)"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://github.com/ssvb/xf86-video-fbturbo"
REPOLOGY="xdrv:fbturbo"

TARBALL="xf86-video-fbturbo-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/archive/${COMMIT:-VERSION}.tar.gz"

BUILD_DEPENDS="xorg-util-macros xorg-server-dev automake autoconf libtool"

compile_rules() {
	autoreconf -vi
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-server"
}
