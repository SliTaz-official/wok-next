# SliTaz package receipt v2.

PACKAGE="rsh"
VERSION="85"
CATEGORY="network"
SHORT_DESC="Reimplementation of rsh and rlogin"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://packages.debian.org/source/sid/rsh-redone"

TARBALL="rsh-redone_$VERSION.orig.tar.gz"
WGET_URL="http://ftp.de.debian.org/debian/pool/main/r/rsh-redone/$TARBALL"

BUILD_DEPENDS="pam-dev"
SPLIT="rshd"

compile_rules() {
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		rsh)
			mkdir -p $fs/usr
			cp -a $install/usr/bin $fs/usr
			;;
		rshd)
			mkdir -p $fs/usr
			cp -a $install/usr/sbin $fs/usr
			cp -a $install/usr/etc $fs
			CAT="network|rshd and rlogind"
			DEPENDS="pam"
			;;
	esac
}
