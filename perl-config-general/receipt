# SliTaz package receipt.

PACKAGE="perl-config-general"
VERSION="2.63"
CATEGORY="perl"
SHORT_DESC="Config::General - Generic Config Module"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Config-General"
REPOLOGY="perl:config-general"

TARBALL="Config-General-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/T/TL/TLINDEN/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
