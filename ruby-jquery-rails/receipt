# SliTaz package receipt v2.

PACKAGE="ruby-jquery-rails"
VERSION="4.3.3"
CATEGORY="ruby"
SHORT_DESC="Use jQuery with Rails 4+"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://rubygems.org/gems/${PACKAGE#*-}"
HOST_ARCH="any"
REPOLOGY="${PACKAGE/-/:}"

TARBALL="${PACKAGE#*-}-$VERSION.gem"
WGET_URL="https://rubygems.org/downloads/$TARBALL"

BUILD_DEPENDS="ruby-dev"

compile_rules() {
	gem install \
		--no-document \
		--ignore-dependencies \
		--no-user-install \
		--build-root $install \
		$src/$TARBALL &&
	fix gem
}

genpkg_rules() {
	copy @ruby vendor/
	DEPENDS="ruby ruby-rails-dom-testing ruby-railties ruby-thor"
}
