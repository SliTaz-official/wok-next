# SliTaz package receipt v2.

PACKAGE="libzim"
VERSION="1.0"
CATEGORY="office"
SHORT_DESC="Read and write method for ZIM files used by Wikipedia"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.openzim.org/wiki/Zimlib"

TARBALL="zimlib-$VERSION.tar.gz"
WGET_URL="http://www.openzim.org/archive/$TARBALL"

BUILD_DEPENDS="xz-dev autoconf automake libtool"
SPLIT="libzim-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		libzim)
			copy @std
			DEPENDS="liblzma"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
