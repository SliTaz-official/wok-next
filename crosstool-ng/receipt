# SliTaz package receipt.

PACKAGE="crosstool-ng"
VERSION="1.20.0"
CATEGORY="development"
SHORT_DESC="Tool to Build toolchains"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://ymorin.is-a-geek.org/projects/crosstool"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/$PACKAGE/$PACKAGE/archive/$TARBALL"

BUILD_DEPENDS="subversion flex cvs gawk texinfo ncurses-dev automake libtool \
gperf"

compile_rules() {
	./bootstrap
	./configure \
		--prefix=/usr \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	cp -a $install/usr $fs
	DEPENDS="slitaz-toolchain"
}
