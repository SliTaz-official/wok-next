# SliTaz package receipt.

PACKAGE="perl-net-ftp-retrhandle"
VERSION="0.2"
CATEGORY="perl"
SHORT_DESC="Net::FTP::RetrHandle - Tied or IO::Handle-compatible interface to \
a file retrieved by FTP"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Net-FTP-RetrHandle"
REPOLOGY="perl:net-ftp-retrhandle"

TARBALL="Net-FTP-RetrHandle-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/G/GI/GIFF/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
