# SliTaz package receipt.

PACKAGE="perl-module-runtime"
VERSION="0.016"
CATEGORY="perl"
SHORT_DESC="Module::Runtime - runtime module handling"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Module-Runtime"
REPOLOGY="perl:module-runtime"

TARBALL="Module-Runtime-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/Z/ZE/ZEFRAM/$TARBALL"

BUILD_DEPENDS="perl-module-build"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
