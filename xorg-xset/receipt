# SliTaz package receipt v2.

PACKAGE="xorg-xset"
VERSION="1.2.3"
CATEGORY="x-window"
SHORT_DESC="User preference utility for X"
MAINTAINER="paul@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xset-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-xproto xorg-libXmu-dev \
xorg-libXxf86misc-dev xorg-libXfontcache-dev"
PKG_RULE="std"

# Rules to configure and make the package.
compile_rules()
{
	touch /root/missing /missing

	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install

	cp -a $stuff/*.sh $install/usr/bin/
	chown -R root:root $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
	DEPENDS="xorg-libX11 xorg-libXext xorg-libXfontcache xorg-libXmu \
	xorg-libXxf86misc"
	SUGGESTED="yad"
}
