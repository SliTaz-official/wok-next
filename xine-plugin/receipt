# SliTaz package receipt v2.

PACKAGE="xine-plugin"
VERSION="1.0.2"
CATEGORY="multimedia"
SHORT_DESC="Xine media player Firefox plugin"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.xinehq.de/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/xine/$TARBALL"

BUILD_DEPENDS="xine-lib xine-lib-dev xorg-dev gfortran"

compile_rules() {
	mkdir -p $DESTDIR/root/.mozilla/plugins

	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install || return 1

	mkdir -p $install/usr/share/xine
	mv $install/root/.mozilla/plugins/* $install/usr/share/xine/
	rm -r $install/root/.mozilla/plugins/
}

genpkg_rules() {
	copy *.so
	DEPENDS="xine-lib firefox"
}

post_install() {
	ln -s /usr/share/xine/xineplugin.so "$1"/usr/lib/firefox-*/plugins/
	ln -s /usr/share/xine/xineplugin.so "$1/usr/lib/mozilla/plugins/"
}
