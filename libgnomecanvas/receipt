# SliTaz package receipt v2.

PACKAGE="libgnomecanvas"
VERSION="2.30.3"
CATEGORY="x-window"
SHORT_DESC="GNOME canvas library"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.gnome.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="gtk2-dev libglade-dev libart_lgpl-dev xorg-libXcursor-dev \
intltool"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure \
		--with-html-dir=/usr/share/doc \
		--enable-glade \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libgnomecanvas)
			copy @std
			DEPENDS="atk gdk-pixbuf glib gtk2 libart_lgpl libglade pango"
			;;
		*-dev)
			copy @dev
			DEPENDS="libgnomecanvas gtk2-dev libart_lgpl-dev pango-dev"
			;;
	esac
}
