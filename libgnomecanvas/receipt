# SliTaz package receipt v2.

PACKAGE="libgnomecanvas"
VERSION="2.30.3"
CATEGORY="x-window"
SHORT_DESC="GNOME canvas library"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.gnome.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="gtk+-dev libglade-dev libart_lgpl-dev xorg-libXcursor-dev \
intltool"
SPLIT="libgnomecanvas-dev"

compile_rules() {
	./configure \
		--with-html-dir=/usr/share/doc \
		--enable-glade \
		$CONFIGURE_ARGS &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		libgnomecanvas)
			copy @std
			DEPENDS="atk bzlib cairo fontconfig freetype gdk-pixbuf glib gtk+ \
			libart_lgpl libffi libglade libharfbuzz liblzma libpng16 libxml2 \
			pango pcre util-linux-blkid util-linux-mount util-linux-uuid \
			xorg-libX11 xorg-libXau xorg-libXdmcp xorg-libXext \
			xorg-libXinerama xorg-libXrender xorg-libxcb xorg-pixman zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="libgnomecanvas atk-dev bzip2-dev cairo-dev fontconfig-dev \
			freetype-dev gdk-pixbuf-dev glib-dev gtk+-dev harfbuzz-dev \
			libart_lgpl-dev libffi-dev libglade-dev libpng16-dev libxml2-dev \
			pango-dev pcre-dev util-linux-blkid-dev util-linux-mount-dev \
			util-linux-uuid-dev xorg-libX11-dev xorg-libXau-dev \
			xorg-libXdmcp-dev xorg-libXext-dev xorg-libXinerama-dev \
			xorg-libXrender-dev xorg-libxcb-dev xorg-pixman-dev xz-dev zlib-dev"
			;;
	esac
}
