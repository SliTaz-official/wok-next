# SliTaz package receipt v2.

PACKAGE="compicc"
VERSION="0.8.10"
CATEGORY="x-window"
SHORT_DESC="Compiz ICC colour server"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="BSD"
WEB_SITE="https://gitlab.com/compiz/compicc"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://gitlab.com/compiz/compicc/-/archive/$VERSION/$TARBALL"

BUILD_DEPENDS="oyranos-dev libxcm-dev xorg-libX11-dev compiz-dev mesa-dev"
COOKOPTS="skip-log-errors"

DEPENDS_std="oyranos xorg-libX11 xorg-libXfixes xorg-libXrandr   compiz"

TAGS="compiz"

compile_rules() {
	# --libdir=/usr/lib : don't want to be /usr/lib64
	./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std; DEPENDS="$DEPENDS_std"
}
