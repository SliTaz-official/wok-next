# SliTaz package receipt v2.

PACKAGE="viewnior"
VERSION="1.6"
CATEGORY="graphics"
SHORT_DESC="Fast and elegant image viewer"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://siyanpanayotov.com/project/viewnior"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/xsisqox/Viewnior/archive/$TARBALL"

BUILD_DEPENDS="automake libtool gtk2-dev exiv2-dev intltool \
shared-mime-info-dev curl-dev libssh-dev"

compile_rules() {
	mkdir -p $src/m4

	autoreconf -fi
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make $MAKEFLAGS install
}

genpkg_rules() {
	copy viewnior *.ui @ico
	DEPENDS="exiv2 gdk-pixbuf glib gtk2"
	TAGS="image photo viewer"
}
