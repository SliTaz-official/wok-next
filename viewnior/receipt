# SliTaz package receipt v2.

PACKAGE="viewnior"
VERSION="1.6"
CATEGORY="graphics"
SHORT_DESC="Fast and elegant image viewer"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://siyanpanayotov.com/project/viewnior/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/xsisqox/Viewnior/archive/$TARBALL"

BUILD_DEPENDS_arm="automake libtool gtk+-dev exiv2-dev intltool"
BUILD_DEPENDS="automake libtool gtk+-dev exiv2-dev intltool \
shared-mime-info-dev"

compile_rules() {
	mkdir -p $src/m4

	autoreconf -fi
	./configure $CONFIGURE_ARGS && make $MAKEFLAGS install
}

genpkg_rules() {
	copy viewnior *.ui
	cook_copy_icons
	DEPENDS="atk bzlib cairo exiv2 fontconfig freetype gcc-lib-base gdk-pixbuf \
	glib glibc-base gtk+ harfbuzz libffi libpng16 xorg-libxcb libxml2 pango \
	pcre xorg-pixman xorg-libX11 xorg-libXau xorg-libXdmcp xorg-libXext \
	xorg-libXrender zlib"
	TAGS="image photo viewer"
}
