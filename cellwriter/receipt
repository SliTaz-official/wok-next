# SliTaz package receipt v2.

PACKAGE="cellwriter"
VERSION="1.3.6"
CATEGORY="x-window"
SHORT_DESC="A grid-entry handwriting input panel"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://github.com/risujin/cellwriter/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/risujin/cellwriter/archive/$VERSION.tar.gz"

BUILD_DEPENDS="gtk2-dev xorg-libXtst-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="cairo gdk-pixbuf glib gtk2 pango xorg-libX11 xorg-libXtst"
}
