# SliTaz package receipt.

PACKAGE="perl-dbd-sqlite"
VERSION="1.58"
CATEGORY="perl"
SHORT_DESC="DBD::SQLite - Self-contained RDBMS in a DBI Driver"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/DBD-SQLite"
REPOLOGY="perl:dbd-sqlite"

TARBALL="DBD-SQLite-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/I/IS/ISHIGAKI/$TARBALL"

# FIXME: sqlite3-dev and libsqlite3 aren't detected as (b)deps
BUILD_DEPENDS="perl-dbi libsqlite3 perl-dev sqlite3-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std @dev
	DEPENDS="perl-dbi libsqlite3"
}
