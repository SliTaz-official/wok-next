# SliTaz package receipt v2.

PACKAGE="libnspsl"
COMMIT="9724f92b7d8e54c23ca4849647763002d9019437"
VERSION="0.1.0-170528"
CATEGORY="libs"
SHORT_DESC="NetSurf public suffix list handling"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="http://source.netsurf-browser.org/libnspsl.git/"

TARBALL="$PACKAGE-${COMMIT:-$VERSION}.tar.bz2"
BASE_URL="http://source.netsurf-browser.org/$PACKAGE.git/snapshot"
if [ -n "$COMMIT" ]; then
	WGET_URL="$BASE_URL/$PACKAGE-$COMMIT.tar.bz2"
else
	WGET_URL="$BASE_URL/release/$VERSION.tar.bz2"
fi

BUILD_DEPENDS="netsurf-buildsystem"
SPLIT="libnspsl-dev"

compile_rules() {
	[ -z "$COMMIT" ] && cd $VERSION

	make \
		PREFIX=/usr \
		LIBDIR=lib \
		INCLUDEDIR=include \
		COMPONENT_TYPE=lib-shared \
		install
}

genpkg_rules() {
	case $PACKAGE in
		libnspsl) copy @std;;
		*-dev)    copy @dev;;
	esac
}
