# SliTaz package receipt.

PACKAGE="xfce4-taskmanager"
VERSION="1.0.1"
CATEGORY="x-window"
SHORT_DESC="Simple taskmanager for Xfce"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://goodies.xfce.org/projects/applications/xfce4-taskmanager"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://archive.xfce.org/src/apps/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="libxfce4util-dev libxfcegui4-dev startup-notification-dev \
intltool gtk+-dev"
BUILD_DEPENDS="intltool gtk+-dev libwnck2-dev "

compile_rules(){
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-debug \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="libxfce4util libxfcegui4 startup-notification"
	TAGS="Xfce"
}
