# SliTaz package receipt v2.

PACKAGE="ettercap"
VERSION="NG-0.7.3"
CATEGORY="network"
SHORT_DESC="Suite for 'man in the middle' attacks on LAN"
MAINTAINER="claudinei@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://ettercap.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="libpthread-stubs libpcap libpcap-dev libnet-dev libtool file \
zlib-dev"

compile_rules() {
	sed -i 's/ettercap_LDFLAGS = -export-dynamic @EC_LIBS@/ettercap_LDADD += @EC_LIBS@\nettercap_LDFLAGS = -export-dynamic/' src/Makefile.*

	./configure \
		--enable-plugins \
		--disable-gtk \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	copy @std
	DEPENDS="libpthread-stubs libpcap libnet libltdl zlib"
}
