# SliTaz package receipt v2.

PACKAGE="perl-http-date"
VERSION="6.02"
CATEGORY="perl"
SHORT_DESC="HTTP::Date - date conversion routines"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/HTTP-Date"
REPOLOGY="perl:http-date"

TARBALL="HTTP-Date-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/G/GA/GAAS/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
