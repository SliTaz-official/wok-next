# SliTaz package receipt v2.

PACKAGE="scilab"
VERSION="5.5.2"
CATEGORY="office"
SHORT_DESC="Open source software for numerical computation"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="CECILL"
WEB_SITE="http://www.scilab.org/"

TARBALL="$PACKAGE-$VERSION-src.tar.gz"
WGET_URL="${WEB_SITE}download/$VERSION/$TARBALL"

BUILD_DEPENDS="gfortran hdf5-dev ocaml fftw-dev libxml2-dev \
gettext-dev blas lapack curl-dev tcl-dev tk-dev xorg-dev ncurses-dev \
arpack-ng-dev matio-dev"

compile_rules() {
	fix math
	./configure \
		--without-javasci \
		--without-gui \
		--disable-build-help \
		--without-umfpack \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make all &&
	make DESTDIR=$install install
}

genpkg_rules() {
	copy @std
	DEPENDS="libgfortran tk curl blas lapack hdf5 pcre fftw libxml2 \
	gcc-lib-math arpack-ng matio"
}
