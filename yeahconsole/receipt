# SliTaz package receipt v2.

PACKAGE="yeahconsole"
VERSION="0.3.4"
CATEGORY="utilities"
SHORT_DESC="Quake-like drop down terminal"
MAINTAINER="paul@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://phrat.de/yeahtools.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://phrat.de/$TARBALL"

BUILD_DEPENDS="xorg-libX11-dev xorg-xproto"

compile_rules() {
	make &&
	install -Dm755 $src/yeahconsole $install/usr/bin/yeahconsole
}

genpkg_rules() {
	copy @std
	DEPENDS="xterm"
	TAGS="terminal"
}
