# SliTaz package receipt v2.

PACKAGE="libvdpau"
VERSION="1.1.1"
CATEGORY="x-window"
SHORT_DESC="VDPAU (Video Decode and Presentation API for Unix) library"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.freedesktop.org/wiki/Software/VDPAU/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://people.freedesktop.org/~aplattner/vdpau/$TARBALL"

BUILD_DEPENDS="xorg-libX11-dev xorg-xorgproto xorg-libXext-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libvdpau)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXau xorg-libXdmcp xorg-libXext \
			xorg-libxcb"
			;;
		*-dev)
			copy @dev
			DEPENDS="libvdpau xorg-libX11-dev xorg-libXau-dev \
			xorg-libXdmcp-dev xorg-libXext-dev xorg-libxcb-dev"
			;;
	esac
}

