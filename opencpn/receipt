# SliTaz package receipt v2.

PACKAGE="opencpn"
VERSION="1.3.2"
CATEGORY="utilities"
SHORT_DESC="A concise Chart/plotter Navigator"
MAINTAINER="allan316@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://sourceforge.net/projects/opencpn/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="wxWidgets28-dev mesa-dev glu-dev"

compile_rules() {
	# Binutils 2.22 break many packages build without LDFLAGS set correctly.
	export LDFLAGS="$LDFLAGS -Wl,--copy-dt-needed-entries"

	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	copy @std
	DEPENDS="wxWidgets28 mesa glu"
	SUGGESTED="nvidia"
	TAGS="office"
}
