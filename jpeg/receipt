# SliTaz package receipt v2.

PACKAGE="jpeg"
VERSION="9b"
CATEGORY="x-window"
SHORT_DESC="JPEG image programs"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://www.ijg.org/"

TARBALL="jpegsrc.v${VERSION}.tar.gz"
WGET_URL="http://www.ijg.org/files/$TARBALL"

SPLIT="libjpeg jpeg jpeg-dev"

compile_rules() {
	./configure \
		--enable-shared \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install || return 1

	install -Dm644 $src/jpegint.h $install/usr/include/jpegint.h
}

genpkg_rules() {
	case $PACKAGE in
		libjpeg)
			copy *.so*
			CAT="x-window|library"
			;;
		jpeg)
			copy @std @rm
			DEPENDS="libjpeg"
			;;
		*-dev)
			copy @dev
			;;
	esac
	TAGS="jpeg jpg"
}
