# SliTaz package receipt v2.

PACKAGE="mate-menus"
VERSION="1.18.0"
CATEGORY="x-window"
SHORT_DESC="Library for the Desktop Menu freedesktop.org specification"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://github.com/mate-desktop/mate-menus"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/mate-menus/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common gobject-introspection-dev python-dev"
SPLIT="mate-menus-python mate-menus mate-menus-dev"

compile_rules() {
	./autogen.sh \
		--sysconfdir=/etc \
		--localstatedir=/var \
		\
		--enable-python \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		mate-menus-python)
			copy python*/*.so *.py
			DEPENDS="mate-menus python"
			CAT="python|Python bindings"
			;;
		mate-menus)
			copy @std @rm
			DEPENDS="glib libffi pcre util-linux-blkid util-linux-mount \
			util-linux-uuid zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="${SPLIT/$PACKAGE/} glib-dev libffi-dev pcre-dev \
			python-dev util-linux-blkid-dev util-linux-mount-dev \
			util-linux-uuid-dev zlib-dev"
			;;
	esac
	TAGS="MATE"
}
