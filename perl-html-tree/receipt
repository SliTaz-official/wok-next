# SliTaz package receipt v2.

PACKAGE="perl-html-tree"
VERSION="5.07"
CATEGORY="perl"
SHORT_DESC="HTML::Tree - build and scan parse-trees of HTML"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/HTML-Tree"
REPOLOGY="perl:html-tree"

TARBALL="HTML-Tree-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/K/KE/KENTNL/$TARBALL"

BUILD_DEPENDS="perl-html-parser perl-html-tagset perl-module-build \
perl-test-fatal perl-html-formatter perl-libwww-perl"
# BDEP loop: 'perl-html-tree' needs 'perl-html-formatter' needs 'perl-html-tree'

compile_rules() {
	perl Build.PL &&
	./Build &&
	./Build install --destdir $install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-html-parser perl-html-tagset"
}
