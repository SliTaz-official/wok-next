# SliTaz package receipt.

PACKAGE="perl-mailtools"
VERSION="2.20"
CATEGORY="perl"
SHORT_DESC="Various e-mail related modules"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/MailTools"

TARBALL="MailTools-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/M/MA/MARKOV/$TARBALL"

DEPENDS="perl-timedate"
BUILD_DEPENDS="$DEPENDS"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
