# SliTaz package receipt v2.

PACKAGE="xorg-libXScrnSaver"
VERSION="1.2.2"
CATEGORY="x-window"
SHORT_DESC="MIT-SCREEN-SAVER extension"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7lib.html"

TARBALL="libXScrnSaver-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-libXext-dev xorg-scrnsaverproto"
SPLIT="xorg-libXScrnSaver-dev"

compile_rules() {
	fix ld
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXScrnSaver)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXext"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXScrnSaver \
			xorg-libX11-dev xorg-libXext-dev xorg-scrnsaverproto"
			;;
	esac
}
