# SliTaz package receipt v2.

PACKAGE="xorg-libXScrnSaver"
VERSION="1.2.2"
CATEGORY="x-window"
SHORT_DESC="MIT-SCREEN-SAVER extension"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="libXScrnSaver-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-libXext-dev xorg-scrnsaverproto"
SPLIT="xorg-libXScrnSaver-dev"
PKG_RULE="std-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		*-libXScrnSaver)
			copy @std
			DEPENDS="xorg-libxcb xorg-libX11 xorg-libXau xorg-libXdmcp \
			xorg-libXext"
			PROVIDE="xorg-libXss"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXScrnSaver xorg-libxcb-dev xorg-libX11-dev \
			xorg-libXau-dev xorg-libXdmcp-dev xorg-libXext-dev \
			xorg-scrnsaverproto"
			PROVIDE="xorg-libXss-dev"
			;;
	esac
}
