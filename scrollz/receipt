# SliTaz package receipt v2.

PACKAGE="scrollz"
VERSION="2.2.3"
CATEGORY="network"
SHORT_DESC="ScrollZ IRC client"
MAINTAINER="paul@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://www.scrollz.info/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="git|git://github.com/ScrollZ/ScrollZ"

BUILD_DEPENDS="git bzip2"

compile_rules() {
	./configure --prefix=/usr &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	copy @std
}
