PACKAGE="perl-try-tiny"
VERSION="0.30"
CATEGORY="perl"
SHORT_DESC='Try::Tiny - Minimal try/catch with proper preservation of \$@'
MAINTAINER="nneul@neulinger.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Try-Tiny"
REPOLOGY="perl:try-tiny"

TARBALL="Try-Tiny-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/E/ET/ETHER/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
