# SliTaz package receipt.

PACKAGE="perl-text-soundex"
VERSION="3.05"
CATEGORY="perl"
SHORT_DESC="Text::Soundex - Implementation of the soundex algorithm"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Text-Soundex"
REPOLOGY="perl:text-soundex"

TARBALL="Text-Soundex-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/R/RJ/RJBS/$TARBALL"

BUILD_DEPENDS="perl-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
