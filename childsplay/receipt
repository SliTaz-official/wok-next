# SliTaz package receipt v2.

PACKAGE="childsplay"
VERSION="3.3"
CATEGORY="games"
SHORT_DESC="Collection of educational activities for young children"
MAINTAINER="claudinei@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://www.schoolsplay.org/"

TARBALL="$PACKAGE-$VERSION.tgz"
WGET_URL="http://download.savannah.nongnu.org/releases/childsplay/$TARBALL"

compile_rules() {
	mkdir -p $install/usr/share/childsplay
	cp -r SPWidgets/ alphabet-sounds/ lib/ *.py *.db \
		$install/usr/share/childsplay
	cp -r locale $install/usr/share
	cook_pick_docs docs/*.html

	install -Dm755 $stuff/childsplay $install/usr/games/childsplay
}

genpkg_rules() {
	copy @std
	DEPENDS="python python-pygtk python-pygame python-pysqlite python-sqlalchemy \
	libogg"
}
