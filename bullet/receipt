# SliTaz package receipt v2.

PACKAGE="bullet"
VERSION="2.87"
CATEGORY="graphics"
SHORT_DESC="3D Real-Time Multiphysics Library"
MAINTAINER="domcox@slitaz.org"
LICENSE="zlib/libpng"
WEB_SITE="http://bulletphysics.org"
TARBALL="$PACKAGE-$VERSION.tgz"
WGET_URL="http://bullet.googlecode.com/files/$TARBALL"

BUILD_DEPENDS="cmake mesa-dev freeglut-dev glu-dev python-dev"
SPLIT="bullet bullet-dev"

# Rules to configure and make the package.
compile_rules()
{
	mkdir build
	cd build
	cmake .. \
		-DBUILD_CPU_DEMOS=OFF \
		-DBUILD_DEMOS=OFF \
		-DBUILD_SHARED_LIBS=ON \
		-DCMAKE_INSTALL_PREFIX=/usr &&
	make $MAKEFLAGS &&
	make install DESTDIR=$install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
	bullet)
		DEPENDS="mesa freeglut"
		mkdir -p $fs/usr/lib
		cp -a $install/usr/lib/*.so* $fs/usr/lib
		;;
	bullet-dev)
		CAT="development|3D Real-Time Multiphysics Library - devel"
		DEPENDS="bullet pkg-config"
		mkdir -p $fs/usr/lib
		cp -a $install/usr/include $fs/usr
		cp -a $install/usr/lib/pkgconfig $fs/usr/lib
		cp -a $install/usr/lib/cmake $fs/usr/lib
		;;
	esac
}
