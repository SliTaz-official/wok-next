# SliTaz package receipt v2.

PACKAGE="gtkdialog"
VERSION="0.8.3"
CATEGORY="x-window"
SHORT_DESC="Small utility for fast and easy GUI building using GTK+"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://github.com/oshazard/gtkdialog"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://storage.googleapis.com/google-code-archive-downloads/v2/code.google.com/gtkdialog/$TARBALL"

BUILD_DEPENDS="automake gtk+-dev libglade-dev vte-gtk2-dev texinfo"

compile_rules() {
	./autogen.sh \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install || return 1

	cook_pick_docs README TODO doc/reference
}

genpkg_rules() {
	copy @std icons/
	DEPENDS="gdk-pixbuf glib gtk+ libglade vte-gtk2"
}
