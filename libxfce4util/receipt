# SliTaz package receipt v2.

PACKAGE="libxfce4util"
VERSION="4.13.1"
CATEGORY="x-window"
SHORT_DESC="Xfce Utility library"
MAINTAINER="erjo@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="http://www.xfce.org"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://archive.xfce.org/src/xfce/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool gtk-doc gobject-introspection-dev"
SPLIT="libxfce4util-dev"

compile_rules() {
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-debug \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libxfce4util)
			copy @std
			DEPENDS="glib libffi pcre"
			;;
		*-dev)
			copy @dev
			DEPENDS="libxfce4util glib-dev libffi-dev pcre-dev"
			;;
	esac
	TAGS="Xfce"
}
