# SliTaz package receipt v2.

PACKAGE="libassuan"
VERSION="2.4.3"
CATEGORY="security"
SHORT_DESC="IPC library used by some of the other GnuPG related packages"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://www.gnupg.org/related_software/libassuan/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/libassuan.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://www.gnupg.org/ftp/gcrypt/libassuan/$TARBALL"
# https://www.gnupg.org/download/integrity_check.html
TARBALL_SHA1="27391cf4a820b5350ea789c30661830c9a271518"

BUILD_DEPENDS="libgpg-error-dev"
SPLIT="libassuan-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules() {
	case $PACKAGE in
		libassuan)
			copy @std
			DEPENDS="libgpg-error"
			;;
		*-dev)
			copy @dev
			DEPENDS="libassuan libgpg-error-dev"
			;;
	esac
}
