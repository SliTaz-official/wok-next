# SliTaz package receipt.

PACKAGE="python-tempita"
VERSION="0.5dev"
CATEGORY="development"
SHORT_DESC="Small text templating language"
MAINTAINER="taziden@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://pypi.org/project/Tempita/"
REPOLOGY="python:tempita"

SOURCE="Tempita"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="https://files.pythonhosted.org/packages/source/T/$SOURCE/$TARBALL"
TAGS="python"

DEPENDS="python"
BUILD_DEPENDS="python python-dev"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}
