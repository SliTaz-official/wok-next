PACKAGE="perl-eval-closure"
VERSION="0.14"
CATEGORY="perl"
SHORT_DESC="Eval::Closure - safely and cleanly create closures via string eval"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Eval-Closure"
REPOLOGY="perl:eval-closure"

TARBALL="Eval-Closure-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DO/DOY/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
