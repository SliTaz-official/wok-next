# SliTaz package receipt.

PACKAGE="perl-eval-closure"
VERSION="0.14"
CATEGORY="perl"
SHORT_DESC="Eval::Closure - safely and cleanly create closures via string eval"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Eval-Closure"

TARBALL="Eval-Closure-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DO/DOY/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
