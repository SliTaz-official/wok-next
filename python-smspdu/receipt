# SliTaz package receipt v2.

PACKAGE="python-smspdu"
ORIGIN="smspdu"
VERSION="latest"
CATEGORY="development"
SHORT_DESC="SMS PDU encoding and decoding, including GSM-0338 character set"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="https://pypi.org/project/$SOURCE/"

BUILD_DEPENDS="python"

compile_rules() {
	pip install --no-compile --root=$DESTDIR $ORIGIN
}

genpkg_rules() {
	VERSION=$(sed -n "/^Successfully installed/ s|.*$ORIGINd-||p" $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
}
