# SliTaz package receipt v2.

PACKAGE="puppet"
VERSION="2.7.19"
CATEGORY="system-tools"
SHORT_DESC="A system for automating system administration tasks"
MAINTAINER="devel@slitaz.org"
LICENSE="Apache"
WEB_SITE="https://puppet.com/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://downloads.puppetlabs.com/puppet/$TARBALL"

BUILD_DEPENDS="ruby-dev ruby-facter"

compile_rules() {
	ruby ./install.rb \
		--destdir=$install \
		--bindir=/usr/bin \
		--sbindir=/usr/sbin \
		--mandir=/usr/share/man
}

genpkg_rules() {
	mkdir -p $fs/usr
	cp -a $install/etc $fs
	cp -a $install/usr/*bin $fs/usr
	cp -a $install/usr/lib $fs/usr
	cd $fs/usr/bin && mv pi puppet-pi
	DEPENDS="ruby ruby-facter"
}
