# SliTaz package receipt v2.

PACKAGE="luajit"
VERSION="2.0.3"
CATEGORY="development"
SHORT_DESC="Just-In-Time Compiler for Lua"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://luajit.org/"

TARBALL="LuaJIT-$VERSION.tar.gz"
WGET_URL="http://luajit.org/download/$TARBALL"

SPLIT="$PACKAGE-dev"

compile_rules() {
	make PREFIX=/usr amalg &&
	make DESTDIR=$install PREFIX=/usr install
}

genpkg_rules() {
	case $PACKAGE in
		luajit) copy @std;;
		*-dev)  copy @dev;;
	esac
}
