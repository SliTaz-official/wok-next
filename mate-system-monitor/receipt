# SliTaz package receipt v2.

PACKAGE="mate-system-monitor"
VERSION="1.18.1"
CATEGORY="utilities"
SHORT_DESC="Process viewer and system resource monitor for MATE"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://github.com/mate-desktop/mate-system-monitor"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/mate-system-monitor/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common yelp-tools libgtop-dev libwnck3-dev gtk+3-dev \
gtkmm3-dev librsvg-dev glibmm-dev libgiomm-dev itstool"

compile_rules() {
	./autogen.sh \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="atk atkmm bzlib cairo cairomm fontconfig freetype gdk-pixbuf glib \
	glibmm gtk+3 gtkmm3 libcroco libffi libgiomm libgtop libharfbuzz liblzma \
	libpng16 librsvg libsigc++ libwnck3 libxml2 pango pangomm pcre \
	startup-notification util-linux-blkid util-linux-mount util-linux-uuid \
	xorg-libX11 xorg-libXau xorg-libXdmcp xorg-libXext xorg-libXrender \
	xorg-libXres xorg-libxcb xorg-pixman xorg-xcb-util zlib"
	TAGS="MATE"
}
