PACKAGE="perl-term-table"
VERSION="0.012"
CATEGORY="perl"
SHORT_DESC="Term::Table - Format a header and rows into a table"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Term-Table"
REPOLOGY="perl:term-table"

TARBALL="Term-Table-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/E/EX/EXODIST/$TARBALL"

BUILD_DEPENDS="perl-importer"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-importer"
}
