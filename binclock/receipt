# SliTaz package receipt v2.

PACKAGE="binclock"
VERSION="0.3.2"
CATEGORY="utilities"
SHORT_DESC="Fullscreen console binary clock"
MAINTAINER="paul@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://binclock.sourceforge.net/"

TARBALL="${PACKAGE}_${VERSION}-1.tar.gz"
WGET_URL="$SF_MIRROR/binclock/$TARBALL"

compile_rules() {
	install -Dm755 binclock.py $install/usr/bin/binclock
}

genpkg_rules() {
	copy @std
	DEPENDS="ncurses python"
}
