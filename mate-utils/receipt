# SliTaz package receipt v2.

PACKAGE="mate-utils"
VERSION="1.20.1"
CATEGORY="system-tools"
SHORT_DESC="MATE Utilities for the MATE Desktop"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://github.com/mate-desktop/mate-utils"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/mate-utils/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common yelp-tools-dev gtk-doc gtk3-dev mate-panel-dev \
libgtop-dev libcanberra-dev itstool libsm-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./autogen.sh $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		mate-utils)
			copy @std @ico # only 16 and 48 icons
			DEPENDS="atk cairo gdk-pixbuf glib gtk3 libcanberra \
			libcanberra-gtk3 libgtop mate-panel pango libice libsm \
			libx11 libxext zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="mate-utils gtk3-dev"
	esac
	TAGS="MATE"
}
