# SliTaz package receipt.

PACKAGE="perl-html-formatter"
VERSION="2.16"
CATEGORY="perl"
SHORT_DESC="HTML::Formatter - Base class for HTML formatters"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/HTML-Formatter"
REPOLOGY="perl:html-formatter"

TARBALL="HTML-Formatter-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/N/NI/NIGELM/$TARBALL"

DEPENDS="perl-font-afm perl-html-tree"
BUILD_DEPENDS="$DEPENDS perl-file-slurper perl-test-warnings"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
