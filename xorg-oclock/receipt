# SliTaz package receipt v2.

PACKAGE="xorg-oclock"
VERSION="1.0.3"
CATEGORY="x-window"
SHORT_DESC="Round X clock"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="oclock"

TARBALL="oclock-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libX11-dev xorg-libXmu-dev \
xorg-libXext-dev xorg-libXt-dev xorg-libxkbfile-dev"
PKG_RULE="std"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libXext xorg-libXmu xorg-libXt xorg-libxkbfile"
	CONFIG_FILES="/etc/X11/app-defaults/Clock-color"
}
