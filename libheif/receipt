# SliTaz package receipt v2.

PACKAGE="libheif"
VERSION="1.3.2"
CATEGORY="video"
SHORT_DESC="ISO/IEC 23008-12:2017 HEIF file format decoder and encoder"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="LGPL3"
WEB_SITE="https://www.libde265.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/strukturag/libheif/releases/download/v$VERSION/$TARBALL"

BUILD_DEPENDS="libde265-dev x265-dev libjpeg-turbo-dev libpng16-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libheif)
			copy @std
			DEPENDS="libde265 libjpeg-turbo libpng16 x265"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
