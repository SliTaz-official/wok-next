# SliTaz package receipt v2.

PACKAGE="exo"
VERSION="0.10.3" # Xfce release 4.12: http://archive.xfce.org/xfce/4.12/src/
CATEGORY="x-window"
SHORT_DESC="Xfce extension library"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.xfce.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://archive.xfce.org/src/xfce/exo/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool gtk+-dev libxfce4util-dev libxfce4ui-dev"
SPLIT="exo-tools exo-dev"

compile_rules() {
	./configure \
		--disable-debug \
		--disable-gtk-doc \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		exo)
			COOKOPTS="!menus !pixmaps"
			copy *.so*
			DEPENDS="atk cairo gdk-pixbuf glib gtk+ libxfce4util pango \
			xorg-libX11"
			;;
		*-tools)
			copy @std @rm
			DEPENDS="atk exo gdk-pixbuf glib gtk+ libxfce4ui libxfce4util pango"
			;;
		*-dev)
			copy @dev
			DEPENDS="exo exo-tools \
			gtk+-dev libxfce4util-dev"
			;;
	esac
	TAGS="Xfce"
}
