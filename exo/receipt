# SliTaz package receipt v2.

PACKAGE="exo"
VERSION="0.10.3" # Xfce release 4.12: http://archive.xfce.org/xfce/4.12/src/
CATEGORY="x-window"
SHORT_DESC="Xfce extension library"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.xfce.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://archive.xfce.org/src/xfce/exo/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool gtk+-dev libxfce4util-dev libxfce4ui-dev gtk-doc"
SPLIT="exo-tools exo-dev"

compile_rules() {
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-debug \
		--enable-gtk-doc \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		exo)
			COOKOPTS="!menus !pixmaps"
			copy *.so*
			DEPENDS="atk cairo fontconfig freetype gdk-pixbuf glib gtk+ \
			libxfce4util pango xorg-libICE xorg-libSM xorg-libX11"
			;;
		*-tools)
			copy @std @rm
			DEPENDS="exo libxfce4ui"
			;;
		*-dev)
			copy @dev
			DEPENDS="exo exo-tools \
			atk-dev bzip2-dev cairo-dev fontconfig-dev freetype-dev \
			gdk-pixbuf-dev glib-dev gtk+-dev harfbuzz-dev libffi-dev \
			libpng16-dev libxfce4util-dev libxml2-dev pango-dev pcre-dev \
			util-linux-blkid-dev util-linux-mount-dev util-linux-uuid-dev \
			xorg-libICE-dev xorg-libSM-dev xorg-libX11-dev xorg-libXau-dev \
			xorg-libXdmcp-dev xorg-libXext-dev xorg-libXrender-dev \
			xorg-libxcb-dev xorg-pixman-dev xz-dev zlib-dev"
			;;
	esac
	TAGS="Xfce"
}
