# SliTaz package receipt v2.

PACKAGE="mate-control-center"
VERSION="1.18.2"
CATEGORY="system-tools"
SHORT_DESC="Utilities to configure the MATE desktop"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://github.com/mate-desktop/mate-control-center"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/mate-control-center/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common yelp-tools itstool xorg-libX11-dev \
xorg-libXScrnSaver-dev xorg-libXext-dev libcanberra-dev xorg-libXxf86misc-dev \
xorg-kbproto gtk+3-dev mate-desktop-dev mate-menus-dev dbus-glib-dev marco-dev \
librsvg-dev mate-settings-daemon-dev libappindicator-gtk3-dev \
desktop-file-utils xorg-libXcursor-dev libmatekbd-dev libxklavier-dev"
SPLIT="mate-control-center-dev"

compile_rules() {
	./autogen.sh \
		--disable-update-mimedb \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		mate-control-center)
			copy @std
			rm $fs/usr/share/applications/mimeinfo.cache
			DEPENDS="atk cairo dbus-glib dconf fontconfig freetype gdk-pixbuf \
			glib gtk+3 libappindicator-gtk3 libcanberra libcanberra-gtk3 \
			libmatekbd librsvg libxklavier libxml2 marco mate-desktop \
			mate-menus pango xorg-libX11 xorg-libXScrnSaver xorg-libXcursor \
			xorg-libXi"
			;;
		*-dev)
			copy @dev
			DEPENDS="mate-control-center glib-dev gtk+3-dev librsvg-dev \
			mate-desktop-dev mate-menus-dev"
			;;
	esac
	TAGS="MATE"
}
