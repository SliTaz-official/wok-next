# SliTaz package receipt v2.

PACKAGE="dar"
VERSION="2.4.18"
CATEGORY="system-tools"
SHORT_DESC="Disk archive"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://dar.linux.free.fr/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="lzo-dev libgcrypt-dev bzip2-dev e2fsprogs-dev attr-dev gettext \
zlib-dev upx"
SPLIT="dar-dev"

compile_rules() {
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		dar)
			copy @std
			DEPENDS="gcc-lib-base lzo libgcrypt bzip2 attr"
			TAGS="backup"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
