# SliTaz package receipt v2.

PACKAGE="dar"
VERSION="2.5.16"
CATEGORY="system-tools"
SHORT_DESC="Disk archive"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://dar.linux.free.fr/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="gettext-dev zlib-dev bzip2-dev lzo-dev xz-dev libgpg-error-dev \
libgcrypt-dev attr-dev e2fsprogs-dev upx gpgme-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		dar)
			copy @std
			DEPENDS="bzlib gpgme libgcrypt liblzma lzo zlib   upx"
			CONFIG_FILES="/etc/darrc"
			TAGS="backup"
			;;
		*-dev)
			copy @dev
			DEPENDS="dar attr-dev bzip2-dev gpgme-dev libassuan-dev libcap-dev \
			libgcrypt-dev libgpg-error-dev lzo-dev xz-dev zlib-dev"
			;;
	esac
}
