# SliTaz package receipt.

PACKAGE="perl-io-stringy"
VERSION="2.111"
CATEGORY="perl"
SHORT_DESC="IO::Stringy - I/O on in-core objects like strings and arrays"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/IO-stringy"

TARBALL="IO-stringy-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DS/DSKOLL/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
