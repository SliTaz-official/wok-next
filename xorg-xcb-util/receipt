# SliTaz package receipt v2.

PACKAGE="xorg-xcb-util"
VERSION="0.4.0"
CATEGORY="x-window"
SHORT_DESC="XCB Utilites"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://xcb.freedesktop.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/xcb-util.html"
REPOLOGY="xcb-util"

TARBALL="xcb-util-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/xcb/$TARBALL"

BUILD_DEPENDS="xorg-libxcb-dev gperf"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-util)
			copy @std
			DEPENDS="xorg-libxcb"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xcb-util xorg-libxcb-dev"
			;;
	esac
}
