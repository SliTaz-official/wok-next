# SliTaz package receipt v2.

PACKAGE="xorg-xcb-util"
VERSION="0.4.0"
CATEGORY="x-window"
SHORT_DESC="XCB Utilites"
MAINTAINER="mallory@sweetpeople.org"
LICENSE="MIT"
WEB_SITE="https://xcb.freedesktop.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/xcb-util.html"

TARBALL="xcb-util-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/xcb/$TARBALL"

BUILD_DEPENDS="xorg-libxcb-dev gperf"
BUILD_DEPENDS_arm="xorg-libxcb-dev xorg-libXdmcp-dev"
SPLIT="xorg-xcb-util-dev"

compile_rules() {
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-util)
			copy @std
			DEPENDS="xorg-libxcb"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xcb-util xorg-libxcb-dev"
			;;
	esac
}
