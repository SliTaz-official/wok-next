# SliTaz package receipt v2.

PACKAGE="xorg-smproxy"
VERSION="1.0.6"
CATEGORY="x-window"
SHORT_DESC="Session Manager Proxy"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7app.html"
REPOLOGY="smproxy"

TARBALL="smproxy-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libSM-dev xorg-libICE-dev xorg-libXt-dev \
xorg-libXmu-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libICE xorg-libSM xorg-libX11 xorg-libXmu xorg-libXt"
}
