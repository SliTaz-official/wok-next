# SliTaz package receipt v2.

PACKAGE="python-snowballstemmer"
VERSION="latest"
CATEGORY="python"
SHORT_DESC="16 stemmer algorithms generated from Snowball algorithms"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="BSD"
WEB_SITE="https://pypi.python.org/pypi/snowballstemmer"

BUILD_DEPENDS="python"

compile_rules() {
	pip install --no-compile --root=$DESTDIR snowballstemmer
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*snowballstemmer-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
}
