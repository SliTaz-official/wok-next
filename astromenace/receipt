# SliTaz package receipt v2.

PACKAGE="astromenace"
VERSION="1.4.0"
CATEGORY="games"
SHORT_DESC="Hardcore 3D space scroll-shooter with spaceship upgrade possibilities"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://viewizard.com/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/viewizard/astromenace/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="cmake libsdl2-dev mesa-dev openal-dev freealut-dev libogg-dev \
libvorbis-dev freetype-dev glu-dev"
SPLIT="$PACKAGE-data"

compile_rules() {
	mkdir build
	cd    build
	cmake \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DDATADIR=/usr/share/astromenace \
		.. &&
	make || return 1

	install -Dm755 $src/build/astromenace             $install/usr/bin/astromenace
	install -Dm644 $src/build/gamedata.vfs            $install/usr/share/astromenace/gamedata.vfs
	install -Dm644 $src/share/astromenace_64.png      $install/usr/share/icons/hicolor/64x64/apps/astromenace.png
	install -Dm644 $src/share/astromenace_128.png     $install/usr/share/icons/hicolor/128x128/apps/astromenace.png
	install -Dm644 $src/share/astromenace.desktop     $install/usr/share/applications/astromenace.desktop
	install -Dm644 $src/share/astromenace.appdata.xml $install/usr/share/appdata/astromenace.appdata.xml
}

genpkg_rules() {
	case $PACKAGE in
		astromenace)
			copy bin/
			DEPENDS="astromenace-data \
			freealut freetype glu libsdl2 libvorbis mesa openal"
			TAGS="arcade game shooting space"
			;;
		*-data)
			copy @std icons/ @rm
			CAT="games|game data"
			;;
	esac
}
