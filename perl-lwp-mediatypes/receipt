# SliTaz package receipt v2.

PACKAGE="perl-lwp-mediatypes"
VERSION="6.02"
CATEGORY="perl"
SHORT_DESC="LWP::MediaTypes - guess media type for a file or a URL"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/LWP-MediaTypes"
REPOLOGY="perl:lwp-mediatypes"

TARBALL="LWP-MediaTypes-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/G/GA/GAAS/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
