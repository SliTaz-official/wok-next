# SliTaz package receipt.

PACKAGE="perl-event"
VERSION="1.26"
CATEGORY="perl"
SHORT_DESC="Event - Event loop processing"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="unknown"
WEB_SITE="https://metacpan.org/release/Event"
REPOLOGY="perl:event"
SUGGESTED="perl-time-hires"

TARBALL="Event-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/E/ET/ETJ/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl-dev"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std @dev
}
