# SliTaz package receipt v2.

PACKAGE="perl-event"
VERSION="1.26"
CATEGORY="perl"
SHORT_DESC="Event - Event loop processing"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="unknown"
WEB_SITE="https://metacpan.org/release/Event"
REPOLOGY="perl:event"

TARBALL="Event-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/E/ET/ETJ/$TARBALL"

BUILD_DEPENDS="perl-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std @dev
	DEPENDS="perl"
	SUGGESTED="perl-time-hires"
}
