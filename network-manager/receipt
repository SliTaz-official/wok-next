# SliTaz package receipt v2.

PACKAGE="network-manager"
VERSION="0.9.8.10"
CATEGORY="system-tools"
SHORT_DESC="GNOME network manager"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://projects.gnome.org/NetworkManager/"

TARBALL="NetworkManager-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/NetworkManager/${VERSION%.*.*}/$TARBALL"

BUILD_DEPENDS="dbus-dev dbus-glib-dev gtk+-dev wireless_tools-dev libgudev-dev \
libnl-dev nss-dev ppp-dev iptables-dev util-linux-uuid-dev dhcp-client \
intltool eudev-dev"
SPLIT="network-manager-dev"

compile_rules() {
	sed -i '/expires > 0)$/{p;s/.*/{/;NNN;s/$/\n}/}' \
		src/ip6-manager/nm-ip6-manager.c
	sed -i 's/.\(if (.nm_supplicant_config_add_setting_8021x\)/    \1/' \
		src/supplicant-manager/nm-supplicant-config.c

	./configure \
		--libexecdir=/usr/lib/$PACKAGE \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		network-manager)
			copy @std
			DEPENDS="dbus dbus-glib gtk+ wireless_tools libgudev libnl nss ppp \
			iptables dhcp-client"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
