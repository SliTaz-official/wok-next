# SliTaz package receipt v2.

PACKAGE="afpfs-ng"
VERSION="0.8.1"
CATEGORY="system-tools"
SHORT_DESC="Client for the Apple Filing Protocol (AFP)"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://sites.google.com/site/alexthepuffin/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="automake libtool gfortran libgcrypt-dev readline-dev gmp-dev \
fuse2-dev libgpg-error-dev"
SPLIT="afpfs-ng-dev"

compile_rules() {
	autoreconf -fi

	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		afpfs-ng)
			copy @std
			DEPENDS="fuse2 libgcrypt readline"
			;;
		*-dev) copy @dev;;
	esac
}
