# SliTaz package receipt v2.

PACKAGE="libt4k_common"
VERSION="0.1.1"
CATEGORY="games"
SHORT_DESC="Common libraries for tux4kids games"
MAINTAINER="samuel_trassare@yahoo.com"
LICENSE="GPL3"
WEB_SITE="https://github.com/tux4kids/t4kcommon"
REPOLOGY="t4k-common"

TARBALL="t4k_common-$VERSION.tar.gz"
WGET_URL="https://alioth.debian.org/frs/download.php/3540/$TARBALL" # FIXME

BUILD_DEPENDS="libsdl-dev libsdl-image-dev libsdl-mixer-dev libsdl-ttf-dev \
libsdl-net-dev librsvg-dev libsdl-pango-dev wget libxml2-dev libcroco-dev"
SPLIT="libt4k_common-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libt4k_common)
			copy @std
			DEPENDS="libsdl libsdl-image libsdl-mixer libsdl-ttf \
			libsdl-net librsvg libsdl-pango"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
