# SliTaz package receipt.

PACKAGE="gst0-plugins-full"
VERSION="0.10.36"
CATEGORY="multimedia"
SHORT_DESC="Plays all multimedia files GStreamer is capable of"
MAINTAINER="domcox@slitaz.org"
LICENSE="LGPL"
WEB_SITE="www.slitaz.org"

DEPENDS="gstreamer0 gst0-plugins-base gst0-plugins-good gst0-plugins-good-extra \
gst0-plugins-bad gst0-plugins-ugly gst0-ffmpeg schroedinger libsdl x264"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/doc
	cp $WOK/$PACKAGE/description.txt $fs/usr/share/doc/midori-video.txt
}
