# SliTaz package receipt v2.

PACKAGE="ziproxy"
VERSION="3.2.1"
CATEGORY="network"
SHORT_DESC="HTTP traffic compressor"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://ziproxy.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="giflib-dev jasper-dev jpeg-dev cyrus-sasl-dev zlib-dev libpng16-dev"

compile_rules() {
	sed -i 's/DGifCloseFile(GifFile/&,NULL/;s/input))/input,NULL))/' src/image.c

	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
	cp -a $src/etc $fs
	cp -a $src/var $fs
	chown -R root.root $fs
	DEPENDS="giflib jasper jpeg libsasl cyrus-sasl zlib libpng16"
	CONFIG_FILES="/etc/ziproxy"
}
