# SliTaz package receipt v2.

PACKAGE="xorg-xcb-util-image"
VERSION="0.4.0"
CATEGORY="x-window"
SHORT_DESC="Utility libraries for XC Binding - Port of Xlib's XImage and \
XShmImage functions"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="MIT"
WEB_SITE="https://xcb.freedesktop.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/xcb-util-image.html"

TARBALL="xcb-util-image-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/xcb/$TARBALL"

BUILD_DEPENDS="xorg-libxcb-dev xorg-xcb-util-dev xorg-util-macros"
SPLIT="xorg-xcb-util-image-dev"

compile_rules() {
	fix ld
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-image)
			copy @std
			DEPENDS="xorg-libxcb xorg-xcb-util"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xcb-util-image xorg-libxcb-dev"
			;;
	esac
}
