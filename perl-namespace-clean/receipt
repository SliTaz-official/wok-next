# SliTaz package receipt v2.

PACKAGE="perl-namespace-clean"
VERSION="0.27"
CATEGORY="perl"
SHORT_DESC="namespace::clean - Keep imports and functions out of your namespace"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/namespace-clean"
REPOLOGY="perl:namespace-clean"

TARBALL="namespace-clean-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/R/RI/RIBASUSHI/$TARBALL"

BUILD_DEPENDS="perl-b-hooks-endofscope perl-package-stash"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-b-hooks-endofscope perl-package-stash"
}
