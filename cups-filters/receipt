# SliTaz package receipt v2.

PACKAGE="cups-filters"
VERSION="1.11.1"
CATEGORY="system-tools"
SHORT_DESC="OpenPrinting CUPS Filters"
MAINTAINER="mojo@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://wiki.linuxfoundation.org/openprinting/start"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="https://www.openprinting.org/download/cups-filters/$TARBALL"

BUILD_DEPENDS="cups-dev zlib-dev libjpeg-turbo-dev libpng16-dev tiff-dev \
glib-dev lcms2-dev freetype-dev fontconfig-dev ijs-dev qpdf-dev poppler-dev \
dbus-dev"
SPLIT="cups-filters-dev"

compile_rules() {
	./configure \
		--without-rcdir \
		--disable-static \
		--disable-avahi \
		--with-gs-path=/usr/bin/gs \
		--with-pdftops-path=/usr/bin/gs \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		cups-filters)
			copy @std
			DEPENDS="cups dbus fontconfig freetype glib ijs lcms2 libcups \
			libgnutls libjpeg-turbo libpng16 poppler qpdf tiff zlib"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
