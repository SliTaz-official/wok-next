# SliTaz package receipt v2.

PACKAGE="xz"
VERSION="5.2.4"
CATEGORY="base-system"
SHORT_DESC="XZ Utils"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="PublicDomain LGPL2.1 GPL2 GPL3"
WEB_SITE="https://tukaani.org/xz/"
LFS="http://www.linuxfromscratch.org/lfs/view/stable/chapter06/xz.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$WEB_SITE$TARBALL"

BUILD_DEPENDS="gettext"
SPLIT="xz-tools xz liblzma xz-dev"

compile_rules() {
	./configure \
		--disable-static \
		--enable-small \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install || return 1

	mkdir -p $install/bin $install/lib
	for i in lzma unlzma lzcat xz unxz xzcat; do
		mv $install/usr/bin/$i $install/bin
	done
	mv $install/usr/lib/liblzma.so.* $install/lib
	ln -sf ../../lib/$(readlink $install/usr/lib/liblzma.so) \
		$install/usr/lib/liblzma.so
}

genpkg_rules() {
	case $PACKAGE in
		xz-tools)
			copy /usr/bin/
			CAT="utilities|misc commandline utilities"
			DEPENDS="liblzma"
			;;
		xz)
			copy bin/ @rm
			DEPENDS="liblzma"
			TAGS="LFS compression archive"
			;;
		liblzma)
			copy liblzma.so*
			CAT="libs|library"
			DEPENDS=" "
			;;
		xz-dev)
			copy @dev
			rm -r $fs/usr/share/
			;;
	esac
}
