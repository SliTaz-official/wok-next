# SliTaz package receipt v2.

PACKAGE="xz"
VERSION="5.2.3"
CATEGORY="base-system"
SHORT_DESC="XZ Utils"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="PublicDomain LGPL2.1 GPL2 GPL3"
WEB_SITE="https://tukaani.org/xz/"
TAGS="compression archive"
HOST_ARCH="i486 arm x86_64"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$WEB_SITE$TARBALL"

BUILD_DEPENDS="gettext"
SPLIT="xz-tools xz liblzma xz-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--disable-static \
		--docdir=/usr/share/doc/xz-$VERSION \
		--enable-small \
		$CONFIGURE_ARGS &&
	make && make install

	mkdir -p $install/bin $install/lib
	for i in lzma unlzma lzcat xz unxz xzcat; do
		mv $install/usr/bin/$i $install/bin
	done
	mv $install/usr/lib/liblzma.so.* $install/lib
	ln -sf ../../lib/$(readlink $install/usr/lib/liblzma.so) \
		$install/usr/lib/liblzma.so
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		xz-tools)
			copy /usr/bin/
			CAT="utilities|misc commandline utilities"
			DEPENDS="liblzma"
			;;
		xz)
			copy bin/
			remove_already_packed
			DEPENDS="liblzma"
			;;
		liblzma)
			copy liblzma.so*
			CAT="libs|library"
			DEPENDS=" "
			;;
		xz-dev)
			copy @dev
			rm -r $fs/usr/share/
			PROVIDE="liblzma-dev"
			;;
	esac
}
