# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-cirrus"
VERSION="1.5.3"
CATEGORY="x-window"
SHORT_DESC="Xorg driver for Cirrus cards"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/cirrus/"

TARBALL="xf86-video-cirrus-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev"
SPLIT="xorg-xf86-video-cirrus-dev"
PKG_RULE="std-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-cirrus)
			copy @std
			DEPENDS="xorg-server"
			TAGS="xorg display"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xf86-video-cirrus xorg-server-dev"
			;;
	esac
}
