# SliTaz package receipt v2.

PACKAGE="fbcat"
VERSION="0.3"
CATEGORY="misc"
SHORT_DESC="Takes a screenshot using the framebuffer device"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://code.google.com/p/$PACKAGE/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://fbcat.googlecode.com/files/$TARBALL"

BUILD_DEPENDS="wget"

compile_rules() {
	make || return 1

	install -Dm755 $src/fbcat  $install/usr/bin/fbcat
	install -Dm755 $src/fbgrab $install/usr/bin/fbgrab
}

genpkg_rules() {
	copy @std
	SUGGESTED="imagemagick"
}
