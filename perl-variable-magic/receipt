PACKAGE="perl-variable-magic"
VERSION="0.62"
CATEGORY="perl"
SHORT_DESC="Variable::Magic - Associate user-defined magic to variables from \
Perl"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Variable-Magic"
REPOLOGY="perl:variable-magic"

TARBALL="Variable-Magic-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/V/VP/VPIT/$TARBALL"

BUILD_DEPENDS="perl-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
