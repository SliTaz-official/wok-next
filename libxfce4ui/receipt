# SliTaz package receipt v2.

PACKAGE="libxfce4ui"
VERSION="4.12.0" # Xfce release 4.12: http://archive.xfce.org/xfce/4.12/src/
CATEGORY="x-window"
SHORT_DESC="Xfce GTK widget library"
MAINTAINER="devel@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="https://www.xfce.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://archive.xfce.org/src/xfce/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool xorg-libX11-dev xorg-libICE-dev xorg-libSM-dev \
gtk2-dev libxfce4util-dev startup-notification-dev xfconf-dev glade3-dev \
xorg-xcb-util-dev"
SPLIT="$PACKAGE-dev $PACKAGE-glade3 $PACKAGE"

compile_rules() {
	./configure \
		--disable-debug \
		--disable-gtk-doc \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-dev)
			copy @dev
			DEPENDS="libxfce4ui libxfce4ui-glade3 \
			gtk2-dev libxfce4util-dev xfconf-dev"
			;;
		*-glade3)
			copy glade3/ @rm
			find $fs -name '*.la' -delete
			DEPENDS="glade3 glib gtk2 libxfce4ui"
			CAT="x-window|Glade3 module"
			;;
		libxfce4ui)
			copy @std @rm
			DEPENDS="atk cairo gdk-pixbuf glib gtk2 libxfce4util pango \
			startup-notification xfconf xorg-libICE xorg-libSM xorg-libX11"
			;;
	esac
	TAGS="Xfce"
}
