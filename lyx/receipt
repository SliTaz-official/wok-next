# SliTaz package receipt v2.

PACKAGE="lyx"
VERSION="2.0.5.1"
CATEGORY="office"
SHORT_DESC="Advanced WYSIWYM document processor & LaTeX front-end"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.lyx.org/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="ftp://ftp.lyx.org/pub/lyx/stable/2.0.x/$TARBALL"

BUILD_DEPENDS="python Qt4-dev bison aspell-dev xorg-libX11-dev aiksaurus-dev \
zlib-dev"
SPLIT="$PACKAGE-doc $PACKAGE-examples $PACKAGE-locales $PACKAGE"

compile_rules() {
	./configure \
		--with-frontend=qt4 \
		$CONFIGURE_ARGS &&
	make &&
	make -j1 install
}

genpkg_rules() {
	case $PACKAGE in
		*-doc)
			copy usr/share/lyx/doc/
			CAT="office|documentation"
			DEPENDS="lyx"
			;;
		*-examples)
			copy usr/share/lyx/examples/
			CAT="officer|examples"
			DEPENDS="lyx"
			;;
		*-locales)
			copy locale/
			CAT="localization|locale files"
			DEPENDS="lyx"
			;;
		lyx)
			copy @std @rm
			DEPENDS="aiksaurus aspell bzlib libQtGui python"
			;;
	esac
}
