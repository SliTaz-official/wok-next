# SliTaz package receipt v2.

PACKAGE="xgalaga++"
VERSION="0.8.4"
CATEGORY="games"
SHORT_DESC="A clone of the classic game Galaga for the X Window System"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://marc.mongenet.ch/OSS/XGalaga"

TARBALL="${PACKAGE}_$VERSION.tar.gz"
WGET_URL="$WEB_SITE/$TARBALL"

BUILD_DEPENDS="xorg-dev"

compile_rules() {
	make xgalaga++ &&
	install -Dm755 $src/xgalaga++ $install/usr/bin/xgalaga++
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libXpm xorg-libxcb xorg-libXau xorg-libXdmcp"
}
