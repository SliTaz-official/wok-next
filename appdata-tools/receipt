# SliTaz package receipt v2.

PACKAGE="appdata-tools"
VERSION="0.1.7"
CATEGORY="utilities"
SHORT_DESC="AppData is a subset of AppStream"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL3"
WEB_SITE="http://people.freedesktop.org/~hughsient/appdata/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="http://people.freedesktop.org/~hughsient/releases/$TARBALL"

BUILD_DEPENDS="gdk-pixbuf-dev libsoup-dev glib-dev sqlite3-dev intltool"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std @dev
	DEPENDS="gdk-pixbuf libsoup"
}
