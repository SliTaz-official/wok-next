# SliTaz package receipt.

PACKAGE="cyrus-sasl-pam"
VERSION="2.1.26"
CATEGORY="network"
SHORT_DESC="SASL authentication server using PAM."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://cyrusimap.web.cmu.edu/"
SOURCE="cyrus-sasl"

TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="ftp://ftp.cyrusimap.org/cyrus-sasl/$TARBALL"
PROVIDE="cyrus-sasl:pam"

DEPENDS="libldap openssl libdb pam libkrb5 libcomerr3"
BUILD_DEPENDS="automake libtool openldap-dev pam pam-dev openssl-dev krb5-dev"

# Rules to configure and make the package.
compile_rules()
{
	autoreconf -fi &&

	./configure
		--prefix=/usr \
		--sysconfdir=/etc \
		--infodir=/usr/share/info \
		--with-ldap=/usr \
		--with-pam=/usr \
		--with-devrandom=/dev/urandom \
		--with-openssl \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS
	make &&
	make -j1 DESTDIR=$DESTDIR install

	docdir="$install/usr/share/doc/cyrus-sasl-$VERSION"
	mkdir -p $docdir &&
	cd $src/doc &&
	cp *.html *.txt ONEWS TODO ../saslauthd/LDAP_SASLAUTHD $docdir
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib/sasl2 $fs/var/state/saslauthd
	cp -a $install/usr/sbin $fs/usr
	cp -a $install/usr/lib/*.so* $fs/usr/lib
	cp -a $install/usr/lib/sasl2/*.so* $fs/usr/lib/sasl2
	cp -a ../$SOURCE/stuff/etc $fs
	sed -i 's/shadow/pam/' $fs/etc/init.d/cyrus-sasl
}
