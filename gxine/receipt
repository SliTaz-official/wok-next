# SliTaz package receipt v2.

PACKAGE="gxine"
VERSION="0.5.905"
CATEGORY="multimedia"
SHORT_DESC="GTK+ Xine media player user interface"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.xine-project.org/home"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/xine/$TARBALL"

BUILD_DEPENDS="shared-mime-info spidermonkey-dev xine-lib-dev xorg-dev \
dbus-dev gtk2-dev xorg-libXinerama-dev xorg-libXext-dev perl \
xorg-libXv-dev xorg-xorgproto"

compile_rules() {
	# Fix for glib2 (-lm)
	sed -i "/<glib\//d" src/*
	export LDFLAGS="$LDFLAGS -Wl,--copy-dt-needed-entries"

	#--with-logo-format=image
	./configure \
		--with-dbus \
		--with-spidermonkey=/usr/include/js \
		--without-browser-plugin \
		--without-hal \
		--disable-lirc \
		--disable-deprecated \
		--disable-integration-wizard \
		--disable-own-playlist-parsers \
		VENDOR_PKG_VERSION="$VERSION; SliTaz GNU/Linux" \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	copy @std
	DEPENDS="xine-lib libvorbis gtk2 spidermonkey dbus"
}
