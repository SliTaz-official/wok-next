# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-vmware"
VERSION="13.3.0"
CATEGORY="x-window"
SHORT_DESC="Xorg driver for VMware virtual video cards"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/vmware/"
REPOLOGY="xdrv:vmware"

TARBALL="xf86-video-vmware-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-server-dev xorg-libXrandr-dev \
xorg-libXrender-dev xorg-libXinerama-dev xorg-libXv-dev xorg-xorgproto \
libgcrypt-dev expat-dev eudev-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="eudev libdrm mesa-libxatracker"
}
