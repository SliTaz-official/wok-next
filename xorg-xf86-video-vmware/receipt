# SliTaz package receipt.

PACKAGE="xorg-xf86-video-vmware"
VERSION="13.1.0"
CATEGORY="x-window"
SHORT_DESC="X.org video driver for VMware SVGA virtual video cards"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xf86-video-vmware-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

DEPENDS="expat libdrm libdrm-nouveau libgcrypt libgpg-error llvm-libs mesa"
BUILD_DEPENDS="xorg-util-macros xorg-server-dev xorg-libXrandr-dev \
xorg-libXrender-dev xorg-libXinerama-dev xorg-libXv-dev xorg-xproto \
xorg-fontsproto libgcrypt-dev expat-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy *.so
}
