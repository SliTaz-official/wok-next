# SliTaz package receipt v2.

PACKAGE="libesmtp"
VERSION="1.0.6"
CATEGORY="network"
SHORT_DESC="A Library for posting electronic mail"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.stafford.uklinux.net/libesmtp/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/libesmtp.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://www.stafford.uklinux.net/libesmtp/$TARBALL"

BUILD_DEPENDS="automake libtool openssl-dev"
SPLIT="libesmtp-dev"
COOKOPTS="skip-log-errors"

compile_rules() {
	# fix a build issue with OpenSSL-1.1.0
	sed 's@SSL_library_init@SSL_new@g' -i configure.ac
	autoreconf -fi &&

	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libesmtp)
			copy @std
			DEPENDS="openssl"
			;;
		*-dev)
			copy @dev
			DEPENDS="libesmtp openssl-dev"
			;;
	esac
}
