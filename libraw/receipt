# SliTaz package receipt.

PACKAGE="libraw"
VERSION="0.17.2"
CATEGORY="graphics"
SHORT_DESC="Raw image decoder library"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://www.libraw.org/"

TARBALL="LibRaw-$VERSION.tar.gz"
WGET_URL="http://www.libraw.org/data/$TARBALL"

DEPENDS="jasper lcms2 libgomp libjpeg-turbo"
BUILD_DEPENDS="libjpeg-turbo-dev lcms2-dev jasper-dev"

# Rules to configure and make the package.
compile_rules()
{
	CXX="g++ -Wno-narrowing" \
	./configure \
		--enable-jpeg \
		--enable-jasper \
		--enable-lcms \
		--disable-static \
		--docdir=/usr/share/doc/libraw-$VERSION \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/lib
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib/*.so* $fs/usr/lib
}
