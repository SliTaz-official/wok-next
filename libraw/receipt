# SliTaz package receipt v2.

PACKAGE="libraw"
VERSION="0.18.1"
CATEGORY="graphics"
SHORT_DESC="Raw image decoder library"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://www.libraw.org/"

TARBALL="LibRaw-$VERSION.tar.gz"
WGET_URL="http://www.libraw.org/data/$TARBALL"

BUILD_DEPENDS="libjpeg-turbo-dev lcms2-dev jasper-dev"
SPLIT="libraw-dev"

compile_rules() {
	CXX="g++ -Wno-narrowing" \
	./configure \
		--enable-jpeg \
		--enable-jasper \
		--enable-lcms \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libraw) copy @std; DEPENDS="jasper lcms2 libgomp libjpeg-turbo";;
		*-dev)  copy @dev; DEPENDS="libraw jasper-dev lcms2-dev libjpeg-turbo-dev";;
	esac
}
