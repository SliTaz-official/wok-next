# SliTaz package receipt v2.

PACKAGE="perl-datetime"
VERSION="1.50"
CATEGORY="perl"
SHORT_DESC="DateTime - A date and time object for Perl"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/DateTime"
REPOLOGY="perl:datetime"

TARBALL="DateTime-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DR/DROLSKY/$TARBALL"

BUILD_DEPENDS="perl-datetime-locale perl-datetime-timezone \
perl-dist-checkconflicts perl-namespace-autoclean \
perl-params-validationcompiler perl-specio perl-try-tiny \
perl-dev perl-cpan-meta-check perl-test-warnings"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-datetime-locale perl-datetime-timezone \
	perl-dist-checkconflicts perl-namespace-autoclean \
	perl-params-validationcompiler perl-specio perl-try-tiny"
}
