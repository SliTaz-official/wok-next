# SliTaz package receipt v2.

PACKAGE="menu-cache"
VERSION="1.1.0"
CATEGORY="x-window"
SHORT_DESC="LXDE implementation of the freedesktop menu's cache"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://github.com/lxde/menu-cache"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/lxde/menu-cache.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$SF_MIRROR/lxde/$TARBALL"

BUILD_DEPENDS="glib-dev libfm-extra-dev gtk-doc"
SPLIT="menu-cache-dev"

compile_rules() {
	./configure \
		--disable-static \
		--enable-gtk-doc \
		$CONFIGURE_ARGS &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		*-cache)
			copy @std
			DEPENDS="glib libfm-extra"
			;;
		*-dev)
			copy @dev
			DEPENDS="menu-cache glib-dev"
			;;
	esac
	TAGS="LXDE"
}
