# SliTaz package receipt v2.

PACKAGE="gupnp"
VERSION="1.0.2"
CATEGORY="network"
SHORT_DESC="Framework for creating UPnP devices and control points"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="https://wiki.gnome.org/Projects/GUPnP"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="util-linux-uuid-dev glib-dev gssdp-dev libsoup-dev libxml2-dev \
gobject-introspection-dev gtk-doc vala"
SPLIT="gupnp-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules() {
	case $PACKAGE in
		gupnp)
			copy @std
			DEPENDS="glib gssdp libsoup libxml2 util-linux-uuid"
			;;
		*-dev)
			copy @dev
			DEPENDS="gupnp glib-dev gssdp-dev libffi-dev libsoup-dev \
			libxml2-dev pcre-dev sqlite3-dev util-linux-blkid-dev \
			util-linux-mount-dev util-linux-uuid-dev xz-dev zlib-dev"
			;;
	esac
}
