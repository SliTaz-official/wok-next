# SliTaz package receipt v2.

PACKAGE="libgd"
VERSION="2.2.5"
CATEGORY="graphics"
SHORT_DESC="Library for the dynamic creation of images"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="https://www.libgd.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$GITHUB/libgd/libgd/tarball/gd-$VERSION"

BUILD_DEPENDS="libpng16-dev jpeg-dev expat-dev freetype-dev \
xorg-libXau-dev xorg-libXdmcp-dev xorg-libXpm-dev automake libtool gettext \
fontconfig-dev"
BUILD_DEPENDS="automake libtool xorg-libX11-dev zlib-dev libpng16-dev \
freetype-dev fontconfig-dev libjpeg-turbo-dev xorg-libXpm-dev tiff-dev \
libwebp-dev"
SPLIT="libgd-dev"

compile_rules() {
	./bootstrap.sh &&
	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules() {
	case $PACKAGE in
		libgd)
			copy @std
			DEPENDS="bzlib fontconfig freetype glib libharfbuzz libjpeg-turbo \
			liblzma libpng16 libwebp libxml2 pcre tiff xorg-libX11 xorg-libXau \
			xorg-libXdmcp xorg-libXpm xorg-libxcb zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="libgd bzip2-dev fontconfig-dev freetype-dev glib-dev \
			harfbuzz-dev libjpeg-turbo-dev libpng16-dev libwebp-dev \
			libxml2-dev pcre-dev tiff-dev xorg-libX11-dev xorg-libXau-dev \
			xorg-libXdmcp-dev xorg-libXpm-dev xorg-libxcb-dev xz-dev zlib-dev"
			;;
	esac
}
