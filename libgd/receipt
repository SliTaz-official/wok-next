# SliTaz package receipt v2.

PACKAGE="libgd"
VERSION="2.2.5"
CATEGORY="graphics"
SHORT_DESC="Library for the dynamic creation of images"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="https://www.libgd.org/"
REPOLOGY="gd"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$GITHUB/libgd/libgd/tarball/gd-$VERSION"

BUILD_DEPENDS="automake libtool xorg-libX11-dev zlib-dev libpng16-dev \
freetype-dev fontconfig-dev libjpeg-turbo-dev xorg-libXpm-dev tiff-dev \
libwebp-dev"
SPLIT="libgd-dev"

compile_rules() {
	./bootstrap.sh &&
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libgd)
			copy @std
			DEPENDS="fontconfig freetype libjpeg-turbo libpng16 libwebp tiff \
			xorg-libXpm zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="libgd fontconfig-dev freetype-dev libjpeg-turbo-dev \
			libpng16-dev libwebp-dev tiff-dev xorg-libX11-dev xorg-libXpm-dev \
			zlib-dev"
			;;
	esac
}
