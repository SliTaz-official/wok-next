# SliTaz package receipt v2.

PACKAGE="python-caldav"
VERSION="latest"
CATEGORY="python"
SHORT_DESC="CalDAV (RFC4791) client library for Python"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://pypi.org/project/caldav/"
REPOLOGY="python:caldav"

BUILD_DEPENDS="python python-vobject python-lxml python-nose python-coverage \
python-requests python-six "

compile_rules() {
	pip install --no-compile --root=$DESTDIR caldav
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*caldav-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
}
