# SliTaz package receipt v2.

PACKAGE="at-spi2-atk"
VERSION="2.20.1"
CATEGORY="libdevel"
LICENSE="GPL3"
SHORT_DESC="Bridges ATK to At-Spi2 D-Bus service"
MAINTAINER="yuripourre@gmail.com"
WEB_SITE="https://www.gnome.org/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="dbus-dev glib-dev atk-dev at-spi2-core-dev"
SPLIT="at-spi2-atk-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules()
{
	case $PACKAGE in
		at-spi2-atk)
			copy @std
			DEPENDS="at-spi2-core atk dbus glib libffi libxcb pcre xorg-libX11 \
			xorg-libXau xorg-libXdmcp"
			;;
		at-spi2-atk-dev)
			copy @dev
			DEPENDS="at-spi2-atk gobject-introspection-dev at-spi2-core-dev \
			glib-dev atk-dev libffi-dev xorg-libX11-dev libxcb-dev \
			xorg-libXau-dev xorg-libXdmcp-dev dbus-dev pcre-dev"
			;;
	esac
}
