# SliTaz package receipt v2.

PACKAGE="at-spi2-atk"
VERSION="2.22.0"
CATEGORY="libdevel"
SHORT_DESC="Bridges ATK to At-Spi2 D-Bus service"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://www.gnome.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/at-spi2-atk.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="dbus-dev glib-dev atk-dev at-spi2-core-dev xorg-libSM-dev \
xorg-libX11-dev"
SPLIT="at-spi2-atk-dev"

compile_rules() {
	fix ld
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		at-spi2-atk)
			copy @std
			DEPENDS="at-spi2-core atk dbus glib"
			;;
		*-dev)
			copy @dev
			DEPENDS="at-spi2-atk at-spi2-core-dev glib-dev"
			;;
	esac
}
