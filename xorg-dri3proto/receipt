# SliTaz package receipt v2.

PACKAGE="xorg-dri3proto"
VERSION="1.0"
CATEGORY="development"
SHORT_DESC="DRI3 extension header files"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7proto.html"

TARBALL="dri3proto-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/proto/$TARBALL"

BUILD_DEPENDS="xorg-util-macros"

compile_rules() {
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @dev
	DEPENDS="xorg-util-macros"
}
