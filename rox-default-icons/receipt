# SliTaz package receipt.

PACKAGE="rox-default-icons"
VERSION="2.8"
CATEGORY="misc"
SHORT_DESC="Default icons for rox-filer"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://rox.sourceforge.net/desktop/"

SOURCE="rox-filer"
TARBALL="$SOURCE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/rox/$TARBALL"

compile_rules() {
	mkdir -p $install/rox-default-icons
	cp -a $src/ROX-Filer/ROX/* $install/rox-default-icons/
}

genpkg_rules() {
	mkdir -p $fs/usr/share/icons
	cp -r $install/* $fs/usr/share/icons/
	DEPENDS="rox-filer"
}
