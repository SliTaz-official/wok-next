# SliTaz package receipt v2.

PACKAGE="ruby-gio2"
VERSION="3.2.9"
CATEGORY="ruby"
SHORT_DESC="Ruby binding to a VFS API and useful APIs for desktop applications"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://rubygems.org/gems/${PACKAGE#*-}"
HOST_ARCH="i486 x86_64"
REPOLOGY="${PACKAGE/-/:}"

TARBALL="${PACKAGE#*-}-$VERSION.gem"
WGET_URL="https://rubygems.org/downloads/$TARBALL"

BUILD_DEPENDS="ruby-dev ruby-glib2-dev ruby-gobject-introspection-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	gem install \
		--no-document \
		--ignore-dependencies \
		--no-user-install \
		--build-root $install \
		$src/$TARBALL &&
	fix gem
}

genpkg_rules() {
	case $PACKAGE in
		*-dev)
			copy @ruby-dev
			DEPENDS="ruby-gio2 glib-dev ruby-gobject-introspection-dev"
			;;
		*)
			copy @ruby
			DEPENDS="ruby ruby-glib2 ruby-gobject-introspection glib"
			;;
	esac
}
