# SliTaz package receipt v2.

PACKAGE="xorg-font-adobe-100dpi"
VERSION="1.0.3"
CATEGORY="x-window"
SHORT_DESC="Adobe bitmap fonts Courier, Helvetica, New Century Schoolbook, \
Symbol, Times (100 DPI)"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="fonts:adobe-100dpi"

TARBALL="font-adobe-100dpi-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/font/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-font-util-dev xorg-mkfontdir xorg-bdftopcf"
COOKOPTS="!gz" # too long

compile_rules() {
	./configure \
		--disable-all-encodings \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	TAGS="font"
}

post_install() {
	chroot "$1/" fc-cache -r /usr/share/fonts/X11/100dpi
}
post_remove() {
	chroot "$1/" fc-cache -r
}
