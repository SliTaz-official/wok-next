# SliTaz package receipt.

PACKAGE="xorg-font-adobe-100dpi"
VERSION="1.0.3"
CATEGORY="x-window"
SHORT_DESC="Adobe bitmap fonts Courier, Helvetica, New Century Schoolbook, Symbol, Times (100 DPI)"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="other"
WEB_SITE="https://www.x.org/wiki/"
TAGS="font"
COOKOPTS="!gz" # too long

TARBALL="font-adobe-100dpi-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/font/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-font-util-dev xorg-mkfontdir xorg-bdftopcf"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_files *.pcf.gz
}

post_install() { chroot "$1/" fc-cache /usr/share/fonts/X11/100dpi; }
post_remove()  { chroot "$1/" fc-cache; }
