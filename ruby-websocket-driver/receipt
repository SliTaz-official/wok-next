# SliTaz package receipt v2.

PACKAGE="ruby-websocket-driver"
VERSION="0.7.0"
CATEGORY="ruby"
SHORT_DESC="WebSocket protocol handler with pluggable I/O"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://rubygems.org/gems/${PACKAGE#*-}"
REPOLOGY="${PACKAGE/-/:}"

TARBALL="${PACKAGE#*-}-$VERSION.gem"
WGET_URL="http://rubygems.org/downloads/$TARBALL"

BUILD_DEPENDS="ruby-dev"

compile_rules() {
	gem install \
		--no-document \
		--ignore-dependencies \
		--no-user-install \
		--build-root $install \
		$src/$TARBALL &&
	fix gem
}

genpkg_rules() {
	copy @ruby
	DEPENDS="ruby ruby-websocket-extensions"
}
