# SliTaz package receipt v2.

PACKAGE="libmatchbox"
VERSION="1.12"
CATEGORY="x-window"
SHORT_DESC="Matchbox shared library"
MAINTAINER="devel@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="https://www.yoctoproject.org/software-item/matchbox/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://git.yoctoproject.org/cgit/cgit.cgi/libmatchbox/snapshot/$TARBALL"

BUILD_DEPENDS="automake libtool xorg-libX11-dev xorg-libXext-dev pango-dev \
libpng16-dev libjpeg-turbo-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./autogen.sh \
		--disable-static \
		--enable-pango \
		--enable-jpeg \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libmatchbox)
			copy @std
			DEPENDS="glib libjpeg-turbo libpng16 pango xorg-libX11 \
			xorg-libXext xorg-libXft"
			;;
		*-dev)
			copy @dev
			DEPENDS="libmatchbox libjpeg-turbo-dev libpng16-dev pango-dev \
			xorg-libX11-dev xorg-libXext-dev"
			;;
	esac
	TAGS="matchbox"
}
