# SliTaz package receipt v2.

PACKAGE="libmatchbox"
VERSION="1.12"
CATEGORY="x-window"
SHORT_DESC="Matchbox shared library"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://matchbox-project.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://git.yoctoproject.org/cgit/cgit.cgi/libmatchbox/snapshot/$TARBALL"

BUILD_DEPENDS="pango-dev jpeg-dev libxml2-dev automake autoconf libtool"
SPLIT="libmatchbox-dev"

compile_rules() {
	./autogen.sh
	./configure \
		--enable-pango \
		--enable-jpeg \
		$CONFIGURE_ARGS &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		libmatchbox)
			copy @std
			DEPENDS="pango"
			;;
		*-dev)
			copy @dev
			;;
	esac
	TAGS="matchbox"
}
