# SliTaz package receipt v2.

PACKAGE="lximage-qt"
VERSION="0.6.0"
CATEGORY="graphics"
SHORT_DESC="The image viewer and screenshot tool for LXQt"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://github.com/lxde/lximage-qt"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/lxqt/lximage-qt.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="https://github.com/lxde/lximage-qt/releases/download/$VERSION/$TARBALL"

BUILD_DEPENDS="cmake qt5-dev mesa17-dev libfm-qt-dev lxqt-build-tools"

compile_rules() {
	mkdir build; cd build
	cmake \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DPULL_TRANSLATIONS=no \
		.. &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="glib libexif libfm libfm-qt menu-cache qt5-base qt5-svg \
	qt5-x11extras xorg-libX11 xorg-libXext xorg-libXfixes xorg-libxcb"
	TAGS="LXQt"
}
