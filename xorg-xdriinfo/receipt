# SliTaz package receipt v2.

PACKAGE="xorg-xdriinfo"
VERSION="1.0.6"
CATEGORY="x-window"
SHORT_DESC="Query configuration information of DRI drivers"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7app.html"
REPOLOGY="xdriinfo"

TARBALL="xdriinfo-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libX11-dev xorg-xorgproto mesa-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="mesa xorg-libX11"
	SUGGESTED="nvidia"
}
