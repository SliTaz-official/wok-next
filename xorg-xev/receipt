# SliTaz package receipt v2.

PACKAGE="xorg-xev"
VERSION="1.2.2"
CATEGORY="x-window"
SHORT_DESC="Print contents of X events"
MAINTAINER="jozee@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7app.html"

TARBALL="xev-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-libX11-dev xorg-libXrandr-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libXrandr"
	TAGS="utility xorg debug"
}
