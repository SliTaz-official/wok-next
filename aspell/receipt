# SliTaz package receipt v2.

PACKAGE="aspell"
VERSION="0.60.6.1"
CATEGORY="system-tools"
SHORT_DESC="GNU spell checker"
MAINTAINER="paul@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="http://aspell.net/"
TAGS="spell check"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$GNU_MIRROR/aspell/$TARBALL"

BUILD_DEPENDS="perl gettext ncurses-dev"
SPLIT="aspell-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure $CONFIGURE_ARGS && make && make install

	ln -svfn aspell-0.60 $install/usr/lib/aspell
	docdir="$install/usr/share/doc/aspell-$VERSION"
	install -v -m755 -d $docdir/aspell.html &&
	install -v -m755 -d $docdir/aspell-dev.html &&
	install -v -m644 manual/aspell.html/*		$docdir/aspell.html &&
	install -v -m644 manual/aspell-dev.html/*	$docdir/aspell-dev.html
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		aspell) 	copy @std; DEPENDS="ncurses" ;;
		aspell-dev) copy @dev ;;
	esac
}
