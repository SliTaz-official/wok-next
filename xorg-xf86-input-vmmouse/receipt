# SliTaz package receipt v2.

PACKAGE="xorg-xf86-input-vmmouse"
VERSION="13.1.0"
CATEGORY="x-window"
SHORT_DESC="Xorg input driver for VMware Mouse"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xf86-input-vmmouse-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-server-dev eudev-dev"
SPLIT="xorg-xf86-input-vmmouse-dev"
PKG_RULE="std-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-vmmouse)
			copy @std
			DEPENDS="xorg-server eudev"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xf86-input-vmmouse xorg-server-dev eudev-dev"
			;;
	esac
}
