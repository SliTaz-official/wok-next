# SliTaz package receipt v2.

PACKAGE="unrar"
VERSION="5.5.8"
CATEGORY="utilities"
SHORT_DESC="The free UnRar"
MAINTAINER="gokhlayeh@slitaz.org"
LICENSE="freeware"
WEB_SITE="http://www.rarlab.com"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/unrar.html"

TARBALL="unrarsrc-$VERSION.tar.gz"
WGET_URL="http://www.rarlab.com/rar/$TARBALL"

compile_rules() {
	make -f makefile &&
	install -Dm755 unrar $install/usr/bin/unrar
}

genpkg_rules() {
	copy @std
}
