PACKAGE="unrar"
VERSION="5.3.7"
CATEGORY="utilities"
SHORT_DESC="The free unrar"
MAINTAINER="gokhlayeh@slitaz.org"
LICENSE="freeware"
WEB_SITE="http://www.rarlab.com"

TARBALL="${PACKAGE}src-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/rar/$TARBALL"

compile_rules() {
	make &&
	install -Dm 755 $src/unrar $install/usr/bin/unrar
}

genpkg_rules() {
	copy @std
	DEPENDS="gcc-lib-base"
}
