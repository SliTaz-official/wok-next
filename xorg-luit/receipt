# SliTaz package receipt v2.

PACKAGE="xorg-luit"
VERSION="1.1.1"
CATEGORY="x-window"
SHORT_DESC="Convert terminal i/o from legacy encodings to UTF-8"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7app.html"

TARBALL="luit-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libfontenc-dev xorg-libX11-dev"

compile_rules() {
	line1="#ifdef _XOPEN_SOURCE"
	line2="#  undef _XOPEN_SOURCE"
	line3="#  define _XOPEN_SOURCE 600"
	line4="#endif"
	sed -i -e "s@#ifdef HAVE_CONFIG_H@$line1\n$line2\n$line3\n$line4\n\n&@" sys.c
	unset line1 line2 line3 line4

	fix ld
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libfontenc"
}
