# SliTaz package receipt.

PACKAGE="python-serial" # this == python-pyserial, to remove
VERSION="2.7"
CATEGORY="development"
SHORT_DESC="Multiplataform serial port module for python"
MAINTAINER="claudinei@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://pyserial.sourceforge.net"
REPOLOGY="python:pyserial"

SOURCE="pyserial"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="https://files.pythonhosted.org/packages/source/p/pyserial/$TARBALL"

DEPENDS="python"
BUILD_DEPENDS="python-dev"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	for file in `find $install | grep 'pyc$'`; do
		rm $file
	done
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/lib $fs/usr
}

