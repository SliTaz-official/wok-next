# SliTaz package receipt v2.

PACKAGE="python-distribute"
VERSION="latest"
CATEGORY="development"
SHORT_DESC="Distribute legacy wrapper"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="PSL"
WEB_SITE="https://pypi.org/project/distribute/"
REPOLOGY="python:distribute"

BUILD_DEPENDS="python"

compile_rules() {
	pip install --no-compile --root=$DESTDIR distribute
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*distribute-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
}
