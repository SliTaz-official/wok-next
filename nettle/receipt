# SliTaz package receipt v2.

PACKAGE="nettle"
VERSION="3.4"
CATEGORY="security"
SHORT_DESC="Nettle cryptographic library"
MAINTAINER="devl547@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="http://www.lysator.liu.se/~nisse/nettle/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$GNU_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="openssl-dev gmp-dev texinfo"
SPLIT="nettle-dev"

compile_rules() {
	case "$ARCH" in
		arm) ARCH_ARGS='--enable-arm-neon';;
		*)   ARCH_ARGS='';;
	esac

	./configure \
		--libdir=/usr/lib \
		--disable-static \
		$CONFIGURE_ARGS $ARCH_ARGS &&
	make &&
	make install || return 1

	chmod 0755 $install/usr/lib/*.so*	# was 644
}

genpkg_rules() {
	case $PACKAGE in
		nettle)
			copy @std
			DEPENDS="gmp"
			;;
		*-dev)
			copy @dev
			DEPENDS="nettle gmp-dev"
			;;
	esac
}
