# SliTaz package receipt v2.

PACKAGE="compiz-plugins-unsupported"
VERSION="0.8.12"
CATEGORY="x-window"
SHORT_DESC="Compiz extra plugins"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://github.com/compiz-reloaded"

TARBALL="compiz-plugins-experimental-$VERSION.tar.xz"
WGET_URL="$WEB_SITE/compiz-plugins-experimental/releases/download/v$VERSION/$TARBALL"

BUILD_DEPENDS="xorg-dev compiz-core-dev compiz-libcompizconfig-dev cmake \
libxslt-dev startup-notification-dev mesa-dev gtk2-dev intltool librsvg-dev \
libnotify-dev compiz-bcop util-linux-uuid-dev compiz-plugins-main-dev \
compiz-plugins-extra compiz-plugins-extra-dev libtool util-linux-getopt \
xorg-libxshmfence-dev glu-dev expat-dev xorg-xcb-util-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		compiz-plugins-unsupported)
			copy @std
			DEPENDS="xorg-libX11 compiz-core compiz-libcompizconfig gtk2 \
			librsvg libnotify compiz-plugins-main"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
