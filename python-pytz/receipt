# SliTaz package receipt.

PACKAGE="python-pytz"
VERSION="latest"
CATEGORY="development"
SHORT_DESC="World Timezone Definitions for Python"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://pypi.python.org/pypi/pytz"
REPOLOGY="python:pytz"

BUILD_DEPENDS="python"

compile_rules() {
	pip install --no-compile --root=$DESTDIR pytz
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*pytz-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
}
