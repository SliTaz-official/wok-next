# SliTaz package receipt v2.

PACKAGE="xorg-encodings"
VERSION="1.0.4"
CATEGORY="x-window"
SHORT_DESC="The XFree86/Xorg encoding files"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="PublicDomain"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7font.html"
HOST_ARCH="any"
REPOLOGY="encodings"

TARBALL="encodings-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/font/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-mkfontscale xorg-font-util-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
}
