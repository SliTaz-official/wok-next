# SliTaz package receipt v2.

PACKAGE="xorg-xmodmap"
VERSION="1.0.9"
CATEGORY="x-window"
SHORT_DESC="Utility for modifying keymaps and button mappings"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7app.html"
REPOLOGY="xmodmap"

TARBALL="xmodmap-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libX11-dev xorg-xproto"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11"
}
