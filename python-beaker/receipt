# SliTaz package receipt v2.

PACKAGE="python-beaker"
VERSION="latest"
CATEGORY="development"
SHORT_DESC="Cache and Session Library"
MAINTAINER="taziden@slitaz.org"
LICENSE="BSD"
WEB_SITE="https://pypi.python.org/pypi/Beaker"
REPOLOGY="python:beaker"

BUILD_DEPENDS="python-funcsigs"

compile_rules() {
	pip install --no-compile --root=$DESTDIR Beaker
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*Beaker-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python-funcsigs"
}
