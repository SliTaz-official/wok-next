# SliTaz package receipt v2.

PACKAGE="libXaw3dXft"
VERSION="1.6.2e"
CATEGORY="x-window"
SHORT_DESC="Xpaint module"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://sourceforge.net/projects/sf-xpaint/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/sf-xpaint/$TARBALL"

BUILD_DEPENDS="xorg-libX11-dev xorg-libXt-dev xorg-libXmu-dev xorg-libXext-dev \
xorg-libXft-dev xorg-libXpm-dev"
SPLIT="libXaw3dXft-dev"

compile_rules() {
	./configure \
		--enable-arrow-scrollbars \
		--enable-gray-stipples \
		--enable-multiplane-bitmaps \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libXaw3dXft)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXext xorg-libXft xorg-libXmu \
			xorg-libXpm xorg-libXt"
			;;
		*-dev)
			copy @dev
			DEPENDS="libXaw3dXft fontconfig-dev xorg-libX11-dev \
			xorg-libXext-dev xorg-libXft-dev xorg-libXmu-dev xorg-libXt-dev \
			xorg-xproto"
			;;
	esac
}
