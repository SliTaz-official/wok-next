# SliTaz package receipt v2.

PACKAGE="libplayer"
VERSION="2.0.1"
CATEGORY="multimedia"
SHORT_DESC="A multimedia A/V abstraction layer API"
MAINTAINER="devel@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://libplayer.geexbox.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://libplayer.geexbox.org/releases/$TARBALL"

BUILD_DEPENDS="shared-mime-info xine-lib-dev xorg-libxcb-dev"
# xorg-libX11-dev libvdpau-dev with --enable-xlib-hack
SPLIT="$PACKAGE-dev"

compile_rules() {
	sed -i 's/cat -n/awk '"'"'{ printf "%6d  %s\\n",++n,$0 }'"'"' </' configure
	./configure \
		--prefix=/usr\
		--enable-mplayer \
		--disable-gstreamer \
		--disable-vlc \
		&&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libplayer)
			copy @std
			DEPENDS="xine-lib xorg-libxcb"
			;;
		*-dev)
			copy @dev
			DEPENDS="libplayer xine-lib-dev xorg-libxcb-dev"
			;;
	esac
}
