# SliTaz package receipt v2.

PACKAGE="xorg-xf86-input-synaptics"
VERSION="1.9.1"
CATEGORY="x-window"
SHORT_DESC="Xorg input driver for touchpads"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="xdrv:synaptics"

TARBALL="xf86-input-synaptics-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-server-dev xorg-xorgproto \
libevdev-dev xorg-libXi-dev xorg-libXtst-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-synaptics)
			copy @std
			DEPENDS="libevdev xorg-libX11 xorg-libXi xorg-libXtst"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
