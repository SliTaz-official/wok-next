# SliTaz package receipt v2.

PACKAGE="xorg-xf86-input-synaptics"
VERSION="1.9.0"
CATEGORY="x-window"
SHORT_DESC="Xorg input driver for touchpads"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xf86-input-synaptics-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-server-dev xorg-inputproto xorg-xproto \
libevdev-dev xorg-libXi-dev xorg-libXtst-dev"
SPLIT="xorg-xf86-input-synaptics-dev"
PKG_RULE="std-dev"

compile_rules() {
	fix ld
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-synaptics)
			copy @std
			DEPENDS="libevdev xorg-libX11 xorg-libXi xorg-libXtst"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
