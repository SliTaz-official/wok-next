# SliTaz package receipt.

PACKAGE="xorg-xf86-input-synaptics"
VERSION="1.8.3"
CATEGORY="x-window"
SHORT_DESC="Xorg synaptics driver."
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xf86-input-synaptics-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

DEPENDS="libevdev libxcb xorg-libX11 xorg-libXau xorg-libXdmcp xorg-libXext \
xorg-libXi xorg-libXtst"
BUILD_DEPENDS="xorg-util-macros xorg-randrproto xorg-inputproto \
xorg-server-dev xorg-xproto xorg-inputproto libevdev-dev xorg-libXi-dev \
xorg-libXtst-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy bin/ xorg.conf.d/ *.so
}
