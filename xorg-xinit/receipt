# SliTaz package receipt v2.

PACKAGE="xorg-xinit"
VERSION="1.4.0"
CATEGORY="x-window"
SHORT_DESC="X Window System initializer (includes startx)"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="xinit"

TARBALL="xinit-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libXmu-dev"

compile_rules() {
	sed -i '/$serverargs $vtarg/ s/serverargs/: #&/' startx.cpp

	./configure \
		--with-xinitdir=/etc/X11/xinit \
		$CONFIGURE_ARGS &&
	make &&
	make install || return 1

	cp $stuff/xserverrc $install/etc/X11/xinit/xserverrc
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11   openssl xorg-xauth"
	TAGS="utility xorg"
}
