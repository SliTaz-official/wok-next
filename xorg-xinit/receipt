# SliTaz package receipt v2.

PACKAGE="xorg-xinit"
VERSION="1.3.4"
CATEGORY="x-window"
SHORT_DESC="X Window System initializer (includes startx)"
MAINTAINER="jozee@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="xinit"

TARBALL="xinit-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-libXmu-dev"
PKG_RULE="std"

compile_rules() {
	sed -e '/$serverargs $vtarg/ s/serverargs/: #&/' \
		-i startx.cpp

	./configure \
		--with-xinitdir=/etc/X11/xinit \
		$CONFIGURE_ARGS &&
	make &&
	make install &&

	cp $stuff/xserverrc $install/etc/X11/xinit/xserverrc
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11   openssl xorg-xauth"
	TAGS="utility xorg"
}
