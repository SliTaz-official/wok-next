# SliTaz package receipt v2.

PACKAGE="granite"
VERSION="0.5"
CATEGORY="system-tools"
SHORT_DESC="Library that extends GTK+"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="LGPL3"
WEB_SITE="https://github.com/elementary/granite"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/elementary/granite/archive/$VERSION.tar.gz"

BUILD_DEPENDS="cmake vala gtk+3-dev libgee-dev gobject-introspection-dev \
gettext"
SPLIT="granite-demo granite granite-dev"

COOKOPTS="!menus"

compile_rules() {
	mkdir build
	cd    build
	cmake \
		-DCMAKE_INSTALL_PREFIX=/usr \
		.. &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	case $PACKAGE in
		granite-demo)
			copy granite-demo granite-demo.desktop
			CAT="development|demo"
			DEPENDS="glib granite gtk+3 libgee"
			;;
		granite)
			copy @std *.svg *.mo @rm
			DEPENDS="cairo gdk-pixbuf glib gtk+3 libgee pango"
			;;
		*-dev)
			copy @dev
			DEPENDS="granite cairo-dev gdk-pixbuf-dev glib-dev gtk+3-dev \
			libgee-dev"
			;;
	esac
}
