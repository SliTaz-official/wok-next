PACKAGE="perl-cgi-session"
VERSION="4.48"
CATEGORY="perl"
SHORT_DESC="CGI::Session - persistent session data in CGI applications"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/CGI-Session"
REPOLOGY="perl:cgi-session"

TARBALL="CGI-Session-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/M/MA/MARKSTOS/$TARBALL"

BUILD_DEPENDS="perl-cgi"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-cgi"
}
