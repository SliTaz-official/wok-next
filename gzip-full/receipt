# SliTaz package receipt.

PACKAGE="gzip-full"
VERSION="1.8"
CATEGORY="system-tools"
SHORT_DESC="GNU compression utilities"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://www.gnu.org/software/gzip/"

WANTED="gzip"
DEPENDS="gzip"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_folders bin
	cook_split_rm gzip
}

pre_install()
{
	# Removing Busybox uncompress and zcat applets
	# as we have /usr/bin/uncompress and /usr/bin/zcat in this package
	rm -f "$1/bin/uncompress" "$1/bin/zcat"
}

post_remove()
{
	ln -s busybox "$1/bin/uncompress"
	ln -s busybox "$1/bin/zcat"
}
