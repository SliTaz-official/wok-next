# SliTaz package receipt v2.

PACKAGE="giblib"
VERSION="1.2.4"
CATEGORY="graphics"
SHORT_DESC="Giblib graphic library"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://freshmeat.sourceforge.net/projects/giblib"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://linuxbrit.co.uk/downloads/$TARBALL"

BUILD_DEPENDS="gfortran imlib2-dev imlib2 xorg-xorgproto freetype-dev \
xorg-libXext-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	sed -i 's|/doc|/share&|' Makefile*

	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	case $PACKAGE in
		giblib)
			copy @std
			DEPENDS="imlib2 freetype xorg-libX11 xorg-libXau xorg-libXdmcp \
			xorg-libXext"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
