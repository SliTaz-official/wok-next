# SliTaz package receipt v2.

PACKAGE="lxqt-panel"
VERSION="0.12.0"
CATEGORY="system-tools"
SHORT_DESC="The LXQt desktop panel"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://github.com/lxde/lxqt-panel"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/lxqt/lxqt-panel.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/lxde/$PACKAGE/archive/$VERSION.tar.gz"

BUILD_DEPENDS="cmake qt5-dev mesa17-dev kwindowsystem-dev liblxqt-dev \
lxqt-build-tools lxqt-globalkeys-dev libstatgrab-dev solid-dev menu-cache-dev \
lm-sensors-dev libsysstat-dev libdbusmenu-qt-dev xorg-libXcomposite-dev \
xorg-libXrender-dev alsa-lib-dev libxkbcommon-dev xorg-xcb-util-dev"
SPLIT="lxqt-panel-dev"

compile_rules() {
	sed -i 's|<KF5/KWindowSystem/|<|' \
		plugin-taskbar/lxqttaskgroup.h \
		plugin-taskbar/lxqttaskgroup.cpp
	sed -i '/kbdinfo.h/i #undef explicit' \
		plugin-kbindicator/src/x11/kbdlayout.cpp
	# fix undefined variable
	sed -i "/#define LXQTPANEL_H/a #define LXQT_VERSION \"$VERSION\"" \
		panel/lxqtpanel.h

	mkdir build; cd build
	cmake \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DPULL_TRANSLATIONS=no \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DVOLUME_USE_PULSEAUDIO=no \
		.. &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		lxqt-panel)
			copy @std
			DEPENDS="alsa-lib glib kwindowsystem libdbusmenu-qt liblxqt \
			libqtxdg libstatgrab libsysstat libxkbcommon-x11 lm-sensors \
			lxqt-globalkeys menu-cache qt5-base qt5-svg qt5-x11extras solid \
			xorg-libX11 xorg-libXcomposite xorg-libXdamage xorg-libXext \
			xorg-libXfixes xorg-libXrender xorg-libxcb xorg-xcb-util"
			SUGGESTED="qastools xscreensaver"
			;;
		*-dev)
			copy @dev
			;;
	esac
	TAGS="LXQt"
}
