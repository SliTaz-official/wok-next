PACKAGE="perl-http-negotiate"
VERSION="6.01"
CATEGORY="perl"
SHORT_DESC="HTTP::Negotiate - choose a variant to serve"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/HTTP-Negotiate"
REPOLOGY="perl:http-negotiate"

TARBALL="HTTP-Negotiate-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/G/GA/GAAS/$TARBALL"

BUILD_DEPENDS="perl-http-message"

compile_rules() {
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="$BUILD_DEPENDS"
}
