# SliTaz package receipt.

PACKAGE="perl-net-smtp-ssl"
VERSION="1.04"
CATEGORY="perl"
SHORT_DESC="Net::SMTP::SSL - SSL support for Net::SMTP"
MAINTAINER="rocky@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Net-SMTP-SSL"
REPOLOGY="perl:net-smtp-ssl"

TARBALL="Net-SMTP-SSL-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/R/RJ/RJBS/$TARBALL"

DEPENDS="perl-io-socket-ssl"
BUILD_DEPENDS="$DEPENDS"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
