# SliTaz package receipt v2.

PACKAGE="xorg-xgamma"
VERSION="1.0.6"
CATEGORY="x-window"
SHORT_DESC="Alter a monitor's gamma correction through the X server"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7app.html"
REPOLOGY="xgamma"

TARBALL="xgamma-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libX11-dev xorg-libXxf86vm-dev xorg-xproto"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libXxf86vm"
}
