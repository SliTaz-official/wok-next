# SliTaz package receipt.

PACKAGE="iso-codes"
VERSION="3.77"
CATEGORY="utilities"
SHORT_DESC="ISO-639, ISO-4217, ISO-3166 and ISO-3166-2 code lists + translations"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://pkg-isocodes.alioth.debian.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/iso-codes.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="https://pkg-isocodes.alioth.debian.org/downloads/$TARBALL"

BUILD_DEPENDS="gettext python3"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std *.mo
}
