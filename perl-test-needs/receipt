# SliTaz package receipt.

PACKAGE="perl-test-needs"
VERSION="0.002005"
CATEGORY="perl"
SHORT_DESC="Test::Needs - Skip tests when modules not available"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Test-Needs"
REPOLOGY="perl:test-needs"

TARBALL="Test-Needs-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/H/HA/HAARG/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
