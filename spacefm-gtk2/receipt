# SliTaz package receipt v2.

PACKAGE="spacefm-gtk2"
VERSION="1.0.5"
CATEGORY="system-tools"
SHORT_DESC="Multi-panel tabbed file and desktop manager"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3"
WEB_SITE="http://ignorantguru.github.io/spacefm/"

TARBALL="spacefm-$VERSION.tar.gz"
WGET_URL="https://github.com/IgnorantGuru/spacefm/archive/$VERSION.tar.gz"

BUILD_DEPENDS="intltool gtk+-dev eudev-dev ffmpegthumbnailer-dev   \
startup-notification-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--with-preferable-sudo=/usr/bin/subox \
		$CONFIGURE_ARGS &&
	make &&
	make MKDIRPROG='mkdir -p' install || return 1

	rm -rf $install/usr/share/mime/
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
	DEPENDS="cairo eudev ffmpegthumbnailer gdk-pixbuf glib gtk+ pango \
	startup-notification xorg-libX11   bash"
}
