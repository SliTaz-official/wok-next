# SliTaz package receipt v2.

PACKAGE="perl-list-moreutils"
VERSION="0.428"
CATEGORY="perl"
SHORT_DESC="List::MoreUtils - Provide the stuff missing in List::Util"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/List-MoreUtils"
REPOLOGY="perl:list-moreutils"

TARBALL="List-MoreUtils-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/R/RE/REHSACK/$TARBALL"

BUILD_DEPENDS="perl-dev perl-exporter-tiny perl-list-moreutils-xs"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-exporter-tiny perl-list-moreutils-xs"
}
