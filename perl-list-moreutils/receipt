# SliTaz package receipt.

PACKAGE="perl-list-moreutils"
VERSION="0.428"
CATEGORY="perl"
SHORT_DESC="List::MoreUtils - Provide the stuff missing in List::Util"
MAINTAINER="nneul@neulinger.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/List-MoreUtils"

TARBALL="List-MoreUtils-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/R/RE/REHSACK/$TARBALL"

DEPENDS="perl-exporter-tiny"
BUILD_DEPENDS="$DEPENDS"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
