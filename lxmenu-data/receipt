# SliTaz package receipt v2.

PACKAGE="lxmenu-data"
VERSION="0.1.5"
CATEGORY="x-window"
SHORT_DESC="LXDE freedesktop.org menu specification"
MAINTAINER="rcx@zoominternet.net"
LICENSE="GPL2"
WEB_SITE="http://lxde.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/lxde/lxmenu-data.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$SF_MIRROR/lxde/$TARBALL"

BUILD_DEPENDS_arm=" "
BUILD_DEPENDS="gettext intltool"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make && make install
}

genpkg_rules() {
	copy @std
	CONFIG_FILES="/etc/xdg/menus/lxde-applications.menu"
	TAGS="LXDE"
}
