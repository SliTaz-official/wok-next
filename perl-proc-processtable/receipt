# SliTaz package receipt.

PACKAGE="perl-proc-processtable"
VERSION="0.55"
CATEGORY="perl"
SHORT_DESC="Proc::ProcessTable - Perl extension to access the unix process \
table"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Proc-ProcessTable"
REPOLOGY="perl:proc-processtable"

TARBALL="Proc-ProcessTable-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/J/JW/JWB/$TARBALL"

BUILD_DEPENDS="perl-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
