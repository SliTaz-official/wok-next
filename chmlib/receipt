# SliTaz package receipt v2.

PACKAGE="chmlib"
VERSION="0.40"
CATEGORY="misc"
SHORT_DESC="Library for reading Microsoft ITSS/CHM format files"
MAINTAINER="allan316@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="http://www.jedrea.com/chmlib/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://www.jedrea.com/chmlib/$TARBALL"

SPLIT="chmlib-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS && make && make install || return 1

	cook_pick_docs README
}

genpkg_rules() {
	case $PACKAGE in
		chmlib)
			copy @std
			TAGS="CHM windows"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
