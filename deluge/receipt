# SliTaz package receipt v2.

PACKAGE="deluge"
VERSION="1.3.15"
CATEGORY="network"
SHORT_DESC="A bittorrent client written with Python and PyGTK"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://deluge-torrent.org/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="http://download.deluge-torrent.org/source/$TARBALL"

COOKOPTS="force-arch" # different .egg

BUILD_DEPENDS="python intltool"

compile_rules() {
	python -B setup.py build &&
	python -B setup.py install --prefix=/usr --root=$install
}

genpkg_rules() {
	copy @std
	DEPENDS="libtorrent-rasterbar python-pyopenssl python-chardet python-pyxdg \
	python-twisted xdg-utils python-pygtk"
}
