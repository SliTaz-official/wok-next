# SliTaz package receipt v2.

PACKAGE="qjson"
VERSION="0.9.0"
CATEGORY="development"
SHORT_DESC="QJson is a Qt-based library that maps JSON data to QVariant objects"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="http://qjson.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/flavio/qjson/archive/$VERSION.tar.gz"

BUILD_DEPENDS="cmake qt5-dev"
SPLIT="qjson-dev"

compile_rules() {
	mkdir build; cd build
	cmake \
		-DCMAKE_INSTALL_PREFIX=/usr \
		.. &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		qjson)
			copy @std
			DEPENDS="qt5-base"
			;;
		*-dev)
			copy @dev
			DEPENDS="qjson qt5-dev"
			;;
	esac
}
