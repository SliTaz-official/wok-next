# SliTaz package receipt v2.

PACKAGE="hubicfuse"
VERSION="1.3.1"
CATEGORY="network"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
SHORT_DESC="Support for mounting Hubic drive"
WEB_SITE="https://github.com/TurboGit/hubicfuse"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/TurboGit/hubicfuse/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="curl-dev fuse2-dev openssl-dev libxml2-dev glib libjson-c-dev"

compile_rules() {
	./configure -prefix=/usr $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="curl fuse2 openssl libjson-c"
}
