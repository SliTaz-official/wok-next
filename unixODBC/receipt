# SliTaz package receipt v2.

PACKAGE="unixODBC"
VERSION="2.3.4"
CATEGORY="system-tools"
SHORT_DESC="ODBC for UNIX"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://www.unixodbc.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="ftp://ftp.unixodbc.org/pub/unixODBC/$TARBALL"

BUILD_DEPENDS="readline-dev"
SPLIT="libunixODBC unixODBC unixODBC-dev"

compile_rules() {
	./configure \
		--disable-gui \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make $MAKEFLAGS &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		libunixODBC)
			copy *.so*
			CAT="system-tools|libraries"
			;;
		unixODBC)
			copy @std @rm
			DEPENDS="libunixODBC readline"
			TAGS="database"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
