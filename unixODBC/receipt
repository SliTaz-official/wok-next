# SliTaz package receipt v2.

PACKAGE="unixODBC"
VERSION="2.3.5"
CATEGORY="system-tools"
SHORT_DESC="ODBC for UNIX"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://www.unixodbc.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/general/unixodbc.html"
REPOLOGY="unixodbc"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="ftp://ftp.unixodbc.org/pub/unixODBC/$TARBALL"

BUILD_DEPENDS="readline-dev"
SPLIT="libunixODBC unixODBC unixODBC-dev"

compile_rules() {
	./configure \
		--sysconfdir=/etc/unixODBC \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make $MAKEFLAGS &&
	mkdir -p $install/etc/unixODBC/ &&
	make DESTDIR=$DESTDIR install || return 1

	find doc -name "Makefile*" -delete
	find doc -type f -exec chmod 644 '{}' \;
	cook_pick_docs doc/*
}

genpkg_rules() {
	case $PACKAGE in
		libunixODBC)
			copy *.so*
			CAT="system-tools|libraries"
			;;
		unixODBC)
			copy @std @rm
			DEPENDS="libunixODBC readline"
			CONFIG_FILES="/etc/unixODBC/"
			TAGS="database"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
