# SliTaz package receipt v2.

PACKAGE="glib"
VERSION="2.56.1"
CATEGORY="x-window"
SHORT_DESC="C routines"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://developer.gnome.org/glib/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/glib2.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="automake libtool zlib-dev libffi-dev gettext   elfutils-dev \
gtk-doc libxslt docbook-xsl dbus-dev"
SPLIT="glib-static glib-dev"

compile_rules() {
	# --enable-static: desktop-file-validate-static require such lib
	NOCONFIGURE=1 ./autogen.sh &&
	./configure \
		--enable-debug=no \
		--enable-static \
		--disable-fam \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		glib)
			copy @std
			# Python codegen, tester, Perl mkenums --> glib-dev
			cd $fs/usr/bin
			rm gdbus-codegen gtester* glib-mkenums glib-gettextize
			rm -r $fs/usr/share
			DEPENDS="elfutils libffi libpcre util-linux-mount zlib"
			;;
		glib-static)
			copy *.a
			DEPENDS=" "
			CAT="development|static libraries"
			;;
		glib-dev)
			copy @std @dev @rm
			DEPENDS="glib glibc-dev libffi-dev pcre-dev python \
			util-linux-mount-dev zlib-dev perl"
			;;
	esac
}
