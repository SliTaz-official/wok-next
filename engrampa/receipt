# SliTaz package receipt v2.

PACKAGE="engrampa"
VERSION="1.18.2"
CATEGORY="utilities"
SHORT_DESC="A file archiver for MATE"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://github.com/mate-desktop/engrampa"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/engrampa/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common yelp-tools gtk+3-dev caja-dev json-glib-dev itstool \
xorg-libSM-dev"

compile_rules() {
	./autogen.sh \
		--disable-packagekit \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="cairo caja gdk-pixbuf glib gtk+3 json-glib pango"
	SUGGESTED="unrar unace p7zip zip"
	TAGS="MATE"
}
