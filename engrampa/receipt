# SliTaz package receipt v2.

PACKAGE="engrampa"
VERSION="1.18.2"
CATEGORY="utilities"
SHORT_DESC="A file archiver for MATE"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://github.com/mate-desktop/engrampa"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/engrampa/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common yelp-tools gtk+3-dev caja-dev json-glib-dev itstool \
xorg-libSM-dev"
SPLIT="engrampa-dev"

compile_rules() {
	./autogen.sh \
		--disable-packagekit \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		engrampa)
			copy @std
			DEPENDS="atk bzlib cairo caja fontconfig freetype gdk-pixbuf glib \
			gtk+3 json-glib libffi libharfbuzz liblzma libpng16 libxml2 pango \
			pcre util-linux-blkid util-linux-mount util-linux-uuid xorg-libX11 \
			xorg-libXau xorg-libXdmcp xorg-libXext xorg-libXrender xorg-libxcb \
			xorg-pixman zlib"
			SUGGESTED="unrar unace p7zip zip"
			;;
		*-dev)
			copy @dev
			DEPENDS="engrampa atk-dev bzip2-dev cairo-dev caja-dev \
			fontconfig-dev freetype-dev gdk-pixbuf-dev glib-dev gtk+3-dev \
			harfbuzz-dev libffi-dev libpng16-dev libxml2-dev pango-dev \
			pcre-dev util-linux-blkid-dev util-linux-mount-dev \
			util-linux-uuid-dev xorg-libX11-dev xorg-libXau-dev \
			xorg-libXdmcp-dev xorg-libXext-dev xorg-libXrender-dev \
			xorg-libxcb-dev xorg-pixman-dev xz-dev zlib-dev"
			;;
	esac
	TAGS="MATE"
}
