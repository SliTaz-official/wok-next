# SliTaz package receipt.

PACKAGE="fftw"
VERSION="3.3.6-pl2"
CATEGORY="multimedia"
SHORT_DESC="A library for computing the discrete Fourier transform (DFT)"
MAINTAINER="jozee@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.fftw.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://www.fftw.org/$TARBALL"

BUILD_DEPENDS="gfortran"

# Rules to configure and make the package.
compile_rules() {
	# build double precision
	./configure \
		F77=gfortran \
		--enable-shared \
		$CONFIGURE_ARGS &&
	make $MAKEFLAGS &&
	make DESTDIR=$DESTDIR install

	# build long double precission
	make clean
	./configure \
		F77=gfortran \
		--enable-long-double \
		--enable-shared \
		$CONFIGURE_ARGS &&
	make $MAKEFLAGS &&
	make DESTDIR=$DESTDIR install

	# build single precision
	make clean
	./configure \
		F77=gfortran \
		--enable-float \
		--enable-shared \
		$CONFIGURE_ARGS &&
	make $MAKEFLAGS &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
