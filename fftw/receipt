# SliTaz package receipt v2.

PACKAGE="fftw"
VERSION="3.3.6-pl2"
CATEGORY="multimedia"
SHORT_DESC="A library for computing the discrete Fourier transform (DFT)"
MAINTAINER="jozee@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.fftw.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/fftw.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://www.fftw.org/$TARBALL"

BUILD_DEPENDS="gfortran"
SPLIT="fftw-dev"

compile_rules() {
	# --enable-threads: ardour need it: cannot find -lfftw3f_threads

	# build double precision (fftw3)
	./configure \
		F77=gfortran \
		--enable-shared \
		--enable-threads \
		$CONFIGURE_ARGS &&
	make $MAKEFLAGS &&
	make DESTDIR=$DESTDIR install

	# build long double precission (fftw3l)
	make clean
	./configure \
		F77=gfortran \
		--enable-long-double \
		--enable-shared \
		--enable-threads \
		$CONFIGURE_ARGS &&
	make $MAKEFLAGS &&
	make DESTDIR=$DESTDIR install

	# build single precision (fftw3f)
	make clean
	./configure \
		F77=gfortran \
		--enable-float \
		--enable-shared \
		--enable-threads \
		$CONFIGURE_ARGS &&
	make $MAKEFLAGS &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		fftw)  copy @std;;
		*-dev) copy @dev;;
	esac
}
