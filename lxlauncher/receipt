# SliTaz package receipt v2.

PACKAGE="lxlauncher"
VERSION="0.2.4"
CATEGORY="x-window"
SHORT_DESC="LXDE launcher for netbooks"
LICENSE="GPL3"
MAINTAINER="pankso@slitaz.org"
WEB_SITE="https://wiki.lxde.org/en/LXLauncher"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$SF_MIRROR/lxde/$TARBALL"

BUILD_DEPENDS="xorg-libX11-dev gtk+-dev gnome-menus gnome-menus-dev \
menu-cache-dev startup-notification-dev startup-notification xorg-libxcb-dev \
intltool"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install || return 1

	# SliTaz homemade config file
	install -Dm644 $stuff/gtkrc $install/etc/xdg/lxlauncher/gtkrc
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 gtk+ gnome-menus startup-notification menu-cache \
	xorg-libXdamage"
	TAGS="LXDE netbook"
}
