# SliTaz package receipt v2.

PACKAGE="dhcp6"
VERSION="4.2.2"
CATEGORY="network"
SHORT_DESC="Dynamic Host Configuration Protocol with IPv6 support"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="ISC"
WEB_SITE="https://www.isc.org/downloads/DHCP/"

TARBALL="dhcp-$VERSION.tar.gz"
WGET_URL="https://ftp.isc.org/isc/dhcp/$TARBALL"

BUILD_DEPENDS="perl"
SPLIT="dhcp6-client dhcp6-relay dhcp6-dev"
SIBLINGS="dhcp"

# Rules to configure and make the package.
compile_rules()
{
	grep -q MYEOL includes/dhctoken.h ||
	sed -i "s/SEMI/MYEOL = '\\\\n',\n\tQUESTION = '?',\n\t&/" \
		includes/dhctoken.h
	sed -i 's/== NOERROR/== (isc_result_t) NOERROR/' server/ddns.c

	./configure \
		--sysconfdir=/etc \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$DESTDIR install

	mkdir -p $install/etc/init.d
	cp $WOK/dhcp/stuff/dhcpd $install/etc/init.d
	cp $src/client/scripts/linux $install/etc/dhclient-script
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		dhcp6)
			copy dhcpd.conf dhcpd
			CONFIG_FILES="/etc/dhcpd.conf"
			PROVIDE="dhcp"
			;;
		dhcp6-client)
			copy dhclient.conf dhclient-script dhclient omshell
			CAT="network|ISC client"
			DEPENDS=" "
			CONFIG_FILES="/etc/dhclient.conf"
			PROVIDE="dhcp-client"
			;;
		dhcp6-relay)
			copy dhcrelay
			CAT="network|relay"
			DEPENDS=" "
			PROVIDE="dhcp-relay"
			;;
		*-dev) copy @dev;;
	esac
}

