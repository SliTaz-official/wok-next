# SliTaz package receipt v2.

PACKAGE="python-jinja2"
VERSION="latest"
CATEGORY="python"
SHORT_DESC="Stand-alone template engine"
MAINTAINER="claudinei@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://jinja.pocoo.org"
REPOLOGY="python:jinja2"

BUILD_DEPENDS="python-markupsafe"

compile_rules() {
	pip install --no-compile --root=$DESTDIR Jinja2
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*Jinja2-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python-markupsafe"
}
