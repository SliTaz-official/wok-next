# SliTaz package receipt v2.

PACKAGE="mcrypt"
VERSION="2.6.8"
CATEGORY="security"
SHORT_DESC="Simple crypting program"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://mcrypt.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://downloads.sourceforge.net/project/mcrypt/MCrypt/$VERSION/$TARBALL"

BUILD_DEPENDS="libmcrypt-dev mhash-dev zlib-dev"
COOKOPTS="skip-log-errors"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="zlib mhash libmcrypt"
}
