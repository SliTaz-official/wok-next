# SliTaz package receipt v2.

PACKAGE="hsetroot"
VERSION="1.0.2"
CATEGORY="x-window"
SHORT_DESC="Tool to set desktop wallpaper"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://thegraveyard.org/hsetroot.php"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://thegraveyard.org/files/$TARBALL"

BUILD_DEPENDS="imlib2-dev libpng16-dev xorg-libX11-dev"
# ARM: imlib2-dev must be installed in build chroot

compile_rules() {
	export LDFLAGS="$LDFLAGS -Wl,--copy-dt-needed-entries -lX11"
	./configure \
		$CONFIGURE_ARGS &&
	make && make install
}

genpkg_rules() {
	copy @std
	DEPENDS="imlib2 libpng16 freetype xorg-libX11 xorg-libXau xorg-libXdmcp \
	xorg-libXext"
	TAGS="wallpaper"
}
