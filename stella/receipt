# SliTaz package receipt v2.

PACKAGE="stella"
VERSION="3.7.5"
CATEGORY="games"
SHORT_DESC="A multi-platform Atari 2600 VCS emulator"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://stella.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION-src.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="libsdl-dev libpng16-dev zlib-dev"

compile_rules() {
	./configure \
		--prefix=/usr &&
	make &&
	make DESTDIR=$install install || return 1

	sed -i 's|Icon=stella.png|Icon=stella|' $install/usr/share/applications/stella.desktop
}

genpkg_rules() {
	copy @std
	DEPENDS="gcc-lib-base libsdl libpng16"
	TAGS="emulator atari"
}
