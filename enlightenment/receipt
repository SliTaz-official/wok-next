# SliTaz package receipt v2.

PACKAGE="enlightenment"
VERSION="0.17.6"
CATEGORY="x-window"
SHORT_DESC="Enlightenment window manager (E17)"
MAINTAINER="pankso@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://www.enlightenment.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://download.enlightenment.org/releases/$TARBALL"

BUILD_DEPENDS_arm="eet-dev evas-dev ecore-dev eeze-dev emotion-dev efreet-dev \
edbus-dev libelementary elementary-dev edje-dev ethumb-dev eio-dev \
alsa-lib-dev xorg-xcb-util-keysyms-dev bluez-dev connman-dev pam-dev"
BUILD_DEPENDS="shared-mime-info eet-dev evas-dev ecore-dev eeze-dev \
emotion-dev efreet-dev edbus-dev libelementary elementary-dev edje-dev \
ethumb-dev eio-dev alsa-lib-dev xorg-xcb-util-keysyms-dev bluez-dev \
connman-dev pam-dev pm-utils"
SPLIT="enlightenment enlightenment-pam enlightenment-backgrounds"

LOCALES="cs da de el es fr fr_CH hu it pl pt pt_BR ru sl sv zh_CN zh_TW"

compile_rules() {
	cp -a $src $src-pam
	export CFLAGS="$CFLAGS -fvisibility=hidden"
	export LDFLAGS="$LDFLAGS -fvisibility=hidden"
	./configure \
		--disable-connman \
		--disable-enlightenment-menu \
		--disable-doc \
		--build=${ARCH}-slitaz-gnulinux \
		$CONFIGURE_ARGS &&
	make $MAKEFLAGS &&
	make install || return 1

	cd $src-pam
	./configure \
		--disable-mount-hal \
		--disable-doc \
		--build=${ARCH}-slitaz-gnulinux \
		$CONFIGURE_ARGS &&
	make $MAKEFLAGS &&
	make DESTDIR=$DESTDIR-pam install
}

genpkg_rules() {
	case $PACKAGE in
	enlightenment|enlightenment-pam)
		DEPENDS="eet evas ecore eeze emotion efreet edbus edje \
			elementary alsa-lib xorg-xcb-util-keysyms"
		if [ $PACKAGE == 'enlightenment-pam' ]; then
			DEPENDS="$DEPENDS pam"
			install=$install-pam
			CAT="x-window|with PAM, Bluez and connman support"
			SUGGESTED="bluez wpa_supplicant connman pm-utils"
			PROVIDE="enlightenment:pam"
		fi
		mkdir -p $fs/usr/share/locale
		# Use a modified sysactions.conf
		cp -a $stuff/etc $fs

		cp -a $install/usr/bin $fs/usr
		cp -a $install/usr/lib $fs/usr
		cp -a $install/usr/share/enlightenment $fs/usr/share
		cp -a $install/usr/share/xsessions $fs/usr/share

		# Remove devel files *.a/*.la
		rm -rf $fs/usr/lib/enlightenment/preload/*.*a
		rm -rf $fs/usr/lib/enlightenment/modules/*/*/*.*a

		# Remove backgrounds (1,6 Mb).
		rm -rf $fs/usr/share/enlightenment/data/backgrounds/*

		# locales
		for locale in $LOCALES; do
			cp -a $install/usr/share/locale/$locale $fs/usr/share/locale
		done
		;;
	enlightenment-backgrounds)
		CAT="x-window|additional backgrounds"
		mkdir -p $fs/usr/share/enlightenment/data/backgrounds
		cp -a $install/usr/share/enlightenment/data/backgrounds/* \
			$fs/usr/share/enlightenment/data/backgrounds
		;;
	esac
	TAGS="e enlightenment window-manager"
}

post_install_enlightenment() {
	res=$(grep ^session < "$1/etc/slim.conf" | sed s/"sessions. *"// \
		| sed s/,e17//)
	# Adding WM to SLIM available sessions.
	if ! echo "$res" | grep -q enlightenment; then
		echo -n "Adding enlightenment to /etc/slim.conf..."
		sed -i "s/^sessions.*/sessions            enlightenment,${res}xs/" \
			/etc/slim.conf
		status
	fi
}

post_remove_enlightenment() {
	# Remove WM from SLIM available sessions.
	if grep -q enlightenment "$1/etc/slim.conf"; then
		sed -i s/enlightenment,// "$1/etc/slim.conf"
	fi
}

post_install_enlightenment_pam() {
	res=$(grep ^session < "$1/etc/slim.conf" | sed s/"sessions. *"// \
		| sed s/,e17//)
	# Adding WM to SLIM available sessions.
	if ! echo "$res" | grep -q enlightenment; then
		echo -n "Adding enlightenment to /etc/slim.conf..."
		sed -i "s/^sessions.*/sessions            enlightenment,${res}xs/" \
			/etc/slim.conf
		status
	fi
}

post_remove_enlightenment_pam() {
	# Remove WM from SLIM available sessions.
	if grep -q enlightenment "$1/etc/slim.conf"; then
		sed -i s/enlightenment,// "$1/etc/slim.conf"
	fi
}
