# SliTaz package receipt v2.

PACKAGE="gcab"
VERSION="1.1"
CATEGORY="utilities"
SHORT_DESC="GObject library to create cabinet files"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://wiki.gnome.org/msitools"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/$VERSION/$TARBALL"

BUILD_DEPENDS="meson ninja git glib-dev gobject-introspection-dev vala gettext \
intltool"
SPLIT="$PACKAGE-dev"

compile_rules() {
	fix utf-8; export LC_ALL=en_US.UTF-8

	mkdir build
	cd    build

	meson-wrapper \
		-D docs=false &&
	ninja &&
	ninja install
}

genpkg_rules() {
	case $PACKAGE in
		gcab)
			copy @std
			DEPENDS="glib zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="gcab glib-dev"
			;;
	esac
}
