# SliTaz package receipt v2.

PACKAGE="compface"
VERSION="1.5.2"
CATEGORY="utilities"
SHORT_DESC="Utils & libs to convert from/to X-Face format"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="http://freecode.com/projects/compface"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://ftp.xemacs.org/pub/xemacs/aux/$TARBALL"

SPLIT="xbm2xface compface compface-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS && make && make install || return 1

	install -Dm755 $src/xbm2xface.pl $install/usr/bin/xbm2xface.pl
}

genpkg_rules() {
	case $PACKAGE in
		xbm2xface)
			copy xbm2xface.pl
			DEPENDS="compface perl"
			;;
		compface)
			copy @std @rm
			;;
		*-dev)
			copy @dev
			;;
	esac
}
