# SliTaz package receipt v2.

PACKAGE="xorg-libXcursor"
VERSION="1.1.14"
CATEGORY="x-window"
SHORT_DESC="Cursor extension"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7lib.html"

TARBALL="libXcursor-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-libXrender-dev xorg-libXfixes-dev"
SPLIT="xorg-libXcursor-dev"

compile_rules() {
	fix ld
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXcursor)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXfixes xorg-libXrender"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXcursor \
			xorg-libX11-dev xorg-libXfixes-dev xorg-libXrender-dev xorg-xproto"
			;;
	esac
}
