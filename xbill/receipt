# SliTaz package receipt.

PACKAGE="xbill"
VERSION="2.1"
CATEGORY="games"
SHORT_DESC="Game that tests your reflexes as you seek and destroy all forms of Bill"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="http://www.xbill.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/download/$TARBALL"

BUILD_DEPENDS="gtk2-dev xorg-libXaw-dev lesstif-dev"

compile_rules() {
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		--localstatedir=/var/games \
		--enable-gtk \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	mkdir -p $fs/usr/share
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/share/xbill $fs/usr/share
	DEPENDS="gtk2 xorg-libXaw lesstif"
}
