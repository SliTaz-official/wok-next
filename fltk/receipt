# SliTaz package receipt v2.

PACKAGE="fltk"
VERSION="1.3.3"
CATEGORY="system-tools"
SHORT_DESC="Fast Light Tool Kit (provide fluid)."
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2"
TARBALL="$PACKAGE-$VERSION-source.tar.gz"
WEB_SITE="http://www.fltk.org/"
WGET_URL="http://fltk.org/pub/fltk/$VERSION/$TARBALL"
HOST_ARCH="i486 arm"

BUILD_DEPENDS="jpeg-dev libpng-dev libglu-mesa libglu-mesa-dev mesa mesa-dev \
xorg-libXinerama-dev xorg-libXft-dev \
xorg-libXft fontconfig xorg-libX11-dev xorg-libXinerama \
xorg-libXfixes"
SPLIT="fltk-dev fltk-doc fltk-blocks fltk-checkers fltk-colbrowser fltk-editor \
fltk-sudoku"

# Handle cross compilation.
case "$ARCH" in
	#i?86) 
	#	ARCH_ARGS="--with-archflags=i386" ;;
	arm) 
		BUILD_DEPENDS="jpeg-dev libpng-dev xorg-libXft-dev" 
		ARCH_ARGS="--x-includes=/cross/$ARCH/sysroot/usr/include \
		--x-libraries=/cross/$ARCH/sysroot/usr/lib" ;;
esac

# Rules to configure and make the package.
compile_rules()
{
	patch -p0 < $stuff/Fl_XFont_On_Demand.patch
	./configure ${ARCH_ARGS} \
		--enable-shared \
		--enable-xft \
		--enable-threads \
		$CONFIGURE_ARGS &&
	make lib $MAKEFLAGS &&
	make DESTDIR=$DESTDIR install &&
	cd test
	[ -x ./blocks ] || make blocks
	[ -x ./checkers ] || make checkers
	rm -f colbrowser
	sed -i s'#"rgb.txt"#"/usr/share/fltk/rgb.txt"#' colbrowser.cxx &&
	make colbrowser
	[ -x ./editor ] || make editor
	[ -x ./sudoku ] || make sudoku
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
	fltk)
		# Handle SliTaz arch
		case "$SLITAZ_ARCH" in
		arm*) DEPENDS="expat fontconfig freetype jpeg libpng \
				xorg-libXft" ;;
		*) DEPENDS="expat fontconfig freetype libpng jpeg xorg-libX11 \
			xorg-libXau xorg-libXdmcp xorg-libXext xorg-libXft \
			xorg-libXrender zlib gcc-lib-base mesa libglu-mesa"
		esac
		mkdir -p $fs/usr/bin $fs/usr/lib $fs/usr/share/pixmaps
		cp -a $install/usr/bin/fluid $fs/usr/bin
		cp -a $install/usr/lib/*.so* $fs/usr/lib
		cp $src/fluid/icons/fluid-32.png $fs/usr/share/pixmaps/fluid.png
		;;
	fltk-dev)
		CAT="development|Fast Light Tool Kit devel files."
		DEPENDS="fltk"
		mkdir -p $fs/usr/bin $fs/usr/lib
		cp -a $install/usr/bin/fltk-config $fs/usr/bin
		cp -a $install/usr/lib/*.*a $fs/usr/lib
		cp -a $install/usr/include $fs/usr
		;;
	fltk-doc)
		CAT="development|Fast Light Tool Kit documentation and examples."
		mkdir -p $fs/usr/share
		cp -a $install/usr/share/doc $fs/usr/share
		;;
	fltk-blocks)
		CAT="games|FLTK Blocks game."
		DEPENDS="fltk"
		mkdir -p $fs/usr/games $fs/usr/share/pixmaps \
			$fs/usr/share/applications
		cp -a ${src}/test/blocks $fs/usr/games/$PACKAGE
		cp ${src}/test/desktop/blocks-32.png \
			$fs/usr/share/pixmaps/$PACKAGE.png
		cp $stuff/$PACKAGE.desktop $fs/usr/share/applications
		;;
	fltk-checkers)
		CAT="games|FLTK Checkers game."
		DEPENDS="fltk"
		mkdir -p $fs/usr/games $fs/usr/share/pixmaps \
			$fs/usr/share/applications
		cp -a ${src}/test/checkers $fs/usr/games/$PACKAGE
		cp ${src}/test/desktop/checkers-32.png \
			$fs/usr/share/pixmaps/$PACKAGE.png
		cp $stuff/$PACKAGE.desktop $fs/usr/share/applications
		;;
	fltk-colbrowser)
		CAT="graphics|FLT Color browser."
		DEPENDS="fltk xorg-libXinerama"
		mkdir -p $fs/usr/bin $fs/usr/share/fltk \
			$fs/usr/share/applications
		cp -a ${src}/test/colbrowser ${fs}/usr/bin/$PACKAGE
		cp ${src}/test/rgb.txt ${fs}/usr/share/fltk
		cp $stuff/$PACKAGE.desktop $fs/usr/share/applications
		;;
	fltk-editor)
		CAT="development|Fast Light Tool Kit text editor."
		DEPENDS="fltk"
		mkdir -p $fs/usr/bin $fs/usr/share/applications
		cp -a ${src}/test/editor $fs/usr/bin/$PACKAGE
		cp $stuff/$PACKAGE.desktop $fs/usr/share/applications
		;;
	fltk-sudoku)
		CAT="games|FLTK Sudoku game."
		DEPENDS="fltk"
		mkdir -p $fs/usr/games $fs/usr/share/pixmaps \
			$fs/usr/share/applications
		cp -a ${src}/test/sudoku $fs/usr/games/$PACKAGE
		cp ${src}/test/desktop/sudoku-32.png \
			$fs/usr/share/pixmaps/$PACKAGE.png
		cp $stuff/$PACKAGE.desktop $fs/usr/share/applications
		;;
	esac
}
