# SliTaz package receipt v2.

PACKAGE="xorg-mkfontscale"
VERSION="1.1.2"
CATEGORY="x-window"
SHORT_DESC="Create an index of scalable font files for X"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7app.html"

TARBALL="mkfontscale-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libfontenc-dev freetype-dev xorg-xproto"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="freetype xorg-libfontenc zlib"
	TAGS="utility xorg fonts"
}
