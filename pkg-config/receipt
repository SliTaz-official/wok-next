# SliTaz package receipt v2.

PACKAGE="pkg-config"
VERSION="0.29.1"
CATEGORY="development"
SHORT_DESC="Free desktop packages manager"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.freedesktop.org/wiki/Software/pkg-config/"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://pkg-config.freedesktop.org/releases/$TARBALL"

BUILD_DEPENDS="gcc libtool perl"
BUILD_DEPENDS_arm=" "

# Rules to configure and make the package.
compile_rules()
{
	case "$ARCH" in
		arm)
			./configure \
				--program-prefix=$TOOLPREFIX \
				--build=i486-slitaz-linux \
				--host=arm-slitaz-linux-gnueabi \
				--cache-file=arm-linux.cache ;;
		*)
			./configure \
				--prefix=/usr \
				--with-internal-glib \
				--disable-compile-warnings \
				--disable-host-tool \
				--docdir=/usr/share/doc/pkg-config-$VERSION \
				--build=$HOST_SYSTEM \
				--host=$HOST_SYSTEM
				;;
	esac &&
	make && make install

	cd $install/usr/bin
	mv pkg-config ${TOOLPREFIX}pkg-config
	ln -s ${TOOLPREFIX}pkg-config pkg-config
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std @dev
	DEPENDS="glibc-base"
}
