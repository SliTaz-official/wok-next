# SliTaz package receipt.

PACKAGE="newt"
VERSION="0.52.19"
CATEGORY="libdevel"
SHORT_DESC="Programming library for color text mode"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://fedorahosted.org/newt/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://fedorahosted.org/releases/n/e/$PACKAGE/$TARBALL"

DEPENDS="popt python slang tcl gpm"
BUILD_DEPENDS="slang-dev popt-dev python-dev tcl-dev"

# Rules to configure and make the package.
compile_rules()
{
	sed -e 's/^LIBNEWT =/#&/' \
		-e '/install -m 644 $(LIBNEWT)/ s/^/#/' \
		-e 's/$(LIBNEWT)/$(LIBNEWTSONAME)/g' \
		-i Makefile.in &&

	./configure \
		--with-gpm-support \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_folders bin
	cook_copy_files *.so* *.py *.mo
}
