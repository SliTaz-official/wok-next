# SliTaz package receipt.

PACKAGE="perl-test-without-module"
VERSION="0.20"
CATEGORY="perl"
SHORT_DESC="Test::Without::Module - Test fallback behaviour in absence of \
modules"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Test-Without-Module"
REPOLOGY="perl:test-without-module"

TARBALL="Test-Without-Module-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/C/CO/CORION/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
