# SliTaz package receipt v2.

PACKAGE="xorg-xkbevd"
VERSION="1.1.4"
CATEGORY="x-window"
SHORT_DESC="XKB event daemon"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7app.html"
REPOLOGY="xkbevd"

TARBALL="xkbevd-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libxkbfile-dev xorg-libX11-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libxkbfile"
}
