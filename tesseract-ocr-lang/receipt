# SliTaz package receipt.

PACKAGE="tesseract-ocr-lang"
VERSION="3.02"
CATEGORY="office"
SHORT_DESC="Language data packs for Tesseract OCR."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="Apache"
WEB_SITE="http://code.google.com/p/tesseract-ocr/"

SPLIT="tesseract-ocr-lang-ara tesseract-ocr-lang-bul \
tesseract-ocr-lang-cat tesseract-ocr-lang-ces tesseract-ocr-lang-chi_sim \
tesseract-ocr-lang-chi_tra tesseract-ocr-lang-dan tesseract-ocr-lang-deu \
tesseract-ocr-lang-ell tesseract-ocr-lang-eng tesseract-ocr-lang-fin \
tesseract-ocr-lang-fra tesseract-ocr-lang-glg tesseract-ocr-lang-heb \
tesseract-ocr-lang-hin tesseract-ocr-lang-hrv tesseract-ocr-lang-hun \
tesseract-ocr-lang-ind tesseract-ocr-lang-isl tesseract-ocr-lang-jpn \
tesseract-ocr-lang-kor tesseract-ocr-lang-nld tesseract-ocr-lang-nor \
tesseract-ocr-lang-pol tesseract-ocr-lang-por tesseract-ocr-lang-ron \
tesseract-ocr-lang-rus tesseract-ocr-lang-slk tesseract-ocr-lang-slv \
tesseract-ocr-lang-spa tesseract-ocr-lang-srp tesseract-ocr-lang-swa \
tesseract-ocr-lang-tha tesseract-ocr-lang-tur tesseract-ocr-lang-ukr"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share
	case $PACKAGE in
	tesseract-ocr-lang)
		DEPENDS="$SPLIT"
		;;
	tesseract-ocr-lang-*)
		TARBALL="tesseract-ocr-$VERSION.${PACKAGE#*lang-}.tar.gz"
		EXTRA_SOURCE_FILES="$TARBALL"
		WGET_URL="http://tesseract-ocr.googlecode.com/files/$TARBALL"
		DEPENDS="tesseract-ocr"
		[ -s $SOURCES_REPOSITORY/$TARBALL ] ||
			wget -P $SOURCES_REPOSITORY $WGET_URL
		tar xzf $SOURCES_REPOSITORY/$TARBALL -C $fs/usr/share/
		while read lang text; do
			[ $lang == ${PACKAGE#*lang-} ] || continue
			CAT="office|$text language data for Tesseract OCR."
			break
		done <<EOT
ara	Arabic
bul	Bulgarian
cat	Catalan
ces	Czetch
chi_sim	Chinese (Simplified)
chi_tra	Chinese (Traditional)
dan	Danish
deu	German
ell	Greek
eng	English
fin	Finnish
fra	French
glg	Galician
heb	Hebrew
hin	Hindi
hrv	Croatian
hun	Hungarian
ind	Indonesian
isl	Icelandic
jpn	Japanese
kor	Korean
nld	Dutch
nor	Norwegian
pol	Polish
por	Portuguese
ron	Romanian
rus	Russian
slk	Slovakian
slv	Slovenian
spa	Spanish
srp	Serbian
swa	Swahili
tha	Thai
tur	Tukish
ukr	Ukranian
EOT
		;;
	esac
}
