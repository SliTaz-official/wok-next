# SliTaz package receipt v2.

PACKAGE="burp"
VERSION="1.3.10"
CATEGORY="utilities"
SHORT_DESC="KISS BackUp and Restore Program"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://burp.grke.net/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="librsync-dev acl-dev openssl-dev attr-dev popt-dev ncurses-dev \
bzip2-dev zlib-dev"

compile_rules() {
	./configure \
		--sbindir=/usr/sbin \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="acl openssl attr popt ncurses zlib bzlib gcc-lib-base"
}
