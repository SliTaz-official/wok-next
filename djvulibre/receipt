# SliTaz package receipt v2.

PACKAGE="djvulibre"
VERSION="3.5.27"
CATEGORY="office"
SHORT_DESC="A web-centric format and software platform for distributing documents and images"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://djvu.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/djvu/$TARBALL"

BUILD_DEPENDS_arm="tiff-dev jpeg-dev"
BUILD_DEPENDS="tiff-dev jpeg-dev xdg-utils bash rsvg-convert libpng12-dev"
SPLIT="djvulibre-dev"

compile_rules() {
	./configure \
		--sysconfdir=/etc \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		djvulibre)
			mkdir -p $fs/usr/lib $fs/usr/share
			cp -a $install/usr/lib/*so* $fs/usr/lib
			cp -a $install/usr/bin $fs/usr
			cp -a $install/usr/share/djvu $fs/usr/share
			DEPENDS="gcc-lib-base tiff jpeg libpng12"
			;;
		*-dev)
			mkdir -p $fs/usr/lib
			cp -a $install/usr/include $fs/usr
			cp -a $install/usr/lib/*a $fs/usr/lib
			cp -a $install/usr/lib/pkgconfig $fs/usr/lib
			;;
	esac
}
