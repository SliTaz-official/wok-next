# SliTaz package receipt.

PACKAGE="perl-module-build"
VERSION="0.4224"
CATEGORY="perl"
SHORT_DESC="Module::Build - Build and install Perl modules"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Module-Build"
REPOLOGY="perl:module-build"

TARBALL="Module-Build-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/L/LE/LEONT/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl-inc-latest"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
