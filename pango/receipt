# SliTaz package receipt.

PACKAGE="pango"
VERSION="1.40.1"
CATEGORY="x-window"
SHORT_DESC="Layout and rendering of internationalized text"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.pango.org/"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION:0:4}/$TARBALL"

DEPENDS="bzlib cairo fontconfig freetype glib harfbuzz libffi liblzma libpng \
libxcb libxml2 pcre pixman xorg-libX11 xorg-libXau xorg-libXdmcp xorg-libXext \
xorg-libXft xorg-libXrender zlib"
BUILD_DEPENDS="harfbuzz-dev xorg-libXft-dev cairo-dev gobject-introspection-dev"
BUILD_DEPENDS_arm="cairo-dev libxml2-dev xorg-libXft-dev"

# Handle cross compilation
case "$ARCH" in
	arm*)
		BUILD_DEPENDS=$BUILD_DEPENDS_arm
		export LIBTOOL=${HOST_SYSTEM}-libtool
		ARCH_ARGS="--enable-introspection=no" ;;
esac

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		$CONFIGURE_ARGS $ARCH_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy bin/ *.so*
}
