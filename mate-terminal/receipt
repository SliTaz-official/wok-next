# SliTaz package receipt v2.

PACKAGE="mate-terminal"
VERSION="1.18.1"
CATEGORY="system-tools"
SHORT_DESC="The MATE Terminal Emulator"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://github.com/mate-desktop/mate-terminal"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/mate-terminal/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common yelp-tools vte-dev gtk+3-dev dconf-dev \
xorg-libX11-dev itstool xorg-libSM-dev"

compile_rules() {
	./autogen.sh \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="atk bzlib cairo dconf fontconfig freetype gdk-pixbuf glib gmp \
	gtk+3 libffi libgnutls libharfbuzz libidn liblzma libpng16 libtasn1 \
	libunistring libxml2 nettle p11-kit pango pcre pcre2 util-linux-blkid \
	util-linux-mount util-linux-uuid vte xorg-libICE xorg-libSM xorg-libX11 \
	xorg-libXau xorg-libXdmcp xorg-libXext xorg-libXrender xorg-libxcb \
	xorg-pixman zlib"
	TAGS="MATE"
}
