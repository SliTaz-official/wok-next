# SliTaz package receipt v2.

PACKAGE="powertop"
VERSION="2.0"
CATEGORY="system-tools"
SHORT_DESC="Utility designed to measure and explain a computer's electrical \
power consumption"
MAINTAINER="domcox@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.lesswatts.org/projects/powertop/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://01.org/powertop/sites/default/files/downloads/$TARBALL"

BUILD_DEPENDS="acl gettext ncurses-dev autoconf automake libtool \
pciutils-dev libnl-dev zlib-dev gettext diffutils"

compile_rules() {
	sed -i 's/AC_PROG_LIBTOOL/AC_PROG_MKDIR_P\n&/' configure.ac
	sed -i 's/(mkdir_p)/(MKDIR_P)/' po/Makefile.in.in
	./autogen.sh

	./configure &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="ncurses pciutils libnl zlib gcc-lib-base"
	TAGS="power-management"
}
