# SliTaz package receipt v2.

PACKAGE="pyroom"
VERSION="0.4.1"
CATEGORY="office"
SHORT_DESC="Full screen editor"
MAINTAINER="paul@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://pyroom.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://launchpad.net/pyroom/${VERSION%.*}/$VERSION/+download/$TARBALL"

BUILD_DEPENDS="python python-dev gettext"

compile_rules() {
	python setup.py build &&
	python setup.py install --root=$DESTDIR
}

genpkg_rules() {
	copy @std
	DEPENDS="python python-pygtk python-xdg libffi"
}
