# SliTaz package receipt v2.

PACKAGE="perl-importer"
VERSION="0.025"
CATEGORY="perl"
SHORT_DESC="Importer - Alternative but compatible interface to modules that \
export symbols"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Importer"
REPOLOGY="perl:importer"

TARBALL="Importer-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/E/EX/EXODIST/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
