# SliTaz package receipt v2.

PACKAGE="luaexpat"
VERSION="1.3.0"
CATEGORY="system-tools"
SHORT_DESC="SAX XML parser based on the Expat library"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="http://matthewwild.co.uk/projects/luaexpat/"
REPOLOGY="lua:expat"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://matthewwild.co.uk/projects/luaexpat/$TARBALL"

BUILD_DEPENDS="lua5.1-dev expat-dev"

compile_rules() {
	make LUA_V=5.1 LUA_INC=' -I/usr/include/lua/5.1' &&
	make LUA_V=5.1 DESTDIR="$install" install
}

genpkg_rules() {
	copy @std
	DEPENDS="lua5.1 expat"
}
