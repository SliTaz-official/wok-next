# SliTaz package receipt v2.

PACKAGE="xorg-xfs"
VERSION="1.1.4"
CATEGORY="x-window"
SHORT_DESC="X Font Server"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xfs-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-font-util-dev xorg-xproto \
xorg-libXfont-dev xorg-xtrans"
PKG_RULE="std"

compile_rules() {
	touch /root/missing /missing

	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libXfont"
	CONFIG_FILES="/etc/X11/fs/config"
}
