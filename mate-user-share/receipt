# SliTaz package receipt v2.

PACKAGE="mate-user-share"
VERSION="1.18.0"
CATEGORY="system-tools"
SHORT_DESC="Easy to use user-level file sharing"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://github.com/mate-desktop/mate-user-share"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/mate-user-share/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common yelp-tools itstool xorg-libX11-dev gtk+3-dev \
dbus-glib-dev libnotify-gtk3-dev libcanberra-dev caja-dev"
SPLIT="mate-user-share-dev"

compile_rules() {
	./autogen.sh \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		mate-user-share)
			copy @std
			DEPENDS="atk bzlib cairo caja dbus dbus-glib fontconfig freetype \
			gdk-pixbuf glib gtk+3 libcanberralibcanberra-gtk3 libffi \
			libharfbuzz libltdl liblzma libnotify-gtk3 libogg libpng16 \
			libvorbis libxml2 pango pcre util-linux-blkid util-linux-mount \
			util-linux-uuid xorg-libICE xorg-libSM xorg-libX11 xorg-libXau \
			xorg-libXdmcp xorg-libXext xorg-libXrender xorg-libxcb xorg-pixman \
			zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="mate-user-share atk-dev bzip2-dev cairo-dev caja-dev \
			fontconfig-dev freetype-dev gdk-pixbuf-dev glib-dev gtk+3-dev \
			harfbuzz-dev libffi-dev libpng16-dev libxml2-dev pango-dev \
			pcre-dev util-linux-blkid-dev util-linux-mount-dev \
			util-linux-uuid-dev xorg-libX11-dev xorg-libXau-dev \
			xorg-libXdmcp-dev xorg-libXext-dev xorg-libXrender-dev \
			xorg-libxcb-dev xorg-pixman-dev xz-dev zlib-dev"
			;;
	esac
	TAGS="MATE"
}
