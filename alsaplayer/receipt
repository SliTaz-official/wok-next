# SliTaz package receipt v2.

PACKAGE="alsaplayer"
VERSION="0.99.81"
CATEGORY="multimedia"
SHORT_DESC="ALSA GTK+ PCM audio player"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://alsaplayer.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="${WEB_SITE}$TARBALL"

BUILD_DEPENDS="gtk+-dev alsa-lib-dev libmad-dev libogg-dev libvorbis-dev flac-dev"
BUILD_DEPENDS_arm="gtk+-dev alsa-lib-dev libmad-dev libogg-dev libvorbis-dev"
SPLIT="alsaplayer-scopes alsaplayer alsaplayer-dev"

compile_rules() {
	i="$src/interface/gtk2/pixmaps"
	cp  -f $i/note.xpm    $i/logo.xpm
	sed -i 's/note/logo/' $i/logo.xpm

	./configure \
		--enable-gtk2 \
		--enable-flac \
		--disable-jack \
		--disable-esd \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	# Chmod install-sh to avoid install error.
	chmod 755 install-sh &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		alsaplayer-scopes)
			copy scopes2/*.so
			CAT="multimedia|visualisations"
			DEPENDS="glib gtk+   alsaplayer"
			;;
		alsaplayer)
			copy @std @rm
			DEPENDS="alsa-lib flac gdk-pixbuf glib gtk+ libmad libvorbis pango"
			TAGS="music audio player mp3 ogg flac"
			SUGGESTED="alsaplayer-scopes libid3tag"
			;;
		*-dev) copy @dev;;
	esac
}
