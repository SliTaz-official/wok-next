# SliTaz package receipt v2.

PACKAGE="perl-texi2html"
VERSION="1.82"
CATEGORY="utilities"
SHORT_DESC="Converts texinfo documents to HTML"
MAINTAINER="gokhlayeh@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.nongnu.org/texi2html/"

TARBALL="texi2html-$VERSION.tar.bz2"
WGET_URL="http://download.savannah.gnu.org/releases/texi2html/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	./configure $CONFIGURE_ARGS && make && make install || return 1

	sed -i 's|bin/env perl|bin/perl|' $install/usr/bin/texi2html
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
