# SliTaz package receipt v2.

PACKAGE="libdbusmenu-gtk3"
VERSION="16.04.0"
CATEGORY="x-window"
SHORT_DESC="Library for passing menus over DBus (GTK+3)"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3 LGPL2.1 LGPL3"
WEB_SITE="https://launchpad.net/libdbusmenu"

TARBALL="libdbusmenu-$VERSION.tar.gz"
WGET_URL="https://launchpad.net/libdbusmenu/${VERSION%.*}/$VERSION/+download/$TARBALL"

BUILD_DEPENDS="intltool gtk-doc gtk+3-dev gtk+-dev json-glib-dev vala"
SPLIT="libdbusmenu-gtk3-apps libdbusmenu-gtk3 libdbusmenu-gtk3-dev"
SIBLINGS="libdbusmenu-gtk2"

compile_rules() {
	./configure \
		--with-gtk=3 \
		$CONFIGURE_ARGS &&
	make &&
	make -j1 DESTDIR=$install install # please keep DESTDIR, or it will be partial installed
}

genpkg_rules() {
	case $PACKAGE in
		libdbusmenu-gtk3-apps)
			copy libexec/ # note "gtk+" in depends
			DEPENDS="libdbusmenu-gtk3 atk cairo fontconfig freetype gdk-pixbuf \
			glib gtk+ json-glib pango xorg-libX11"
			CAT="development|applications"
			;;
		libdbusmenu-gtk3)
			copy @std @rm
			DEPENDS="atk cairo gdk-pixbuf glib gtk+3 json-glib pango"
			;;
		*-dev)
			copy @dev
			DEPENDS="${SPLIT/$PACKAGE/} atk-dev bzip2-dev cairo-dev \
			fontconfig-dev freetype-dev gdk-pixbuf-dev glib-dev gtk+3-dev \
			harfbuzz-dev json-glib-dev libffi-dev libpng16-dev libxml2-dev \
			pango-dev pcre-dev util-linux-blkid-dev util-linux-mount-dev \
			util-linux-uuid-dev xorg-libX11-dev xorg-libXau-dev \
			xorg-libXdmcp-dev xorg-libXext-dev xorg-libXrender-dev \
			xorg-libxcb-dev xorg-pixman-dev xz-dev zlib-dev"
			;;
	esac
}
