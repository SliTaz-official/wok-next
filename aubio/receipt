# SliTaz package receipt v2.

PACKAGE="aubio"
VERSION="0.4.5"
CATEGORY="multimedia"
MAINTAINER="jozee@slitaz.org"
LICENSE="GPL3"
SHORT_DESC="A library for audio labelling"
WEB_SITE="https://aubio.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://aubio.org/pub/$TARBALL"

BUILD_DEPENDS="python-dev fftw-dev libsndfile-dev libsamplerate-dev jack-dev \
ffmpeg-dev gfortran lapack-dev python-numpy"
SPLIT="aubio-dev"

compile_rules() {
	./waf configure \
		--prefix=/usr \
		--enable-fftw3f &&
	./waf build &&
	./waf install \
		--destdir="$install"
#	./setup.py install --root="$install" --optimize=1
}

genpkg_rules() {
	case $PACKAGE in
		aubio)
			copy @std
			DEPENDS="ffmpeg fftw jack libsamplerate libsndfile"
			TAGS="audio label multimedia"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
