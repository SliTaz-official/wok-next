# SliTaz package receipt v2.

PACKAGE="xpaint"
VERSION="2.10.1"
CATEGORY="graphics"
SHORT_DESC="Simple paint program for X"
MAINTAINER="mojo@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://sf-xpaint.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/sf-xpaint/$TARBALL"

BUILD_DEPENDS="xorg-libX11-dev xorg-libXft-dev freetype-dev libXaw3dXft-dev \
libjpeg-turbo-dev tiff-dev libtool"
SPLIT="xpaint-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS && make -j1 && make install || return 1

	mkdir -p $install/usr/share/pixmaps
	ln -s ../xpaint/XPaintIcon.xpm $install/usr/share/pixmaps/xpaint.xpm
}

genpkg_rules() {
	case $PACKAGE in
		xpaint)
			copy @std
			DEPENDS="fontconfig libXaw3dXft libjpeg-turbo libpng16 tiff \
			xorg-libX11 xorg-libXext xorg-libXft xorg-libXmu xorg-libXpm \
			xorg-libXt"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
