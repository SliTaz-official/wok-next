# SliTaz package receipt v2.

PACKAGE="xpaint"
VERSION="2.10.1"
CATEGORY="graphics"
SHORT_DESC="Simple paint program for X"
MAINTAINER="mojo@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://sf-xpaint.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/sf-xpaint/$TARBALL"

BUILD_DEPENDS="xorg-libX11-dev xorg-libXft-dev freetype-dev libXaw3dXft-dev \
libjpeg-turbo-dev tiff-dev libtool"
SPLIT="xpaint-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS && make -j1 && make install || return 1

	mkdir -p $install/usr/share/pixmaps
	ln -s ../xpaint/XPaintIcon.xpm $install/usr/share/pixmaps/xpaint.xpm
}

genpkg_rules() {
	case $PACKAGE in
		xpaint)
			copy @std
			DEPENDS="bzlib fontconfig freetype glib libXaw3dXft libharfbuzz \
			libjpeg-turbo liblzma libpng16 libxml2 pcre tiff util-linux-uuid \
			xorg-libICE xorg-libSM xorg-libX11 xorg-libXau xorg-libXdmcp \
			xorg-libXext xorg-libXft xorg-libXmu xorg-libXpm xorg-libXrender \
			xorg-libXt xorg-libxcb zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="xpaint bzip2-dev fontconfig-dev freetype-dev glib-dev \
			harfbuzz-dev libjpeg-turbo-dev libXaw3dXft-dev libpng16-dev \
			libxml2-dev pcre-dev tiff-dev util-linux-uuid-dev xorg-libICE-dev \
			xorg-libSM-dev xorg-libX11-dev xorg-libXau-dev xorg-libXdmcp-dev \
			xorg-libXext-dev xorg-libXft-dev xorg-libXmu-dev xorg-libXpm-dev \
			xorg-libXrender-dev xorg-libXt-dev xorg-libxcb-dev xz-dev zlib-dev"
			;;
	esac
}
