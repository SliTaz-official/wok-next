# SliTaz package receipt v2.

PACKAGE="evas"
VERSION="1.7.10"
CATEGORY="x-window"
SHORT_DESC="EFL Canvas and scenegraph rendering library"
MAINTAINER="pankso@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://www.enlightenment.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://download.enlightenment.org/releases/$TARBALL"

BUILD_DEPENDS="eet-dev expat-dev fontconfig-dev freetype-dev fribidi-dev \
giflib-dev libpng16-dev tiff-dev libxml2-dev util-linux-uuid-dev \
xorg-libXScrnSaver-dev xorg-libXp-dev eina-dev"
SPLIT="evas-dev"

compile_rules() {
	sed -i 's/DGifCloseFile(gif/&,NULL/' \
		src/modules/loaders/gif/evas_image_load_gif.c
	export CFLAGS="$CFLAGS -fvisibility=hidden"
	export LDFLAGS="$LDFLAGS -fvisibility=hidden"

	./configure \
		--libexecdir=/usr/lib/$PACKAGE \
		--enable-cpu-c \
		--disable-doc \
		--disable-install-examples \
		$CONFIGURE_ARGS &&
	make $MAKEFLAGS && make install
}

genpkg_rules() {
	case $PACKAGE in
		evas)
			copy @std
			DEPENDS="eet expat fontconfig freetype giflib libpng16 tiff \
			libxml2 xorg-libXScrnSaver xorg-libXp eina"
			OPTIONAL_DEPENDS="mesa-dev glu-dev"
			TAGS="e enlightenment efl"
			;;
		evas-dev)
			copy @dev
			DEPENDS="eet-dev expat-dev fontconfig-dev freetype-dev fribidi-dev \
			giflib-dev libpng16-dev tiff-dev libxml2-dev util-linux-uuid-dev \
			xorg-dev xorg-libXScrnSaver-dev xorg-libXp-dev pkg-config"
			OPTIONAL_DEPENDS="mesa-dev glu-dev"
			;;
	esac
}
