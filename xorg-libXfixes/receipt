# SliTaz package receipt v2.

PACKAGE="xorg-libXfixes"
VERSION="5.0.3"
CATEGORY="x-window"
SHORT_DESC="X-Fixes extension"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7lib.html"

TARBALL="libXfixes-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-fixesproto xorg-libX11-dev"
SPLIT="xorg-libXfixes-dev"

compile_rules() {
	fix ld
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXfixes)
			copy @std
			DEPENDS="xorg-libX11"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXfixes \
			xorg-fixesproto xorg-libX11-dev xorg-xproto"
			;;
	esac
}
