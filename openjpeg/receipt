# SliTaz package receipt v2.

PACKAGE="openjpeg"
VERSION="1.5.2"
CATEGORY="graphics"
SHORT_DESC="An open source JPEG 2000 codec"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="BSD"
WEB_SITE="http://www.openjpeg.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/openjpeg.mirror/$TARBALL"

BUILD_DEPENDS="automake libtool libpng16-dev zlib-dev tiff-dev lcms2-dev"
SPLIT="openjpeg-tools openjpeg-dev"

compile_rules() {
	autoreconf -fi &&
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		openjpeg)
			copy *.so*
			;;
		*-tools)
			copy bin/
			CAT="graphics|applications"
			DEPENDS="openjpeg lcms2 libjpeg-turbo libpng16 tiff zlib"
			;;
		*-dev)
			copy @dev
			;;
	esac
}

