# SliTaz package receipt.

PACKAGE="perl-xml-entities"
VERSION="1.0002"
CATEGORY="perl"
SHORT_DESC="XML::Entities - Decode strings with XML entities"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/XML-Entities"
REPOLOGY="perl:xml-entities"

TARBALL="XML-Entities-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/S/SI/SIXTEASE/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
