# SliTaz package receipt v2.

PACKAGE="python-sphinxcontrib-websupport"
VERSION="latest"
CATEGORY="python"
SHORT_DESC="Sphinx API for Web Apps"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="BSD"
WEB_SITE="https://pypi.org/project/sphinxcontrib-websupport/"
REPOLOGY="python:sphinxcontrib-websupport"

BUILD_DEPENDS="python"

compile_rules() {
	pip install --no-compile --root=$DESTDIR sphinxcontrib-websupport
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*sphinxcontrib-websupport-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
}
