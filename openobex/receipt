# SliTaz package receipt v2.

PACKAGE="openobex"
VERSION="1.7.2"
CATEGORY="libs"
SHORT_DESC="OpenOBEX is an Open-source library for the OBject EXchange protocol"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="LGPL2"
WEB_SITE="https://gitlab.com/openobex/mainline"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/general/openobex.html"

TARBALL="openobex-$VERSION-Source.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="cmake bluez-dev libusb-dev libusb-compat-dev"
SPLIT="openobex-dev"

compile_rules() {
	# group plugdev (83) provided by slitaz-base-files

	mkdir build
	cd    build

	cmake \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=/usr/lib \
		-DCMAKE_BUILD_TYPE=Release \
		-Wno-dev \
		.. &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		openobex)
			copy @std
			DEPENDS="libusb"
			;;
		*-dev)
			copy @dev
			DEPENDS="openobex libusb-dev"
			;;
	esac
}
