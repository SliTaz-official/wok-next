# SliTaz package receipt v2.

PACKAGE="python-asterisk"
VERSION="latest"
CATEGORY="development"
SHORT_DESC="Python bindings for the Asterisk Manager API"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://pypi.python.org/pypi/py-Asterisk"
REPOLOGY="py-asterisk" # python:asterisk ?

BUILD_DEPENDS="python"

compile_rules() {
	pip install --no-compile --root=$DESTDIR py-Asterisk
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*py-Asterisk-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
}
