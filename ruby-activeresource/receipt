# SliTaz package receipt v2.

PACKAGE="ruby-activeresource"
VERSION="5.0.0"
CATEGORY="ruby"
SHORT_DESC="REST modeling framework (part of Rails)"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://rubygems.org/gems/${PACKAGE#*-}"
HOST_ARCH="any"
REPOLOGY="${PACKAGE/-/:}"

TARBALL="${PACKAGE#*-}-$VERSION.gem"
WGET_URL="https://rubygems.org/downloads/$TARBALL"

BUILD_DEPENDS="ruby-dev"

compile_rules() {
	gem install \
		--no-document \
		--ignore-dependencies \
		--no-user-install \
		--build-root $install \
		$src/$TARBALL &&
	fix gem
}

genpkg_rules() {
	copy @ruby
	DEPENDS="ruby ruby-activemodel ruby-activemodel-serializers-xml \
	ruby-activesupport"
}
