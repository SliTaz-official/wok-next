# SliTaz package receipt v2.

PACKAGE="gsasl"
VERSION="0.2.29"
CATEGORY="system-tools"
SHORT_DESC="Simple Authentication and Security Layer"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://www.gnu.org/software/gsasl/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="ftp://alpha.gnu.org/pub/gnu/$PACKAGE/$TARBALL"

SPLIT="gsasl-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make $MAKEFLAGS &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		gsasl)
			copy @std
			DEPENDS="gnutls libgcrypt libgpg-error ncurses readline zlib \
			libidn libkrb5 libcomerr3 libtasn1"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
