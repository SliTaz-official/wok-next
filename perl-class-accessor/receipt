# SliTaz package receipt.

PACKAGE="perl-class-accessor"
VERSION="0.51"
CATEGORY="perl"
SHORT_DESC="Class::Accessor - Automated accessor generation"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Class-Accessor"
REPOLOGY="perl:class-accessor"

TARBALL="Class-Accessor-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/K/KA/KASEI/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
