# SliTaz package receipt v2.

PACKAGE="wayland"
VERSION="1.14.0"
CATEGORY="x-window"
SHORT_DESC="Wayland simpler X display server protocol"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://wayland.freedesktop.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/wayland.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="http://wayland.freedesktop.org/releases/$TARBALL"

BUILD_DEPENDS="libffi-dev expat-dev libxml2-dev"
SPLIT="wayland-dev"

compile_rules() {
	./configure \
		--prefix=/usr \
		--disable-documentation \
		$CONFIGURE_ARGS &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		wayland)
			copy @std
			DEPENDS="expat libffi libxml2"
			;;
		*-dev)
			copy @dev
			DEPENDS="wayland libffi-dev"
			;;
	esac
}

