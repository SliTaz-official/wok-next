# SliTaz package receipt v2.

PACKAGE="mate-screensaver"
VERSION="1.18.1"
CATEGORY="x-window"
SHORT_DESC="MATE screen saver and locker"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://github.com/mate-desktop/mate-screensaver"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/mate-screensaver/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common xorg-libX11-dev xorg-libXScrnSaver-dev gtk+3-dev \
dbus-glib-dev mate-desktop-dev mate-menus-dev xmlto xorg-libXext-dev \
mesa17-dev libmatekbd-dev libnotify-gtk3-dev expat-dev"
SPLIT="mate-screensaver-dev"

compile_rules() {
	fix ld
	./autogen.sh \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		mate-screensaver)
			copy @std
			DEPENDS=" atk bzlib cairo dbus dbus-glib dconf expat fontconfig \
			freetype gdk-pixbuf glib gtk+3 libdrm libffi libharfbuzz liblzma \
			libmatekbd libnotify-gtk3 libpng16 libxklavier libxml2 \
			mate-desktop mate-menus mesa17 pango pcre startup-notification \
			util-linux-blkid util-linux-mount util-linux-uuid xorg-libICE \
			xorg-libSM xorg-libX11 xorg-libXScrnSaver xorg-libXau \
			xorg-libXdamage xorg-libXdmcp xorg-libXext xorg-libXfixes \
			xorg-libXi xorg-libXrandr xorg-libXrender xorg-libXxf86vm \
			xorg-libxcb xorg-libxkbfile xorg-libxshmfence xorg-pixman \
			xorg-xcb-util zlib"
			;;
		*-dev)
			copy @dev
			;;
	esac
	TAGS="MATE"
}
