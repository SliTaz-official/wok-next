# SliTaz package receipt v2.

PACKAGE="mate-screensaver"
VERSION="1.18.1"
CATEGORY="x-window"
SHORT_DESC="MATE screen saver and locker"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://github.com/mate-desktop/mate-screensaver"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/mate-screensaver/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common xorg-libX11-dev xorg-libXScrnSaver-dev gtk+3-dev \
dbus-glib-dev mate-desktop-dev mate-menus-dev xmlto xorg-libXext-dev \
mesa-dev libmatekbd-dev libnotify-dev expat-dev xorg-libxshmfence-dev"
SPLIT="mate-screensaver-dev"

compile_rules() {
	./autogen.sh \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		mate-screensaver)
			copy @std
			DEPENDS="cairo dbus dbus-glib gdk-pixbuf glib gtk+3 libmatekbd \
			libnotify libxklavier mate-desktop mate-menus mesa pango \
			xorg-libX11 xorg-libXScrnSaver xorg-libXext xorg-libXxf86vm"
			;;
		*-dev)
			copy @dev
			;;
	esac
	TAGS="MATE"
}
