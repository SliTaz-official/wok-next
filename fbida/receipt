# SliTaz package receipt v2.

PACKAGE="fbida"
VERSION="2.09"
CATEGORY="utilities"
SHORT_DESC="Image viewer for the framebuffer console"
MAINTAINER="devl547@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://www.kraxel.org/blog/linux/fbida/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://dl.bytesex.org/releases/$PACKAGE/$TARBALL"

BUILD_DEPENDS="freetype-dev fontconfig-dev libexif-dev curl-dev jpeg-dev \
libpng-dev tiff-dev"

compile_rules() {
	make || return 1

	install -Dm755 $src/fbi      $install/usr/bin/fbi
	install -Dm755 $src/fbgs     $install/usr/bin/fbgs
	install -Dm755 $src/exiftran $install/usr/bin/exiftran
}

genpkg_rules() {
	copy @std
	DEPENDS="libpng giflib tiff jpeg ttf-bitstream-vera libexif zlib \
	libcurl freetype fontconfig"
}
