# SliTaz package receipt v2.

PACKAGE="radeontool"
VERSION="1.6.3"
CATEGORY="system-tools"
SHORT_DESC="Utility to control ATI Radeon backlight functions on laptops"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="zlib/libpng"
WEB_SITE="http://anonscm.debian.org/cgit/collab-maint/radeontool.git"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://people.freedesktop.org/~airlied/$PACKAGE/$TARBALL"

BUILD_DEPENDS="xorg-libpciaccess-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libpciaccess"
}
