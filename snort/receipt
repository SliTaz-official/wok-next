# SliTaz package receipt v2.

PACKAGE="snort"
VERSION="2.9.4"
CATEGORY="network"
SHORT_DESC="Network intrusion prevention and detection system (IDS/IPS)"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.snort.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://www.snort.org/downloads/1207"

BUILD_DEPENDS="pcre-dev libpcap-dev libdaq-dev libdnet-dev flex zlib-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	case $PACKAGE in
		snort)
			copy @std
			DEPENDS="pcre libdnet libdaq"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
