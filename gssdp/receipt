# SliTaz package receipt v2.

PACKAGE="gssdp"
VERSION="1.0.2"
CATEGORY="network"
SHORT_DESC="Resource discovery and announcement over SSDP"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://wiki.gnome.org/Projects/GUPnP"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="glib-dev libsoup-dev gtk+3-dev gobject-introspection-dev \
gtk-doc vala"
SPLIT="gssdp-bin gssdp gssdp-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-bin)
			copy bin/ *.ui
			CAT="network|device sniffer"
			DEPENDS="atk cairo gdk-pixbuf gssdp gtk+3 pango"
			;;
		gssdp)
			copy *.so*
			DEPENDS="glib libsoup"
			;;
		*-dev)
			copy @dev
			DEPENDS="${SPLIT/$PACKAGE/} glib-dev libffi-dev libsoup-dev \
			libxml2-dev pcre-dev sqlite3-dev util-linux-blkid-dev \
			util-linux-mount-dev util-linux-uuid-dev xz-dev zlib-dev"
			;;
	esac
}
