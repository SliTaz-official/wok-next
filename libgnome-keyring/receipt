# SliTaz package receipt v2.

PACKAGE="libgnome-keyring"
VERSION="2.32.0"
CATEGORY="x-window"
SHORT_DESC="A library that keep password and other secrets for users"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="http://www.gnome.org"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://ftp.gnome.org/pub/gnome/sources/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="libgcrypt-dev dbus-dev glib-dev intltool"
SPLIT="libgnome-keyring-dev"

compile_rules() {
	./configure \
		--libexecdir=/usr/lib/$PACKAGE \
		--sysconfdir=/etc/gnome \
		$CONFIGURE_ARGS &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		libgnome-keyring)
			copy @std
			DEPENDS="dbus glib libgcrypt libgpg-error"
			;;
		*-dev)
			copy @dev
			DEPENDS="libgnome-keyring dbus-dev glib-dev libgcrypt-dev \
			libgpg-error-dev pcre-dev"
			;;
	esac
}
