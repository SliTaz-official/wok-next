# SliTaz package receipt.

PACKAGE="xorg-server-dev"
VERSION="1.18.4"
CATEGORY="development"
SHORT_DESC="Xorg server devel files needed to build drivers."
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki"
HOST_ARCH="i486 arm"

WANTED="xorg-server"
DEPENDS="xorg-server xorg-server-Xephyr xorg-server-Xfbdev xorg-server-Xnest \
xorg-server-Xvfb xorg-server-modules-gl \
xorg-xproto xorg-randrproto xorg-renderproto xorg-xextproto \
xorg-inputproto xorg-kbproto xorg-fontsproto pixman-dev xorg-videoproto \
xorg-scrnsaverproto xorg-resourceproto xorg-xf86driproto xorg-glproto mesa-dev \
xorg-dri2proto xorg-dri3proto xorg-presentproto xorg-xineramaproto \
xorg-libpciaccess-dev"

# Use devel files from ARCH default Xserver
case "$ARCH" in
	arm)
		WANTED="xorg-server-light"
		DEPENDS="" ;;
esac

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_files *.h *.la *.pc *.m4
}
