# SliTaz package receipt v2.

PACKAGE="pure-ftpd"
VERSION="1.0.46"
CATEGORY="network"
SHORT_DESC="A secure FTP daemon"
MAINTAINER="erjo@slitaz.org"
LICENSE="BSD"
WEB_SITE="https://www.pureftpd.org/project/pure-ftpd"
CONFIG_FILES="/etc/pure-ftpd.conf"
SIBLINGS="pure-ftpd-pam"

TARBALL="pure-ftpd-$VERSION.tar.bz2"
WGET_URL="https://download.pureftpd.org/pub/pure-ftpd/releases/$TARBALL"

DEPENDS="attr libcap libssl"
BUILD_DEPENDS="openssl-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--without-pam \
		--with-puredb \
		--with-extauth \
		$CONFIGURE_ARGS &&
	make && make install

	# daemon
	mkdir -p $install/etc/init.d
	install -groot -oroot -m0755 $stuff/pure-ftpd $install/etc/init.d
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
