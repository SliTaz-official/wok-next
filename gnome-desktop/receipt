# SliTaz package receipt v2.

PACKAGE="gnome-desktop"
VERSION="2.28.0"
CATEGORY="x-window"
SHORT_DESC="GNOME Desktop"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.gnome.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://ftp.gnome.org/pub/gnome/sources/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="python-dev libxml2-python gconf-dev gnome-doc-utils \
intltool gtk+-dev xorg-libXrandr-dev"
SPLIT="gnome-desktop-dev"

compile_rules() {
	./configure \
		--sysconfdir=/etc/gnome \
		--localstatedir=/var/lib \
		--enable-gtk-doc-html=no \
		--enable-gtk-doc=no \
		--disable-scrollkeeper \
		--disable-static \
		--with-gnome-distributor="SliTaz GNU/Linux" \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		gnome-desktop)
			copy bin/ *.so*
			DEPENDS="gconf gtk+ startup-notification"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
