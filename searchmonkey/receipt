# SliTaz package receipt v2.

PACKAGE="searchmonkey"
VERSION="0.8.1"
CATEGORY="utilities"
SHORT_DESC="A fast real-time search engine using GTK+"
MAINTAINER="devel@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://searchmonkey.embeddediq.com/index.php"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="gtk2-dev libglade-dev xorg-libXdamage-dev"

compile_rules() {
	./configure &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="gtk2 libglade xorg-libXdamage"
}
