# SliTaz package receipt.

PACKAGE="perl-test-warnings"
VERSION="0.026"
CATEGORY="perl"
SHORT_DESC="Test::Warnings - Test for warnings and the lack of them"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Test-Warnings"
REPOLOGY="perl:test-warnings"

TARBALL="Test-Warnings-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/E/ET/ETHER/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
