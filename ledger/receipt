# SliTaz package receipt v2.

PACKAGE="ledger"
VERSION="2.6.3"
CATEGORY="utilities"
SHORT_DESC="A double-entry accounting system that is accessed from the UNIX \
command-line"
MAINTAINER="paul@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://ledger-cli.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://ftp.newartisans.com/pub/ledger/$TARBALL"

BUILD_DEPENDS="pcre-dev gmp-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install || return 1

	# copy sample file
	install -Dm644 $src/sample.dat $install/usr/share/ledger/sample.dat
}

genpkg_rules() {
	copy @std
	DEPENDS="gmp libpcre"
}
