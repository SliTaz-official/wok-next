# SliTaz package receipt.

PACKAGE="perl-text-template"
VERSION="1.47"
CATEGORY="perl"
SHORT_DESC="Text::Template - Expand template text with embedded Perl"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://metacpan.org/release/Text-Template"

TARBALL="Text-Template-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/M/MS/MSCHOUT/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
