# SliTaz package receipt v2.

PACKAGE="swig"
VERSION="3.0.12"
CATEGORY="development"
SHORT_DESC="A compiler that makes it easy to integrate C and C++ code with \
scripting languages"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://www.swig.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/swig.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="pcre-dev zlib-dev"

compile_rules() {
	./configure \
		--without-clisp \
		--without-maximum-compile-warnings \
		$CONFIGURE_ARGS &&
	make &&
	make install || return 1

	cook_pick_docs Doc/*
}

genpkg_rules() {
	copy @std @dev
	DEPENDS="pcre perl zlib"
	TAGS="compiler"
}
