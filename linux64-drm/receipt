# SliTaz package receipt.

PACKAGE="linux64-drm"
VERSION="4.9.0"
CATEGORY="base-system"
SHORT_DESC="The Linux Kernel DRM module"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.kernel.org/"
PROVIDE="linux-drm:linux64"

WANTED="linux"
DEPENDS="linux64-agp"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	. $wanted_stuff/copy_modules.sh
	copy_modules drivers/gpu/drm

	# remove drivers/char/agp kernel modules cause there in linux64-agp package
	cook linux64-agp >/dev/null 2>&1
	cook_split_rm linux64-agp
}
