# SliTaz package receipt v2.

PACKAGE="libao"
VERSION="1.1.0"
CATEGORY="multimedia"
SHORT_DESC="Cross-platform audio output library and plugins"
MAINTAINER="rj.rohit@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://downloads.xiph.org/releases/ao/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/$TARBALL"

BUILD_DEPENDS="alsa-lib-dev"
SPLIT="libao-dev"

compile_rules() {
	./configure \
		--enable-alsa09 \
		--disable-arts \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install || return 1

	# Add conf file
	install -Dm644 $stuff/libao.conf $install/etc/libao.conf
}

genpkg_rules() {
	case $PACKAGE in
		libao)
			copy @std
			DEPENDS="alsa-lib"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
