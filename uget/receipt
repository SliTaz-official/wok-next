# SliTaz package receipt v2.

PACKAGE="uget"
VERSION="1.10.4"
CATEGORY="network"
SHORT_DESC="Download manager using gtk+ and libcurl"
MAINTAINER="devl547@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="http://urlget.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/urlget/$TARBALL"

BUILD_DEPENDS="pcre-dev glib-dev curl-dev gtk+3-dev intltool"

compile_rules() {
	./configure \
		--disable-gstreamer \
		--disable-notify \
		--with-gtk3 \
		LDFLAGS='-Wl,-O1 -Wl,--as-needed' \
		$CONFIGURE_ARGS &&
	make -j2 -s &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="cairo gdk-pixbuf glib gtk+3 libcurl pango"
}
