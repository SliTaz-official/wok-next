# SliTaz package receipt v2.

PACKAGE="hunspell"
VERSION="1.6.2"
CATEGORY="system-tools"
SHORT_DESC="A spell checker"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2 LGPL2.1 MPL"
WEB_SITE="https://hunspell.github.io/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/hunspell/hunspell/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="automake libtool gettext-dev readline-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	autoreconf -vfi &&
	rm $src/po/stamp-po &&

	./configure \
		--with-ui \
		--with-readline \
		--disable-static \
		--without-included-gettext \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make -j1 DESTDIR=$install install
}

genpkg_rules() {
	case $PACKAGE in
		hunspell)
			copy @std
			DEPENDS="ncurses readline"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
