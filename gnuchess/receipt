# SliTaz package receipt v2.

PACKAGE="gnuchess"
VERSION="6.2.5"
CATEGORY="games"
SHORT_DESC="GNU Chess lets most modern computers play a full game of chess"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://www.gnu.org/software/chess/chess.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$GNU_MIRROR/chess/$TARBALL"

BUILD_DEPENDS="ncurses-dev readline-dev gettext"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="readline"
	TAGS="chess"
}
