# SliTaz package receipt.

PACKAGE="perl-www-robotrules"
VERSION="6.02"
CATEGORY="perl"
SHORT_DESC="WWW::RobotRules - database of robots.txt-derived permissions"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/WWW-RobotRules"

TARBALL="WWW-RobotRules-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/G/GA/GAAS/$TARBALL"

DEPENDS="perl-uri"
BUILD_DEPENDS="$DEPENDS"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
