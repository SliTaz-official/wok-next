# SliTaz package receipt v2.

PACKAGE="perl-www-robotrules"
VERSION="6.02"
CATEGORY="perl"
SHORT_DESC="WWW::RobotRules - database of robots.txt-derived permissions"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/WWW-RobotRules"
REPOLOGY="perl:www-robotrules"

TARBALL="WWW-RobotRules-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/G/GA/GAAS/$TARBALL"

BUILD_DEPENDS="perl-uri"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-uri"
}
