# SliTaz package receipt.

PACKAGE="libsasl-without-ldap"
VERSION="2.1.26"
CATEGORY="system-tools"
SHORT_DESC="Cyrus Simple Authentication Service Layer (SASL) library."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://cyrusimap.web.cmu.edu/"

SOURCE="cyrus-sasl"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="ftp://ftp.cyrusimap.org/cyrus-sasl/$TARBALL"

DEPENDS="db openssl"
BUILD_DEPENDS="db-dev openssl-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--without-pam \
		--disable-anon \
		--disable-cram \
		--disable-digest \
		--disable-gssapi \
		--enable-login \
		--disable-otp \
		--enable-plain \
		--with-openssl \
		--with-devrandom=/dev/urandom \
		--mandir=/usr/share/man $CONFIGURE_ARGS &&
	make -j1 &&
	make -j1 DESTDIR=$DESTDIR install
}


# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/* $fs
}