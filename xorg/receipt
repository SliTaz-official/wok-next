# SliTaz package receipt v2.

PACKAGE="xorg"
VERSION="7.7"
CATEGORY="x-window"
SHORT_DESC="Xorg server"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="-"

SPLIT="xorg-dev xorg-dev-proto"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		xorg)
			CAT="meta|meta-package to install all Xorg modules"
			DEPENDS="xorg-xauth xorg-base-fonts xorg-libICE xorg-libpciaccess \
			xorg-libSM xorg-libX11 xorg-libXau xorg-libXcomposite \
			xorg-libXcursor xorg-libXdamage xorg-libXdmcp xorg-libXext \
			xorg-libXfixes xorg-libXfont xorg-libXft xorg-libXi \
			xorg-libXinerama xorg-libxkbfile xorg-libXmu xorg-libXpm \
			xorg-libXrandr xorg-libXrender xorg-libXScrnSaver xorg-libXt \
			xorg-libXtst xorg-libXxf86vm xorg-xkbcomp xorg-xkeyboard-config"
			;;
		xorg-dev)
			CAT="meta|meta-package to install all Xorg devel packages"
			DEPENDS="xorg-libXdmcp-dev xorg-libXau-dev xorg-libX11-dev \
			xorg-libXext-dev xorg-libXrender-dev xorg-libXrandr-dev \
			xorg-libXfixes-dev xorg-libfontenc-dev xorg-libXfont-dev \
			xorg-libXft-dev xorg-libXcomposite-dev xorg-libxkbfile-dev \
			xorg-libICE-dev xorg-libSM-dev xorg-libXt-dev xorg-libXinerama-dev \
			xorg-libXmu-dev xorg-libXpm-dev xorg-libXaw-dev xorg-libXt-dev \
			xorg-libXtst-dev xorg-libXcursor-dev xorg-libXdamage-dev \
			xorg-libXi-dev"
			;;
		xorg-dev-proto)
			CAT="meta|meta-package to install all Xorg protocols"
			DEPENDS="xorg-xorgproto \
			xorg-util-macros"
			;;
	esac
}
