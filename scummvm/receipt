# SliTaz package receipt v2.

PACKAGE="scummvm"
VERSION="1.6.0"
CATEGORY="games"
SHORT_DESC="A 'virtual machine' for several classic graphical point-and-click \
adventure games"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.scummvm.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="alsa-lib-dev libmad-dev libmpeg2-dev libogg-dev libsdl-dev \
libvorbis-dev flac-dev zlib-dev"

compile_rules() {
	./configure \
		--prefix=/usr \
		--datadir=/usr/games/scummvm \
		--backend=sdl \
		--disable-debug \
		--with-flac-prefix=/usr \
		--disable-fluidsynth \
		--host=$HOST_SYSTEM &&
	make &&
	make install || return 1

	mkdir -p $install/usr/share/applications
	cp -a dists/scummvm.desktop $install/usr/share/applications
}

genpkg_rules() {
	copy @std
	DEPENDS="alsa-lib libmad libmpeg2 libogg libsdl libvorbis flac zlib"
}
