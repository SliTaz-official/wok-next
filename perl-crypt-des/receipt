# SliTaz package receipt.

PACKAGE="perl-crypt-des"
VERSION="2.07"
CATEGORY="perl"
SHORT_DESC="Crypt::DES - Perl DES encryption module"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Crypt-DES"
REPOLOGY="perl:crypt-des"

TARBALL="Crypt-DES-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DP/DPARIS/$TARBALL"

BUILD_DEPENDS="perl-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
