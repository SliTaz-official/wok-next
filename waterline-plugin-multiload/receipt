# SliTaz package receipt v2.

PACKAGE="waterline-plugin-multiload"
VERSION="f8b592a"
CATEGORY="x-window"
SHORT_DESC="multiload-nandhp is a port of the GNOME multiload applet to SDE waterline panel"
MAINTAINER="psychomaniak@xakep.ru"
LICENSE="GPL2"
WEB_SITE="http://git.make-linux.org/sde/waterline-plugin-multiload"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="http://git.make-linux.org/sde/$PACKAGE.git/snapshot/$TARBALL"

BUILD_DEPENDS="automake libtool intltool gtk+-dev jansson-dev libsde-utils \
libsde-utils-x11 libsde-utils-jansson libsde-utils-gtk \
xorg-libXcomposite-dev menu-cache-dev alsa-lib-dev xz \
libgtop-dev lxpanel-dev waterline-dev xorg-dev intltool gettext"
SPLIT="waterline-plugin-multiload lxpanel-plugin-multiload"

compile_rules() {
	rm -rf $src/.git
	./autogen.sh || return 1
	sed 's#ls $srcdir/po/\*.po #& 2>/dev/null#' -i configure
	./configure \
		--libexec=/usr/lib \
		--disable-static \
		--disable-maintainer-mode \
		--enable-silent-rules \
		--with-waterline \
		--with-lxpanel \
		--without-xfce4 \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		waterline-plugin-multiload)
			copy waterline/plugins/*.so
			DEPENDS="waterline libgtop"
			;;
		lxpanel-plugin-multiload)
			copy lxpanel/plugins/*.so
			DEPENDS="lxpanel libgtop"
			;;
	esac
	TAGS="desktop panel"
}
