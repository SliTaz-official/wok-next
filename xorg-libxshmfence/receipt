# SliTaz package receipt v2.

PACKAGE="xorg-libxshmfence"
VERSION="1.3"
CATEGORY="x-window"
SHORT_DESC="Xorg server Shared Memory Fence library"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7lib.html"
REPOLOGY="libxshmfence"

TARBALL="libxshmfence-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-xproto"
SPLIT="xorg-libxshmfence-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libxshmfence) copy @std;;
		*-dev)          copy @dev;;
	esac
}
