# SliTaz package receipt v2.

PACKAGE="xorg-xcalc"
VERSION="1.0.6"
CATEGORY="x-window"
SHORT_DESC="Scientific calculator for X"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki"
REPOLOGY="xcalc"

TARBALL="xcalc-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libXaw-dev xorg-libXt-dev xorg-libX11-dev \
xorg-xorgproto"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libXaw xorg-libXt"
	CONFIG_FILES="/etc/X11/app-defaults/XCalc /etc/X11/app-defaults/XCalc-color"
}
