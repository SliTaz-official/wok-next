# SliTaz package receipt v2.

PACKAGE="python-pygments"
VERSION="latest"
CATEGORY="development"
SHORT_DESC="Generic syntax highlighter"
MAINTAINER="claudinei@slitaz.org"
LICENSE="BSD"
WEB_SITE="https://pypi.org/project/Pygments/"
REPOLOGY="python:pygments"

BUILD_DEPENDS="python"

compile_rules() {
	pip install --no-compile --root=$DESTDIR Pygments
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*Pygments-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
}
