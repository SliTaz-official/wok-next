# SliTaz package receipt v2.

PACKAGE="libusb-compat"
VERSION="0.1.5"
CATEGORY="system-tools"
SHORT_DESC="Compatibility layer to converts libusb 0.1 calls into 1.0 equivalents"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="https://libusb.info/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/libusb-compat.html"

#TARBALL="$PACKAGE-$VERSION.tar.bz2"
#WGET_URL="$SF_MIRROR/libusb/$TARBALL"
TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/libusb/libusb-compat-0.1/archive/v$VERSION.tar.gz"


BUILD_DEPENDS="automake libtool libusb-dev eudev-dev"
SPLIT="libusb-compat-dev"

compile_rules() {
	./bootstrap.sh || return 1

	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libusb-compat)
			copy @std
			DEPENDS="libusb"
			;;
		*-dev)
			copy @dev
			DEPENDS="libusb-compat eudev-dev"
			;;
	esac
}

