# SliTaz package receipt v2.

PACKAGE="sylpheed"
VERSION="3.5.1"
CATEGORY="network"
SHORT_DESC="Simple, lightweight but featureful, and easy-to-use e-mail client"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://sylpheed.sraoss.jp/en/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://sylpheed.sraoss.jp/sylpheed/v${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="gtk+-dev openssl-dev"
SPLIT="sylpheed-dev"

compile_rules() {
	./configure \
		--disable-gtkspell \
		--disable-updatecheck \
		$CONFIGURE_ARGS &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		sylpheed)
			mkdir -p $fs/usr/lib $fs/usr/share/applications
			cp -a $stuff/applications/sylpheed*.desktop $fs/usr/share/applications
			cp -a $install/usr/bin $fs/usr
			cp -a $install/usr/lib/*.so* $fs/usr/lib
			DEPENDS="gtk+ openssl libffi"
			TAGS="mail internet"
			;;
		*-dev)
			mkdir -p $fs/usr/lib
			cp -a $install/usr/include $fs/usr
			cp -a $install/usr/lib/*.*a $fs/usr/lib
			DEPENDS="gtk+ openssl gpgme gnupg xorg-libXdamage"
			;;
	esac
}
