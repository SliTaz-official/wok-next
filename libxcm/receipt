# SliTaz package receipt v2.

PACKAGE="libxcm"
VERSION="0.5.4"
CATEGORY="x-window"
SHORT_DESC="Reference implementation of the X Color Management specification"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.oyranos.org/libxcm/index.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/oyranos-cms/libxcm/archive/$VERSION.tar.gz"

BUILD_DEPENDS="xorg-libX11-dev xorg-libXfixes-dev xorg-libXmu-dev"
SPLIT="$PACKAGE-dev"

DEPENDS_std="xorg-libX11 xorg-libXfixes xorg-libXmu"
DEPENDS_dev="libxcm xorg-libX11-dev xorg-xorgproto"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libxcm) copy @std; DEPENDS="$DEPENDS_std";;
		*-dev)  copy @dev; DEPENDS="$DEPENDS_dev";;
	esac
}
