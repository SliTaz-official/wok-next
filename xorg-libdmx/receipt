# SliTaz package receipt v2.

PACKAGE="xorg-libdmx"
VERSION="1.1.3"
CATEGORY="x-window"
SHORT_DESC="Xorg DMX library"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7lib.html"

TARBALL="libdmx-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-dmxproto xorg-libX11-dev xorg-libXext-dev xorg-xextproto"
SPLIT="xorg-libdmx-dev"

compile_rules() {
	fix ld
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libdmx)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXext"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libdmx \
			xorg-dmxproto xorg-libX11-dev xorg-libXext-dev"
			;;
	esac
}
