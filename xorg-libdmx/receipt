# SliTaz package receipt v2.

PACKAGE="xorg-libdmx"
VERSION="1.1.4"
CATEGORY="x-window"
SHORT_DESC="Xorg DMX library"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7lib.html"
REPOLOGY="libdmx"

TARBALL="libdmx-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-libX11-dev xorg-libXext-dev xorg-xorgproto"
SPLIT="xorg-libdmx-dev"

compile_rules() {
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libdmx)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXext"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libdmx \
			xorg-xorgproto xorg-libX11-dev xorg-libXext-dev"
			;;
	esac
}
