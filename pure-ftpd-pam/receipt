# SliTaz package receipt v2.

PACKAGE="pure-ftpd-pam"
VERSION="1.0.46"
CATEGORY="network"
SHORT_DESC="A secure FTP daemon using PAM"
MAINTAINER="erjo@slitaz.org"
LICENSE="BSD"
WEB_SITE="https://www.pureftpd.org/project/pure-ftpd"
CONFIG_FILES="/etc/pure-ftpd.conf"
SIBLINGS="pure-ftpd"
PROVIDE="pure-ftpd:pam"

TARBALL="pure-ftpd-$VERSION.tar.bz2"
WGET_URL="https://download.pureftpd.org/pub/pure-ftpd/releases/$TARBALL"

DEPENDS="pam attr libcap"
BUILD_DEPENDS="pam-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--with-pam \
		$CONFIGURE_ARGS &&
	make && make install

	# daemon
	mkdir -p $install/etc/init.d
	install -groot -oroot -m0755 $WOK/pure-ftpd/stuff/pure-ftpd $install/etc/init.d
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
