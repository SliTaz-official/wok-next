# SliTaz package receipt v2.

PACKAGE="libva-intel-driver"
VERSION="1.7.3"
CATEGORY="x-window"
SHORT_DESC="VA Intel driver"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="other"
WEB_SITE="https://www.freedesktop.org/wiki/Software/vaapi/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://www.freedesktop.org/software/vaapi/releases/$PACKAGE/$TARBALL"

BUILD_DEPENDS="autoconf automake libtool python libdrm-dev libva-dev \
xorg-libpciaccess-dev xorg-libX11-dev"
SPLIT="libva-intel-driver-dev"

compile_rules() {
	autoreconf -fi &&

	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-driver)
			copy @std
			DEPENDS="libdrm libdrm-intel xorg-libpciaccess"
			;;
		*-dev)
			copy @dev
			DEPENDS="libva-intel-driver libdrm-dev xorg-libpciaccess-dev"
			;;
	esac
}
