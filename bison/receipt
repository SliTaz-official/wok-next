# SliTaz package receipt v2.

PACKAGE="bison"
VERSION="3.0.4"
CATEGORY="development"
SHORT_DESC="GNU parser generator"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://www.gnu.org/software/bison/"
LFS="http://www.linuxfromscratch.org/lfs/view/stable/chapter06/bison.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNU_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="m4 perl libxslt gettext"

compile_rules() {
	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules() {
	copy @std @dev
	rm -rf $fs/usr/share/doc # one *.h file copied here with @dev
	DEPENDS="m4"
	TAGS="LFS parser language"
}
