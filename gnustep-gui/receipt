# SliTaz package receipt v2.

PACKAGE="gnustep-gui"
VERSION="0.25.1"
CATEGORY="x-window"
SHORT_DESC="GNUstep GUI class library"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://www.gnustep.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="ftp://ftp.gnustep.org/pub/gnustep/core/$TARBALL"

BUILD_DEPENDS="gnustep-make gnustep-base-dev audiofile-dev aspell-dev giflib-dev \
portaudio-dev cups-dev libtasn1-dev tar jpeg-dev tiff-dev libpng16-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure \
		--prefix=/usr \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	case $PACKAGE in
		gnustep-gui)
			mkdir -p $fs/usr/lib
			cp -a $install/usr/bin $fs/usr
			cp -a $install/usr/lib/*.so* $fs/usr/lib
			cp -a $install/usr/lib/GNUstep $fs/usr/lib
			DEPENDS="gnustep-base audiofile aspell giflib portaudio cups \
			libcomerr3 libtasn1 jpeg tiff libpng16"
			;;
		*-dev)
			mkdir -p $fs/usr/share
			cp -a $install/usr/include $fs/usr
			cp -a $install/usr/share/GNUstep $fs/usr/share
			DEPENDS="gnustep-gui"
			;;
	esac
}
