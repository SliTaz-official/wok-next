# SliTaz package receipt v2.

PACKAGE="xorg-xmessage"
VERSION="1.0.5"
CATEGORY="x-window"
SHORT_DESC="Display a message or query in a window"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7app.html"
REPOLOGY="xmessage"

TARBALL="xmessage-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libXaw-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libXaw xorg-libXt"
	CONFIG_FILES="/etc/X11/app-defaults/Xmessage \
	/etc/X11/app-defaults/Xmessage-color"
}
