# SliTaz package receipt.

PACKAGE="gnuplot"
VERSION="4.6.5"
CATEGORY="graphics"
SHORT_DESC="Command-line driven interactive data and function plotting"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://www.gnuplot.info/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="zlib-dev readline-dev ncurses-dev libgd-dev jpeg-dev \
freetype-dev libpng16-dev xorg-libXpm-dev xorg-libX11-dev xorg-libXau-dev \
xorg-libXdmcp-dev fontconfig-dev expat-dev wxWidgets-dev pango-dev cairo-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make $MAKEOPTS &&
	make DESTDIR=$install install
}

genpkg_rules() {
	copy @std
	DEPENDS="zlib readline ncurses libgd jpeg freetype libpng16 gcc-lib-base \
	xorg-libXpm xorg-libX11 xorg-libXau xorg-libXdmcp fontconfig expat \
	wxWidgets xorg-libXxf86vm"
}
