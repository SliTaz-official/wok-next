# SliTaz package receipt.

PACKAGE="gnuplot"
VERSION="4.6.5"
CATEGORY="graphics"
SHORT_DESC="Command-line driven interactive data and function plotting"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://www.gnuplot.info/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="zlib-dev readline-dev ncurses-dev libgd-dev jpeg-dev \
freetype-dev libpng-dev libxpm-dev libx11-dev libxau-dev \
libxdmcp-dev fontconfig-dev expat-dev wxWidgets-dev pango-dev cairo-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make $MAKEOPTS &&
	make DESTDIR=$install install
}

genpkg_rules() {
	copy @std
	DEPENDS="zlib readline ncurses libgd jpeg freetype libpng gcc-lib-base \
	libxpm libx11 libxau libxdmcp fontconfig expat \
	wxWidgets libxxf86vm"
}
