# SliTaz package receipt v2.

PACKAGE="libbonobo"
VERSION="2.32.1"
CATEGORY="x-window"
SHORT_DESC="Librairies for GNOME"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.gnome.org"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION:0:4}/$TARBALL"

BUILD_DEPENDS="glib-dev libglade-dev orbit2-dev libxml2-dev popt-dev bison \
flex intltool"
SPLIT="libbonobo-dev"

compile_rules() {
	sed -i 's/-DG_DISABLE_DEPRECATED//' activation-server/Makefile*

	./configure \
		--sysconfdir=/etc/gnome \
		--libexecdir=/usr/lib/bonobo \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libbonobo)
			copy @std
			DEPENDS="glib orbit2 libxml2 libglade"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
