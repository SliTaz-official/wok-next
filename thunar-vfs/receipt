# SliTaz package receipt v2.

PACKAGE="thunar-vfs"
VERSION="1.2.0"
CATEGORY="x-window"
SHORT_DESC="Thunar File Manager Libraries"
MAINTAINER="erjo@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="https://www.xfce.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://archive.xfce.org/xfce/4.8/src/$TARBALL"

BUILD_DEPENDS="libpng16-dev libjpeg-turbo-dev libxfce4util-dev dbus-dev \
startup-notification-dev xfce4-panel-dev zlib-dev intltool exo-dev \
dbus-glib-dev util-linux-uuid-dev hal-dev xorg-xcb-util-dev"
SPLIT="thunar-vfs-dev"

compile_rules() {
	./configure \
		--enable-dbus \
		--enable-startup-notification \
		--disable-gnome-thumbnailers \
		--enable-debug=no \
		$CONFIGURE_ARGS && \
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		thunar-vfs)
			copy @std
			DEPENDS="dbus dbus-glib exo freetype gdk-pixbuf glib gtk+ hal \
			libjpeg-turbo libpng16 libxfce4util startup-notification \
			xorg-libX11"
			;;
		*-dev)
			copy @dev
			DEPENDS="thunar-vfs \
			exo-dev glib-dev"
			;;
	esac
	TAGS="Xfce"
}
