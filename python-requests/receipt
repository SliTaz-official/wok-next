# SliTaz package receipt v2.

PACKAGE="python-requests"
VERSION="2.17.3"
CATEGORY="network"
SHORT_DESC="Python HTTP Requests for Humans"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="Apache"
WEB_SITE="https://pypi.python.org/pypi/requests"

BUILD_DEPENDS="python-urllib3 python-idna python-certifi python-chardet"

# Rules to configure and make the package.
compile_rules()
{
	pip install --no-compile --root=$DESTDIR requests
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
	DEPENDS="$BUILD_DEPENDS"
}
