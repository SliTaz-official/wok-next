BUILD_DEPENDS="python-pip python-urllib3 python-idna python-certifi \
python-chardet"

compile_rules() {
	pip install --no-compile --root=$DESTDIR requests
}

genpkg_rules() {
	copy @std
	DEPENDS="$BUILD_DEPENDS"
}
