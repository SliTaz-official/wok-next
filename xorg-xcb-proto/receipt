# SliTaz package receipt v2.

PACKAGE="xorg-xcb-proto"
VERSION="1.12"
CATEGORY="development"
SHORT_DESC="X protocol descriptions for XCB"
MAINTAINER="mallory@sweetpeople.org"
LICENSE="MIT"
WEB_SITE="https://xcb.freedesktop.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/xcb-proto.html"

TARBALL="xcb-proto-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/xcb/$TARBALL"

BUILD_DEPENDS="patch python-dev libxml2-tools"
BUILD_DEPENDS_arm=" "

compile_rules() {
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std @dev
	DEPENDS="python"
	PROVIDE="xcb-proto"
}
