# SliTaz package receipt v2.

PACKAGE="libvpx"
VERSION="1.7.0"
CATEGORY="multimedia"
SHORT_DESC="The VP8 Codec SDK"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="BSD"
WEB_SITE="https://www.webmproject.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/multimedia/libvpx.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/webmproject/libvpx/archive/v$VERSION/$TARBALL"

BUILD_DEPENDS="perl coreutils-file-output-full yasm diffutils"
SPLIT="libvpx-dev"

compile_rules() {
	sed -i 's/cp -p/cp/' build/make/Makefile

	mkdir libvpx-build
	cd    libvpx-build

	../configure \
		--prefix=/usr \
		--enable-runtime-cpu-detect \
		--enable-shared \
		--disable-static \
		&&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		libvpx) copy @std;;
		*-dev)  copy @dev;;
	esac
}
