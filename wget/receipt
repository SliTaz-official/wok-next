# SliTaz package receipt v2.

PACKAGE="wget"
VERSION="1.19.1"
CATEGORY="network"
SHORT_DESC="GNU Wget - the non-interactive network downloader"
MAINTAINER="sygne@ombres.eu"
LICENSE="GPL3"
WEB_SITE="https://www.gnu.org/software/wget/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNU_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="openssl-dev libidn-dev util-linux-uuid-dev gettext zlib-dev \
perl pcre-dev"

compile_rules() {
	case "$ARCH" in
		arm) ARCH_ARGS="--with-libssl-prefix=/cross/$ARCH/sysroot/usr/lib" ;;
	esac

	./configure \
		--with-ssl=openssl \
		--with-openssl \
		$ARCH_ARGS \
		$CONFIGURE_ARGS &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="openssl libidn pcre util-linux-uuid zlib"
	CONFIG_FILES="/etc/wgetrc"
}
