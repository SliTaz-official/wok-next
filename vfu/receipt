# SliTaz package receipt v2.

PACKAGE="vfu"
VERSION="4.12"
CATEGORY="utilities"
SHORT_DESC="VFU is a console (text mode) file manager for UNIX/Linux"
MAINTAINER="paul@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://cade.datamax.bg/vfu/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://cade.datamax.bg/vfu/$TARBALL"

BUILD_DEPENDS="ncurses-dev pcre-dev"

compile_rules() {
	make || return 1

	mkdir -p \
		$install/usr/bin/ \
		$install/usr/lib/vfu/ \
		$install/etc/
	cp -a $src/vfu/vfu  $install/usr/bin/
	cp -a $src/rx/rx_*  $install/usr/lib/vfu/
	cp -a $src/vfu.conf $install/etc/
	chown -R root:root  $install
}

genpkg_rules() {
	copy $std
	DEPENDS="ncurses pcre"
	CONFIG_FILES="/etc/vfu.conf"
}
