# SliTaz package receipt v2.

PACKAGE="elementary-icon-theme"
VERSION="4.3.1"
CATEGORY="customization"
SHORT_DESC="Smooth modern theme designed to be intuitive"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://github.com/elementary/icons"
HOST_ARCH="any"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/archive/$VERSION.tar.gz"

BUILD_DEPENDS="cmake"

compile_rules() {
	mkdir build
	cd    build

	cmake \
		-DCMAKE_INSTALL_PREFIX=/usr \
		.. &&
	make &&
	make install || return 1

	cd ..
	cook_pick_docs AUTHORS *.md CONTRIBUTORS COPYING *.gpl pre-commit
}

genpkg_rules() {
	copy @std
	rm $fs/.VolumeIcon.icns $fs/.VolumeIcon.png
}
