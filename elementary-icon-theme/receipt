# SliTaz package receipt v2.

PACKAGE="elementary-icon-theme"
VERSION="4.2.0"
CATEGORY="customization"
SHORT_DESC="Smooth modern theme designed to be intuitive"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://github.com/elementary/icons"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/archive/$VERSION.tar.gz"

# Rules to configure and make the package.
compile_rules()
{
	icodir=$install/usr/share/icons/elementary
	mkdir -p $icodir
	cp -r $src/* $icodir

	docdir=$install/usr/share/doc/$PACKAGE-$VERSION
	mkdir -p $docdir
	cd $icodir
	mv AUTHORS *.md CONTRIBUTORS COPYING *.gpl pre-commit $docdir
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
