# SliTaz package receipt.

PACKAGE="aspell-pl"
VERSION="6.0_20061121-0"
CATEGORY="system-tools"
SHORT_DESC="Polish aspell dictionary."
MAINTAINER="paul@slitaz.org"
LICENSE="GPL LGPL CC-SA"
WEB_SITE="https://ftp.gnu.org/gnu/aspell/dict/0index.html"

TARBALL="aspell6-pl-$VERSION.tar.bz2"
WGET_URL="$GNU_MIRROR/aspell/dict/pl/$TARBALL"

DEPENDS="aspell"
BUILD_DEPENDS="aspell-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_folders lib
}
