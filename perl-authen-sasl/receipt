# SliTaz package receipt.

PACKAGE="perl-authen-sasl"
VERSION="2.16"
CATEGORY="perl"
SHORT_DESC="Authen::SASL - SASL Authentication framework"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Authen-SASL"

TARBALL="Authen-SASL-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/G/GB/GBARR/$TARBALL"

DEPENDS="perl-digest-hmac"
BUILD_DEPENDS="$DEPENDS perl-gssapi"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
