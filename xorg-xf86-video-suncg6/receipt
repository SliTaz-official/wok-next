# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-suncg6"
VERSION="1.1.2"
CATEGORY="x-window"
SHORT_DESC="Xorg driver for Sun GX and Turbo GX (also known as cgsix) video \
cards"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xf86-video-suncg6-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-server"
	TAGS="xorg display"
}
