# SliTaz package receipt v2.

PACKAGE="libmatekbd"
VERSION="1.18.2"
CATEGORY="libs"
SHORT_DESC="Keyboard management library"
MAINTAINER="yuripourre@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://github.com/mate-desktop/libmatekbd"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/libmatekbd/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common gobject-introspection-dev gtk+3-dev libxklavier-dev"
SPLIT="libmatekbd-dev"

compile_rules() {
	./autogen.sh $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libmatekbd)
			copy @std
			DEPENDS="atk bzlib cairo fontconfig freetype gdk-pixbuf glib gtk+3 \
			libffi libharfbuzz liblzma libpng16 libxklavier libxml2 pango pcre \
			util-linux-blkid util-linux-mount util-linux-uuid xorg-libX11 \
			xorg-libXau xorg-libXdmcp xorg-libXext xorg-libXi xorg-libXrender \
			xorg-libxcb xorg-libxkbfile xorg-pixman zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="libmatekbd atk-dev bzip2-dev cairo-dev fontconfig-dev \
			freetype-dev gdk-pixbuf-dev glib-dev gtk+3-dev harfbuzz-dev \
			libffi-dev libpng16-dev libxklavier-dev libxml2-dev pango-dev \
			pcre-dev util-linux-blkid-dev util-linux-mount-dev \
			util-linux-uuid-dev xorg-libX11-dev xorg-libXau-dev \
			xorg-libXdmcp-dev xorg-libXext-dev xorg-libXi-dev \
			xorg-libXrender-dev xorg-libxcb-dev xorg-libxkbfile-dev \
			xorg-pixman-dev xz-dev zlib-dev"
			;;
	esac
	TAGS="MATE"
}
