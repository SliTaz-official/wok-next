# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-omap"
VERSION="0.4.5"
CATEGORY="x-window"
SHORT_DESC="Xorg driver for OMAP SoCs"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xf86-video-omap-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev eudev-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-server libdrm libdrm-omap"
	TAGS="xorg display"
}
