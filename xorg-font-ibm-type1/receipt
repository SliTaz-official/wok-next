# SliTaz package receipt.

PACKAGE="xorg-font-ibm-type1"
VERSION="1.0.3"
CATEGORY="x-window"
SHORT_DESC="IBM Courier Type1 font"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="other"
WEB_SITE="https://www.x.org/wiki/"
TAGS="font"

TARBALL="font-ibm-type1-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/font/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-font-util-dev xorg-mkfontdir"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy *.pfa *.afm
}

post_install() { chroot "$1/" fc-cache /usr/share/fonts/X11/Type1; }
post_remove()  { chroot "$1/" fc-cache; }
