# SliTaz package receipt v2.

PACKAGE="caja"
VERSION="1.18.4"
CATEGORY="utilities"
SHORT_DESC="Caja, the file manager for the MATE desktop"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://github.com/mate-desktop/caja"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/caja/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common gtk-doc gobject-introspection-dev mate-desktop-dev \
pango-dev gtk+3-dev libnotify-dev libexif-dev exempi-dev xorg-libSM-dev"
SPLIT="caja-dev"

compile_rules() {
	./autogen.sh \
		--disable-packagekit \
		--disable-update-mimedb \
		--disable-icon-update \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		caja)
			copy @std
			DEPENDS="atk cairo exempi gdk-pixbuf glib gtk+3 libexif \
			libnotify libxml2 mate-desktop pango xorg-libICE xorg-libSM \
			xorg-libX11   shared-mime-info"
			SUGGESTED="gvfs-smb"
			TAGS="MATE file-manager"
			;;
		*-dev)
			copy @dev
			DEPENDS="caja glib-dev gtk+3-dev"
			TAGS="MATE"
			;;
	esac
}
