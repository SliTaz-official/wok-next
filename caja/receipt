# SliTaz package receipt v2.

PACKAGE="caja"
VERSION="1.20.2"
CATEGORY="utilities"
SHORT_DESC="Caja, the file manager for the MATE desktop"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://github.com/mate-desktop/caja"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="http://pub.mate-desktop.org/releases/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="mate-common gtk-doc gobject-introspection-dev mate-desktop-dev \
pango-dev gtk3-dev libnotify-dev libexif-dev exempi-dev xorg-libSM-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure \
		--disable-packagekit \
		--disable-update-mimedb \
		--disable-icon-update \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		caja)
			copy @std
			DEPENDS="atk cairo exempi gdk-pixbuf glib gtk3 libexif \
			libnotify libxml2 mate-desktop pango xorg-libICE xorg-libSM \
			xorg-libX11   shared-mime-info"
			SUGGESTED="gvfs-smb"
			TAGS="MATE file-manager"
			;;
		*-dev)
			copy @dev
			DEPENDS="caja glib-dev gtk3-dev"
			TAGS="MATE"
			;;
	esac
}
