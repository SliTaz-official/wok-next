# SliTaz package receipt v2.

PACKAGE="caja"
VERSION="1.18.4"
CATEGORY="utilities"
SHORT_DESC="Caja, the file manager for the MATE desktop"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://github.com/mate-desktop/caja"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/caja/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common gtk-doc gobject-introspection-dev mate-desktop-dev \
pango-dev gtk+3-dev libnotify-dev libexif-dev exempi-dev xorg-libSM-dev"
SPLIT="caja-dev"

compile_rules() {
	./autogen.sh \
		--disable-packagekit \
		--disable-update-mimedb \
		--disable-icon-update \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		caja)
			copy @std
			DEPENDS="at-spi2-atk at-spi2-core atk bzlib cairo dbus dconf \
			exempi expat fontconfig freetype gdk-pixbuf glib gtk+3 libepoxy \
			libexif libffi libharfbuzz liblzma libnotify-gtk3 libpng16 libxml2 \
			mate-desktop pango pcre startup-notification util-linux-blkid \
			util-linux-mount util-linux-uuid xorg-libICE xorg-libSM \
			xorg-libX11 xorg-libXau xorg-libXcomposite xorg-libXdamage \
			xorg-libXdmcp xorg-libXext xorg-libXfixes xorg-libXi \
			xorg-libXinerama xorg-libXrandr xorg-libXrender xorg-libxcb \
			xorg-pixman xorg-xcb-util zlib   shared-mime-info"
			SUGGESTED="gvfs-smb"
			TAGS="MATE file-manager"
			;;
		*-dev)
			copy @dev
			DEPENDS="caja atk-dev bzip2-dev cairo-dev fontconfig-dev \
			freetype-dev gdk-pixbuf-dev glib-dev gtk+3-dev harfbuzz-dev \
			libffi-dev libpng16-dev libxml2-dev pango-dev pcre-dev \
			util-linux-blkid-dev util-linux-mount-dev util-linux-uuid-dev \
			xorg-libX11-dev xorg-libXau-dev xorg-libXdmcp-dev xorg-libXext-dev \
			xorg-libXrender-dev xorg-libxcb-dev xorg-pixman-dev xz-dev zlib-dev"
			TAGS="MATE"
			;;
	esac
}
