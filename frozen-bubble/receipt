# SliTaz package receipt v2.

PACKAGE="frozen-bubble"
VERSION="2.2.0"
CATEGORY="games"
SHORT_DESC="A bubbles game"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL2"
WEB_SITE="http://www.frozen-bubble.org"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$WEB_SITE/data/$TARBALL"

BUILD_DEPENDS="perl-locale-gettext gettext glib-dev libsdl-dev libsdl-gfx-dev \
libsdl-image-dev libsdl-net-dev freetype-dev libsdl-ttf-dev libsdl-mixer-dev \
libsdl-pango-dev libsmpeg-dev pkg-config libsdl-perl mesa-dev glibc-locale \
perl-dev"

compile_rules() {
	make \
		OPTIMIZE="${CFLAGS}" \
		CFLAGS="$(pkg-config glib-2.0 --cflags)" \
		INSTALLDIRS=vendor \
		PREFIX=/usr &&
	make DESTDIR=$DESTDIR PREFIX=/usr install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-locale-gettext libsdl-mixer libsdl-pango libsdl-perl"
}
