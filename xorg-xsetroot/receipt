# SliTaz package receipt v2.

PACKAGE="xorg-xsetroot"
VERSION="1.1.1"
CATEGORY="x-window"
SHORT_DESC="Root window parameter setting utility for X"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
HOST_ARCH="i486 arm"

TARBALL="xsetroot-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libXmu-dev xorg-libX11-dev \
xorg-xbitmaps xorg-libXcursor-dev xorg-xproto"
PKG_RULE="std"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
	DEPENDS="xorg-libX11 xorg-libXcursor xorg-libXmu"
}
