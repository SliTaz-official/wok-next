# SliTaz package receipt v2.

PACKAGE="perl-sub-name"
VERSION="0.21"
CATEGORY="perl"
SHORT_DESC="Sub::Name - (Re)name a sub"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Sub-Name"
REPOLOGY="perl:sub-name"

TARBALL="Sub-Name-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/E/ET/ETHER/$TARBALL"

BUILD_DEPENDS="perl-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
