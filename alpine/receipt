# SliTaz package receipt v2.

PACKAGE="alpine"
VERSION="2.21.999"
HASH="349642a84039a4b026513c32a3b4f8594acd50df"
CATEGORY="network"
SHORT_DESC="Fast, easy to use email client"
MAINTAINER="paul@slitaz.org"
LICENSE="Apache"
WEB_SITE="http://www.washington.edu/alpine/"

TARBALL="$PACKAGE-$HASH.tar.gz"
WGET_URL="http://repo.or.cz/alpine.git/snapshot/$HASH.tar.gz"

BUILD_DEPENDS="openssl-dev pam-dev ncurses-dev gfortran gettext-dev \
hunspell-dev"

compile_rules() {
	./configure \
		--without-tcl \
		--without-ldap \
		--without-krb5 \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="ncurses openssl pam"
	TAGS="mail client"
}
