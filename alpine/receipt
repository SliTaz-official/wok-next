# SliTaz package receipt v2.

PACKAGE="alpine"
VERSION="2.00"
CATEGORY="network"
SHORT_DESC="Fast, easy to use email client"
MAINTAINER="paul@slitaz.org"
LICENSE="Apache"
WEB_SITE="http://www.washington.edu/alpine/"

TARBALL="$PACKAGE.tar.gz"
WGET_URL="ftp://ftp.cac.washington.edu/alpine/$TARBALL"

BUILD_DEPENDS="openssl10-dev pam-dev ncurses-dev gfortran gettext"

compile_rules() {
	CPPFLAGS="$CPPFLAGS -I/usr/include/openssl-1.0" \
	./configure \
		--without-tcl \
		--without-ldap \
		--without-krb5 \
		--with-ssl-include-dir=/usr/include/openssl-1.0/ \
		--with-ssl-lib-dir=/usr/lib/openssl-1.0/ \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="ncurses openssl10 pam"
	TAGS="mail client"
}
