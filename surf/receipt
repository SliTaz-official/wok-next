# SliTaz package receipt v2.

PACKAGE="surf"
VERSION="1.8"
CATEGORY="network"
SHORT_DESC="Simple web browser based on WebKit/GTK+2"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://surf.suckless.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://dl.suckless.org/surf/$TARBALL"

BUILD_DEPENDS="gtk2-dev webkitgtk-dev"

compile_rules() {
	sed -i 's|/usr/local|/usr|' config.mk

	make install || return 1

	icodir="$install/usr/share/pixmaps/"
	mkdir -p $icodir
	cp surf.png $icodir
}

genpkg_rules() {
	copy @std
	DEPENDS="atk cairo fontconfig freetype gdk-pixbuf glib gtk2 libsoup pango \
	webkitgtk libx11"
	SUGGESTED="dmenu"
	TAGS="web-browser"
}
