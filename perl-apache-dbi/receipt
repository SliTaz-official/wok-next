# SliTaz package receipt.

PACKAGE="perl-apache-dbi"
VERSION="1.12"
CATEGORY="perl"
SHORT_DESC="Apache::DBI - Initiate a persistent database connection"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Apache-DBI"
REPOLOGY="perl:apache-dbi"

TARBALL="Apache-DBI-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/P/PH/PHRED/$TARBALL"

DEPENDS="perl-dbi perl-digest-sha1"
BUILD_DEPENDS="$DEPENDS"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
