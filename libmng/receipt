# SliTaz package receipt.

PACKAGE="libmng"
VERSION="2.0.3"
CATEGORY="graphics"
SHORT_DESC="Multiple-image Network Graphics (MNG) Reference Library"
MAINTAINER="allan316@gmail.com"
LICENSE="zlib/libpng"
WEB_SITE="http://libmng.com/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

DEPENDS="lcms2 libjpeg-turbo zlib"
BUILD_DEPENDS="zlib-dev libjpeg-turbo-dev lcms2-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	make && make install &&

	docdir=$install/usr/share/doc/libmng-$VERSION &&
	install -v -m755 -d             $docdir &&
	install -v -m644 doc/libmng.txt $docdir
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_files *.so*
}
