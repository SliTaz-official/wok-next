# SliTaz package receipt v2.

PACKAGE="mpfr"
VERSION="4.0.1"
CATEGORY="libdevel"
SHORT_DESC="Multiple-precision floating-point computations"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://www.mpfr.org/"
LFS="http://www.linuxfromscratch.org/lfs/view/svn/chapter06/mpfr.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="http://www.mpfr.org/$PACKAGE-$VERSION/$TARBALL"

BUILD_DEPENDS="gmp-dev texinfo gcc-lib-math"
SPLIT="mpfr-dev"

compile_rules() {
#--with-gmp-lib=/cross/$ARCH/sysroot/usr/lib
#--with-gmp-include=/cross/$ARCH/sysroot/usr/include

	./configure \
		--disable-static \
		--enable-thread-safe \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make html &&
	make install &&
	make install-html
}

testsuite() {
	case "$ARCH" in
		arm*) ;;
		*) make check;;
	esac
}

genpkg_rules() {
	case $PACKAGE in
		mpfr)
			copy @std
			DEPENDS="gmp"
			TAGS="LFS"
			;;
		*-dev) copy @dev;;
	esac
}
