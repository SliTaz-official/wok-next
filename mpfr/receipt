# SliTaz package receipt v2.

PACKAGE="mpfr"
VERSION="3.1.5"
CATEGORY="libdevel"
SHORT_DESC="Multiple-precision floating-point computations"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://www.mpfr.org/"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="http://www.mpfr.org/$PACKAGE-$VERSION/$TARBALL"

BUILD_DEPENDS="gmp-dev texinfo"
SPLIT="mpfr-dev"

#--with-gmp-lib=/cross/$ARCH/sysroot/usr/lib
#--with-gmp-include=/cross/$ARCH/sysroot/usr/include

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--disable-static \
		--enable-thread-safe \
		--docdir=/usr/share/doc/mpfr-$VERSION \
		$CONFIGURE_ARGS &&
	make && make html && make install && make install-html
}

testsuite()
{
	case "$ARCH" in i?86) make check;; esac
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		mpfr) copy @std; DEPENDS="gmp";;
		*-dev) copy @dev;;
	esac
}
