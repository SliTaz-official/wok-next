# SliTaz package receipt v2.

PACKAGE="python-imagesize"
VERSION="latest"
CATEGORY="python"
SHORT_DESC="Getting image size from png/jpeg/jpeg2000/gif file"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://pypi.org/project/imagesize/"
REPOLOGY="python:imagesize"

BUILD_DEPENDS="python"

compile_rules() {
	pip install --no-compile --root=$DESTDIR imagesize
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*imagesize-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
}
