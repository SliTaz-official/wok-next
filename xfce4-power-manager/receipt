# SliTaz package receipt v2.

PACKAGE="xfce4-power-manager"
VERSION="1.4.3" # Xfce release 4.12: http://archive.xfce.org/xfce/4.12/src/
CATEGORY="x-window"
SHORT_DESC="Xfce power manager"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://www.xfce.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://archive.xfce.org/src/xfce/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool gtk2-dev dbus-dev dbus-glib-dev xfconf-dev \
libxfce4ui-dev libnotify-dev upower-dev xorg-libXrandr-dev xfce4-panel-dev \
xorg-libSM-dev startup-notification-dev xorg-xcb-util-dev"

compile_rules() {
	./configure \
		--disable-debug \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="cairo dbus dbus-glib gdk-pixbuf glib gtk2 libnotify libxfce4ui \
	libxfce4util pango upower xfce4-panel xfconf xorg-libX11 xorg-libXext \
	xorg-libXrandr"
	TAGS="Xfce"
}
