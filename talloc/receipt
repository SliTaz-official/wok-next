# SliTaz package receipt v2.

PACKAGE="talloc"
VERSION="2.1.14"
CATEGORY="system-tools"
SHORT_DESC="Hierarchical pool based memory allocator with destructors"
MAINTAINER="devel@slitaz.org"
LICENSE="LGPL"
WEB_SITE="https://talloc.samba.org/talloc/doc/html/index.html"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/general/talloc.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://www.samba.org/ftp/talloc/$TARBALL"
TARBALL_SHA1="9d563b768148b620bdae1c97b36cfc30928a1044"

BUILD_DEPENDS="python-dev docbook-xsl"
SPLIT="$PACKAGE-python $PACKAGE $PACKAGE-dev"

COPY_python="python*/ libpytalloc*"
CAT_python="development|Python bindings"
DEPENDS_python="$PACKAGE python"

compile_rules() {
	./configure --prefix=/usr &&
	make &&
	make install
}
