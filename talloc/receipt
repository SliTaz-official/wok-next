# SliTaz package receipt v2.

PACKAGE="talloc"
VERSION="2.1.11"
CATEGORY="system-tools"
SHORT_DESC="Hierarchical pool based memory allocator with destructors"
MAINTAINER="devel@slitaz.org"
LICENSE="LGPL"
WEB_SITE="https://talloc.samba.org/talloc/doc/html/index.html"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/general/talloc.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://www.samba.org/ftp/talloc/$TARBALL"

BUILD_DEPENDS="python-dev docbook-xsl"
SPLIT="$PACKAGE-python $PACKAGE $PACKAGE-dev"

compile_rules() {
	./configure --prefix=/usr &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		talloc-python)
			copy python*/ libpytalloc*
			CAT="development|Python bindings"
			DEPENDS="talloc python"
			;;
		talloc)
			copy @std @rm
			;;
		talloc-dev)
			copy @dev
			;;
	esac
}
