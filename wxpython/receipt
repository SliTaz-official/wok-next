# SliTaz package receipt v2.

PACKAGE="wxpython"
VERSION="2.8.12.1"
CATEGORY="x-window"
SHORT_DESC="GUI toolkit for the Python programming language"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL"
WEB_SITE="http://www.wxpython.org/"

TARBALL="wxPython-src-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/wxpython/$TARBALL"

BUILD_DEPENDS="python-dev wxWidgets28-dev mesa-dev glu-dev"
SPLIT="wxpython-dev"

compile_rules() {
	export CXXFLAGS="-Wno-narrowing"
	mv wxPython/wx/tools/Editra/editra wxPython/wx/tools/Editra/Editra
	./configure \
		--with-gtk=2 \
		--with-opengl \
		--enable-unicode \
		--with-regex=sys \
		--with-libpng=sys \
		--with-libxpm=sys \
		--with-libjpeg=sys \
		--with-libtiff=sys \
		--disable-precomp-headers \
		--without-sdl \
		$CONFIGURE_ARGS &&
	make $MAKEFLAGS
	cd $src/wxPython
	patch -Np2 -i $stuff/wxpython-cairo.patch
	python setup.py WXPORT=gtk2 UNICODE=1 build
	python setup.py WXPORT=gtk2 UNICODE=1 install --root=$DESTDIR
}

genpkg_rules() {
	case $PACKAGE in
		wxpython)
			mkdir -p $fs/usr/lib
			cp -a $install/usr/bin $fs/usr
			cp -a $install/usr/lib/python* $fs/usr/lib
			DEPENDS="python wxWidgets28"
			;;
		*-dev)
			mkdir -p $fs/usr
			cp -a $install/usr/include $fs/usr
			;;
	esac
}
