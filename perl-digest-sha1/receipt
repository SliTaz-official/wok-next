PACKAGE="perl-digest-sha1"
VERSION="2.13"
CATEGORY="perl"
SHORT_DESC="Digest::SHA1 - Perl interface to the SHA-1 algorithm"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Digest-SHA1"
REPOLOGY="perl:digest-sha1"

TARBALL="Digest-SHA1-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/G/GA/GAAS/$TARBALL"

BUILD_DEPENDS="perl-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
