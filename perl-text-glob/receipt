# SliTaz package receipt.

PACKAGE="perl-text-glob"
VERSION="0.11"
CATEGORY="perl"
SHORT_DESC="Text::Glob - match globbing patterns against text"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Text-Glob"
REPOLOGY="perl:text-glob"

TARBALL="Text-Glob-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/R/RC/RCLAMP/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
}
