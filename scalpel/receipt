# SliTaz package receipt v2.

PACKAGE="scalpel"
VERSION="1.60"
CATEGORY="system-tools"
SHORT_DESC="Frugal, high performance file carver"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.digitalforensicssolutions.com/Scalpel"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/$TARBALL"

compile_rules() {
	make || return 1

	install -Dm 755 $src/scalpel      $install/usr/bin/scalpel
	install -Dm 644 $src/scalpel.conf $install/etc/scalpel.conf
}

genpkg_rules() {
	copy @std
}

