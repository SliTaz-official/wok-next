# SliTaz package receipt v2.

PACKAGE="cairomm"
VERSION="1.12.2"
CATEGORY="x-window"
SHORT_DESC="C++ interface to Cairo"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="https://www.cairographics.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/cairomm.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://cairographics.org/releases/$TARBALL"

BUILD_DEPENDS="cairo-dev libsigc++-dev"
SPLIT="cairomm-dev"

compile_rules() {
	sed -i "/^libdocdir =/ s|\$(book_name)|cairomm-$VERSION|" docs/Makefile.in

	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		cairomm)
			copy @std
			DEPENDS="cairo libsigc++"
			;;
		cairomm-dev)
			copy @dev
			DEPENDS="cairomm cairo-dev libsigc++-dev"
			;;
	esac
}
