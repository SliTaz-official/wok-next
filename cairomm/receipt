# SliTaz package receipt v2.

PACKAGE="cairomm"
VERSION="1.12.2"
CATEGORY="x-window"
SHORT_DESC="C++ interface to Cairo"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="https://www.cairographics.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/cairomm.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://cairographics.org/releases/$TARBALL"

BUILD_DEPENDS="cairo-dev libsigc++-dev"
SPLIT="cairomm-dev"

compile_rules() {
	sed -i "/^libdocdir =/ s|\$(book_name)|cairomm-$VERSION|" docs/Makefile.in

	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules() {
	case $PACKAGE in
		cairomm)
			copy @std
			DEPENDS="cairo freetype libpng16 libsigc++ xorg-libX11 \
			xorg-libXext xorg-libXrender zlib"
			;;
		cairomm-dev)
			copy @dev
			DEPENDS="cairomm bzip2-dev cairo-dev fontconfig-dev freetype-dev \
			glib-dev harfbuzz-dev libpng16-dev libsigc++-dev libxml2-dev \
			pcre-dev xorg-libX11-dev xorg-libXau-dev xorg-libXdmcp-dev \
			xorg-libXext-dev xorg-libXrender-dev xorg-libxcb-dev \
			xorg-pixman-dev xz-dev zlib-dev"
			;;
	esac
}
