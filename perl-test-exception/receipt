# SliTaz package receipt.

PACKAGE="perl-test-exception"
VERSION="0.43"
CATEGORY="perl"
SHORT_DESC="Test::Exception - Test exception-based code"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Test-Exception"
REPOLOGY="perl:test-exception"

TARBALL="Test-Exception-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/E/EX/EXODIST/$TARBALL"

DEPENDS="perl-sub-uplevel"
BUILD_DEPENDS="$DEPENDS"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
