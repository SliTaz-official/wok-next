# SliTaz package receipt v2.

PACKAGE="lame"
VERSION="3.100"
CATEGORY="multimedia"
SHORT_DESC="MPEG Audio Layer III (MP3) encoder"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="http://lame.sourceforge.net/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/multimedia/lame.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS_arm="ncurses-dev"
BUILD_DEPENDS="ncurses-dev nasm"
SPLIT="lame-dev"

compile_rules() {
	case $ARCH in
		i?86) sed -i -e 's/<xmmintrin.h/&.nouse/d' configure;;
	esac

	./configure \
		--enable-nasm \
		--enable-mp3rtp \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make pkghtmldir=/usr/share/doc/lame-$VERSION install
}

genpkg_rules() {
	case $PACKAGE in
		lame)
			copy @std
			DEPENDS="ncurses"
			;;
		*-dev) copy @dev;;
	esac
}
