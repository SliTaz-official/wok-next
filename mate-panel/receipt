# SliTaz package receipt v2.

PACKAGE="mate-panel"
VERSION="1.18.4"
CATEGORY="x-window"
SHORT_DESC="MATE panel"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://github.com/mate-desktop/mate-panel"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/mate-panel/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common gtk-doc yelp-tools gobject-introspection-dev \
xorg-libICE-dev xorg-libSM-dev gtk+3-dev mate-desktop-dev mate-menus-dev \
dbus-glib-dev libwnck3-dev librsvg-dev libmateweather-dev itstool"
SPLIT="mate-panel-dev"

compile_rules() {
	./autogen.sh \
		--with-in-process-applets=all \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		mate-panel)
			copy @std
			DEPENDS="atk bzlib cairo dbus dbus-glib dconf fontconfig freetype \
			gdk-pixbuf glib gtk+3 libcroco libffi libharfbuzz liblzma \
			libmateweather libpng16 librsvg libsoup libsqlite3 libwnck3 \
			libxml2 mate-desktop mate-menus pango pcre startup-notification \
			util-linux-blkid util-linux-mount util-linux-uuid xorg-libICE \
			xorg-libSM xorg-libX11 xorg-libXau xorg-libXdmcp xorg-libXext \
			xorg-libXrandr xorg-libXrender xorg-libxcb xorg-pixman \
			xorg-xcb-util zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="mate-panel atk-dev bzip2-dev cairo-dev fontconfig-dev 
			freetype-dev gdk-pixbuf-dev glib-dev gtk+3-dev harfbuzz-dev \
			libffi-dev libpng16-dev libxml2-dev pango-dev pcre-dev \
			util-linux-blkid-dev util-linux-mount-dev util-linux-uuid-dev \
			xorg-libX11-dev xorg-libXau-dev xorg-libXdmcp-dev xorg-libXext-dev \
			xorg-libXrender-dev xorg-libxcb-dev xorg-pixman-dev xz-dev zlib-dev"
			;;
	esac
	TAGS="MATE"
}
