# SliTaz package receipt v2.

PACKAGE="mate-panel"
VERSION="1.20.3"
CATEGORY="x-window"
SHORT_DESC="MATE panel"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://github.com/mate-desktop/mate-panel"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/mate-panel/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common gtk-doc yelp-tools-dev gobject-introspection-dev \
libice-dev libsm-dev gtk3-dev mate-desktop-dev mate-menus-dev \
dbus-glib-dev libwnck3-dev librsvg-dev libmateweather-dev itstool"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./autogen.sh \
		--with-in-process-applets=all \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		mate-panel)
			copy @std
			DEPENDS="atk libcairo dbus-glib gdk-pixbuf glib gtk3 libmateweather \
			librsvg libwnck3 mate-desktop mate-menus pango libice \
			libsm libx11 libxrandr"
			;;
		*-dev)
			copy @dev
			DEPENDS="mate-panel glib-dev gtk3-dev"
			;;
	esac
	TAGS="MATE"
}
