# SliTaz package receipt v2.

PACKAGE="perl-http-message"
VERSION="6.18"
CATEGORY="perl"
SHORT_DESC="HTTP::Message - HTTP style message"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/HTTP-Message"
REPOLOGY="perl:http-message"

TARBALL="HTTP-Message-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/O/OA/OALDERS/$TARBALL"

BUILD_DEPENDS="perl-encode-locale perl-http-date perl-io-html \
perl-lwp-mediatypes perl-uri"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="$BUILD_DEPENDS"
}
