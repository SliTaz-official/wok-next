# SliTaz package receipt.

PACKAGE="perl-http-message"
VERSION="6.11"
CATEGORY="perl"
SHORT_DESC="HTTP::Message - HTTP style message"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/HTTP-Message"

TARBALL="HTTP-Message-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/E/ET/ETHER/$TARBALL"

DEPENDS="perl-encode-locale perl-http-date perl-io-html perl-lwp-mediatypes \
perl-uri"
BUILD_DEPENDS="$DEPENDS"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
