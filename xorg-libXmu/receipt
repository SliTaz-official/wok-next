# SliTaz package receipt v2.

PACKAGE="xorg-libXmu"
VERSION="1.1.2"
CATEGORY="x-window"
SHORT_DESC="X miscellaneous utility routines"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7lib.html"
REPOLOGY="libxmu"

TARBALL="libXmu-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-libXext-dev xorg-libXt-dev util-linux-uuid-dev"
SPLIT="xorg-libXmu-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXmu)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXext xorg-libXt"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXmu \
			xorg-libX11-dev xorg-libXext-dev xorg-libXt-dev xorg-xorgproto"
			;;
	esac
}
