# SliTaz package receipt v2.

PACKAGE="xorg-libXmu"
VERSION="1.1.2"
CATEGORY="x-window"
SHORT_DESC="X miscellaneous utility routines"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
HOST_ARCH="i486 arm"

TARBALL="libXmu-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-libXext-dev xorg-libXt-dev util-linux-uuid-dev"
SPLIT="xorg-libXmu-dev"
PKG_RULE="std-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		*-libXmu)
			copy @std
			DEPENDS="xorg-libxcb util-linux-uuid xorg-libICE xorg-libSM \
			xorg-libX11 xorg-libXau xorg-libXdmcp xorg-libXext xorg-libXt"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXmu xorg-libxcb-dev util-linux-uuid-dev \
			xorg-libICE-dev xorg-libSM-dev xorg-libX11-dev xorg-libXau-dev \
			xorg-libXdmcp-dev xorg-libXext-dev xorg-libXt-dev xorg-xproto"
			;;
	esac
}
