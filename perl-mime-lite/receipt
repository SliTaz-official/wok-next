# SliTaz package receipt.

PACKAGE="perl-mime-lite"
VERSION="3.030"
CATEGORY="perl"
SHORT_DESC="MIME::Lite - low-calorie MIME generator"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/MIME-Lite"
REPOLOGY="perl:mime-lite"

TARBALL="MIME-Lite-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/R/RJ/RJBS/$TARBALL"

BUILD_DEPENDS="perl-email-date-format perl-mime-types perl-mailtools"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-email-date-format perl-mime-types perl-mailtools"
}
