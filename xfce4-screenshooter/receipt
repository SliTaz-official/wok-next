# SliTaz package receipt v2.

PACKAGE="xfce4-screenshooter"
VERSION="1.8.2" # higher versions required libxfce4ui2 that depends on GTK+3
CATEGORY="graphics"
SHORT_DESC="Xfce screenshooter"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://goodies.xfce.org/projects/applications/xfce4-screenshooter"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://archive.xfce.org/src/apps/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool xfce4-panel-dev libsoup-dev xorg-libXfixes-dev \
libxfce4ui-dev exo-dev xorg-libSM-dev startup-notification-dev \
xorg-xcb-util-dev"

compile_rules() {
	./configure \
		--disable-debug \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="cairo exo gdk-pixbuf glib gtk2 libsoup libxfce4ui libxfce4util \
	libxml2 xfce4-panel xorg-libX11 xorg-libXext xorg-libXfixes"
	TAGS="Xfce"
}
