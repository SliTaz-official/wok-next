# SliTaz package receipt v2.

PACKAGE="blueman"
VERSION="1.10"
CATEGORY="system-tools"
SHORT_DESC="Easy to use GTK+ Bluetooth Manager"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://github.com/blueman-project/blueman"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://download.tuxfamily.org/blueman/$TARBALL"

BUILD_DEPENDS="bluez-dev python-dev python-pygtk-dev notify-python-dev libnotify-dev \
python-pyrex startup-notification-dev util-linux-uuid-dev dbus-dev \
python-dbus-dev intltool libtool xorg-xcb-util-dev"

compile_rules() {
	./configure \
		--libexecdir=/usr/lib/$PACKAGE \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="linux-bluetooth bluez python python-pygtk libnotify notify-python \
	python-pyrex startup-notification util-linux-uuid dbus python-dbus"
}
