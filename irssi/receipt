# SliTaz package receipt v2.

PACKAGE="irssi"
VERSION="0.8.17"
CATEGORY="network"
SHORT_DESC="Lightweight console IRC client"
MAINTAINER="mallory@sweetpeople.org"
LICENSE="GPL2"
WEB_SITE="http://irssi.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://irssi.org/files/$TARBALL"

BUILD_DEPENDS="glib-dev ncurses-dev slitaz-toolchain openssl-dev perl-dev"

compile_rules() {
	./configure \
		--sysconfdir=/etc/irssi \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="glib openssl perl ncurses"
	TAGS="irc"
}
