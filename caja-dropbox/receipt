# SliTaz package receipt v2.

PACKAGE="caja-dropbox"
VERSION="1.18.0"
CATEGORY="utilities"
SHORT_DESC="Dropbox extension for Caja file manager"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://github.com/mate-desktop/caja-dropbox"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/caja-dropbox/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common caja-dev pygtk-dev python-docutils"
SPLIT="caja-dropbox-dev"

compile_rules() {
	./autogen.sh \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		caja-dropbox)
			copy @std
			DEPENDS="caja glib gtk+3"
			;;
		*-dev)
			copy @dev
			;;
	esac
	TAGS="MATE"
}
