# SliTaz package receipt.

PACKAGE="perl-test-number-delta"
VERSION="1.06"
CATEGORY="perl"
SHORT_DESC="Test::Number::Delta - Compare the difference between numbers \
against a given tolerance"
MAINTAINER="claudinei@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Test-Number-Delta"
REPOLOGY="perl:test-number-delta"

TARBALL="Test-Number-Delta-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DA/DAGOLDEN/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
