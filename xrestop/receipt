# SliTaz package receipt v2.

PACKAGE="xrestop"
VERSION="0.4"
CATEGORY="utilities"
SHORT_DESC="X11 server resource usage monitor"
MAINTAINER="paul@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.freedesktop.org/wiki/Software/xrestop/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://downloads.yoctoproject.org/releases/xrestop/$TARBALL"

BUILD_DEPENDS="ncurses-dev xorg-libXres-dev"

compile_rules() {
	export LDFLAGS="$LDFLAGS -Wl,--copy-dt-needed-entries"

	./configure --prefix=/usr &&
	make &&
	make install
}

genpkg_rules() {
	mkdir -p $fs/usr
	cp -a $install/usr/bin $fs/usr
	DEPENDS="ncurses xorg-libXres"
}
