# SliTaz package receipt.

PACKAGE="cups"
VERSION="2.1.4"
CATEGORY="system-tools"
SHORT_DESC="Common UNIX Printing System."
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2 LGPL2"
WEB_SITE="https://www.cups.org/"
TAGS="printer printing"

TARBALL="$PACKAGE-$VERSION-source.tar.gz"
WGET_URL="https://github.com/apple/cups/releases/download/release-$VERSION/$TARBALL"

DEPENDS="acl dbus libcups libgnutls libusb zlib"
BUILD_DEPENDS="automake libusb-dev zlib-dev dbus-dev gnutls-dev perl python \
acl-dev"
SPLIT="libcups cups-doc"

# Rules to configure and make the package.
compile_rules()
{
	sed -i 's:555:755:g;s:444:644:g' Makedefs.in &&
	sed -i '/MAN.EXT/s:.gz::g' configure config-scripts/cups-manpages.m4 &&
	sed -i '/LIBGCRYPTCONFIG/d' config-scripts/cups-ssl.m4 &&

	aclocal  -I config-scripts &&
	autoconf -I config-scripts &&

	CC=gcc \
	./configure \
		--sysconfdir=/etc \
		--libdir=/usr/lib \
		--localstatedir=/var \
		--disable-systemd \
		--with-rcdir=/tmp/cupsinit \
		--with-system-groups=lpadmin \
		--with-docdir=/usr/share/doc/cups-$VERSION \
		$CONFIGURE_ARGS &&
	make
	make BUILDROOT=$install install &&
	rm -rf $install/tmp &&
	ln -svnf ../doc/cups-$VERSION $install/usr/share/cups/doc-$VERSION
	echo "ServerName /var/run/cups/cups.sock" > $install/etc/cups/client.conf &&

	sed -i 's|hostname:9100|&\n\n    parallel:/dev/usb/lp0|' \
		$install/usr/share/cups/templates/choose-uri.tmpl &&
	sed -i 's|htmlview|browser|' $install/usr/share/applications/cups.desktop
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_folders dbus-1 bin sbin cups applications icons var
	cook_copy_files *.so*

	# -> cups-dev
	rm -f $fs/usr/bin/cups-config
	rm -rf $fs/usr/include
	# -> libcups
	rm -f $fs/usr/lib/libcups.so*

	# Daemon script
	cp -a $stuff/etc $fs
	chown -R root:root $fs/etc/init.d
	sed -i 's|^#Group .*|Group lp|' $fs/etc/cups/cups-files.conf

	# TazPanel link
	cp -a $stuff/var $fs
	chown -R root:root $fs/var/www

}

post_install()
{
	# Start CUPS daemon and edit daemons.conf
	if [ -z "$1" -a ! -s /aufs-umount.sh ]; then
		/etc/init.d/cupsd start || continue
	fi
	rm -f "$1"/var/cache/tazpanel/* 2>/dev/null
	if ! grep -q ^CUPSD_OPTIONS "$1/etc/daemons.conf"; then
		cat >> "$1/etc/daemons.conf" <<EOT
# CUPS printing daemon options.
CUPSD_OPTIONS=""

EOT
	fi
}

pre_remove()
{
	# Stop CUPS daemon before rm.
	[ -z "$1" -a -x /etc/init.d/cupsd ] && /etc/init.d/cupsd stop
	:
}
