# SliTaz package receipt v2.

PACKAGE="arpack-ng"
VERSION="3.6.3"
CATEGORY="development"
SHORT_DESC="Fortran77 subroutines to solve large scale eigenvalue problems"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="https://github.com/opencollab/arpack-ng"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/opencollab/arpack-ng/archive/$VERSION.tar.gz"

BUILD_DEPENDS="automake libtool gfortran lapack"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./bootstrap &&
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		arpack-ng)
			copy @std
			DEPENDS="blas gcc-lib-math lapack libgfortran"
			;;
		*-dev)
			copy @dev
			DEPENDS="arpack-ng blas lapack"
			;;
	esac
}
