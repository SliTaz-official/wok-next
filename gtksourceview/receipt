# SliTaz package receipt v2.

PACKAGE="gtksourceview"
VERSION="2.10.5"
CATEGORY="x-window"
SHORT_DESC="Extends GTK+ framework for multiline text editing"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://projects.gnome.org/gtksourceview/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool gtk+-dev libxml2-dev expat-dev"
SPLIT="gtksourceview-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		gtksourceview)
			copy @std
			DEPENDS="cairo gdk-pixbuf glib gtk+ libxml2 pango python"
			;;
		*-dev)
			copy @dev
			DEPENDS="gtksourceview gtk+-dev libxml2-dev"
			;;
	esac
}

