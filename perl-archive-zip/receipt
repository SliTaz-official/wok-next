# SliTaz package receipt.

PACKAGE="perl-archive-zip"
VERSION="1.60"
CATEGORY="perl"
SHORT_DESC="Archive::Zip - Provide an interface to ZIP archive files"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Archive-Zip"

TARBALL="Archive-Zip-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/P/PH/PHRED/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
