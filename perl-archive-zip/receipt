# SliTaz package receipt v2.

PACKAGE="perl-archive-zip"
VERSION="1.64"
CATEGORY="perl"
SHORT_DESC="Archive::Zip - Provide an interface to ZIP archive files"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Archive-Zip"
HOST_ARCH="any"
REPOLOGY="perl:archive-zip"

TARBALL="Archive-Zip-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/P/PH/PHRED/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
