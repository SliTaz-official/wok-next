}

genpkg_rules() {
	PYTHON_LIB=python$(grep ^VERSION= $WOK/python/receipt | sed 's/.*"\(...\).*/\1/')
	sed -i 's|/home/slitaz/wok/gaupol/install||g' \
		$install/usr/lib/$PYTHON_LIB/site-packages/aeidon/paths.py
	cp -a $install/usr $fs
	DEPENDS="python python-pygtk"
	SUGGESTED="mplayer"
}
