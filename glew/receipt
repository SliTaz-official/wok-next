# SliTaz package receipt v2.

PACKAGE="glew"
VERSION="2.1.0"
CATEGORY="x-window"
SHORT_DESC="The OpenGL Extension Wrangler Library"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT BSD"
WEB_SITE="http://glew.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tgz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="xorg-libX11-dev mesa-dev"
SPLIT="glew-dev"

compile_rules() {
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		glew)
			copy @std
			DEPENDS="mesa xorg-libX11"
			;;
		*-dev)
			copy @dev
			DEPENDS="glew libglu-mesa-dev"
			;;
	esac
}
