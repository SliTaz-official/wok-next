# SliTaz package receipt v2.

PACKAGE="python-webob"
VERSION="latest-1.7"
CATEGORY="development"
SHORT_DESC="WSGI request and response object"
MAINTAINER="taziden@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://pypi.org/project/WebOb/"

BUILD_DEPENDS="python"

compile_rules() {
	# python-turbogears require "WebOb<1.8.0,>=1.2"
	pip install --no-compile --root=$DESTDIR "WebOb<1.8.0,>=1.2"
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*WebOb-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
	TAGS="python"
}
