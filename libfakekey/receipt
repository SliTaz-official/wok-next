# SliTaz package receipt v2.

PACKAGE="libfakekey"
VERSION="0.3"
CATEGORY="libs"
SHORT_DESC="X virtual keyboard library"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://www.yoctoproject.org/tools-resources/projects/matchbox"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://git.yoctoproject.org/cgit/cgit.cgi/libfakekey/snapshot/$TARBALL"

BUILD_DEPENDS="automake libtool xorg-libX11-dev xorg-libXtst-dev"
SPLIT="libfakekey-dev"

compile_rules() {
	./autogen.sh \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libfakekey)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXtst"
			;;
		*-dev)
			copy @dev
			DEPENDS="libfakekey \
			xorg-libX11-dev xorg-libXtst-dev"
			;;
	esac
	TAGS="matchbox"
}
