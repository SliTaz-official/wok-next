# SliTaz package receipt v2.

PACKAGE="libxklavier"
VERSION="5.4"
CATEGORY="libs"
SHORT_DESC="Library providing high-level API for XKB"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://freedesktop.org/wiki/Software/LibXklavier/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/libxklavier.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://people.freedesktop.org/~svu/$TARBALL"

BUILD_DEPENDS="gettext gobject-introspection-dev vala gtk-doc xorg-libX11-dev \
xorg-server-dev xorg-xkbcomp-dev xorg-libxkbfile-dev xorg-libXi-dev iso-codes"
SPLIT="libxklavier-dev"

compile_rules() {
	./configure \
		--disable-static \
		\
		--enable-xkb-support \
		--enable-xmodmap-support \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libxklavier)
			copy @std
			DEPENDS="glib libffi liblzma libxml2 pcre xorg-libX11 xorg-libXau \
			xorg-libXdmcp xorg-libXext xorg-libXi xorg-libxcb xorg-libxkbfile \
			zlib   iso-codes"
			;;
		libxklavier-dev)
			copy @dev
			DEPENDS="libxklavier glib-dev libffi-dev libxml2-dev pcre-dev \
			xorg-libX11-dev xorg-libXau-dev xorg-libXdmcp-dev xorg-libXext-dev \
			xorg-libXi-dev xorg-libxcb-dev xorg-libxkbfile-dev xz-dev zlib-dev"
			;;
	esac
}
