# SliTaz package receipt v2.

PACKAGE="libxklavier"
VERSION="5.4"
CATEGORY="libs"
SHORT_DESC="Library providing high-level API for XKB"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://freedesktop.org/wiki/Software/LibXklavier/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/libxklavier.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://people.freedesktop.org/~svu/$TARBALL"

BUILD_DEPENDS="gettext gobject-introspection-dev vala gtk-doc xorg-libX11-dev \
xorg-server-dev xorg-xkbcomp-dev xorg-libxkbfile-dev xorg-libXi-dev \
iso-codes-dev"
SPLIT="libxklavier-dev"

compile_rules() {
	./configure \
		--disable-static \
		\
		--enable-xkb-support \
		--enable-xmodmap-support \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libxklavier)
			copy @std
			DEPENDS="glib libxml2 xorg-libX11 xorg-libXi xorg-libxkbfile \
			   iso-codes"
			;;
		*-dev)
			copy @dev
			DEPENDS="libxklavier glib-dev libxml2-dev"
			;;
	esac
}
