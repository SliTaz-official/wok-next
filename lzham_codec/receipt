# SliTaz package receipt.

PACKAGE="lzham_codec"
VERSION="1.0"
CATEGORY="base-system"
SHORT_DESC="Lossless data compression codec with LZMA-like ratios but 1.5x-8x faster decompression speed."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://github.com/richgel999/lzham_codec"
TAGS="compression"
REPOLOGY="lzham-codec"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$GITHUB/richgel999/lzham_codec/tarball/v1_0_stable1"

DEPENDS="gcc-lib-base"
BUILD_DEPENDS="cmake"

# Rules to configure and make the package.
compile_rules()
{
	cmake . -DBUILD_X64=OFF -DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr &&
	make && make install

	mkdir -p $install/usr/bin
	cp -a $src/bin_linux/lzhamtest $install/usr/bin
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy bin/ lib/
}
