# SliTaz package receipt v2.

PACKAGE="libgtop"
VERSION="2.38.0"
CATEGORY="x-window"
SHORT_DESC="Portable System Access Library"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://developer.gnome.org/libgtop/stable/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/gnome/libgtop.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="glib-dev intltool xorg-libX11-dev xorg-libXau-dev gtk-doc"
SPLIT="libgtop-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libgtop)
			copy @std
			DEPENDS="glib xorg-libXau"
			;;
		*-dev)
			copy @dev
			DEPENDS="libgtop glib-dev"
			;;
	esac
}
