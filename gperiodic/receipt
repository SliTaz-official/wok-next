# SliTaz package receipt v2.

PACKAGE="gperiodic"
VERSION="2.0.10"
CATEGORY="misc"
SHORT_DESC="A periodic table element"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.frantz.fi/software/gperiodic.php"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://www.frantz.fi/software/$TARBALL"

BUILD_DEPENDS="gtk+-dev gettext-tools"

# Rules to configure and make the package.
compile_rules()
{
	sed -i 's| GtkTooltips| struct _GtkTooltips|' gperiodic.h
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std *.mo
	DEPENDS="atk cairo fontconfig freetype gdk-pixbuf glib gtk+ pango"
}
