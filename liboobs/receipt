# SliTaz package receipt v2.

PACKAGE="liboobs"
VERSION="2.32.0"
CATEGORY="system-tools"
SHORT_DESC="Object Oriented Backends System"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://developer.gnome.org/liboobs/stable"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="dbus-glib-dev glib-dev system-tools-backends"
SPLIT="liboobs-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules() {
	case $PACKAGE in
		liboobs)
			copy @std
			DEPENDS="dbus dbus-glib glib glibc-base libffi pcre \
			system-tools-backends"
			;;
		*-dev)
			copy @dev
			DEPENDS="liboobs glib-dev dbus-dev"
			;;
	esac
}
