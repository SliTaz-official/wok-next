# SliTaz package receipt v2.

PACKAGE="gpicview"
VERSION="0.2.5"
CATEGORY="graphics"
SHORT_DESC="Lightweight image viewer"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://wiki.lxde.org/en/GPicView"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/lxde/gpicview.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$SF_MIRROR/lxde/$TARBALL"

BUILD_DEPENDS="intltool gtk+-dev"

compile_rules() {
	sed -i 's|Utility;||' gpicview.desktop.in

	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	# skip pixmaps and icons (found in the icon theme)
	copy bin/ *.desktop *.ui
	DEPENDS="atk cairo fontconfig freetype gdk-pixbuf glib gtk+ libjpeg-turbo \
	pango xorg-libX11"
	TAGS="LXDE"
}
