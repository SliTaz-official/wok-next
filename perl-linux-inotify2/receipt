# SliTaz package receipt v2.

PACKAGE="perl-linux-inotify2"
VERSION="1.22"
CATEGORY="perl"
SHORT_DESC="Linux::Inotify2 - scalable directory/file change notification"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Linux-Inotify2"
REPOLOGY="perl:linux-inotify2"

TARBALL="Linux-Inotify2-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/M/ML/MLEHMANN/$TARBALL"

BUILD_DEPENDS="perl-common-sense perl-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-common-sense"
}
