# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-trident"
VERSION="1.3.8"
CATEGORY="x-window"
SHORT_DESC="Xorg driver for Trident video cards"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/trident/"
REPOLOGY="xdrv:trident"

TARBALL="xf86-video-trident-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev xorg-xorgproto"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-server"
	TAGS="xorg display"
}
