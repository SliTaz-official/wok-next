# SliTaz package receipt v2.

PACKAGE="celestia"
VERSION="1.6.1"
CATEGORY="games"
SHORT_DESC="Real-time 3D Space Simulation"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL2"
WEB_SITE="http://www.shatters.net/celestia/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="gtk+ glew libtheora lua5.1 gtkglext freeglut xorg-libXmu mesa \
glu libjpeg jpeg zlib gtk+-dev libtheora-dev lua5.1-dev gtkglext-dev \
freeglut-dev xorg-libXmu-dev glu mesa-dev libpng16-dev libogg-dev \
jpeg-dev glew-dev zlib-dev gettext autoconf"

compile_rules() {
	export LDFLAGS="$LDFLAGS -Wl,--copy-dt-needed-entries -ldl"

	sed -i 's|"ray.h"|&\n#include "mathlib.h"|' src/celmath/intersect.h
	sed -i 's|NULL|0|' src/celengine/frametree.h
	sed -i 's|"png.h"|&\n#include "zlib.h"|' src/celestia/imagecapture.cpp
	sed -i 's|<cstdio>|&\n#include <string.h>|' src/celengine/*.cpp

	./configure \
		--with-gtk \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="gtk+ glew libtheora lua5.1 gtkglext freeglut xorg-libXmu mesa glu \
	libjpeg jpeg zlib"
}
