# SliTaz package receipt v2.

PACKAGE="xorg-font-misc-misc"
VERSION="1.1.2"
CATEGORY="x-window"
SHORT_DESC="Misc bitmap fixed fonts"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="PublicDomain"
WEB_SITE="https://www.x.org/wiki/"
HOST_ARCH="any"
REPOLOGY="font-misc-misc"

TARBALL="font-misc-misc-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/font/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-font-util-dev xorg-mkfontdir xorg-bdftopcf"
SPLIT="xorg-base-fonts $PACKAGE"

COOKOPTS="!gz" # too long

compile_rules() {
	./configure \
		--disable-all-encodings \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		xorg-base-fonts)
			copy 6x13.pcf.gz
			CAT="x-window|minimal set"
			DEPENDS=" "
			;;
		*)
			copy @std @rm
			DEPENDS="xorg-base-fonts"
			;;
	esac
	TAGS="font"
}

post_install() {
	chroot "$1/" fc-cache -r /usr/share/fonts/X11/misc
}
post_remove() {
	chroot "$1/" fc-cache -r
}
