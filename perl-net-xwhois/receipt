# SliTaz package receipt.

PACKAGE="perl-net-xwhois"
VERSION="0.90"
CATEGORY="perl"
SHORT_DESC="Net::XWhois - Whois Client Interface for Perl5"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="unknown"
WEB_SITE="https://metacpan.org/release/Net-XWhois"

TARBALL="Net-XWhois-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/V/VI/VIPUL/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
