# SliTaz package receipt.

PACKAGE="perl-net-xwhois"
VERSION="0.90"
CATEGORY="perl"
SHORT_DESC="Net::XWhois - Whois Client Interface for Perl5"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="unknown"
WEB_SITE="https://metacpan.org/release/Net-XWhois"
REPOLOGY="perl:net-xwhois"

TARBALL="Net-XWhois-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/V/VI/VIPUL/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
