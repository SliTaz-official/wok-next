# SliTaz package receipt v2.

PACKAGE="xorg-fonttosfnt"
VERSION="1.0.4"
CATEGORY="x-window"
SHORT_DESC="Wrap a bitmap font in a sfnt (TrueType) wrapper"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="fonttosfnt-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-xproto freetype-dev xorg-libfontenc-dev"
PKG_RULE="std"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="freetype xorg-libfontenc"
	TAGS="utility xorg fonts"
}
