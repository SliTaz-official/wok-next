# SliTaz package receipt v2.

PACKAGE="xfce4-dict"
VERSION="0.7.2"
CATEGORY="text"
SHORT_DESC="Xfce dictionary"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://goodies.xfce.org/projects/applications/xfce4-dict"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://archive.xfce.org/src/apps/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool gtk2-dev libxfce4ui-dev xfce4-panel-dev xorg-libSM-dev \
startup-notification-dev xorg-xcb-util-dev"

compile_rules() {
	./configure \
		--disable-debug \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="gdk-pixbuf glib gtk2 libxfce4ui libxfce4util pango xfce4-panel \
	xorg-libX11"
	TAGS="Xfce"
}
