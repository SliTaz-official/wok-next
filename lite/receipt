# SliTaz package receipt v2.

PACKAGE="lite"
VERSION="0.8.10"
CATEGORY="graphics"
SHORT_DESC="Toolkit Engine using DirectFB"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.directfb.org/index.php?path=Platform/LiTE"

TARBALL="LiTE-$VERSION.tar.gz"
WGET_URL="http://www.directfb.org/downloads/Libs/$TARBALL"

BUILD_DEPENDS="directfb-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		lite)
			copy @std
			DEPENDS="directfb"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
