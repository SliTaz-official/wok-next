# SliTaz package receipt v2.

PACKAGE="links"
VERSION="2.14"
CATEGORY="network"
SHORT_DESC="Light and fast web browser"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://links.twibright.com/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/basicnet/links.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://links.twibright.com/download/$TARBALL"

BUILD_DEPENDS="gpm-dev openssl-dev zlib-dev bzip2-dev xz-dev xorg-libX11-dev \
xorg-libXt-dev libpng16-dev libjpeg-turbo-dev tiff-dev directfb-dev"
SPLIT="$PACKAGE-dfb:dfb $PACKAGE-cli:cli"

compile_rules() {
	case $SET in
		'')  SET_ARGS='--enable-graphics --without-directfb --with-x';;
		dfb) SET_ARGS='--enable-graphics --with-directfb --without-x';;
		cli) SET_ARGS='--disable-graphics';;
	esac

	./configure \
		$SET_ARGS \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$install install || return 1

	install -Dm644 $src/graphics/links.xpm $install/usr/share/pixmaps/links.xpm
	install -Dm644 $stuff/links.html       $install/usr/share/webhome/links.html
}

genpkg_rules() {
	case $PACKAGE in
		links)
			copy @std
			DEPENDS="bzlib libgomp libjpeg-turbo liblzma libpng16 openssl tiff \
			xorg-libX11 zlib"
			SUGGESTED="gpm"
			;;
		links-dfb)
			copy @std
			DEPENDS="bzlib directfb libgomp libjpeg-turbo liblzma libpng16 \
			openssl tiff zlib"
			PROVIDE="links"
			;;
		links-cli)
			copy @std
			DEPENDS="bzlib liblzma openssl zlib"
			PROVIDE="links"
			;;
	esac
	TAGS="web-browser"
}
