# SliTaz package receipt v2.

PACKAGE="vala"
VERSION="0.36.4"
CATEGORY="development"
SHORT_DESC="Compiler for the GObject type system"
MAINTAINER="mimas@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="https://wiki.gnome.org/Projects/Vala"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/vala.html"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="glib-dev libxslt-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules() {
	copy @std @dev
	DEPENDS="glib-dev libffi-dev pcre-dev"
	TAGS="compiler"
}
