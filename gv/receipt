# SliTaz package receipt v2.

PACKAGE="gv"
VERSION="3.7.4"
CATEGORY="office"
SHORT_DESC="X11 user interface for Ghostscript"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://www.gnu.org/software/gv/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://ftp.gnu.org/gnu/gv/$TARBALL"

BUILD_DEPENDS="xorg-libXaw3d-dev xorg-libXinerama-dev"

compile_rules() {
	./configure \
		--prefix=/usr \
		$CONFIGURE_ARGS &&
	make $MAKEFLAGS &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	cp -a $install/usr $fs
	rm -rf $fs/usr/share/man
	DEPENDS="ghostscript xorg-libXaw3d xorg-libXinerama"
}
