# SliTaz package receipt v2.

PACKAGE="libproxy"
VERSION="0.4.15"
CATEGORY="multimedia"
SHORT_DESC="library to provide automatic proxy configuration management"
MAINTAINER="jozee@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="https://libproxy.github.io/libproxy/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/libproxy/libproxy/archive/$VERSION.tar.gz"

BUILD_DEPENDS="cmake webkitgtk-dev python-dev perl gtk2-dev"
SPLIT="libproxy-dev"

compile_rules() {
	./autogen.sh
	sed -i -e 's/WITH_MOZJS:BOOL=ON/WITH_MOZJS:BOOL=OFF/' \
	       -e 's|/usr/local|/usr|' CMakeCache.txt
	./autogen.sh &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		libproxy)
			copy @std
			DEPENDS="glib gtk2 xorg-libXmu webkitgtk libtasn1"
			SUGGESTED="python icu libcurl libxslt"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
