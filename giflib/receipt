# SliTaz package receipt v2.

PACKAGE="giflib"
VERSION="5.1.4"
CATEGORY="graphics"
SHORT_DESC="A library and utilities for processing GIFs"
MAINTAINER="rcx@zoominternet.net"
LICENSE="MIT"
WEB_SITE="https://sourceforge.net/projects/giflib/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/general/giflib.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/giflib/$TARBALL"

SPLIT="giflib-dev"

compile_rules() {
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		giflib) copy @std;;
		*-dev)  copy @dev;;
	esac
}
