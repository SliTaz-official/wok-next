# SliTaz package receipt v2.

PACKAGE="xorg-xbitmaps"
VERSION="1.1.1"
CATEGORY="development"
SHORT_DESC="Standard set of X bitmaps"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/xbitmaps.html"
REPOLOGY="xbitmaps"

TARBALL="xbitmaps-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/data/$TARBALL"

BUILD_DEPENDS="xorg-util-macros"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @dev
	DEPENDS="xorg-util-macros"
}
