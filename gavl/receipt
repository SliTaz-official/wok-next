# SliTaz package receipt v2.

PACKAGE="gavl"
VERSION="1.4.0"
CATEGORY="multimedia"
SHORT_DESC="A low level library, upon which multimedia APIs can be built"
MAINTAINER="jozee@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://gmerlin.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/gmerlin/$TARBALL"

SPLIT="gavl-dev"

compile_rules() {
	./configure \
		--without-doxygen \
		--with-cpuflags=none \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		gavl)
			copy @std
			DEPENDS="glibc-base"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
