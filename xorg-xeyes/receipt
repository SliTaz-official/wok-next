# SliTaz package receipt v2.

PACKAGE="xorg-xeyes"
VERSION="1.1.1"
CATEGORY="x-window"
SHORT_DESC="Follow the mouse/SHAPE extension X demo"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="xeyes"

TARBALL="xeyes-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros  xorg-libX11-dev xorg-libXt-dev \
xorg-libXext-dev xorg-libXmu-dev xorg-libXrender-dev"
PKG_RULE="std"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libXext xorg-libXmu xorg-libXrender xorg-libXt"
}
