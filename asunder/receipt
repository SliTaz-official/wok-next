# SliTaz package receipt v2.

PACKAGE="asunder"
VERSION="2.9.3"
CATEGORY="multimedia"
SHORT_DESC="GTK CD ripper and encoder"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://littlesvr.ca/asunder/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$WEB_SITE/releases/$TARBALL"

BUILD_DEPENDS="gtk2-dev alsa-lib-dev libcddb-dev cdparanoia-III-dev \
xorg-libXdamage-dev intltool"

compile_rules() {
	./configure \
		--prefix=/usr \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	copy @std
	DEPENDS="atk gdk-pixbuf glib gtk2 libcddb   cdparanoia-III"
	SUGGESTED="lame flac"
	TAGS="audio rip"
}
