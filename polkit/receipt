# SliTaz package receipt v2.

PACKAGE="polkit"
VERSION="0.113"
CATEGORY="base-system"
SHORT_DESC="Authorization manager"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="LGPL2"
WEB_SITE="https://www.freedesktop.org/wiki/Software/polkit/"
CROSS="error: cannot check for file existence when cross compiling"

TARBALL="polkit-$VERSION.tar.gz"
WGET_URL="http://www.freedesktop.org/software/polkit/releases/$TARBALL"

BUILD_DEPENDS="glib-dev js-dev expat-dev intltool pam-dev \
gobject-introspection-dev gtk-doc"
SPLIT="polkit polkit-pam polkit-dev polkit-pam-dev"

# Rules to configure and make the package.
compile_rules()
{
	addgroup -g 27 polkitd &&
	adduser -g "PolicyKit Daemon Owner" -h /etc/polkit-1 -u 27 \
		-G polkitd -s /bin/false -D polkitd &&

	cp -a $src $src-pam
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-libsystemd-login=no \
		--with-authfw=shadow \
		$CONFIGURE_ARGS &&
	make && make install &&

	cd $src-pam &&
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-libsystemd-login=no \
		--with-authfw=pam \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$DESTDIR-pam install &&

	mkdir -p $install-pam/etc/pam.d &&
	cp $stuff/polkit-1 $install-pam/etc/pam.d &&
	for inst in $install $install-pam ; do
		# for access file in web interface, will be changed back in post-install to 700
		chmod 755 "$inst/etc/polkit-1/rules.d/"

		cp $stuff/*.rules $inst/etc/polkit-1/rules.d/
	done
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		polkit)
			copy @std
			DEPENDS="expat glib js"
			;;
		polkit-pam)
			install=$install-pam copy @std
			DEPENDS="expat glib js pam"
			PROVIDE="polkit:pam"
			;;
		polkit-dev)
			copy @dev
			DEPENDS="polkit expat-dev glib-dev js-dev"
			;;
		polkit-pam-dev)
			install=$install-pam copy @dev
			DEPENDS="polkit expat-dev glib-dev js-dev pam-dev"
			PROVIDE="polkit-dev:pam"
			;;
	esac
}

post_install_polkit() {
	chroot "$1/" /usr/sbin/addgroup -g 27 polkitd &&
	chroot "$1/" /usr/sbin/adduser -g "PolicyKit Daemon Owner" \
		-h /etc/polkit-1 -u 27 -G polkitd -s /bin/false -D polkitd

	mkdir -p "$1/var"

	chmod  4755 "$1/usr/lib/polkit-1/polkit-agent-helper-1"
	chmod  4755 "$1/usr/bin/pkexec"

	chmod   700 "$1/etc/polkit-1/rules.d/"
	chown 27:27 "$1/etc/polkit-1/rules.d/"

	install -dm700 -o27 -g27 "$1/usr/share/polkit-1/rules.d"
}

post_install_polkit_pam() {
	chroot "$1/" /usr/sbin/addgroup -g 27 polkitd &&
	chroot "$1/" /usr/sbin/adduser -g "PolicyKit Daemon Owner" \
		-h /etc/polkit-1 -u 27 -G polkitd -s /bin/false -D polkitd

	mkdir -p "$1/var"

	chmod  4755 "$1/usr/lib/polkit-1/polkit-agent-helper-1"
	chmod  4755 "$1/usr/bin/pkexec"

	chmod   700 "$1/etc/polkit-1/rules.d/"
	chown 27:27 "$1/etc/polkit-1/rules.d/"

	install -dm700 -o27 -g27 "$1/usr/share/polkit-1/rules.d"
}
