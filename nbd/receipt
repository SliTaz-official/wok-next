# SliTaz package receipt v2.

PACKAGE="nbd"
VERSION="3.3"
CATEGORY="network"
SHORT_DESC="Remote block devices over a TCP/IP network"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://nbd.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/nbd/$TARBALL"

BUILD_DEPENDS="glib-dev pcre-dev"

compile_rules() {
	./configure \
		--sysconfdir=/etc \
		--prefix=/usr \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install || return 1

	touch $install/etc/nbd-server/config
}

genpkg_rules() {
	copy @std
	DEPENDS="glib pcre"
	SUGGESTED="linux-nbd"
	CONFIG_FILES="/etc/nbd-server/"
}
