compile_rules() {
	python setup.py build &&

	python setup.py \
		--no-update-icon-cache \
		--no-compile-schemas \
		install --root $install
}

genpkg_rules() {
	copy @std
	DEPENDS="python libosinfo libvirt-glib libvirt-python pygobject \
	python-ipaddr python-requests gtk-vnc pycairo spice-gtk vte"
}
