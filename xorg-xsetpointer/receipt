# SliTaz package receipt v2.

PACKAGE="xorg-xsetpointer"
VERSION="1.0.1"
CATEGORY="x-window"
SHORT_DESC="Set an X Input device as the main pointer"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="xsetpointer"

TARBALL="xsetpointer-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-libXi-dev xorg-libX11-dev xorg-xorgproto"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libXi"
}
