# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-s3virge"
VERSION="1.10.7"
CATEGORY="x-window"
SHORT_DESC="Xorg driver for Trident S3 virge cards"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/s3virge/"

TARBALL="xf86-video-s3virge-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev"
SPLIT="xorg-xf86-video-s3virge-dev"
PKG_RULE="std-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-s3virge)
			copy @std
			DEPENDS="xorg-server"
			TAGS="xorg display"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xf86-video-s3virge xorg-server-dev"
			;;
	esac
}
