# SliTaz package receipt v2.

PACKAGE="xorg-xf86-input-mouse"
VERSION="1.9.2"
CATEGORY="x-window"
SHORT_DESC="Xorg mouse input driver"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xf86-input-mouse-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev"
SPLIT="xorg-xf86-input-mouse-dev"
PKG_RULE="std-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-mouse)
			copy @std
			DEPENDS="xorg-server"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xf86-input-mouse xorg-server-dev"
			;;
	esac
}
