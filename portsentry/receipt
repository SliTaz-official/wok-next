# SliTaz package receipt v2.

PACKAGE="portsentry"
VERSION="1.2"
CATEGORY="network"
SHORT_DESC="Portscan detection daemon"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="CCPL"
WEB_SITE="http://sentrytools.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/sentrytools/$TARBALL"

compile_rules() {
	sed -i 's/dot $/&\\/' portsentry.c
	make linux || return 1

	install -Dm 755 $src/portsentry      $install/usr/sbin/portsentry
	install -Dm 644 $src/portsentry.conf $install/etc/portsentry/portsentry.conf
	cat > $install/etc/portsentry/portsentry.ignore.static <<EOT
127.0.0.1/32
192.168.0.0/16
10.0.0.0/8
EOT
}

genpkg_rules() {
	copy @std
}
