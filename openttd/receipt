# SliTaz package receipt v2.

PACKAGE="openttd"
VERSION="1.7.1"
CATEGORY="games"
SHORT_DESC="OpenTTD is a clone of Transport Tycoon Deluxe"
MAINTAINER="devl547@gmail.com"
LICENSE="GPL2"
WEB_SITE="http://www.openttd.org"

TARBALL="$PACKAGE-$VERSION-source.tar.gz"
WGET_URL="http://us.binaries.openttd.org/binaries/releases/$VERSION/$TARBALL"

BUILD_DEPENDS="libsdl-dev lzo-dev zlib-dev libpng16-dev xz-dev icu-dev"

compile_rules() {
	./configure \
		--prefix-dir=/usr \
		--binary-dir=/usr/games \
		--man-dir=/usr/share/man \
		--enable-strip \
		--with-zlib \
		--with-liblzo2 \
		--with-png \
		--with-sdl \
		--without-freetype \
		$CONFIGURE_ARGS &&
	make || return 1

	mkdir -p \
		$install/usr/share/pixmaps \
		$install/usr/share/applications \
		$install/usr/share/games/openttd \
		$install/usr/games
	cp -a $src/bin/openttd         $install/usr/games
	cp -a $src/bin/*/              $install/usr/share/games/openttd
	cp $src/media/$PACKAGE.32.png  $install/usr/share/pixmaps
	cp $src/media/$PACKAGE.desktop $install/usr/share/applications
}

genpkg_rules() {
	copy @std
	DEPENDS="libsdl lzo zlib libpng16 icu"
}
