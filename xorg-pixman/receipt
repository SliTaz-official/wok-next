# SliTaz package receipt v2.

PACKAGE="xorg-pixman"
VERSION="0.34.0"
CATEGORY="x-window"
SHORT_DESC="Pixel-manipulation library for X and Cairo"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.cairographics.org/"

TARBALL="pixman-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="libpng16-dev"
SPLIT="xorg-pixman-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-pixman) copy @std;;
		*-dev)    copy @dev;;
	esac
}
