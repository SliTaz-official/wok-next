# SliTaz package receipt v2.

PACKAGE="cabextract"
VERSION="1.7"
CATEGORY="utilities"
SHORT_DESC="Extracting Microsoft cabinet files"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://www.cabextract.org.uk/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/kyz/libmspack/archive/$VERSION.tar.gz"

BUILD_DEPENDS="automake gettext"

compile_rules() {
	cd cabextract
	./cleanup.sh &&
	autoreconf -i -W all &&

	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	TAGS="extract cab exe"
}
