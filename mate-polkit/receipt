# SliTaz package receipt v2.

PACKAGE="mate-polkit"
VERSION="1.18.1"
CATEGORY="security"
SHORT_DESC="Authentication Agent for PolicyKit and MATE"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://github.com/mate-desktop/mate-polkit"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/mate-polkit/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common gtk-doc gtk+3-dev polkit-dev \
gobject-introspection-dev"
SPLIT="mate-polkit-dev"

compile_rules() {
	./autogen.sh \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		mate-polkit)
			copy @std
			DEPENDS="atk bzlib cairo expat fontconfig freetype gdk-pixbuf glib \
			gtk+3 libffi libharfbuzz liblzma libpng16 libxml2 pango pcre \
			polkit util-linux-blkid util-linux-mount util-linux-uuid \
			xorg-libX11 xorg-libXau xorg-libXdmcp xorg-libXext xorg-libXrender \
			xorg-libxcb xorg-pixman zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="mate-polkit atk-dev bzip2-dev cairo-dev fontconfig-dev \
			freetype-dev gdk-pixbuf-dev glib-dev gtk+3-dev harfbuzz-dev \
			libffi-dev libpng16-dev libxml2-dev pango-dev pcre-dev polkit-dev \
			util-linux-blkid-dev util-linux-mount-dev util-linux-uuid-dev \
			xorg-libX11-dev xorg-libXau-dev xorg-libXdmcp-dev xorg-libXext-dev \
			xorg-libXrender-dev xorg-libxcb-dev xorg-pixman-dev xz-dev zlib-dev"
			;;
	esac
	TAGS="MATE"
}
