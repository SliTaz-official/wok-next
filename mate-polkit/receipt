# SliTaz package receipt v2.

PACKAGE="mate-polkit"
VERSION="1.18.1"
CATEGORY="security"
SHORT_DESC="Authentication Agent for PolicyKit and MATE"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://github.com/mate-desktop/mate-polkit"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/mate-polkit/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common gtk-doc gtk+3-dev polkit-dev \
gobject-introspection-dev"
SPLIT="mate-polkit-dev"

compile_rules() {
	./autogen.sh \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		mate-polkit)
			copy @std
			DEPENDS="gdk-pixbuf glib gtk+3 polkit"
			;;
		*-dev)
			copy @dev
			DEPENDS="mate-polkit polkit-dev" # or polkit-pam-dev? why?
			;;
	esac
	TAGS="MATE"
}
