# SliTaz package receipt v2.

PACKAGE="mate-notification-daemon"
VERSION="1.18.1"
CATEGORY="x-window"
SHORT_DESC="Daemon to displays passive pop-up notifications"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://github.com/mate-desktop/mate-notification-daemon"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/mate-notification-daemon/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common gtk+3-dev dbus-glib-dev libcanberra-dev \
libwnck3-dev libnotify-gtk3-dev"
SPLIT="mate-notification-daemon-dev"

compile_rules() {
	./autogen.sh \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		mate-notification-daemon)
			copy @std
			cook_copy_icons # only 16 and 48
			DEPENDS=""
			PROVIDE="gtk+3:notification-daemon"
			;;
		*-dev)
			copy @dev
			DEPENDS=""
	esac
	TAGS="MATE"
}
