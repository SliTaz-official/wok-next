# SliTaz package receipt.

PACKAGE="perl-extutils-depends"
VERSION="0.405"
CATEGORY="perl"
SHORT_DESC="ExtUtils::Depends - Easily build XS extensions that depend on XS \
extensions"
MAINTAINER="claudinei@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/ExtUtils-Depends"
REPOLOGY="perl:extutils-depends"

TARBALL="ExtUtils-Depends-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/X/XA/XAOC/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
