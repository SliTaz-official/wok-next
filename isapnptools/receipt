# SliTaz package receipt v2.

PACKAGE="isapnptools"
VERSION="1.27"
CATEGORY="system-tools"
SHORT_DESC="ISA Plug-And-Play configuration"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.roestock.demon.co.uk/isapnptools/"

TARBALL="$PACKAGE-$VERSION.tgz"
WGET_URL="ftp://metalab.unc.edu/pub/Linux/system/hardware/$TARBALL"

BUILD_DEPENDS="gfortran"
SPLIT="isapnptools-dev"

compile_rules() {
	./configure \
		--sbindir=/sbin \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		isapnptools) copy @std;;
		*-dev)       copy @dev;;
	esac
}
