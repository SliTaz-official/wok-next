# SliTaz package receipt.

PACKAGE="python-weberror"
VERSION="0.10.2"
CATEGORY="development"
SHORT_DESC="Web Error handling and exception catching"
MAINTAINER="taziden@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://pypi.org/project/WebError/"
REPOLOGY="python:weberror"

SOURCE="WebError"
TARBALL="$SOURCE-$VERSION.tar.gz"
WGET_URL="https://files.pythonhosted.org/packages/source/W/$SOURCE/$TARBALL"
TAGS="python"

DEPENDS="python"
BUILD_DEPENDS="python python-dev"

# Rules to configure and make the package.
compile_rules()
{
	python setup.py install --root=$DESTDIR
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cp -a $install/usr $fs
}
