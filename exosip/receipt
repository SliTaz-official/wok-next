# SliTaz package receipt v2.

PACKAGE="exosip"
VERSION="3.6.0"
CATEGORY="network"
SHORT_DESC="Extended Open SIP library"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://savannah.nongnu.org/projects/exosip/"

TARBALL="libeXosip2-$VERSION.tar.gz"
WGET_URL="http://download.savannah.gnu.org/releases/$PACKAGE/$TARBALL"

BUILD_DEPENDS="c-ares-dev osip-dev openssl-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		exosip)
			copy @std
			DEPENDS="c-ares openssl osip"
			;;
		*-dev)
			copy @dev
			DEPENDS="exosip c-ares-dev openssl-dev osip-dev"
			;;
	esac
}
