# SliTaz package receipt v2.

PACKAGE="guvcview"
VERSION="2.0.5"
CATEGORY="multimedia"
SHORT_DESC="Simple interface for capturing and viewing video from v4l2 devices"
MAINTAINER="claudinei@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://guvcview.sourceforge.net/"

TARBALL="guvcview-src-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="intltool v4l-utils-dev eudev-dev libusb-dev ffmpeg-dev \
libpng16-dev libsdl2-dev gsl-dev portaudio-dev gtk+3-dev"
SPLIT="guvcview-dev"

compile_rules() {
	./configure \
		--disable-debian-menu \
		--disable-pulse \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		guvcview)
			copy @std *.mo
			DEPENDS="eudev ffmpeg glib gsl gtk+3 libpng16 libsdl2 libusb \
			portaudio v4l-utils"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
