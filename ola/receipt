# SliTaz package receipt v2.

PACKAGE="ola"
VERSION="0.10.6"
CATEGORY="network"
SHORT_DESC="Open Lighting Architecture"
MAINTAINER="kult-ex@aon.at"
LICENSE="LGPL2.1"
WEB_SITE="https://www.openlighting.org/ola/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/OpenLightingProject/ola/archive/$VERSION.tar.gz"

BUILD_DEPENDS="libtool flex protobuf-dev util-linux-uuid-dev cppunit-dev \
libmicrohttpd-dev libftdi-dev libusb-dev liblo-dev ncurses-dev"
SPLIT="ola-dev"

compile_rules() {
	autoreconf -i
	./configure \
		--prefix=/usr \
		$CONFIGURE_ARGS &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		ola)
			copy @std
			DEPENDS="libftdi liblo libmicrohttpd ncurses protobuf"
			;;
		*-dev)
			copy @dev
			DEPENDS="ola protobuf-dev"
			;;
	esac
}
