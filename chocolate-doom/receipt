# SliTaz package receipt v2.

PACKAGE="chocolate-doom"
VERSION="1.4.0"
CATEGORY="games"
SHORT_DESC="Doom source port as close as possible to vanilla Doom"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://$PACKAGE.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

DEPENDS="libsdl libsdl-mixer libsdl-net libsamplerate"
BUILD_DEPENDS="libsdl-mixer-dev  libsdl-net-dev libsdl-dev libsamplerate-dev"

compile_rules() {
	export LDFLAGS="$LDFLAGS -Wl,--copy-dt-needed-entries -lm"
	./configure \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make $MAKEFLAGS || return 1

	mkdir -p $install/usr/bin $install/usr/share/games/doom
	cp $src/src/chocolate-doom $install/usr/bin

	cook_pick_manpages man/*.5 man/*.6
}

genpkg_rules() {
	copy @std
}
