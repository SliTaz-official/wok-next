# SliTaz package receipt v2.

PACKAGE="cogl"
VERSION="1.22.2"
CATEGORY="x-window"
SHORT_DESC="Object oriented GL/GLES abstraction/utility layer"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://developer.gnome.org/cogl/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/cogl.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="glib-dev mesa-dev libxcomposite-dev libxrandr-dev \
gdk-pixbuf-dev gettext-dev cairo-dev pango-dev gobject-introspection-dev \
libxshmfence-dev expat-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	sed -i 's/^#if COGL/#ifdef COGL/' cogl/winsys/cogl-winsys-egl.c

	# --enable-kms-egl-platform, --enable-wayland-egl-platform,
	# --enable-wayland-egl-server: for GNOME Wayland support.
	# This added mesa-libwayland-egl to DEPENDS.
	# --enable-xlib-egl-platform is default option.
	./configure \
		--enable-gles1 \
		--enable-gles2 \
		--enable-kms-egl-platform \
		--enable-wayland-egl-platform \
		--enable-xlib-egl-platform \
		--enable-wayland-egl-server \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install || return 1

	# remove /usr/share/cogl/examples-data/crate.jpg with folder: no examples anyway
	rm -r $install/usr/share/cogl
}

genpkg_rules() {
	case $PACKAGE in
		cogl)
			copy @std
			DEPENDS="libcairo gdk-pixbuf glib libdrm mesa-libegl mesa-libgbm \
			mesa-libwayland-egl pango wayland libx11 libxdamage \
			libxext libxfixes libxrandr"
			;;
		cogl-dev)
			copy @dev
			DEPENDS="cogl cairo-dev gdk-pixbuf-dev glib-dev libdrm-dev \
			mesa-dev wayland-dev libx11-dev libxcomposite-dev \
			libxdamage-dev libxext-dev libxfixes-dev \
			libxrandr-dev"
			;;
	esac
}
