# SliTaz package receipt v2.

PACKAGE="xarchiver"
VERSION="0.5.4.13"
CATEGORY="x-window"
SHORT_DESC="A GTK+ lightweight archive manager"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
#WEB_SITE="https://wiki.lxde.org/en/Xarchiver"
WEB_SITE="https://github.com/ib/xarchiver"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/ib/xarchiver/archive/$VERSION.tar.gz"

BUILD_DEPENDS="gtk2-dev intltool libxslt"
COOKOPTS="skip-log-errors"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install || return 1

	install -Dm644 $stuff/xarchiver.cgi $install/var/www/cgi-bin/xarchiver.cgi
	install -Dm644 $stuff/index.html    $install/usr/share/doc/xarchiver/html/index.html

	sed -i 's|multipart/x-zip;||; /Exec/s/.*/& %f/' \
		$install/usr/share/applications/xarchiver.desktop
}

genpkg_rules() {
	copy @std @ico
	rm -r $fs/usr/share/pixmaps/
	DEPENDS="gdk-pixbuf glib gtk2"
	# binutils for ar; busybox also contains gzip & cpio; rar is get-rar;
	# gtar is absent
	SUGGESTED="arj binutils bzip2 cpio gzip lha lzma lzop p7zip-full rar xz zip"
}
