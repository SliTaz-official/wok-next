# SliTaz package receipt.

PACKAGE="perl-file-desktopentry"
VERSION="0.22"
CATEGORY="perl"
SHORT_DESC="File::DesktopEntry - Object to handle .desktop files"
MAINTAINER="paul@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/File-DesktopEntry"

TARBALL="File-DesktopEntry-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/M/MI/MICHIELB/$TARBALL"

DEPENDS="perl-file-basedir perl-uri"
BUILD_DEPENDS="$DEPENDS"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
