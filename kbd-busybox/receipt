# SliTaz package receipt.

PACKAGE="kbd-busybox"
VERSION="2.0.3"
CATEGORY="base-system"
SHORT_DESC="Keyboard mapping definitions for busybox."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.slitaz.org/"

WANTED="kbd-base"
BUILD_DEPENDS="kbd-base busybox"

# Rules to configure and make the package.
compile_rules()
{
	mkdir -p $fs/usr/share/kmap

	for i in $(find /usr/share/kbd/keymaps/i386 -name '*.map.gz' | grep -v 'include'); do
		echo $i
		loadkeys -ub $i > $fs/usr/share/kmap/$(basename $i .map.gz).kmap
	done
}
