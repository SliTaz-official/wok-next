# SliTaz package receipt v2.

PACKAGE="bitmap"
VERSION="1.0.8"
CATEGORY="x-window"
SHORT_DESC="XBM format bitmap editor and converter utilities"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"
TARBALL_SHA1="84fc49daa5411677d05a134ee2f7e76301fa89d8"

BUILD_DEPENDS="util-macros libx11-dev libxmu-dev xorgproto xbitmaps libxaw-dev"
DEPENDS="libx11 libxaw libxmu libxt"

COPY="@std @dev"
CONFIG_FILES="/etc/X11/app-defaults/Bitmap \
/etc/X11/app-defaults/Bitmap-color /etc/X11/app-defaults/Bitmap-nocase"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

TAGS="Xorg"

PROVIDE="xorg-bitmap"
