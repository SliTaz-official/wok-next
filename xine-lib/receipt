# SliTaz package receipt v2.

PACKAGE="xine-lib"
VERSION="1.2.8"
CATEGORY="multimedia"
SHORT_DESC="Xine video library"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.xine-project.org/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="http://downloads.sourceforge.net/project/xine/$PACKAGE/$VERSION/$TARBALL"

BUILD_DEPENDS="xorg-libXvMC-dev xorg-libXv-dev xorg-xorgproto \
alsa-lib-dev libogg-dev libvorbis-dev libtheora-dev freetype-dev perl \
util-linux-uuid-dev xorg-libxcb-dev libcaca-dev ffmpeg-dev file \
libmodplug-dev xorg-libXinerama-dev speex-dev gettext-tools"
SPLIT="xine-fonts xine-lib xine-lib-dev"

compile_rules() {
	case "$ARCH" in
		arm*)
			export LDFLAGS="$LDFLAGS -L/cross/$ARCH/sysroot/usr/lib"
			export LIBTOOL=${HOST_SYSTEM}-libtool 
			ARCH_ARGS="--disable-xinerama" ;;
	esac

	sed -i 's/grep -x/grep/' configure
	CPPFLAGS="$CPPFLAGS -DHAVE_NANO_SLEEP" \
	./configure \
		--with-freetype \
		--with-xcb \
		--without-jack \
		--without-imagemagick \
		--without-sdl \
		--disable-gnomevfs \
		--disable-samba \
		--disable-glu \
		--disable-opengl \
		--disable-fb \
		--without-esound \
		--disable-vcd \
		--disable-musepack \
		$CONFIGURE_ARGS $ARCH_ARGS &&
	fix libtool &&
	make && make install
}

genpkg_rules() {
	case "$PACKAGE" in
		xine-fonts)
			copy *.xinefont.gz
			CAT="x-window|extra fonts for Xine video player"
			DEPENDS="xine-ui"
			;;
		xine-lib)
			copy @std @rm
			DEPENDS="zlib xorg-libX11 xorg-libXv xorg-libXvMC alsa-lib \
			libogg libvorbis libtheora xorg-libXvMC xorg-libXv \
			xorg-libxcb ffmpeg libmodplug"
			SUGGESTED="xine-fonts faad2"
			;;
		xine-lib-dev)
			copy @dev
			;;
	esac
}
