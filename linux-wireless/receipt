# SliTaz package receipt.

PACKAGE="linux-wireless"
VERSION="4.9.0"
CATEGORY="base-system"
SHORT_DESC="The Linux Kernel wireless modules"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.kernel.org/"

WANTED="linux"
DEPENDS="linux-crypto wireless_tools"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	. $wanted_stuff/copy_modules.sh
	copy_modules \
		drivers/net/wireless \
		drivers/staging/wlan-ng \
		drivers/staging/echo \
		drivers/leds \
		net/wireless \
		net/mac80211 \
		drivers/staging/rtl8192e/r8192e_pci.ko.xz \
		drivers/staging/rtl8712/r8712u.ko.xz \
		drivers/staging/rtl8187se/r8187se.ko.xz \
		drivers/staging/rtl8192u/r8192u_usb.ko.xz \
		drivers/staging/crystalhd/crystalhd.ko.xz \
		drivers/staging/sm7xx/sm7xx.ko.xz
}
