# SliTaz package receipt v2.

PACKAGE="elementary"
VERSION="1.7.10"
CATEGORY="x-window"
SHORT_DESC="EFL full regular widget set"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://www.enlightenment.org/"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://download.enlightenment.org/releases/$TARBALL"

GENERIC_MENUS="no"
BUILD_DEPENDS="shared-mime-info efreet-dev emotion-dev ethumb-dev eudev gettext"
SPLIT="libelementary elementary elementary-dev"

compile_rules() {
	export CFLAGS="$CFLAGS -fvisibility=hidden"
	export LDFLAGS="$LDFLAGS -fvisibility=hidden"

	./configure \
		--datadir=/usr/share \
		$CONFIGURE_ARGS &&
	make $MAKEFLAGS && make install
}

genpkg_rules() {
	case $PACKAGE in
		libelementary)
			copy libelementary.so*
			CAT="libs|library"
			DEPENDS="xorg-libXp xorg-libXScrnSaver jpeg fribidi fontconfig \
			edbus efreet glib eina"
			;;
		elementary)
			copy @std @rm
			DEPENDS="efreet emotion ethumb libelementary"
			;;
		elementary-dev)
			copy @dev
			DEPENDS="efreet-dev emotion-dev ethumb-dev elementary pkg-config"
			;;
	esac
	TAGS="e enlightenment efl"
}
