# SliTaz package receipt v2.

PACKAGE="cream"
VERSION="1.0-rc5"
CATEGORY="network"
SHORT_DESC="Light web browser based on WebKit and using GTK+"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://cream-browser.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/cream-browser/$TARBALL"

BUILD_DEPENDS="webkitgtk-dev libsoup-dev gtk+-dev gettext-tools"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="gtk+ gcc-lib-base webkitgtk libtasn1"
	TAGS="web-browser"
}
