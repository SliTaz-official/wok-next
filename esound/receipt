# SliTaz package receipt v2.

PACKAGE="esound"
VERSION="0.2.41"
CATEGORY="development"
SHORT_DESC="Enlightened Sound Daemon"
MAINTAINER="allan316@gmail.com"
LICENSE="GPL2"
WEB_SITE="http://www.tux.org/~ricdude/EsounD.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://ftp.acc.umu.se/pub/GNOME/sources/esound/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="audiofile-dev alsa-lib-dev"
SPLIT="esound-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	case $PACKAGE in
		esound)
			copy @std
			DEPENDS="audiofile alsa-lib"
			TAGS="audio sound"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
