# SliTaz package receipt v2.

PACKAGE="reiser4progs"
VERSION="1.0.7"
CATEGORY="system-tools"
SHORT_DESC="Utilities for manipulating reiser4 file-system."
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
TARBALL="$PACKAGE-$VERSION.tar.bz2"
WEB_SITE="http://www.kernel.org/"
WGET_URL="http://piotrkosoft.net/pub/unix/linux/utils/fs/reiser4/$PACKAGE/$TARBALL"
TAGS="filesystem reiserfs"

BUILD_DEPENDS="libaal libaal-dev util-linux-uuid-dev ncurses-dev readline-dev"
SPLIT="reiser4progs-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure --prefix=/usr --infodir=/usr/share/info \
	--mandir=/usr/share/man $CONFIGURE_ARGS &&
	make $MAKEFLAGS &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		reiser4progs)
			copy @std
			DEPENDS="libaal util-linux-uuid ncurses readline"
			;;
		reiser4progs-dev)
			copy @dev
			DEPENDS="libaal-dev"
			;;
	esac
}
