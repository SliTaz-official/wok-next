# SliTaz package receipt v2.

PACKAGE="libsdl-mixer"
VERSION="1.2.12"
CATEGORY="development"
SHORT_DESC="A multichannel sample and music mixer"
MAINTAINER="chadi.elahmad@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="http://www.libsdl.org/projects/SDL_mixer/release-1.2.html"
REPOLOGY="sdl-mixer"

TARBALL="SDL_mixer-$VERSION.tar.gz"
WGET_URL="http://www.libsdl.org/projects/SDL_mixer/release/$TARBALL"

BUILD_DEPENDS="libsdl-dev fluidsynth-dev libvorbis-dev flac-dev libsmpeg-dev"
SPLIT="libsdl-mixer-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libsdl-mixer)
			copy @std
			DEPENDS="fluidsynth libsdl tslib"
			;;
		*-dev)
			copy @dev
			DEPENDS="libsdl-mixer libsdl-dev fluidsynth-dev tslib-dev"
			;;
	esac
}
