# SliTaz package receipt.

PACKAGE="perl-rfc-rfc822-address"
VERSION="2009110702"
CATEGORY="perl"
SHORT_DESC="RFC::RFC822::Address - RFC 822 style address validation"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/RFC-RFC822-Address"
REPOLOGY="perl:rfc-rfc822-address"

TARBALL="RFC-RFC822-Address-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/A/AB/ABIGAIL/$TARBALL"

DEPENDS="perl-parse-recdescent"
BUILD_DEPENDS="$DEPENDS"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
