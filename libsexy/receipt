# SliTaz package receipt v2.

PACKAGE="libsexy"
VERSION="0.1.11"
CATEGORY="x-window"
SHORT_DESC="Sexy widgests for GTK+"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="https://blog.chipx86.com/tag/libsexy/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://releases.chipx86.com/libsexy/libsexy/$TARBALL"

BUILD_DEPENDS="gtk+-dev xorg-xproto libxml2-dev"
SPLIT="libsexy-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libsexy)
			copy @std
			DEPENDS="gtk+ xorg-libXdamage"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
