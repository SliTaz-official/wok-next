# SliTaz package receipt v2.

PACKAGE="xorg-libXft"
VERSION="2.3.2"
CATEGORY="x-window"
SHORT_DESC="Client side font rendering library"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7lib.html"
REPOLOGY="libxft"

TARBALL="libXft-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-libXrender-dev freetype-dev fontconfig-dev libxml2-dev"
SPLIT="xorg-libXft-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXft)
			copy @std
			DEPENDS="fontconfig freetype xorg-libX11 xorg-libXrender"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXft \
			fontconfig-dev freetype-dev xorg-libXrender-dev xorg-xorgproto"
			;;
	esac
}
