# SliTaz package receipt v2.

PACKAGE="zip"
VERSION="3.0"
CATEGORY="utilities"
SHORT_DESC="Compressor utilities compatible with the DOS PKZIP"
MAINTAINER="pankso@slitaz.org"
LICENSE="other"
WEB_SITE="http://www.info-zip.org/"

TARBALL="$PACKAGE${VERSION//./}.tgz"
WGET_URL="ftp://ftp.info-zip.org/pub/infozip/src/$TARBALL"

BUILD_DEPENDS="bzip2-dev"

compile_rules() {
	sed -i "s|/usr/local|$install/usr|;
			s|\$(prefix)/man|\$(prefix)/share/man|" unix/Makefile

	make -f unix/Makefile generic_gcc &&
	make -f unix/Makefile install
}

genpkg_rules() {
	copy @std
	DEPENDS="bzlib"
	TAGS="archive compression"
}
