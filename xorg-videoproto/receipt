# SliTaz package receipt v2.

PACKAGE="xorg-videoproto"
VERSION="2.3.3"
CATEGORY="development"
SHORT_DESC="Video extension headers"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7proto.html"
REPOLOGY="videoproto"

TARBALL="videoproto-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/proto/$TARBALL"

BUILD_DEPENDS="xorg-util-macros"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @dev
	DEPENDS="xorg-libX11-dev xorg-xproto"
}
