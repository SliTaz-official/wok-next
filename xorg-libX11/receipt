# SliTaz package receipt v2.

PACKAGE="xorg-libX11"
VERSION="1.6.6"
CATEGORY="x-window"
SHORT_DESC="X11 Client library"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7lib.html"
REPOLOGY="libx11"

TARBALL="libX11-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-xtrans xorg-libxcb-dev \
xorg-xorgproto xorg-libXau-dev xorg-libXdmcp-dev perl"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install

	# strip whitespace
	for i in $(find $install -name Compose); do
		sed -i 's|\t| |g; s|  *| |g; /^$/d' $i
	done
}

genpkg_rules() {
	case $PACKAGE in
		*-libX11)
			copy *.so* XErrorDB Xcms.txt compose.dir locale.alias locale.dir \
			C/ en_US.UTF-8/
			# split -> locale-* packages
			DEPENDS="xorg-libxcb"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libX11 \
			xorg-xorgproto xorg-libxcb-dev"
			;;
	esac
}
