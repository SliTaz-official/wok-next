 # SliTaz package receipt.

PACKAGE="xorg-libX11"
VERSION="1.6.3"
CATEGORY="x-window"
SHORT_DESC="X Library"
MAINTAINER="pankso@slitaz.org"
LICENSE="other"
WEB_SITE="https://www.x.org/wiki/"
HOST_ARCH="i486 arm"

TARBALL="libX11-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

DEPENDS="libxcb xorg-libXau xorg-libXdmcp"
BUILD_DEPENDS="xorg-xtrans libxcb-dev xorg-kbproto xorg-xf86bigfontproto \
xorg-inputproto xorg-xextproto xorg-libXau-dev xorg-libXdmcp-dev perl"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static \
		$CONFIGURE_ARGS &&
	make &&
	make install

	for i in $(find $install -name Compose); do
		sed -i 's|\t| |g; s|  *| |g; /^$/d' $i
	done
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_files *.so* XErrorDB Xcms.txt compose.dir locale.alias locale.dir
	cook_copy_folders C en_US.UTF-8
	# split -> locale-* packages
}
