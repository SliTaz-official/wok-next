# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-nouveau"
VERSION="1.0.15"
CATEGORY="x-window"
SHORT_DESC="Xorg driver for NVIDIA video cards"
MAINTAINER="devl547@gmail.com"
LICENSE="GPL"
WEB_SITE="https://nouveau.freedesktop.org/wiki/"

TARBALL="xf86-video-nouveau-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-server-dev xorg-libXrandr-dev \
xorg-libXrender-dev xorg-libXv-dev eudev-dev"
SPLIT="xorg-xf86-video-nouveau-dev"
PKG_RULE="std-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-nouveau)
			copy @std
			DEPENDS="eudev libdrm libdrm-nouveau"
			TAGS="xorg display"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xf86-video-nouveau xorg-server-dev eudev-dev \
			libdrm-dev"
			;;
	esac
}
