# SliTaz package receipt.

PACKAGE="xorg-xf86-video-nouveau"
VERSION="1.0.12"
CATEGORY="x-window"
SHORT_DESC="Xorg server nouveau (nVidia) driver."
MAINTAINER="devl547@gmail.com"
LICENSE="GPL"
WEB_SITE="https://nouveau.freedesktop.org/wiki/"
TAGS="xorg display"

TARBALL="xf86-video-nouveau-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

DEPENDS="eudev libdrm libdrm-nouveau"
BUILD_DEPENDS="xorg-util-macros xorg-server-dev xorg-libXrandr-dev \
xorg-libXrender-dev xorg-libXv-dev eudev-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_files *.so
}
