# SliTaz package receipt.

PACKAGE="perl-unicode-string"
VERSION="2.10"
CATEGORY="perl"
SHORT_DESC="Unicode::String - String of Unicode characters (UTF-16BE)"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Unicode-String"
REPOLOGY="perl:unicode-string"

TARBALL="Unicode-String-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/G/GA/GAAS/GAAS/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl-dev"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
