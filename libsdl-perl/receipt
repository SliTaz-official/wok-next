# SliTaz package receipt v2.

PACKAGE="libsdl-perl"
VERSION="2.2.6"
CATEGORY="x-window"
SHORT_DESC="SDL perl support"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="LGPL2"
WEB_SITE="http://sdl.perl.org"

TARBALL="SDL_Perl-v$VERSION.tar.gz"
WGET_URL="http://search.cpan.org/CPAN/authors/id/K/KT/KTHAKORE/$TARBALL"

BUILD_DEPENDS="perl-module-build perl-yaml libsdl-dev perl-dev mesa17-dev \
libglu-mesa-dev"

compile_rules() {
	perl Build.PL destdir="$DESTDIR" &&
	perl Build &&
	perl Build install
}

genpkg_rules() {
	copy @std
	DEPENDS="libglu-mesa libsdl mesa17 perl"
}
