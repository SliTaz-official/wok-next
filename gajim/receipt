# SliTaz package receipt v2.

PACKAGE="gajim"
VERSION="0.14.1"
CATEGORY="network"
SHORT_DESC="GTK Jabber client"
MAINTAINER="rocky@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://www.gajim.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://www.gajim.org/downloads/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="gettext xorg-xcb-util-dev enchant-dev xorg-scrnsaverproto \
xorg-xextproto python-dev libffi-dev intltool pygtk-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="gtkspell python python-dbus pygtk pygobject pyopenssl \
	python-pysqlite xorg-libXScrnSaver bind-client"
}
