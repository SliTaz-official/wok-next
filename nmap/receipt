# SliTaz package receipt v2.

PACKAGE="nmap"
VERSION="6.25"
CATEGORY="security"
SHORT_DESC="The Network Mapper"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://nmap.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://download.insecure.org/nmap/dist/$TARBALL"

BUILD_DEPENDS="libpcap-dev python-dev openssl-dev pcre-dev"

compile_rules() {
	patch -p1 < $stuff/$PACKAGE-$VERSION-nolua.patch

	./configure \
		--cache-file=$PWD/config.cache \
		--without-liblua \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install-nmap
}

genpkg_rules() {
	copy @std
	DEPENDS="openssl libpcap pcre gcc-lib-base"
	TAGS="network"
}
