# SliTaz package receipt.

PACKAGE="perl-fuse"
VERSION="0.16"
CATEGORY="perl"
SHORT_DESC="Fuse - write filesystems in Perl using FUSE"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Fuse"

TARBALL="Fuse-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DP/DPATES/$TARBALL"

DEPENDS="fuse perl-filesys-statvfs perl-lchown perl-unix-mknod"
BUILD_DEPENDS="$DEPENDS fuse-dev"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
