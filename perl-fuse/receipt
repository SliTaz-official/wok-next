# SliTaz package receipt v2.

PACKAGE="perl-fuse"
VERSION="0.16"
CATEGORY="perl"
SHORT_DESC="Fuse - write filesystems in Perl using FUSE"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Fuse"
REPOLOGY="perl:fuse"

TARBALL="Fuse-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DP/DPATES/$TARBALL"

BUILD_DEPENDS="fuse2 perl-filesys-statvfs perl-lchown perl-unix-mknod \
perl-dev fuse2-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="fuse2 perl-filesys-statvfs perl-lchown perl-unix-mknod"
}
