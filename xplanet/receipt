# SliTaz package receipt v2.

PACKAGE="xplanet"
VERSION="1.3.0"
CATEGORY="graphics"
SHORT_DESC="Render major planets into the X root window"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://xplanet.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="patch xorg-libX11-dev xorg-libICE-dev xorg-libXext-dev \
xorg-libXScrnSaver-dev freetype-dev pango-dev giflib-dev libjpeg-turbo-dev \
libpng16-dev tiff-dev"

compile_rules() {
	./configure \
		--with-freetype \
		$CONFIGURE_ARGS &&
	make -j1 &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl jpeg libpng zlib tiff xorg-libX11 freetype pango fontconfig \
glib xorg-libXau xorg-libXdmcp expat giflib xorg-libXScrnSaver gcc-lib-base \
 util-linux-uuid"
}
