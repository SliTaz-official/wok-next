# SliTaz package receipt v2.

PACKAGE="xorg-fontcacheproto"
VERSION="0.1.3"
CATEGORY="development"
SHORT_DESC="Font cache header files"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://www.x.org/"

TARBALL="fontcacheproto-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/proto/$TARBALL"

BUILD_DEPENDS="xorg-util-macros"
PKG_RULE="dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @dev
	DEPENDS="xorg-util-macros xorg-libX11-dev"
}
