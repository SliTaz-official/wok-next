# SliTaz package receipt.

PACKAGE="perl-io-multiplex"
VERSION="1.16"
CATEGORY="perl"
SHORT_DESC="IO::Multiplex - Manage IO on many file handles"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/IO-Multiplex"
REPOLOGY="perl:io-multiplex"

TARBALL="IO-Multiplex-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/B/BB/BBB/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
