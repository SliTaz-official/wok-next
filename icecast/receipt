# SliTaz package receipt v2.

PACKAGE="icecast"
VERSION="2.3.3"
CATEGORY="multimedia"
SHORT_DESC="An opensource alternative to shoutcast that supports mp3, ogg \
(vorbis/theora) and aac streaming"
MAINTAINER="devl547@gmail.com"
LICENSE="GPL2"
WEB_SITE="http://www.icecast.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://downloads.xiph.org/releases/$PACKAGE/$TARBALL"

BUILD_DEPENDS="libxslt-dev libxml2-dev libogg-dev libvorbis-dev libtheora-dev"

compile_rules() {
	./configure \
		--disable-yp \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make -j2 &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="libxslt libxml2 libogg libvorbis libtheora"
}
