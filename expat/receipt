# SliTaz package receipt.

PACKAGE="expat"
VERSION="2.2.0"
CATEGORY="x-window"
SHORT_DESC="XML parsing C library"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://expat.sourceforge.net/"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$install install

	docdir="$install/usr/share/doc/expat-$VERSION"
	mkdir -p $docdir; cp doc/* $docdir; rm $docdir/*.1
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_files xmlwf *.so*
}
