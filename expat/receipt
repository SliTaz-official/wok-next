# SliTaz package receipt v2.

PACKAGE="expat"
VERSION="2.2.0"
CATEGORY="x-window"
SHORT_DESC="XML parsing C library"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://libexpat.github.io/"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

SPLIT="expat-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	make && make DESTDIR=$install install

	docdir="$install/usr/share/doc/expat-$VERSION"
	mkdir -p $docdir; cp doc/* $docdir; rm $docdir/*.1
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		expat) copy @std ;;
		expat-dev) copy @dev ;;
	esac
}
