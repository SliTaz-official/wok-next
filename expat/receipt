# SliTaz package receipt v2.

PACKAGE="expat"
VERSION="2.2.3"
CATEGORY="x-window"
SHORT_DESC="XML parsing C library"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://libexpat.github.io/"
LFS="http://www.linuxfromscratch.org/lfs/view/stable/chapter06/expat.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

SPLIT="expat-dev"

compile_rules() {
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$install install || return 1

	cook_pick_docs doc/*.html doc/*.css doc/*.png
}

genpkg_rules() {
	case $PACKAGE in
		expat)
			copy @std
			TAGS="LFS"
			;;
		*-dev) copy @dev;;
	esac
}
