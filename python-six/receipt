# SliTaz package receipt v2.

PACKAGE="python-six"
VERSION="latest"
CATEGORY="python"
SHORT_DESC="Six is a Python 2 and 3 compatibility library"
MAINTAINER="claudinei@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://pypi.python.org/pypi/six"
REPOLOGY="python:six"

BUILD_DEPENDS="python"

compile_rules() {
	pip install --no-compile --root=$DESTDIR six
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*six-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
}
