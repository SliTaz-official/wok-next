# SliTaz package receipt v2.

PACKAGE="liblinebreak"
VERSION="2.1"
CATEGORY="libdevel"
SHORT_DESC="Line breaking library"
MAINTAINER="devl547@gmail.com"
LICENSE="zlib/libpng"
WEB_SITE="http://vimgadgets.sourceforge.net/liblinebreak/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/vimgadgets/$PACKAGE/$TARBALL"

BUILD_DEPENDS="gfortran"
SPLIT="liblinebreak-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		liblinebreak) copy @std;;
		*-dev)        copy @dev;;
	esac
}
