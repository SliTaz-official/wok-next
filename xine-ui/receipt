# SliTaz package receipt v2.

PACKAGE="xine-ui"
VERSION="0.99.7"
CATEGORY="multimedia"
SHORT_DESC="Xine media player user interface"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.xine-project.org/home"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$SF_MIRROR/xine/$TARBALL"

# Keep Xine small for Live system, we have MPlayer or VLC has big video player.
BUILD_DEPENDS="shared-mime-info xine-lib-dev xorg-dev xorg-libXv-dev \
xorg-libXxf86vm-dev libpng16-dev libjpeg-turbo-dev xorg-libXScrnSaver-dev"

COOKOPTS="!menus" # Use a custom .desktop file

compile_rules() {
	./configure \
		--without-curl \
		--disable-lirc \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	rm $fs/usr/share/xine/visuals/*.mpv # remove the sample
	DEPENDS="xine-lib libvorbis xorg-libXtst xorg-libXv xorg-libXi libpng16 \
	xorg-libXft xorg-libXxf86vm xorg-libXScrnSaver"
}
