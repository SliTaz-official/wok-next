# SliTaz package receipt v2.

PACKAGE="xorg-libXxf86vm"
VERSION="1.1.4"
CATEGORY="x-window"
SHORT_DESC="XFree86-VidMode extension library"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7lib.html"
REPOLOGY="libxxf86vm"

TARBALL="libXxf86vm-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-libX11-dev xorg-libXext-dev xorg-xf86vidmodeproto"
SPLIT="xorg-libXxf86vm-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXxf86vm)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXext"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXxf86vm \
			xorg-libX11-dev xorg-libXext-dev xorg-xf86vidmodeproto"
			;;
	esac
}
