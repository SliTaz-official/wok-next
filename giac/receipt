# SliTaz package receipt v2.

PACKAGE="giac"
VERSION="1.4.9"
CATEGORY="misc"
SHORT_DESC="Free computer algebra system"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3"
WEB_SITE="http://www-fourier.ujf-grenoble.fr/~parisse/giac.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://www-fourier.ujf-grenoble.fr/~parisse/giac/$TARBALL"

BUILD_DEPENDS="gmp-dev mpfr-dev libpng16-dev gsl-dev pari-dev ntl readline-dev \
cocoalib fltk-dev xorg-libX11-dev gf2x-dev xorg-libXinerama-dev libxml2-dev \
fltk-2.0.x-gl bison gfortran mesa-dev expat-dev gf2x-dev boost-dev \
boost-system xorg-libxshmfence-dev" # lapack

compile_rules() {
	sed -i 's| doc | |' Makefile*
	sed -i.ORG 's/protected:/public:/' \
		/usr/include/FL/Fl_Input.H \
		/usr/include/FL/Fl_PostScript.H
	export LDFLAGS="$LDFLAGS -lgf2x -lboost_system"

	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install || return 1

	mv -f /usr/include/FL/Fl_PostScript.H.ORG /usr/include/FL/Fl_PostScript.H
	mv -f /usr/include/FL/Fl_Input.H.ORG      /usr/include/FL/Fl_Input.H
}

genpkg_rules() {
	copy @std @dev
	DEPENDS="gmp mpfr libpng16 gsl pari ntl readline cocoalib fltk gf2x"
}
