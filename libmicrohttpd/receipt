# SliTaz package receipt v2.

PACKAGE="libmicrohttpd"
VERSION="0.9.33"
CATEGORY="network"
SHORT_DESC="A small C library that is supposed to make it easy to run an HTTP \
server as part of another application"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="http://www.gnu.org/software/libmicrohttpd/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$GNU_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="libgcrypt-dev gmp-dev gnutls-dev libtasn1-dev"
SPLIT="libmicrohttpd-dev"

compile_rules() {
	./configure \
		--disable-dependency-tracking \
		--enable-largefile \
		--enable-curl \
		--enable-messages \
		--with-pic \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install || return 1

	mkdir -p $DESTDIR/usr/include/$PACKAGE
	cp -a src/include/platform.h $DESTDIR/usr/include/$PACKAGE
	cp -a src/include/plibc/plibc.h $DESTDIR/usr/include/$PACKAGE
	sed -i 's#Cflags: -I${includedir}#Cflags: -I${includedir} -I{includedir}/libmicrohttpd#' $DESTDIR/usr/lib/pkgconfig/libmicrohttpd.pc
}

genpkg_rules() {
	case $PACKAGE in
		libmicrohttpd)
			copy @std
			DEPENDS="libgcrypt libgnutls"
			;;
		*-dev)
			copy @dev
			DEPENDS="libmicrohttpd libgcrypt-dev gnutls-dev libtasn1-dev"
			;;
	esac
}
