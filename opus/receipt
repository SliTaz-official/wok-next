# SliTaz package receipt v2.

PACKAGE="opus"
VERSION="1.2.1"
CATEGORY="multimedia"
SHORT_DESC="Totally open, royalty-free, highly versatile audio codec"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://opus-codec.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/multimedia/opus.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://archive.mozilla.org/pub/opus/$TARBALL"

SPLIT="opus-dev"

compile_rules() {
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		opus)  copy @std;;
		*-dev) copy @dev;;
	esac
}
