# SliTaz package receipt v2.

PACKAGE="libwebp"
VERSION="1.0.0"
CATEGORY="graphics"
SHORT_DESC="WebP image library"
MAINTAINER="devl547@gmail.com"
LICENSE="Apache2"
WEB_SITE="https://developers.google.com/speed/webp/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/general/libwebp.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://storage.googleapis.com/downloads.webmproject.org/releases/webp/$TARBALL"

BUILD_DEPENDS="libpng-dev libjpeg-turbo-dev tiff-dev giflib-dev"
SPLIT="$PACKAGE-apps $PACKAGE-dev"

compile_rules() {
	./configure \
		--enable-libwebpmux \
		--enable-libwebpdemux \
		--enable-libwebpdecoder \
		--enable-libwebpextras \
		--enable-swap-16bit-csp \
		--disable-static \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libwebp)
			copy *.so*
			;;
		libwebp-apps)
			copy bin/
			CAT="graphics|applications"
			DEPENDS="giflib libjpeg-turbo libpng libwebp libtiff"
			;;
		libwebp-dev)
			copy @dev
			;;
	esac
}
