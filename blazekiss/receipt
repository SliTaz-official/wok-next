# SliTaz package receipt v2.

PACKAGE="blazekiss"
GITHASH="d5349fb3e1a14bdf4a85273b29dd24653e2f3177"
VERSION=${GITHASH:0:7}
CATEGORY="office"
SHORT_DESC="Tiny Wiki Engine in French"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://projet.idleman.fr/blazekiss/"

TARBALL="$PACKAGE-$VERSION.zip"
WGET_URL="https://github.com/ldleman/$PACKAGE/archive/$GITHASH.zip"

compile_rules() {
	index=$(find $src -name index.php)
	src=$(dirname $index)
	mkdir -p         $install/var/www
	cp -a $src       $install/var/www/blazekiss
	rm -f            $install/var/www/blazekiss/historique/*/*.bak
	chown -R www.www $install/var/www/blazekiss
}

genpkg_rules() {
	copy @std
	DEPENDS="lighttpd php"
	CONFIG_FILES="/var/www/blazekiss/_config.php"
}
