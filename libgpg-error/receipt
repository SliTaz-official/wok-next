# SliTaz package receipt v2.

PACKAGE="libgpg-error"
VERSION="1.31"
CATEGORY="security"
SHORT_DESC="Commons error messages for GnuPG"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.gnupg.org/related_software/libgpg-error/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/libgpg-error.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://www.gnupg.org/ftp/gcrypt/libgpg-error/$TARBALL"
# https://www.gnupg.org/download/integrity_check.html
TARBALL_SHA1="2bafad316d4e3e12bae4822b14ed9020090e6acf"

BUILD_DEPENDS="gettext"
SPLIT="libgpg-error-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libgpg-error)
			copy @std
			rm -r $fs/usr/share/common-lisp/
			;;
		*-dev)
			copy @std @dev @rm
			;;
	esac
}
