# SliTaz package receipt.

PACKAGE="mp"
VERSION="5.2.10"
CATEGORY="development"
SHORT_DESC="A text editor for programmers"
MAINTAINER="allan316@gmail.com"
LICENSE="GPL2"
WEB_SITE="http://triptico.com/software/mp.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://triptico.com/download/mp/$TARBALL"

BUILD_DEPENDS="gtk2-dev"

compile_rules() {
	mkdir -p $install/usr/bin
	# sed -i 's/TRY_DRIVERS()/(0)/' mp_core.c
	./config.sh \
		--prefix=/usr \
		--without-qt4 \
		$CONFIGURE_ARGS
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	mkdir -p $fs/usr/share
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/share/mp-5 $fs/usr/share
	DEPENDS="gtk2"
	TAGS="text-editor"
}
