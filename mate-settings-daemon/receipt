# SliTaz package receipt v2.

PACKAGE="mate-settings-daemon"
VERSION="1.18.2"
CATEGORY="system-tools"
SHORT_DESC="MATE settings daemon"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://github.com/mate-desktop/mate-settings-daemon"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/mate-settings-daemon/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common gtk+3-dev dbus-glib-dev dconf-dev mate-desktop-dev \
libnotify-gtk3-dev xorg-libXxf86misc-dev libmatekbd-dev libcanberra-dev \
libmatemixer-dev nss-dev polkit-dev pulseaudio-dev"
SPLIT="mate-settings-daemon-dev"

compile_rules() {
	./autogen.sh \
		--sysconfdir=/etc \
		--localstatedir=/var \
		\
		--enable-pulse \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		mate-settings-daemon)
			copy @std
			DEPENDS="atk bzlib cairo dbus dbus-glib dconf flac fontconfig \
			freetype gdbm gdk-pixbuf glib gtk+3 libcanberra libcanberra-gtk3 \
			libcap libffi libharfbuzz libltdl liblzma libmatekbd libmatemixer \
			libnotify-gtk3 libogg libpng16 libsndfile libvorbis libxklavier \
			libxml2 mate-desktop nspr nss pango pcre polkit pulseaudio \
			startup-notification util-linux-blkid util-linux-mount \
			util-linux-uuid xorg-libICE xorg-libSM xorg-libX11 xorg-libXau \
			xorg-libXdmcp xorg-libXext xorg-libXi xorg-libXrandr \
			xorg-libXrender xorg-libXtst xorg-libXxf86misc xorg-libxcb \
			xorg-libxkbfile xorg-pixman xorg-xcb-util zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="mate-settings-daemon atk-dev bzip2-dev cairo-dev dbus-dev \
			dbus-glib-dev dconf-dev flac-dev fontconfig-dev freetype-dev \
			gdbm-dev gdk-pixbuf-dev glib-dev gtk+3-dev harfbuzz-dev \
			libcanberra-dev libcap-dev libffi-dev libmatekbd-dev \
			libmatemixer-dev libnotify-gtk3-dev libogg-dev libpng16-dev \
			libsndfile-dev libtool libvorbis-dev libxklavier-dev libxml2-dev \
			mate-desktop-dev nspr nss pango-dev pcre-dev pulseaudio-dev \
			startup-notification-dev util-linux-blkid-dev util-linux-mount-dev \
			util-linux-uuid-dev xorg-libICE-dev xorg-libSM-dev xorg-libX11-dev \
			xorg-libXau-dev xorg-libXdmcp-dev xorg-libXext-dev xorg-libXi-dev \
			xorg-libXrandr-dev xorg-libXrender-dev xorg-libXtst-dev \
			xorg-libXxf86misc-dev xorg-libxcb-dev xorg-libxkbfile-dev \
			xorg-pixman-dev xorg-xcb-util-dev xz-dev zlib-dev"
			;;
	esac
	TAGS="MATE"
}
