# SliTaz package receipt.

PACKAGE="perl-extutils-config"
VERSION="0.008"
CATEGORY="perl"
SHORT_DESC="ExtUtils::Config - A wrapper for perl's configuration"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/ExtUtils-Config"
REPOLOGY="perl:extutils-config"

TARBALL="ExtUtils-Config-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/L/LE/LEONT/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
