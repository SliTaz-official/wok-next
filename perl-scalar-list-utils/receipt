# SliTaz package receipt.

PACKAGE="perl-scalar-list-utils"
VERSION="1.50"
CATEGORY="perl"
SHORT_DESC="Common Scalar and List utility subroutines"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Scalar-List-Utils"
REPOLOGY="perl:scalar-list-utils"

TARBALL="Scalar-List-Utils-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/P/PE/PEVANS/$TARBALL"

BUILD_DEPENDS="perl-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
