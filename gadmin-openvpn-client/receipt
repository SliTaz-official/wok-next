# SliTaz package receipt v2.

PACKAGE="gadmin-openvpn-client"
VERSION="0.1.8"
CATEGORY="x-window"
SHORT_DESC="GTK+ configuration tool for OpenVPN (client)"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://dalalven.dtdns.net/linux/gadmintools-webpage/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://dalalven.dtdns.net/linux/gadmin-openvpn/client/$TARBALL"

BUILD_DEPENDS="gtk+-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="gtk+ openvpn"
}
