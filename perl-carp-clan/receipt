PACKAGE="perl-carp-clan"
VERSION="6.06"
CATEGORY="perl"
SHORT_DESC="Carp::Clan - Report errors from perspective of caller of a \
\"clan\" of modules"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Carp-Clan"
REPOLOGY="perl:carp-clan"

TARBALL="Carp-Clan-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/K/KE/KENTNL/$TARBALL"

BUILD_DEPENDS="perl-test-exception"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-test-exception"
}
