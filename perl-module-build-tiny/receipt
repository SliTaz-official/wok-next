# SliTaz package receipt.

PACKAGE="perl-module-build-tiny"
VERSION="0.039"
CATEGORY="perl"
SHORT_DESC="Module::Build::Tiny - A tiny replacement for Module::Build"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Module-Build-Tiny"
REPOLOGY="perl:module-build-tiny"

TARBALL="Module-Build-Tiny-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/L/LE/LEONT/$TARBALL"

BUILD_DEPENDS="perl-extutils-config perl-extutils-helpers \
perl-extutils-installpaths"

compile_rules() {
	perl Build.PL &&
	./Build &&
	./Build install --destdir $install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-extutils-config perl-extutils-helpers \
	perl-extutils-installpaths"
}
