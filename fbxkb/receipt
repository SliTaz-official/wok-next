# SliTaz package receipt v2.

PACKAGE="fbxkb"
VERSION="0.6"
CATEGORY="utilities"
SHORT_DESC="fbxkb is NETWM compliant keyboard indicator and switcher"
MAINTAINER="devl547@gmail.com"
LICENSE="GPL2"
WEB_SITE="http://fbxkb.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tgz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="gtk+-dev xorg-libXmu-dev"

compile_rules() {
	export LDFLAGS="$LDFLAGS -Wl,--copy-dt-needed-entries -lX11"

	./configure &&
	make || return 1

	install -Dm755 $src/fbxkb $install/usr/bin/fbxkb
	mkdir -p $install/usr/share/fbxkb/images
	cp $src/images/*.png $fs/usr/share/fbxkb/images
}

genpkg_rules() {
	copy @std
	DEPENDS="gtk+ xorg-libXmu"
}
