# SliTaz package receipt v2.

PACKAGE="xscavenger"
VERSION="1.4.5"
CATEGORY="games"
SHORT_DESC="Lode Runner rewritten for X11"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.linuxmotors.com/scavenger/"

TARBALL="$PACKAGE-$VERSION.tgz"
WGET_URL="https://www.linuxmotors.com/scavenger/downloads/$TARBALL"

BUILD_DEPENDS="xorg-imake xorg-xorgproto xorg-libX11-dev alsa-lib-dev \
xorg-libXext-dev"

compile_rules() {
	cd $src/src
	cp scavenger.6 scavenger.man

	xmkmf &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="alsa-lib xorg-libX11 xorg-libXext"
}
