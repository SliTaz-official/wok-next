# SliTaz package receipt.

PACKAGE="perl-test-requiresinternet"
VERSION="0.05"
CATEGORY="perl"
SHORT_DESC="Test::RequiresInternet - Easily test network connectivity"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Test-RequiresInternet"

TARBALL="Test-RequiresInternet-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/M/MA/MALLEN/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
