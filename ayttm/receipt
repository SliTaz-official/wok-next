# SliTaz package receipt v2.

PACKAGE="ayttm"
VERSION="0.6.3"
CATEGORY="network"
SHORT_DESC="Universal instant messenger client"
MAINTAINER="devl547@gmail.com"
LICENSE="GPL2"
WEB_SITE="http://ayttm.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="gtk+-dev zlib-dev audiofile-dev xorg-xcb-util-dev openssl-dev \
flex enchant-dev xorg-libXpm-dev libtool"

compile_rules() {
	# remove -lfl
	sed -i 's/LEXLIB=.*/LEXLIB=/' configure

	./configure \
		--disable-webcam \
		--disable-esd \
		--disable-arts \
		--enable-lj \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="gtk+ zlib audiofile xorg-xcb-util openssl enchant aspell \
	xorg-libXpm"
}
