PACKAGE="perl-geo-ipfree"
VERSION="1.151940"
CATEGORY="perl"
SHORT_DESC="Geo::IPfree - Look up the country of an IPv4 address"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Geo-IPfree"
REPOLOGY="perl:geo-ipfree"

TARBALL="Geo-IPfree-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/B/BR/BRICAS/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
