# SliTaz package receipt v2.

PACKAGE="zenity"
VERSION="3.24.0"
CATEGORY="x-window"
SHORT_DESC="Display GTK+3 dialogs"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="LGPL2"
WEB_SITE="https://wiki.gnome.org/Projects/Zenity"

TARBALL="zenity-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/zenity/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="gtk+3-dev glib-dev libnotify-gtk3-dev gettext itstool"
SPLIT="zenity-gnome zenity"
SIBLINGS="zenity+webkit2"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install || return 1

	fix symlinks
}

genpkg_rules() {
	case $PACKAGE in
		*-gnome)
			copy help/
			CAT="gnome|GNOME integration"
			;;
		zenity)
			copy @std @rm
			DEPENDS="atk cairo gdk-pixbuf glib gtk+3 libnotify-gtk3 pango \
			xorg-libX11"
			TAGS="dialogs"
			;;
	esac
}

