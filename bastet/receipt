BUILD_DEPENDS="ncurses-dev libboost-dev libboost-program-options"

# Rules to configure and make the package.
compile_rules()
{
	cp $stuff/*.png $src

	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
	DEPENDS="libboost-program-options ncurses"
	TAGS="tetris"
}
