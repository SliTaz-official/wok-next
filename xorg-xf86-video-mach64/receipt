# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-mach64"
VERSION="6.9.6"
CATEGORY="x-window"
SHORT_DESC="Xorg driver for ATI MACH 64 cards"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="xdrv:mach64"

TARBALL="xf86-video-mach64-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-server-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-server"
	TAGS="xorg display"
}
