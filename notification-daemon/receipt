# SliTaz package receipt v2.

PACKAGE="notification-daemon"
VERSION="3.20.0"
CATEGORY="x-window"
SHORT_DESC="Notification daemon for libnotify/notify-send"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="http://www.galago-project.org/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="gettext gtk+3-dev glib-dev xorg-libX11-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules() {
	copy @std
	DEPENDS="atk cairo gdk-pixbuf glib gtk+3 pango xorg-libX11"
}
