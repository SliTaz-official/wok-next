PACKAGE="perl-io-sessiondata"
VERSION="1.03"
CATEGORY="perl"
SHORT_DESC="IO::SessionData - supporting module for SOAP::Lite"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/IO-SessionData"
REPOLOGY="perl:io-sessiondata"

TARBALL="IO-SessionData-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/P/PH/PHRED/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
