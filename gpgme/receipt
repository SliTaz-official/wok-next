# SliTaz package receipt v2.

PACKAGE="gpgme"
VERSION="1.9.0"
CATEGORY="security"
SHORT_DESC="Support for cryptography"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2 LGPL2.1"
WEB_SITE="https://www.gnupg.org/related_software/gpgme/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/postlfs/gpgme.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://www.gnupg.org/ftp/gcrypt/gpgme/$TARBALL"
# Integrity check: https://www.gnupg.org/download/integrity_check.html
TARBALL_SHA1="870719cd3d2ef6a7fcb1d6af9ce5446edba7bfc3"

BUILD_DEPENDS="libgpg-error-dev libassuan-dev"
SPLIT="gpgme-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules() {
	case $PACKAGE in
		gpgme)
			copy @std
			rm -r $fs/usr/share
			DEPENDS="libassuan libgpg-error"
			;;
		*-dev)
			copy @dev common-lisp/
			DEPENDS="gpgme libassuan-dev libgpg-error-dev"
			;;
	esac
}
