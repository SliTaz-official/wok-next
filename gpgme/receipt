# SliTaz package receipt v2.

PACKAGE="gpgme"
VERSION="1.11.1"
CATEGORY="security"
SHORT_DESC="Support for cryptography"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2 LGPL2.1"
WEB_SITE="https://www.gnupg.org/related_software/gpgme/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/postlfs/gpgme.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://www.gnupg.org/ftp/gcrypt/gpgme/$TARBALL"
#  Integrity check: https://www.gnupg.org/download/integrity_check.html
TARBALL_SHA1="95b1fc427871ca8d30d6d3b1985c816fe0b5077b"

BUILD_DEPENDS="libgpg-error-dev libassuan-dev gnupg"
SPLIT="gpgme-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		gpgme)
			copy @std
			rm -r $fs/usr/share
			DEPENDS="libassuan libgpg-error   gnupg"
			;;
		*-dev)
			copy @dev common-lisp/
			;;
	esac
}
