# SliTaz package receipt v2.

PACKAGE="xorg-xkill"
VERSION="1.0.4"
CATEGORY="x-window"
SHORT_DESC="Kill a client by its X resource"
MAINTAINER="mallory@sweetpeople.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
HOST_ARCH="i486 arm"

TARBALL="xkill-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libX11-dev xorg-libXmu-dev xorg-xproto"
PKG_RULE="std"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
	DEPENDS="xorg-libX11 xorg-libXmu"
}
