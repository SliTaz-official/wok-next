# SliTaz package receipt v2.

PACKAGE="xorg-xkill"
VERSION="1.0.5"
CATEGORY="x-window"
SHORT_DESC="Kill a client by its X resource"
MAINTAINER="mallory@sweetpeople.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7app.html"
REPOLOGY="xkill"

TARBALL="xkill-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libX11-dev xorg-libXmu-dev xorg-xorgproto"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libXmu"
}
