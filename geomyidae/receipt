TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://git.r-36.net/geomyidae/snapshot/$TARBALL"

compile_rules() {
	CC=gcc \
	make &&
	make install &&
	install -Dm644 $src/index.gph $install/var/gopher/index.gph
}

genpkg_rules() {
	copy @std
}
