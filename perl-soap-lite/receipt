# SliTaz package receipt.

PACKAGE="perl-soap-lite"
VERSION="1.27"
CATEGORY="perl"
SHORT_DESC="SOAP::Lite - Perl's Web Services Toolkit"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/SOAP-Lite"
REPOLOGY="perl:soap-lite"

TARBALL="SOAP-Lite-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/P/PH/PHRED/$TARBALL"

BUILD_DEPENDS="perl-class-inspector perl-io-sessiondata perl-io-socket-ssl \
perl-lwp-protocol-https perl-libwww-perl perl-task-weaken perl-uri \
perl-xml-parser"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-class-inspector perl-io-sessiondata perl-io-socket-ssl \
	perl-lwp-protocol-https perl-libwww-perl perl-task-weaken perl-uri \
	perl-xml-parser"
}
