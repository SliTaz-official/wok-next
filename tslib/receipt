# SliTaz package receipt v2.

PACKAGE="tslib"
VERSION="1.0"
CATEGORY="x-window"
SHORT_DESC="Abstraction layer for touchscreen panel events"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="https://sourceforge.net/projects/tslib.berlios/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/tslib.berlios/$TARBALL"

BUILD_DEPENDS="libtool automake autoconf"
SPLIT="tslib-dev"

compile_rules() {
	case "$ARCH" in
		arm*) export ac_cv_func_malloc_0_nonnull=yes ;;
	esac

	./autogen.sh &&
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		tslib)
			copy @std
			CONFIG_FILES="/etc/ts.conf"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
