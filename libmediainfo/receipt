# SliTaz package receipt v2.

PACKAGE="libmediainfo"
VERSION="0.7.79"
CATEGORY="libs"
SHORT_DESC="Library reading metadata from media files"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="zlib/libpng"
WEB_SITE="http://mediaarea.net/"

TARBALL="${PACKAGE}_$VERSION.tar.xz"
WGET_URL="${WEB_SITE}download/source/$PACKAGE/$VERSION/$TARBALL"

BUILD_DEPENDS="libzen libtool automake autoconf curl-dev libmms-dev"
SPLIT="libmediainfo-dev"

compile_rules() {
	cd Project/GNU/Library
	./autogen.sh
	./configure \
		--enable-shared \
		--enable-minimize-size \
		--with-libcurl \
		--with-libmms \
		$CONFIGURE_ARGS &&
	make &&
	make install || return 1

	install -Dm755 libmediainfo-config $install/usr/bin/libmediainfo-config
	sed \
		-e "s|$src/Project/GNU/Library|/usr/lib|" \
		-e 's|.libs||' \
		-i $install/usr/bin/libmediainfo-config
}

genpkg_rules() {
	case $PACKAGE in
		libmediainfo)
			copy @std
			DEPENDS="libcurl libmms"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
