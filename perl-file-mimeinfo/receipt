# SliTaz package receipt.

PACKAGE="perl-file-mimeinfo"
VERSION="0.28"
CATEGORY="perl"
SHORT_DESC="File::MimeInfo - Determine file type from the file name"
MAINTAINER="paul@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/File-MimeInfo"

TARBALL="File-MimeInfo-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/M/MI/MICHIELB/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl-file-basedir perl-file-desktopentry"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
