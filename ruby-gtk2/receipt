# SliTaz package receipt v2.

PACKAGE="ruby-gtk2"
VERSION="3.2.9"
CATEGORY="ruby"
SHORT_DESC="Ruby binding of GTK+-2.x"
MAINTAINER="devel@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="https://rubygems.org/gems/${PACKAGE#*-}"
REPOLOGY="${PACKAGE/-/:}"

TARBALL="${PACKAGE#*-}-$VERSION.gem"
WGET_URL="https://rubygems.org/downloads/$TARBALL"

BUILD_DEPENDS="ruby-dev ruby-glib2-dev ruby-cairo-dev ruby-cairo-gobject-dev \
gtk2-dev ruby-gobject-introspection-dev ruby-pango-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	gem install \
		--no-document \
		--ignore-dependencies \
		--no-user-install \
		--build-root $install \
		$src/$TARBALL &&
	fix gem
}

genpkg_rules() {
	case $PACKAGE in
		*-dev)
			copy @ruby-dev
			DEPENDS="ruby-gtk2 gtk2-dev"
			;;
		*)
			copy @ruby
			DEPENDS="ruby ruby-atk ruby-gdk_pixbuf2 ruby-pango cairo \
			gdk-pixbuf glib gtk2 pango libx11"
			TAGS="ruby programming gtk development"
			;;
	esac
}
