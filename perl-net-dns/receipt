# SliTaz package receipt.

PACKAGE="perl-net-dns"
VERSION="1.15"
CATEGORY="perl"
SHORT_DESC="Net::DNS - Perl Interface to the Domain Name System"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Net-DNS"

TARBALL="Net-DNS-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/N/NL/NLNETLABS/$TARBALL"

DEPENDS="perl-digest-hmac"
BUILD_DEPENDS="$DEPENDS"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
