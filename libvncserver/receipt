# SliTaz package receipt v2.

PACKAGE="libvncserver"
VERSION="0.9.11"
CATEGORY="network"
SHORT_DESC="VNC library"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://libvnc.github.io/"

TARBALL="LibVNCServer-$VERSION.tar.gz"
WGET_URL="https://github.com/LibVNC/libvncserver/archive/$TARBALL"

BUILD_DEPENDS="automake libtool openssl-dev libjpeg-turbo-dev libpng16-dev"
SPLIT="$PACKAGE-novnc $PACKAGE-dev"

compile_rules() {
	./autogen.sh \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install || return 1

	mkdir -p $install/var/www
	cp -r webclients/novnc $install/var/www
}

genpkg_rules() {
	case $PACKAGE in
		libvncserver)
			copy *.so*
			DEPENDS="openssl libjpeg-turbo libpng16 zlib"
			;;
		libvncserver-novnc)
			copy novnc/
			CAT="network|noVNC web client"
			DEPENDS=" "
			;;
		*-dev)
			copy @dev
			rm -r $fs/var	# it includes 'include/' too and false recognized as dev files
			DEPENDS="libvncserver libjpeg-turbo-dev libpng16-dev openssl-dev \
			zlib-dev"
			;;
	esac
}
