# SliTaz package receipt v2.

PACKAGE="squeak-vm"
VERSION="4.10.2.2614"
CATEGORY="network"
SHORT_DESC="Create and share interactive stories, games, music and art"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://scratch.mit.edu/"

TARBALL="Squeak-$VERSION-src.tar.gz"
WGET_URL="http://squeakvm.org/unix/release/$TARBALL"

BUILD_DEPENDS="alsa-lib-dev dbus-dev xorg-libXrender-dev cmake"

compile_rules() {
	./unix/cmake/configure \
		--prefix=/usr \
		--without-quartz \
		--without-gl \
		--with-x \
		--enable-mpg-mmx &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	copy @std
	DEPENDS="alsa-lib dbus xorg-libXrender"
	SUGGESTED="scratch"
}
