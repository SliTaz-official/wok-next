# SliTaz package receipt v2.

PACKAGE="xorg-libXvMC"
VERSION="1.0.10"
CATEGORY="x-window"
SHORT_DESC="Xorg server module"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7lib.html"

TARBALL="libXvMC-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-libXv-dev"
SPLIT="xorg-libXvMC-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXvMC)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXext"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXvMC \
			xorg-libX11-dev xorg-libXext-dev xorg-libXv-dev xorg-videoproto \
			xorg-xproto"
			;;
	esac
}
