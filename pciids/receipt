# SliTaz package receipt.

PACKAGE="pciids"
VERSION="9cecb39"
CATEGORY="misc"
SHORT_DESC="List of PCI ID's"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="BSD GPL2"
WEB_SITE="http://pci-ids.ucw.cz/"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$GITHUB/pciutils/pciids/tarball/$VERSION"

BUILD_DEPENDS="advancecomp"

# Rules to configure and make the package.
compile_rules()
{
	gzip pci.ids
	advdef -z4 pci.ids.gz
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr/share/misc
	cp $src/pci.ids.gz $fs/usr/share/misc
}
