# SliTaz package receipt v2.

PACKAGE="pciids"
VERSION="171021"
COMMIT="5a521cc"
CATEGORY="misc"
SHORT_DESC="List of PCI ID's"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="BSD GPL2"
WEB_SITE="http://pci-ids.ucw.cz/"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$COMMIT.tar.gz"
WGET_URL="$GITHUB/pciutils/pciids/tarball/$COMMIT"

compile_rules() {
	mkdir -p $install/usr/share/misc
	gzip -1 pci.ids
	cp pci.ids.gz $install/usr/share/misc
}

genpkg_rules() {
	copy @std
}
