# SliTaz package receipt v2.

PACKAGE="raptor"
VERSION="2.0.15"
CATEGORY="multimedia"
SHORT_DESC="A C library that parses RDF/XML/N-Triples into RDF triples"
MAINTAINER="jozee@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://librdf.org/raptor/"

TARBALL="raptor2-$VERSION.tar.gz"
WGET_URL="http://librdf.org/dist/source/$TARBALL"

BUILD_DEPENDS="perl libxml2-dev libxslt-dev curl-dev yajl-dev"
SPLIT="raptor-dev"

compile_rules() {
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		raptor)
			copy @std
			DEPENDS="libcurl libxml2 libxslt yajl"
			;;
		*-dev)
			copy @dev
			DEPENDS="raptor libxml2-dev libxslt-dev yajl-dev"
			;;
	esac
}
