# SliTaz package receipt v2.

PACKAGE="raptor"
VERSION="2.0.8"
CATEGORY="multimedia"
SHORT_DESC="A C library that parses RDF/XML/N-Triples into RDF triples"
MAINTAINER="jozee@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://librdf.org/raptor"

TARBALL="raptor2-$VERSION.tar.gz"
WGET_URL="http://librdf.org/dist/source/$TARBALL"

BUILD_DEPENDS="libxml2-dev curl-dev zlib-dev openssl-dev libxslt-dev libidn-dev"
SPLIT="raptor-dev"

compile_rules() {
	./configure \
		--disable-static \
		--with-yajl=no \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make prefix=/usr install || return 1

	ln -s raptor2/raptor2.h $install/usr/include/raptor.h
}

genpkg_rules() {
	case $PACKAGE in
		raptor)
			copy @std
			DEPENDS="libxml2 curl zlib openssl libxslt"
			;;
		raptor-dev)
			copy @dev
			DEPENDS="raptor curl-dev libxslt-dev"
			;;
	esac
}
