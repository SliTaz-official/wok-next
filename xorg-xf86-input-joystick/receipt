# SliTaz package receipt v2.

PACKAGE="xorg-xf86-input-joystick"
VERSION="1.6.3"
CATEGORY="x-window"
SHORT_DESC="Xorg input driver for controlling the pointer with a joystick \
device"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="xdrv:joystick"

TARBALL="xf86-input-joystick-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-joystick)
			copy @std
			DEPENDS="xorg-server"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xf86-input-joystick xorg-server-dev"
			;;
	esac
}
