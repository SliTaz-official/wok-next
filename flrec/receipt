# SliTaz package receipt v2.

PACKAGE="flrec"
VERSION="0.13"
CATEGORY="multimedia"
SHORT_DESC="FLTK RECorder is a simple audio hard disk recorder"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.matteolucarelli.net/flrec/index_en.htm"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://www.matteolucarelli.net/flrec/$TARBALL"

BUILD_DEPENDS="fltk-dev sox-dev xorg-libX11-dev"

compile_rules() {
	make CC=$HOST_SYSTEM-g++ &&
	install -Dm755 $src/flrec $install/usr/bin/flrec
}

genpkg_rules() {
	copy @std
	DEPENDS="fltk sox"
}
