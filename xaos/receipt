# SliTaz package receipt.

PACKAGE="xaos"
VERSION="3.6"
CATEGORY="graphics"
SHORT_DESC="Fast interactive fractal zoomer"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://matek.hu/xaos/doku.php"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/xaos/$TARBALL"

BUILD_DEPENDS="gettext-dev xorg-libX11-dev xorg-libICE-dev libpng16-dev \
xorg-libXext-dev gsl-dev nasm"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy bin/ XaoS/ locale/
	DEPENDS="gsl libpng16 xorg-libX11 xorg-libXext zlib"
}
