# SliTaz package receipt v2.

PACKAGE="leptonica"
VERSION="1.74.4"
CATEGORY="graphics"
SHORT_DESC="Software for image processing and image analysis applications"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://www.leptonica.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://www.leptonica.org/source/$TARBALL"

BUILD_DEPENDS="giflib-dev jpeg-dev libpng16-dev tiff-dev xorg-dev"
SPLIT="leptonica-dev"

compile_rules() {
	./autogen.sh
	./configure \
		--prefix=/usr \
		$CONFIGURE_ARGS &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		leptonica)
			mkdir -p $fs/usr/lib
			cp -a $install/usr/bin $fs/usr
			cp -a $install/usr/lib/*.so* $fs/usr/lib
			DEPENDS="giflib jpeg libpng16 tiff xorg-libX11 xorg-libXau \
			xorg-libXdmcp xorg-libxcb"
			;;
		*-dev)
			mkdir -p $fs/usr/lib
			cp -a $install/usr/include $fs/usr
			cp -a $install/usr/lib/*a $fs/usr/lib
			cp -a $install/usr/lib/pkgconfig $fs/usr/lib
			;;
	esac
}
