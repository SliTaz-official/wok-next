# SliTaz package receipt v2.

PACKAGE="leptonica"
VERSION="1.74.4"
CATEGORY="graphics"
SHORT_DESC="Software for image processing and image analysis applications"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://www.leptonica.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://www.leptonica.org/source/$TARBALL"

BUILD_DEPENDS="giflib-dev jpeg-dev libpng-dev tiff-dev xorg-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		leptonica)
			copy @std
			DEPENDS="giflib jpeg libpng tiff libx11 libxau \
			libxdmcp libxcb"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
