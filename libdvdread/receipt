# SliTaz package receipt v2.

PACKAGE="libdvdread"
VERSION="4.1.3"
CATEGORY="system-tools"
SHORT_DESC="Librairy for reading DVDs"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.mplayerhq.hu/MPlayer/releases/dvdnav/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="${WEB_SITE}${TARBALL}"

BUILD_DEPENDS="libdvdcss-dev autoconf automake libtool"
SPLIT="libdvdread-dev"

compile_rules() {
	patch -Np1 -i $stuff/DVDFileStat.patch
	./autogen.sh $CONFIGURE_ARGS 2>&1 | grep -v /libtool &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		libdvdread) copy @std;;
		*-dev)      copy @dev;;
	esac
}

