# SliTaz package receipt v2.

PACKAGE="xorg-xkbutils"
VERSION="1.0.4"
CATEGORY="x-window"
SHORT_DESC="Xorg keyboard utilities"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7app.html"
REPOLOGY="xkbutils"

TARBALL="xkbutils-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-xproto xorg-libXaw-dev xorg-libXt-dev \
xorg-libX11-dev xorg-inputproto"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libXaw xorg-libXt"
}
