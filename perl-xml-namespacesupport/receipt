PACKAGE="perl-xml-namespacesupport"
VERSION="1.12"
CATEGORY="perl"
SHORT_DESC="XML::NamespaceSupport - A simple generic namespace processor"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/XML-NamespaceSupport"
REPOLOGY="perl:xml-namespacesupport"

TARBALL="XML-NamespaceSupport-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/P/PE/PERIGRIN/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
