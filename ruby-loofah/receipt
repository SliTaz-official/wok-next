# SliTaz package receipt v2.

PACKAGE="ruby-loofah"
VERSION="2.2.2"
CATEGORY="ruby"
SHORT_DESC="Manipulate and transform HTML/XML documents and fragments"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://rubygems.org/gems/${PACKAGE#*-}"
HOST_ARCH="any"
REPOLOGY="${PACKAGE/-/:}"

TARBALL="${PACKAGE#*-}-$VERSION.gem"
WGET_URL="https://rubygems.org/downloads/$TARBALL"

BUILD_DEPENDS="ruby-dev"

compile_rules() {
	gem install \
		--no-document \
		--ignore-dependencies \
		--no-user-install \
		--build-root $install \
		$src/$TARBALL &&
	fix gem
}

genpkg_rules() {
	copy @ruby
	DEPENDS="ruby ruby-crass ruby-nokogiri"
}
