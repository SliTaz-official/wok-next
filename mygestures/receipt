# SliTaz package receipt v2.

PACKAGE="mygestures"
VERSION="0.7"
CATEGORY="x-window"
SHORT_DESC="Recognizing gestures made with your mouse and perform actions"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://sourceforge.net/projects/mygestures/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="xorg-libX11-dev xorg-libXtst jansson-dev xorg-libXmu-dev \
xorg-libXrender-dev xorg-libXtst-dev libxml2-dev"

compile_rules() {
	./configure \
		--sysconfdir=/etc/$PACKAGE \
		$CONFIGURE_ARGS &&
	make &&
	make -j 1 install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libXtst jansson"
}
