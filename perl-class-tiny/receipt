# SliTaz package receipt.

PACKAGE="perl-class-tiny"
VERSION="1.006"
CATEGORY="perl"
SHORT_DESC="Class::Tiny - Minimalist class construction"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Class-Tiny"
REPOLOGY="perl:class-tiny"

TARBALL="Class-Tiny-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DA/DAGOLDEN/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
