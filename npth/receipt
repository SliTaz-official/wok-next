# SliTaz package receipt v2.

PACKAGE="npth"
VERSION="1.5"
CATEGORY="security"
SHORT_DESC="The new GNU portable threads library"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2 LGPL3"
WEB_SITE="https://www.gnupg.org/related_software/npth/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://www.gnupg.org/ftp/gcrypt/npth/$TARBALL"
# https://www.gnupg.org/download/integrity_check.html
TARBALL_SHA1="93ddf1a3bdbca00fb4cf811498094ca61bbb8ee1"

SPLIT="npth-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules() {
	case $PACKAGE in
		npth)  copy @std;;
		*-dev) copy @dev;;
	esac
}
