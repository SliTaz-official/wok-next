# SliTaz package receipt v2.

PACKAGE="ruby-glib2"
VERSION="3.2.9"
CATEGORY="ruby"
SHORT_DESC="Base features for GLib2 based bindings and many useful utility \
features"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://rubygems.org/gems/${PACKAGE#*-}"
HOST_ARCH="i486 x86_64"
REPOLOGY="${PACKAGE/-/:}"

TARBALL="${PACKAGE#*-}-$VERSION.gem"
WGET_URL="https://rubygems.org/downloads/$TARBALL"

BUILD_DEPENDS="ruby-dev ruby-pkg-config ruby-native-package-installer glib-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	gem install \
		--no-document \
		--ignore-dependencies \
		--no-user-install \
		--build-root $install \
		$src/$TARBALL &&
	fix gem
}

genpkg_rules() {
	case $PACKAGE in
		*-dev)
			copy @ruby-dev
			DEPENDS="ruby-glib2 glib-dev"
			;;
		*)
			copy @ruby
			DEPENDS="ruby ruby-native-package-installer ruby-pkg-config glib"
			;;
	esac
}
