# SliTaz package receipt.

PACKAGE="perl-xml-twig"
VERSION="3.52"
CATEGORY="perl"
SHORT_DESC="XML::Twig - A perl module for processing huge XML documents in \
tree mode"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/XML-Twig"
REPOLOGY="perl:xml-twig"

TARBALL="XML-Twig-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/M/MI/MIROD/$TARBALL"

BUILD_DEPENDS="perl-xml-parser"

compile_rules() {
	perl Makefile.PL -y &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-xml-parser"
}
