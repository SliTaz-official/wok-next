# SliTaz package receipt.

PACKAGE="perl-test-file-sharedir"
VERSION="1.001002"
CATEGORY="perl"
SHORT_DESC="Test::File::ShareDir - Create a Fake ShareDir for your modules for \
testing"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Test-File-ShareDir"

TARBALL="Test-File-ShareDir-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/K/KE/KENTNL/$TARBALL"

DEPENDS="perl-class-tiny perl-file-copy-recursive perl-file-sharedir \
perl-path-tiny perl-scope-guard"
BUILD_DEPENDS="$DEPENDS perl-test-fatal"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
