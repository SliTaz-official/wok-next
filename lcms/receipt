# SliTaz package receipt v2.

PACKAGE="lcms"
VERSION="1.19"
CATEGORY="graphics"
SHORT_DESC="A free color management engine in 100K"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://www.littlecms.com/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="tiff-dev jpeg-dev zlib-dev gfortran xz-dev"
SPLIT="lcms-dev lcms-apps"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		lcms)
			copy *.so*
			;;
		lcms-apps)
			copy bin/
			CAT="development|applications"
			DEPENDS="lcms jpeg tiff zlib"
			;;
		*-dev) copy @dev;;
	esac
}

