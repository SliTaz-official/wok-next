# SliTaz package receipt.

PACKAGE="curl"
VERSION="7.50.1"
CATEGORY="network"
SHORT_DESC="Tool and libs for transferring files with URL syntax."
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://curl.haxx.se/"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$VERSION.tar.lzma"
WGET_URL="https://curl.haxx.se/download/$TARBALL"

DEPENDS="libssl libcurl libcrypto zlib"
BUILD_DEPENDS="zlib-dev openssl-dev libidn-dev"
SPLIT="libcurl"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--disable-static \
		--enable-threaded-resolver \
		$CONFIGURE_ARGS &&
	make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_files curl
}
