# SliTaz package receipt v2.

PACKAGE="autoconf213"
VERSION="2.13"
CATEGORY="development"
SHORT_DESC="A GNU tool for automatically configuring source code"
MAINTAINER="psychomaniak@xakep.ru"
LICENSE="GPL2"
WEB_SITE="http://www.gnu.org/software/autoconf/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/autoconf213.html"

TARBALL="autoconf-$VERSION.tar.gz"
WGET_URL="http://ftpmirror.gnu.org/autoconf/$TARBALL"

BUILD_DEPENDS="m4 perl sed"

compile_rules() {
	./configure \
		--prefix=/usr \
		--program-suffix=-2.13 &&
	make &&
	make prefix="$DESTDIR/usr" install
}

genpkg_rules() {
	copy @std @dev
	DEPENDS="m4 perl"
}
