# SliTaz package receipt v2.

PACKAGE="xorg-xcb-util-keysyms"
VERSION="0.4.0"
CATEGORY="x-window"
SHORT_DESC="Utility libraries for XC Binding"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://xcb.freedesktop.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/xcb-util-keysyms.html"
REPOLOGY="xcb-util-keysyms"

TARBALL="xcb-util-keysyms-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/xcb/$TARBALL"

BUILD_DEPENDS="xorg-libxcb-dev xorg-util-macros"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-keysyms)
			copy @std
			DEPENDS="xorg-libxcb"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xcb-util-keysyms xorg-libxcb-dev"
			;;
	esac
}
