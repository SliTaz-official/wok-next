# SliTaz package receipt v2.

PACKAGE="xorg-util-macros"
VERSION="1.19.2"
CATEGORY="development"
SHORT_DESC="Autoconf macros used in X modular configure.ac files"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/util-macros.html"
HOST_ARCH="any"
REPOLOGY="util-macros"

TARBALL="util-macros-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/util/$TARBALL"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @dev
	DEPENDS="m4"
}
