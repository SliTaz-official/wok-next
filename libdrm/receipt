# SliTaz package receipt v2.

PACKAGE="libdrm"
VERSION="2.4.82"
CATEGORY="x-window"
SHORT_DESC="Freedesktop DRM Library"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://dri.freedesktop.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/libdrm.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://dri.freedesktop.org/libdrm/$TARBALL"

BUILD_DEPENDS="autoconf automake libtool xorg-util-macros libxslt \
xorg-libpciaccess-dev cairo-dev eudev-dev libxslt docbook-xsl valgrind-dev"
SPLIT="libdrm-amdgpu libdrm-etnaviv libdrm-exynos libdrm-intel libdrm-nouveau \
libdrm-omap libdrm-radeon libdrm-tegra libdrm-dev"

compile_rules() {
#	sed -i "/pthread-stubs/d" configure.ac &&
	autoreconf -fiv &&

	./configure \
		--enable-udev \
		--enable-vmwgfx \
		--enable-omap-experimental-api \
		--enable-exynos-experimental-api \
		--enable-tegra-experimental-api \
		--enable-etnaviv-experimental-api \
		$CONFIGURE_ARGS &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		libdrm)
			copy libdrm.so* libkms.so*
			DEPENDS="eudev linux-drm xorg-libpciaccess"
			;;
		*-amdgpu)
			copy libdrm_amdgpu.so*
			CAT="x-window|AMDGPU API"
			;;
		*-etnaviv)
			copy libdrm_etnaviv.so*
			CAT="x-window|Etnaviv API"
			;;
		*-exynos)
			copy libdrm_exynos.so*
			CAT="x-window|EXYNOS API"
			;;
		*-intel)
			copy libdrm_intel.so*
			CAT="x-window|Intel API"
			DEPENDS="libdrm xorg-libpciaccess"
			;;
		*-nouveau)
			copy libdrm_nouveau.so*
			CAT="x-window|Nouveau API"
			;;
		*-omap)
			copy libdrm_omap.so*
			CAT="x-window|OMAP API"
			;;
		*-radeon)
			copy libdrm_radeon.so*
			CAT="x-window|Radeon API"
			;;
		*-tegra)
			copy libdrm_tegra.so*
			CAT="x-window|Tegra API"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
