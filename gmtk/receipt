# SliTaz package receipt v2.

PACKAGE="gmtk"
VERSION="1.0.9"
CATEGORY="libs"
SHORT_DESC="GNOME MPlayer Toolkit"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://sites.google.com/site/kdekorte2/gmtk"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/kdekorte/gmtk/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="gettext intltool xorg-libX11-dev gtk+-dev glib-dev GConf-dev \
alsa-lib-dev pulseaudio-dev"
SPLIT="gmtk-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		gmtk)
			copy @std
			DEPENDS="alsa-lib cairo glib gtk+ pulseaudio pulseaudio-glib"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
