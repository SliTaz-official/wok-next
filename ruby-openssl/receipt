# SliTaz package receipt v2.

PACKAGE="ruby-openssl" # ruby-stdlib already provides openssl
VERSION="2.1.1"
CATEGORY="ruby"
SHORT_DESC="SSL, TLS and general purpose cryptography"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://rubygems.org/gems/${PACKAGE#*-}"
HOST_ARCH="i486 x86_64"
REPOLOGY="${PACKAGE/-/:}"

TARBALL="${PACKAGE#*-}-$VERSION.gem"
WGET_URL="https://rubygems.org/downloads/$TARBALL"

BUILD_DEPENDS="ruby-dev openssl-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	gem install \
		--no-document \
		--ignore-dependencies \
		--no-user-install \
		--build-root $install \
		$src/$TARBALL &&
	fix gem
}

genpkg_rules() {
	case $PACKAGE in
		*-dev)
			copy @ruby-dev
			DEPENDS="ruby-openssl openssl-dev"
			;;
		*)
			copy @ruby
			DEPENDS="ruby openssl"
			;;
	esac
}
