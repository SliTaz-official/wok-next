# SliTaz package receipt v2.

PACKAGE="xorg-xfsinfo"
VERSION="1.0.5"
CATEGORY="x-window"
SHORT_DESC="X font server information utility"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="xfsinfo"

TARBALL="xfsinfo-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-xproto xorg-libFS-dev"
PKG_RULE="std"

compile_rules() {
	touch /root/missing

	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libFS"
}
