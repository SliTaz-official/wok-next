# SliTaz package receipt v2.

PACKAGE="xorg-xfsinfo"
VERSION="1.0.5"
CATEGORY="x-window"
SHORT_DESC="X font server information utility"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xfsinfo-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-xproto xorg-libFS-dev"
PKG_RULE="std"

# Rules to configure and make the package.
compile_rules()
{
	touch /root/missing

	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
	DEPENDS="xorg-libFS"
}
