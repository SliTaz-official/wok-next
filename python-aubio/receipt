# SliTaz package receipt v2.

PACKAGE="python-aubio"
VERSION="latest"
CATEGORY="multimedia"
SHORT_DESC="A collection of tools for music analysis"
MAINTAINER="jozee@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://pypi.org/project/aubio/"
REPOLOGY="python:aubio"

BUILD_DEPENDS="python-dev python-numpy ffmpeg-dev libsndfile-dev \
libsamplerate-dev"

compile_rules() {
	pip install --no-compile --root=$DESTDIR aubio
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*aubio-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="ffmpeg libsamplerate libsndfile python"
}
