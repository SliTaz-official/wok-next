# SliTaz package receipt v2.

PACKAGE="perl-socket6"
VERSION="0.28"
CATEGORY="perl"
SHORT_DESC="Socket6 - IPv6 related part of the C socket.h defines and \
structure manipulators"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Socket6"
REPOLOGY="perl:socket6"

TARBALL="Socket6-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/U/UM/UMEMOTO/$TARBALL"

BUILD_DEPENDS="perl-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
