# SliTaz package receipt v2.

PACKAGE="gst1-plugins-good"
VERSION="1.10.1"
CATEGORY="multimedia"
SHORT_DESC="GStreamer good Plugins"
MAINTAINER="psychomaniak@xakep.ru"
LICENSE="GPL2"
WEB_SITE="http://gstreamer.freedesktop.org/"

SOURCE="gst-plugins-good"
TARBALL="$SOURCE-$VERSION.tar.xz"
WGET_URL="${WEB_SITE}src/$SOURCE/$TARBALL"

BUILD_DEPENDS="gstreamer1-dev gst1-plugins-base-dev mpg123-dev jpeg-dev"
SPLIT="gst1-plugins-good-dev"

compile_rules() {
	sed '/set ERROR_C/d' -i configure
	sed '/set ERROR_OBJC/d' -i configure

	./configure \
		--enable-experimental \
		--disable-static \
		--disable-debug \
		--disable-libvisual \
		--enable-introspection=no \
		--with-package-name="GStreamer Base Plugins (1.10)" \
		--with-package-origin="http://www.slitaz.org/" \
		$CONFIGURE_ARGS &&
	make $MAKEFLAGS &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		gst1-plugins-good)
			copy @std
			DEPENDS="gstreamer1 gst1-plugins-base pango alsa-lib \
			mpg123 jpeg"
			;;
		*-dev)
			copy @dev
			DEPENDS="gstreamer1-dev gst1-plugins-base-dev  \
			gstreamer1 gst1-plugins-base  gst1-plugins-good \
			mpg123-dev jpeg-dev "
			;;
	esac
}
