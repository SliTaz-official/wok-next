# SliTaz package receipt.

PACKAGE="perl-net-mysql"
VERSION="0.11"
CATEGORY="perl"
SHORT_DESC="Net::MySQL - Pure Perl MySQL network protocol interface"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Net-MySQL"
REPOLOGY="perl:net-mysql"

TARBALL="Net-MySQL-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/T/TS/TSUCCHI/$TARBALL"

DEPENDS="perl-digest-sha1 libmysqlclient"
BUILD_DEPENDS="$DEPENDS"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
