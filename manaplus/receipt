# SliTaz package receipt v2.

PACKAGE="manaplus"
VERSION="1.3.8.4"
CATEGORY="games"
SHORT_DESC="Extended client for Evol Online and The Mana World"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://manaplus.org/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="http://download.evolonline.org/manaplus/download/$VERSION/$TARBALL"

BUILD_DEPENDS="curl-dev enet libxml2-dev libsdl-mixer-dev libsdl-image-dev \
libsdl-net-dev libsdl-ttf-dev libsdl-gfx-dev physfs-dev libpng16-dev zlib-dev"

compile_rules() {
	./configure \
		--prefix=/usr \
		--without-opengl \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	copy @std
	DEPENDS="curl physfs libxml2 libsdl-mixer libsdl-image libsdl-net \
	libsdl-ttf libpng16 libsdl-gfx ttf-dejavu zlib"
}
