# SliTaz package receipt v2.

PACKAGE="xorg-font-bh-ttf"
VERSION="1.0.3"
CATEGORY="x-window"
SHORT_DESC="Bigelow & Holmes Luxi TTF fonts"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7font.html"
REPOLOGY="font-bh-ttf"

TARBALL="font-bh-ttf-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/font/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-font-util-dev xorg-mkfontdir \
fontconfig-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	TAGS="font"
}

post_install() {
	chroot "$1/" fc-cache -r /usr/share/fonts/X11/TTF
}
post_remove() {
	chroot "$1/" fc-cache -r
}
