# SliTaz package receipt v2.

PACKAGE="xorg-xfontsel"
VERSION="1.0.6"
CATEGORY="x-window"
SHORT_DESC="Point and click selection of X11 font names"
MAINTAINER="jozee@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="xfontsel"

TARBALL="xfontsel-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libXaw-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libXaw xorg-libXmu xorg-libXt"
	CONFIG_FILES="/etc/X11/app-defaults/XFontSel"
	TAGS="utility xorg fonts"
}
