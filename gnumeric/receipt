# SliTaz package receipt v2.

PACKAGE="gnumeric"
VERSION="1.12.32"
CATEGORY="office"
SHORT_DESC="Office Spreadsheet application"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="http://www.gnumeric.org/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="gtk-doc bison goffice-dev gtk3-dev intltool gettext-dev \
xorg-dev zlib-dev"

compile_rules() {
	./configure \
		--without-perl \
		--without-python \
		--without-gda \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	find $fs/usr/share/pixmaps -name '*.ico' -delete
	DEPENDS="atk cairo gdk-pixbuf glib goffice gtk3 libgsf libxml2 pango zlib \
	   dconf"
}
