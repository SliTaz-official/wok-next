# SliTaz package receipt v2.

PACKAGE="perl-net-pcap"
VERSION="0.18"
CATEGORY="perl"
SHORT_DESC="Net::Pcap - Interface to the pcap(3) LBL packet capture library"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Net-Pcap"
REPOLOGY="perl:net-pcap"

TARBALL="Net-Pcap-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/S/SA/SAPER/$TARBALL"

BUILD_DEPENDS="perl-dev libpcap-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl libpcap"
}
