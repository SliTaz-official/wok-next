# SliTaz package receipt.

PACKAGE="perl-net-pcap"
VERSION="0.18"
CATEGORY="perl"
SHORT_DESC="Net::Pcap - Interface to the pcap(3) LBL packet capture library"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Net-Pcap"

TARBALL="Net-Pcap-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/S/SA/SAPER/$TARBALL"

DEPENDS="perl libpcap"
BUILD_DEPENDS="perl libpcap-dev"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
