# SliTaz package receipt v2.

PACKAGE="gifsicle"
VERSION="1.91"
CATEGORY="graphics"
SHORT_DESC="Create, manipulate, and optimize GIF images and animations"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.lcdf.org/gifsicle/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://www.lcdf.org/gifsicle/$TARBALL"

BUILD_DEPENDS="libx11-dev libice-dev libsm-dev"
SPLIT="gifview $PACKAGE"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		gifview)
			copy gifview
			DEPENDS="libx11"
			CAT="graphics|GIF viewer"
			;;
		gifsicle)
			copy @std @rm
			;;
	esac
}
