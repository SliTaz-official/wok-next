# SliTaz package receipt v2.

PACKAGE="libpng16"
VERSION="1.6.28"
CATEGORY="libs"
SHORT_DESC="PNG images library 1.6 series with APNG support"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="zlib/libpng"
WEB_SITE="http://www.libpng.org/pub/png/libpng.html"

TARBALL="libpng-$VERSION.tar.xz"
WGET_URL="$SF_MIRROR/libpng/$TARBALL"

#BUILD_DEPENDS="gawk zlib-dev"
BUILD_DEPENDS="zlib-dev"
SPLIT="libpng16-dev"

compile_rules() {
	LIBS=-lpthread \
	./configure $CONFIGURE_ARGS && make && make install || return 1

	cook_pick_docs README libpng-manual.txt

	# Misc png tools
	cd contrib/pngminus
	make PNGLIB="-L$DESTDIR/usr/lib -lpng" -f makefile.std png2pnm pnm2png
	cp -a png2pnm pnm2png $DESTDIR/usr/bin
}

genpkg_rules() {
	case $PACKAGE in
		libpng16)
			copy @std
			DEPENDS="zlib"
			;;
		libpng16-dev)
			copy @dev
			DEPENDS="zlib-dev"
			;;
	esac
}
