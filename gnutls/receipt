# SliTaz package receipt v2.

PACKAGE="gnutls"
VERSION="3.5.18"
CATEGORY="security"
SHORT_DESC="GNU Transport Layer Security Library"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://gnutls.org/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="https://www.gnupg.org/ftp/gcrypt/gnutls/v${VERSION%.*}/$TARBALL"
TARBALL_SHA1="3f56903c4eba1af9440c64ef86688f984834f0d5"

BUILD_DEPENDS_arm="libtasn1-dev ncurses-dev readline-dev nettle-dev \
libgpg-error-dev libgcrypt-dev openssl-dev gmp-dev lzip"
BUILD_DEPENDS="nettle-dev libtasn1-dev libunistring-dev gettext openssl-dev \
libidn2-dev unbound-dev p11-kit-dev zlib-dev"
SPLIT="libgnutls gnutls-dev"

compile_rules() {
	case "$ARCH" in
		arm*)
			ARCH_ARGS="--with-libgcrypt-prefix=/cross/$ARCH/sysroot/usr \
			--without-p11-kit --disable-rpath --with-libgcrypt --disable-guile \
			--with-zlib" ;;
	esac

	./configure \
		--enable-openssl-compatibility \
		--with-default-trust-store-file="/etc/ssl/ca-bundle.crt" \
		$ARCH_ARGS \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make && make install &&
	make -C doc/reference install-data-local
}

genpkg_rules() {
	case $PACKAGE in
		gnutls)
			copy bin/
			DEPENDS_arm="nettle libgpg-error ncurses readline zlib \
			gcc-lib-base libgnutls openssl libtasn1"
			DEPENDS="libgnutls libtasn1"
			case $ARCH in
				arm*) DEPENDS=$DEPENDS_arm;;
			esac
			;;
		libgnutls)
			copy *.so*
			CAT="security|shared libraries"
			DEPENDS="gmp libidn2 libp11-kit libtasn1 libunistring nettle \
			unbound zlib   cacerts"
			;;
		*-dev)
			copy @dev
			DEPENDS="gnutls libgnutls \
			gmp-dev libidn2-dev libtasn1-dev nettle-dev p11-kit-dev \
			unbound-dev zlib-dev"
			;;
	esac
}
