# SliTaz package receipt.

PACKAGE="gnutls"
VERSION="3.5.3"
CATEGORY="security"
SHORT_DESC="GNU Transport Layer Security Library"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://gnutls.org/"
HOST_ARCH="i486 arm"
SUGGESTED="cacerts"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="ftp://ftp.gnutls.org/gcrypt/gnutls/v${VERSION%.*}/$TARBALL"

DEPENDS="gmp libffi libtasn1 nettle p11-kit zlib"
BUILD_DEPENDS="nettle-dev libtasn1-dev gtk-doc gettext p11-kit-dev"

DEPENDS_arm="nettle libgpg-error ncurses readline zlib gcc-lib-base \
libgnutls libcrypto libtasn1"
BUILD_DEPENDS_arm="libtasn1-dev ncurses-dev readline-dev nettle-dev \
libgpg-error-dev libgcrypt-dev libcrypto-dev gmp-dev lzip"

SPLIT="libgnutls gnutls-dev"

# Handle SliTaz arch.
case "$SLITAZ_ARCH" in
	arm*) DEPENDS=$DEPENDS_arm ;;
esac

# Handle cross compilation.
case "$ARCH" in
	arm*)
		BUILD_DEPENDS=$BUILD_DEPENDS_arm
		ARCH_ARGS="--with-libgcrypt-prefix=/cross/$ARCH/sysroot/usr \
		--without-p11-kit --disable-rpath --with-libgcrypt --disable-guile \
		--with-zlib" ;;
esac

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--with-default-trust-store-file="/etc/ssl/ca-bundle.crt" \
		$CONFIGURE_ARGS ${ARCH_ARGS} &&
	make && make install &&
	make -C doc/reference install-data-local
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy bin/
}
