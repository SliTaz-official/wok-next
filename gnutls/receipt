# SliTaz package receipt v2.

PACKAGE="gnutls"
VERSION="3.5.19"
CATEGORY="security"
SHORT_DESC="GNU Transport Layer Security Library"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://gnutls.org/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="https://www.gnupg.org/ftp/gcrypt/gnutls/v${VERSION%.*}/$TARBALL"
TARBALL_SHA1="51b29b7e37467a765378f3c8e546a5c1bb2a5054"

BUILD_DEPENDS="nettle-dev libtasn1-dev libunistring-dev gettext-dev openssl-dev \
libidn2-dev unbound-dev p11-kit-dev zlib-dev"
SPLIT="libgnutls $PACKAGE-dev"

compile_rules() {
	./configure \
		--enable-openssl-compatibility \
		--with-default-trust-store-file="/etc/ssl/ca-bundle.crt" \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install &&
	make -C doc/reference install-data-local
}

genpkg_rules() {
	case $PACKAGE in
		gnutls)
			copy bin/
			DEPENDS="libgnutls libtasn1"
			;;
		libgnutls)
			copy *.so*
			CAT="security|shared libraries"
			DEPENDS="gmp libidn2 libp11-kit libtasn1 libunistring nettle \
			unbound zlib   cacerts"
			;;
		*-dev)
			copy @dev
			DEPENDS="gnutls libgnutls \
			gmp-dev libidn2-dev libtasn1-dev nettle-dev p11-kit-dev \
			unbound-dev zlib-dev"
			;;
	esac
}
