# SliTaz package receipt.

PACKAGE="xcb-proto"
VERSION="1.12"
CATEGORY="development"
SHORT_DESC="X protocol descriptions for XCB"
MAINTAINER="mallory@sweetpeople.org"
LICENSE="other"
WEB_SITE="https://xcb.freedesktop.org/"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="${WEB_SITE}dist/$TARBALL"

DEPENDS="python pkg-config"
BUILD_DEPENDS="python-dev libxml2-tools"

case "$ARCH" in
	arm) BUILD_DEPENDS="" ;;
esac

# Rules to configure and make the package.
compile_rules()
{
	patch -p1 -i $stuff/xcb-proto-1.12-schema-1.patch

	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	cook_copy_files *.py *.pc *.xml
}
