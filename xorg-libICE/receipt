# SliTaz package receipt v2.

PACKAGE="xorg-libICE"
VERSION="1.0.9"
CATEGORY="x-window"
SHORT_DESC="Inter-Client Exchange library"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
HOST_ARCH="i486 arm"

TARBALL="libICE-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-xproto xorg-xtrans"
SPLIT="xorg-libICE-dev"
PKG_RULE="std-dev"

# Rules to configure and make the package.
compile_rules()
{
	touch /root/missing

	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		*-libICE)
			copy @std
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libICE xorg-xproto"
			;;
	esac
}
