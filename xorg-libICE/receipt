# SliTaz package receipt v2.

PACKAGE="xorg-libICE"
VERSION="1.0.9"
CATEGORY="x-window"
SHORT_DESC="Inter-Client Exchange library"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7lib.html"
REPOLOGY="libice"

TARBALL="libICE-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-xorgproto xorg-xtrans"
SPLIT="$PACKAGE-dev"

compile_rules() {
	touch /root/missing /missing

	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libICE)
			copy @std
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libICE xorg-xorgproto"
			;;
	esac
}
