# SliTaz package receipt v2.

PACKAGE="python-typing"
VERSION="latest"
CATEGORY="python"
SHORT_DESC="Type Hints for Python"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="PSF"
WEB_SITE="https://pypi.python.org/pypi/typing"
REPOLOGY="python:typing"

BUILD_DEPENDS="python"

compile_rules() {
	pip install --no-compile --root=$DESTDIR typing
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*typing-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
}
