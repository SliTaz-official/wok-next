# SliTaz package receipt v2.

PACKAGE="pygoocanvas"
VERSION="0.14.1"
CATEGORY="development"
SHORT_DESC="GooCanvas python bindings"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://wiki.gnome.org/Projects/PyGoocanvas"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="goocanvas-dev python-dev python-pygobject2-dev pycairo-dev \
python-pygtk-dev"

compile_rules() {
	./configure \
		--disable-docs \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @dev
	DEPENDS="python python-pygtk goocanvas"
}
