# SliTaz package receipt v2.

PACKAGE="at-spi2-core"
VERSION="2.26.2"
CATEGORY="libdevel"
SHORT_DESC="Service Provider Interface for the Assistive Technologies"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://developer.gnome.org/libatspi/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/at-spi2-core.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="gettext dbus-dev xorg-libX11-dev xorg-libXtst-dev \
gobject-introspection-dev"
SPLIT="at-spi2-core-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		at-spi2-core)
			copy @std
			DEPENDS="dbus glib xorg-libX11 xorg-libXtst"
			;;
		*-dev)
			copy @dev
			DEPENDS="at-spi2-core dbus-dev glib-dev"
			;;
	esac
}
