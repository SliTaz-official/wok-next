# SliTaz package receipt v2.

PACKAGE="at-spi2-core"
VERSION="2.30.0"
CATEGORY="libdevel"
SHORT_DESC="Service Provider Interface for the Assistive Technologies"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://developer.gnome.org/libatspi/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/at-spi2-core.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="meson ninja dbus-dev glib-dev libx11-dev libxtst-dev \
gobject-introspection-dev gettext-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	mkdir build
	cd    build

	meson-wrapper &&
	ninja &&
	ninja install
}

genpkg_rules() {
	case $PACKAGE in
		at-spi2-core)
			copy @std
			DEPENDS="dbus glib libx11 libxtst"
			;;
		*-dev)
			copy @dev
			DEPENDS="at-spi2-core dbus-dev glib-dev"
			;;
	esac
}
