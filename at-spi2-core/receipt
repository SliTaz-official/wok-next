# SliTaz package receipt v2.

PACKAGE="at-spi2-core"
VERSION="2.22.0"
CATEGORY="libdevel"
SHORT_DESC="Service Provider Interface for the Assistive Technologies"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://www.gnome.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/at-spi2-core.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool dbus-dev xorg-libX11-dev xorg-libICE-dev \
xorg-libXtst-dev xorg-libSM-dev gobject-introspection-dev"
SPLIT="at-spi2-core-dev"

compile_rules() {
	fix ld
	./configure \
		--sysconfdir=/etc \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		at-spi2-core)
			copy @std
			DEPENDS="dbus glib xorg-libX11 xorg-libXtst"
			;;
		*-dev)
			copy @dev
			DEPENDS="at-spi2-core dbus-dev glib-dev"
			;;
	esac
}
