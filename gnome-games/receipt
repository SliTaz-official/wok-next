# SliTaz package receipt v2.

PACKAGE="gnome-games"
VERSION="3.29.1"
CATEGORY="games"
SHORT_DESC="Simple game launcher for GNOME"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://wiki.gnome.org/Apps/Games"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool vala glib-dev grilo-dev gtk+3-dev libmanette-dev \
librsvg-dev libsoup-dev libxml2-dev retro-gtk-dev sqlite3-dev tracker-dev"
SPLIT="gnome-games-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		gnome-games)
			copy @std
			DEPENDS="cairo gdk-pixbuf glib grilo gtk+3 libmanette librsvg \
			libsoup libsqlite3 libxml2 retro-gtk tracker"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
