# SliTaz package receipt v2.

PACKAGE="soundtouch"
VERSION="1.5.0"
CATEGORY="multimedia"
SHORT_DESC="An audio processing library"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="http://www.surina.net/soundtouch/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/$TARBALL"

BUILD_DEPENDS="libtool automake autoconf"
SPLIT="soundtouch-dev"

compile_rules() {
	./bootstrap
	sed -i 's|/doc/|/share&|' Makefile*
	patch -Np1 -i $stuff/$PACKAGE-1.4.0-mmx-sse-compile-fix.patch

	./configure \
		--enable-shared \
		$CONFIGURE_ARGS &&
	make &&
	make install || return 1

	# Upstream changed pkgconfig filename
	ln -sf soundtouch-1.4.pc $install/usr/lib/pkgconfig/soundtouch-1.0.pc
}

genpkg_rules() {
	case $PACKAGE in
		soundtouch) copy @std;;
		*-dev)      copy @dev;;
	esac
}
