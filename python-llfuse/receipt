# SliTaz package receipt.

PACKAGE="python-llfuse"
SOURCE="llfuse"
VERSION="1.3.2"
CATEGORY="development"
SHORT_DESC="Python bindings for the low level FUSE API"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="LGPL2"
WEB_SITE="https://github.com/python-llfuse/python-llfuse"

TARBALL="llfuse-$VERSION.tar.bz2"
WGET_URL="https://bitbucket.org/nikratio/python-llfuse/downloads/$TARBALL"

BUILD_DEPENDS="python-dev setuptools fuse2-dev attr-dev"

compile_rules() {
	python setup.py build &&
	python setup.py install --root=$DESTDIR
}

genpkg_rules() {
	copy @std
	DEPENDS="fuse2 python"
}
