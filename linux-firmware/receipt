# SliTaz package receipt.

PACKAGE="linux-firmware"
VERSION="4.9.0"
CATEGORY="non-free"
SHORT_DESC="Firmware thats compiled from Linux source code"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://www.kernel.org/"
PROVIDE="linux64-firmware"

WANTED="linux"
DEPENDS="linux"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/lib
	cp -a $install/lib/firmware $fs/lib

	# remove linux-sound firmware files
	cook linux-sound >/dev/null 2>&1
	cook_split_rm linux-sound
}
