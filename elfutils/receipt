# SliTaz package receipt v2.

PACKAGE="elfutils"
VERSION="0.169"
CATEGORY="development"
SHORT_DESC="ELF object file access library"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://sourceware.org/elfutils/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://sourceware.org/elfutils/ftp/$VERSION/$TARBALL"
TARBALL_MD5="1ce77c5315d6bba7d883c3c4f0c2697e"

BUILD_DEPENDS="gettext-tools zlib-dev bzip2-dev xz-dev"
BUILD_DEPENDS_arm="bzip2-dev xz-dev"
SPLIT="elfutils-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules() {
	case $PACKAGE in
		elfutils) copy @std;;
		*-dev)    copy @dev;;
	esac
}
