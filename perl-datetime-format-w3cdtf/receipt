PACKAGE="perl-datetime-format-w3cdtf"
VERSION="0.07"
CATEGORY="perl"
SHORT_DESC="DateTime::Format::W3CDTF - Parse and format W3CDTF datetime strings"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/DateTime-Format-W3CDTF"
REPOLOGY="perl:datetime-format-w3cdtf"

TARBALL="DateTime-Format-W3CDTF-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/G/GW/GWILLIAMS/$TARBALL"

BUILD_DEPENDS="perl-datetime"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-datetime"
}
