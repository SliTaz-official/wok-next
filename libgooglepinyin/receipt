# SliTaz package receipt v2.

PACKAGE="libgooglepinyin"
VERSION="0.1.1"
CATEGORY="development"
SHORT_DESC="A fork from google pinyin on android"
MAINTAINER="lufeng369@slitaz.org"
LICENSE="Apache"
WEB_SITE="https://code.google.com/archive/p/libgooglepinyin/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://libgooglepinyin.googlecode.com/files/$TARBALL" # FIXME

BUILD_DEPENDS="cmake"
SPLIT="libgooglepinyin-dev"

compile_rules() {
	mkdir build
	cd build
	cmake \
		-DCMAKE_INSTALL_PREFIX=/usr \
		.. &&
	make &&
	make install/fast DESTDIR=$DESTDIR
}

genpkg_rules() {
	case $PACKAGE in
		libgooglepinyin) copy @std;;
		*-dev) copy @dev;;
	esac
}
