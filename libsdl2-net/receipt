# SliTaz package receipt v2.

PACKAGE="libsdl2-net"
VERSION="2.0.1"
CATEGORY="network"
SHORT_DESC="SDL2 net support"
MAINTAINER="tcg.thegamer@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="http://www.libsdl.org/projects/SDL_net/"

TARBALL="SDL2_net-$VERSION.tar.gz"
WGET_URL="http://www.libsdl.org/projects/SDL_net/release/$TARBALL"

BUILD_DEPENDS="libsdl2-dev"
SPLIT="libsdl2-net-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libsdl2-net)
			copy @std
			DEPENDS="libsdl2 tslib"
			;;
		*-dev)
			copy @dev
			DEPENDS="libsdl2-net libsdl2-dev tslib-dev"
			;;
	esac
}
