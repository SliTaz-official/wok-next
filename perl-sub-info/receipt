# SliTaz package receipt.

PACKAGE="perl-sub-info"
VERSION="0.002"
CATEGORY="perl"
SHORT_DESC="Sub::Info - Tool for inspecting subroutines"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Sub-Info"
REPOLOGY="perl:sub-info"

TARBALL="Sub-Info-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/E/EX/EXODIST/$TARBALL"

BUILD_DEPENDS="perl-importer"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-importer"
}
