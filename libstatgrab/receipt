# SliTaz package receipt v2.

PACKAGE="libstatgrab"
VERSION="0.17"
CATEGORY="system-tools"
SHORT_DESC="Provides statistics about the system on which it's run"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.i-scream.org/libstatgrab/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://ftp.uk.i-scream.org/pub/i-scream/libstatgrab/$TARBALL"

BUILD_DEPENDS="gfortran"
SPLIT="libstatgrab-dev"

compile_rules() {
	./configure &&
	make && make -j 1 install
}

genpkg_rules() {
	case $PACKAGE in
		libstatgrab)
			copy @std
			DEPENDS="ncurses"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
