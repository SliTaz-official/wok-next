# SliTaz package receipt v2.

PACKAGE="libgudev"
VERSION="231"
CATEGORY="libdevel"
SHORT_DESC="GObject bindings for libudev"
MAINTAINER="gokhlayeh@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://wiki.gnome.org/Projects/libgudev"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/libgudev.html"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/$VERSION/$TARBALL"

BUILD_DEPENDS="gtk-doc gobject-introspection-dev eudev-dev glib-dev"
SPLIT="libgudev-dev"

compile_rules() {
	fix ld
	./configure \
		--disable-umockdev \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		libgudev)
			copy @std
			DEPENDS="eudev glib"
			;;
		*-dev)
			copy @dev
			DEPENDS="libgudev eudev-dev glib-dev libffi-dev pcre-dev \
			util-linux-blkid-dev util-linux-mount-dev util-linux-uuid-dev \
			zlib-dev"
			;;
	esac
}
