# SliTaz package receipt v2.

PACKAGE="xorg-x11perf"
VERSION="1.6.0"
CATEGORY="x-window"
SHORT_DESC="Utility who runs one or more performance tests and reports"
MAINTAINER="paul@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7app.html"
REPOLOGY="x11perf"

TARBALL="x11perf-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libX11-dev xorg-libXmu-dev xorg-xorgproto \
xorg-libXrender-dev xorg-libXft-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-libX11 xorg-libXext xorg-libXft xorg-libXmu xorg-libXrender"
}
