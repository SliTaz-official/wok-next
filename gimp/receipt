# SliTaz package receipt v2.

PACKAGE="gimp"
VERSION="2.8.14"
CATEGORY="graphics"
SHORT_DESC="Gnu Image Manipulation Program or GIMP!"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="http://www.gimp.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://download.gimp.org/pub/gimp/v${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="gettext perl-xml-parser babl-dev gegl-dev glib-dev \
intltool expat-dev zlib-dev libart_lgpl-dev lcms-dev xorg-dev-proto \
gdk-pixbuf-dev gtk+-dev libexif-dev aalib-dev libmng-dev jasper-dev"
SPLIT="gimp-brushes gimp-console gimp-dev gimp-plug-ins gimp"

compile_rules() {
	export LDFLAGS="$LDFLAGS -Wl,--copy-dt-needed-entries -lm"

	./configure \
		--with-html-dir=/usr/share/doc \
		--without-print \
		--disable-python \
		--without-poppler \
		--without-libcurl \
		--without-alsa \
		--without-librsvg \
		--without-dbus \
		--without-webkit \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make $MAKEFLAGS &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		gimp-brushes)
			copy gimp/2.0/brushes/
			rm -r $fs/usr/share/gimp/2.0/brushes/Basic/ # -> main package
			CAT="graphics|brushes set"
			DEPENDS="gimp"
			;;
		gimp-console)
			copy bin/gimp-console*
			CAT="graphics|console"
			DEPENDS="babl pango cairo gimp glib xorg-libX11 xorg-libXau"
			;;
		gimp-dev)
			copy @dev
			;;
		gimp-plug-ins)
			copy gimp/2.0/plug-ins/
			find $fs \( -name file-jpeg -o -name file-png -o -name pixelize \
				-o -name screenshot \) -delete # -> main package
			CAT="graphics|plug-ins suite for advanced users"
			DEPENDS="gimp lcms xorg-libXpm libmng aalib libexif tiff"
			;;
		gimp)
			copy @std @rm # all the rest
			DEPENDS="libart_lgpl babl gegl glib tiff xorg-libXdamage \
			xorg-libXmu xorg-libXt gdk-pixbuf gtk+ libexif"
			SUGGESTED="gimp-plug-ins gimp-brushes gimp-console \
			gimp-plugin-ufraw"
			;;
	esac
}
