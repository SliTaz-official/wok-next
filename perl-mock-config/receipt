# SliTaz package receipt v2.

PACKAGE="perl-mock-config"
VERSION="0.03"
CATEGORY="perl"
SHORT_DESC="Mock::Config - temporarily set Config or XSConfig values"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Mock-Config"
REPOLOGY="perl:mock-config"

TARBALL="Mock-Config-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/R/RU/RURBAN/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
