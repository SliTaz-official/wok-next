# SliTaz package receipt.

PACKAGE="perl-mock-config"
VERSION="0.03"
CATEGORY="perl"
SHORT_DESC="Mock::Config - temporarily set Config or XSConfig values"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Mock-Config"

TARBALL="Mock-Config-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/R/RU/RURBAN/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
