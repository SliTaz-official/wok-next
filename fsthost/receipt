# SliTaz package receipt v2.

PACKAGE="fsthost"
VERSION="1.4.0"
CATEGORY="multimedia"
SHORT_DESC="FSTHost is VST host for Jack with GTK interface"
MAINTAINER="xj@wp.pl"
LICENSE="GPL2"
WEB_SITE="http://fsthost.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="gtk2-dev libxml2-dev wine-rt-dev jack-dev"

compile_rules() {
	make LIB_INST_PATH=/usr/lib DESTDIR=$install install
}

genpkg_rules() {
	cp -a $install/* $fs
	DEPENDS="wine gtk2 libxml2 jack"
}
