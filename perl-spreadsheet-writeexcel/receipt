# SliTaz package receipt v2.

PACKAGE="perl-spreadsheet-writeexcel"
VERSION="2.40"
CATEGORY="perl"
SHORT_DESC="Spreadsheet::WriteExcel - Write to a cross-platform Excel binary \
file"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Spreadsheet-WriteExcel"
REPOLOGY="perl:spreadsheet-writeexcel"

TARBALL="Spreadsheet-WriteExcel-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/J/JM/JMCNAMARA/$TARBALL"

BUILD_DEPENDS="perl-ole-storage_lite perl-parse-recdescent"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-ole-storage_lite perl-parse-recdescent"
}
