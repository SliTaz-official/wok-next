# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-savage"
VERSION="2.3.9"
CATEGORY="x-window"
SHORT_DESC="Xorg driver for the S3 Savage family video accelerator chips"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/savage/"

TARBALL="xf86-video-savage-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev"
SPLIT="xorg-xf86-video-savage-dev"
PKG_RULE="std-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-savage)
			copy @std
			DEPENDS="xorg-server"
			TAGS="xorg display"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xf86-video-savage xorg-server-dev"
			;;
	esac
}
