# SliTaz package receipt v2.

PACKAGE="xorg-xf86-input-elographics"
VERSION="1.4.1"
CATEGORY="x-window"
SHORT_DESC="Xorg input driver for Elographics touchscreen devices"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="xdrv:elographics"

TARBALL="xf86-input-elographics-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev xorg-xorgproto"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-server"
}
