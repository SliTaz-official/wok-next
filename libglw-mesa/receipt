# SliTaz package receipt v2.

PACKAGE="libglw-mesa"
VERSION="8.0.0"
CATEGORY="x-window"
SHORT_DESC="OpenGL widget library"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://www.mesa3d.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="git|git://anongit.freedesktop.org/mesa/glw.git"

DEPENDS="glibc-base util-linux-uuid zlib freetype lesstif mesa \
xorg-libICE xorg-libSM xorg-libX11 xorg-libXau xorg-libXdmcp xorg-libXt"
SPLIT="libglw-mesa-dev"

compile_rules() {
	./autogen.sh
	./configure \
		--prefix=/usr \
		$CONFIGURE_ARGS &&
	make $MAKEFLAGS && make install
}

genpkg_rules() {
	case $PACKAGE in
		libglw-mesa)
			mkdir -p $fs/usr/lib
			cp -a $install/usr/lib/libGLw*so* $fs/usr/lib
			BUILD_DEPENDS="mesa-dev automake autoconf libtool \
			util-linux-uuid-dev expat-dev xorg-dev intltool gettext \
			xorg-libxshmfence-dev"
			PROVIDE="libglw"
			;;
		*-dev)
			mkdir -p $fs/usr/lib
			cp -a $install/usr/lib/libGLw*a $fs/usr/lib
			cp -a $install/usr/lib/pkgconfig $fs/usr/lib
			cp -a $install/usr/include $fs/usr
			;;
	esac
}
