# SliTaz package receipt v2.

PACKAGE="xorg-xf86-input-void"
VERSION="1.4.1"
CATEGORY="x-window"
SHORT_DESC="Dummy/null Xorg input driver"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xf86-input-void-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-server-dev"
SPLIT="xorg-xf86-input-void-dev"
PKG_RULE="std-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-void)
			copy @std
			DEPENDS="xorg-server"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xf86-input-void xorg-server-dev"
			;;
	esac
}
