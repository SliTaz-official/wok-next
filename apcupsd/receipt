# SliTaz package receipt v2.

PACKAGE="apcupsd"
VERSION="3.14.14"
CATEGORY="system-tools"
SHORT_DESC="APC UPS Power Management (daemon)"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.apcupsd.com/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="libgd-dev"

compile_rules() {
	sed -i 's/src platforms doc/src platforms/' Makefile

	SHUTDOWN=/sbin/poweroff \
	ac_cv_func_setpgrp_void=yes \
	./configure \
		--enable-usb \
		--disable-snmp \
		--disable-net \
		--with-upstype=usb \
		--with-dev= \
		--enable-threads \
		--enable-cgi \
		--prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make install || return 1

	cook_pick_manpages $src/doc/*.5 $src/doc/*.8
}

genpkg_rules() {
	copy @std
	DEPENDS="libgd"
}
