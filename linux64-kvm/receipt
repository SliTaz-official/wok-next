# SliTaz package receipt.

PACKAGE="linux64-kvm"
VERSION="4.9.0"
CATEGORY="base-system"
SHORT_DESC="The Linux Kernel KVM and Virtio modules"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.kernel.org/"
PROVIDE="linux-kvm:linux64"

WANTED="linux"
DEPENDS="linux64"

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	. $wanted_stuff/copy_modules.sh
	copy_modules \
		arch/x86/kvm drivers/virtio \
		drivers/char/hw_random/virtio-rng.ko.xz \
		drivers/net/virtio_net.ko.xz \
		drivers/block/virtio_blk.ko.xz
}
