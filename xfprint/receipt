# SliTaz package receipt v2.

PACKAGE="xfprint"
VERSION="4.6.1"
CATEGORY="x-window"
SHORT_DESC="Xfce Printer manager"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.xfce.org"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://archive.xfce.org/xfce/$VERSION/src/$TARBALL"

BUILD_DEPENDS="libxfcegui4-dev libxfce4util-dev cups-dev intltool xfconf-dev \
dbus-glib-dev startup-notification-dev util-linux-uuid-dev gtk+-dev \
xorg-xcb-util-dev"
SPLIT="xfprint-dev"

compile_rules() {
	export LDFLAGS="$LDFLAGS -lX11"
	patch -p1 < $stuff/xfprint-4.6.1-cups-1.6.patch

	./configure \
		--prefix=/usr \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		xfprint)
			copy @std
			# Remove SVG icons
			rm -rf $fs/usr/share/icons/hicolor/scalable
			DEPENDS="gdk-pixbuf glib gtk+ libcups libxfce4util libxfcegui4 \
			xfconf xorg-libX11"
			;;
		*-dev)
			copy @dev
			DEPENDS="xfprint \
			glib-dev libxfce4util-dev"
			;;
	esac
	TAGS="Xfce"
}
