# SliTaz package receipt v2.

PACKAGE="lcms2"
VERSION="2.8"
CATEGORY="graphics"
SHORT_DESC="Open source color management engine"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="http://www.littlecms.com/"
HOST_ARCH="i486 x86_64"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/lcms/$TARBALL"

BUILD_DEPENDS="libjpeg-turbo-dev zlib-dev tiff-dev"
SPLIT="lcms2-apps lcms2-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules() {
	case $PACKAGE in
		lcms2)
			copy *.so*
			;;
		lcms2-apps)
			copy bin/
			CAT="graphics|applications"
			DEPENDS="lcms2 libjpeg-turbo tiff zlib"
			;;
		*-dev) copy @dev;;
	esac
}
