# SliTaz package receipt v2.

PACKAGE="python-gdata"
VERSION="latest"
CATEGORY="python"
SHORT_DESC="Python client library for Google data APIs"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="Apache"
WEB_SITE="https://pypi.org/project/gdata/"
REPOLOGY="python:gdata"

BUILD_DEPENDS="python"

compile_rules() {
	pip install --no-compile --root=$DESTDIR gdata
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*gdata-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
}
