# SliTaz package receipt.

PACKAGE="perl-unicode-map8"
VERSION="0.13"
CATEGORY="perl"
SHORT_DESC="Unicode::Map8 - Mapping table between 8-bit chars and Unicode"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Unicode-Map8"
REPOLOGY="perl:unicode-map8"

TARBALL="Unicode-Map8-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/G/GA/GAAS/$TARBALL"

BUILD_DEPENDS="perl-unicode-string perl-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-unicode-string"
}
