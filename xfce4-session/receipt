# SliTaz package receipt v2.

PACKAGE="xfce4-session"
VERSION="4.12.0" # Xfce release 4.12: http://archive.xfce.org/xfce/4.12/src/
CATEGORY="x-window"
SHORT_DESC="Xfce session manager"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.xfce.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://archive.xfce.org/src/xfce/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool xorg-libX11-dev libxfce4util-dev libxfce4ui-dev \
libwnck2-dev polkit-dev upower-dev xorg-iceauth xorg-libSM-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	touch libtoolT

	./configure \
		--disable-debug \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install || return 1

	# xfce4-session-logout workarround
	install -Dm755 $stuff/shutdown $install/sbin/shutdown
}

genpkg_rules() {
	case $PACKAGE in
		xfce4-session)
			copy @std
			DEPENDS="atk cairo dbus dbus-glib gdk-pixbuf glib gtk2 libwnck2 \
			libxfce4ui libxfce4util pango polkit xfconf xorg-libICE xorg-libSM \
			xorg-libX11   xorg-iceauth"
			;;
		*-dev)
			copy @dev
			DEPENDS="xfce4-session \
			libxfce4ui-dev xfconf-dev"
			;;
	esac
	TAGS="Xfce"
}
