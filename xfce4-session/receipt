# SliTaz package receipt v2.

PACKAGE="xfce4-session"
VERSION="4.12.0" # Xfce release 4.12: http://archive.xfce.org/xfce/4.12/src/
CATEGORY="x-window"
SHORT_DESC="Xfce session manager"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.xfce.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://archive.xfce.org/src/xfce/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool xorg-libX11-dev libxfce4util-dev libxfce4ui-dev \
libwnck2-dev polkit-dev upower-dev xorg-iceauth"
SPLIT="xfce4-session-dev"

compile_rules() {
	touch libtoolT

	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-debug \
		$CONFIGURE_ARGS &&
	make &&
	make install || return 1

	# xfce4-session-logout workarround
	mkdir -p $install/sbin
	cp $stuff/shutdown $install/sbin
}

genpkg_rules() {
	case $PACKAGE in
		xfce4-session)
			copy @std
			DEPENDS="atk cairo dbus dbus-glib fontconfig freetype gdk-pixbuf \
			glib gtk+ libwnck2 libxfce4ui libxfce4util pango polkit xfconf \
			xorg-libICE xorg-libSM xorg-libX11   xorg-iceauth"
			;;
		*-dev)
			copy @dev
			DEPENDS="xfce4-session atk-dev bzip2-dev cairo-dev dbus-dev \
			dbus-glib-dev fontconfig-dev freetype-dev gdk-pixbuf-dev glib-dev \
			gtk+-dev harfbuzz-dev libffi-dev libpng16-dev libxfce4ui-dev \
			libxfce4util-dev libxml2-dev pango-dev pcre-dev \
			startup-notification-dev util-linux-blkid-dev util-linux-mount-dev \
			util-linux-uuid-dev xfconf-dev xorg-libICE-dev xorg-libSM-dev \
			xorg-libX11-dev xorg-libXau-dev xorg-libXdmcp-dev xorg-libXext-dev \
			xorg-libXrender-dev xorg-libxcb-dev xorg-pixman-dev \
			xorg-xcb-util-dev xz-dev zlib-dev"
			;;
	esac
}
