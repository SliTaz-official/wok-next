# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-sisusb"
VERSION="0.9.7"
CATEGORY="x-window"
SHORT_DESC="Xorg driver for SiS (Silicon Integrated Systems) video chips that \
are connected via a Net2280-based USB dongle"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xf86-video-sisusb-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev"
SPLIT="xorg-xf86-video-sisusb-dev"
PKG_RULE="std-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-sisusb)
			copy @std
			DEPENDS="xorg-server"
			TAGS="xorg display"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xf86-video-sisusb xorg-server-dev"
			;;
	esac
}
