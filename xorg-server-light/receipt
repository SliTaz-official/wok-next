# SliTaz package receipt v2.

PACKAGE="xorg-server-light"
VERSION="1.19.3"
CATEGORY="x-window"
SHORT_DESC="Xorg core server light version (no dri, gl, and friends)"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
HOST_ARCH="i486 arm"

TARBALL="xorg-server-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/xserver/$TARBALL"

BUILD_DEPENDS_arm="xorg-libxkbfile-dev xorg-libpciaccess-dev xorg-pixman-dev \
xorg-util-macros xorg-libXfont-dev libgcrypt-dev xorg-resourceproto \
xorg-bigreqsproto xorg-xcmiscproto xorg-renderproto xorg-damageproto \
xorg-compositeproto xorg-xf86dgaproto  xorg-randrproto xorg-recordproto \
xorg-videoproto xorg-xtrans libgpg-error-dev freetype-dev \
xorg-libxcb-dev xorg-libXcomposite-dev xorg-libXxf86vm-dev xorg-libXv-dev \
bzip2-dev udev-dev"
BUILD_DEPENDS="xorg-util-macros xorg-pixman-dev udev-dev libgcrypt-dev \
xorg-fixesproto xorg-damageproto xorg-xcmiscproto xorg-xtrans \
xorg-bigreqsproto xorg-xproto xorg-randrproto xorg-renderproto xorg-xextproto \
xorg-inputproto xorg-kbproto xorg-fontsproto xorg-videoproto \
xorg-compositeproto xorg-recordproto xorg-resourceproto xorg-presentproto \
xorg-libxkbfile-dev xorg-libXfont2-dev xorg-libXau-dev xorg-libpciaccess-dev"

# Rules to configure and make the package.
compile_rules()
{
	# Handle cross compilation. ARM use build host: perl flex
	case "$ARCH" in
		arm)
			#--disable-static
			ARCH_ARGS="--enable-malloc0returnsnull"
			OS_NAME="SliTaz ARM"
			VENDOR="http://arm.slitaz.org" ;;
		i?86)
			OS_NAME="SliTaz GNU/Linux"
			VENDOR="http://www.slitaz.org" ;;
	esac

	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-docs \
		--disable-devel-docs \
		--disable-screensaver \
		--disable-glx \
		--disable-dri \
		--disable-dri2 \
		--disable-dri3 \
		--disable-xinerama \
		--disable-config-udev \
		--disable-libdrm \
		--disable-systemd-logind \
		--enable-xorg \
		--disable-xvfb \
		--disable-xnest \
		--disable-glamor \
		--disable-xephyr \
		--disable-xfake \
		--disable-xfbdev \
		--enable-install-setuid \
		--disable-ipv6 \
		--with-vendor-web="$VENDOR" \
		--with-builder-addr="$MAINTAINER" \
		--with-os-name="$OS_NAME" \
		--with-fontrootdir=/usr/share/fonts/X11 \
		--with-xkb-output=/var/lib/xkb \
		--with-serverconfig-path=/etc/X11 \
		$CONFIGURE_ARGS $ARCH_ARGS &&
	make && make install
}

# Be sure it as cross compile
testsuite() {
	readelf -h $install/usr/bin/Xorg
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
#	DEPENDS="xorg-xkeyboard-config xorg-libpciaccess xorg-libXxf86vm \
#	xorg-libXfont xorg-libXau xorg-base-fonts libgcrypt xorg-pixman \
#	xorg-xf86-input-evdev libgpg-error libgcrypt freetype xorg-libxcb \
#	xorg-libXcomposite xorg-libXv bzip2 udev"
	DEPENDS="bzlib freetype glib libgcrypt libgpg-error libharfbuzz libpng16 \
	pcre xorg-libXau xorg-libXdmcp xorg-libXfont2 xorg-libfontenc \
	xorg-libpciaccess xorg-pixman zlib"
	SUGGESTED="xorg-xf86-video-vesa xorg-xf86-video-fbdev"
	PROVIDE="xorg-server"
}

# We need /var/tmp rw to let xkbcomp build XKB definition.
post_install() {
	chmod 1777 "$1/var/tmp"
}
