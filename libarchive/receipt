# SliTaz package receipt v2.

PACKAGE="libarchive"
VERSION="3.3.3"
CATEGORY="system-tools"
SHORT_DESC="C library and command line tool for reading archive"
MAINTAINER="devel@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://www.libarchive.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/general/libarchive.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="${WEB_SITE}downloads/$TARBALL"

BUILD_DEPENDS="e2fsprogs-dev zlib-dev bzip2-dev gettext-dev lz4-dev zstd-dev \
xz-dev lzo-dev libxml2-dev expat-dev attr-dev acl-dev nettle-dev openssl-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make -j1 DESTDIR=$install install
}

genpkg_rules() {
	case $PACKAGE in
		libarchive)
			copy @std
			DEPENDS="acl libbzip2 liblzma libxml2 lz4-lib nettle zlib libzstd"
			;;
		*-dev)
			copy @dev
			DEPENDS="libarchive acl-dev bzip2-dev libxml2-dev lz4-dev \
			nettle-dev xz-dev zlib-dev zstd-dev"
			;;
	esac
}
