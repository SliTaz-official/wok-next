# SliTaz package receipt v2.

PACKAGE="xorg-font-screen-cyrillic"
VERSION="1.0.4"
CATEGORY="x-window"
SHORT_DESC="Misc Screen Cyrillic bitmap font: Fixed"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="other"
WEB_SITE="https://www.x.org/wiki/"
HOST_ARCH="any"
REPOLOGY="fonts:screen-cyrillic"

TARBALL="font-screen-cyrillic-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/font/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-font-util-dev xorg-mkfontdir xorg-bdftopcf"
COOKOPTS="!gz" # too long

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	TAGS="font"
}

post_install() {
	chroot "$1/" fc-cache -r /usr/share/fonts/X11/cyrillic
}
post_remove() {
	chroot "$1/" fc-cache -r
}
