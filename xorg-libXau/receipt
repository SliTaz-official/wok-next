# SliTaz package receipt v2.

PACKAGE="xorg-libXau"
VERSION="1.0.8"
CATEGORY="x-window"
SHORT_DESC="X Authorization routines"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/libXau.html"

TARBALL="libXau-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-xproto"
SPLIT="xorg-libXau-dev"

compile_rules() {
	fix ld
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXau)
			copy @std
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXau xorg-xproto"
			;;
	esac
}
