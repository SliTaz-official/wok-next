# SliTaz package receipt v2.

PACKAGE="xorg-xf86-video-sis"
VERSION="0.10.9"
CATEGORY="x-window"
SHORT_DESC="Xorg driver for SiS (Silicon Integrated Systems) and XGI video \
chips"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/sis/"

TARBALL="xf86-video-sis-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/driver/$TARBALL"

BUILD_DEPENDS="xorg-server-dev xorg-xf86dgaproto"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="xorg-server"
	TAGS="xorg display"
}
