# SliTaz package receipt.

PACKAGE="perl-params-validate"
VERSION="1.26"
CATEGORY="perl"
SHORT_DESC="Params::Validate - Validate method/function parameters"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Params-Validate"

TARBALL="Params-Validate-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DR/DROLSKY/$TARBALL"

DEPENDS="perl-module-implementation"
BUILD_DEPENDS="$DEPENDS perl-dev perl-module-build perl-test-fatal \
perl-test-requires"

# Rules to configure and make the package.
compile_rules()
{
	perl Build.PL &&
	./Build --destdir $install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
