# SliTaz package receipt v2.

PACKAGE="nano"
VERSION="2.6.3"
CATEGORY="utilities"
SHORT_DESC="Nano Text Editor"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://nano-editor.org/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="${WEB_SITE}dist/v${VERSION%.*}/$TARBALL"

BUILD_DEPENDS_arm="ncurses-dev zlib-dev"
BUILD_DEPENDS="gettext ncurses-dev zlib-dev groff libmagic-dev"

compile_rules() {
	./configure \
		--disable-wrapping-as-root \
		--enable-utf8 \
		$CONFIGURE_ARGS &&
	make && make install || exit 1

	# Config file.
	install -Dm644 $src/doc/nanorc.sample $install/etc/nanorc

	cook_pick_docs doc/texinfo/nano.html
}

genpkg_rules() {
	copy etc/ bin/ nano/

	# Shrink
	for i in $fs/usr/share/nano/*.nanorc; do
		sed -i '/^#/d;/^$/d' $i
	done
	DEPENDS="libmagic ncurses zlib"
	TAGS="text-editor"
	SUGGESTED="gpm"
}
