# SliTaz package receipt v2.

PACKAGE="nano"
VERSION="2.9.8"
CATEGORY="utilities"
SHORT_DESC="Nano Text Editor"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://nano-editor.org/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="${WEB_SITE}dist/v${VERSION%.*}/$TARBALL"

BUILD_DEPENDS_arm="ncurses-dev zlib-dev"
BUILD_DEPENDS="gettext ncurses-dev zlib-dev groff libmagic-dev"

SPLIT="nano-noarch"
COOKOPTS="!menus"

compile_rules() {
	./configure \
		--disable-wrapping-as-root \
		--enable-utf8 \
		$CONFIGURE_ARGS &&
	make &&
	make install || exit 1

	# Config file
	install -Dm644 $src/doc/sample.nanorc $install/etc/nanorc
}

genpkg_rules() {
	case $PACKAGE in
		nano)
			copy bin/
			DEPENDS="libmagic ncurses zlib"
			TAGS="text-editor"
			SUGGESTED="gpm"
			;;
		nano-noarch)
			copy @std @rm
			CAT="utilities|common files"

			# Shrink
			for i in $fs/usr/share/nano/*.nanorc; do
				sed -i '/^#/d;/^$/d' $i
			done
			;;
	esac
}
