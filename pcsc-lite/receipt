# SliTaz package receipt v2.

PACKAGE="pcsc-lite"
VERSION="1.8.6"
CATEGORY="base-system"
SHORT_DESC="SCard interface for communicating to smart cards and readers"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://pcsclite.alioth.debian.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="https://alioth.debian.org/frs/download.php/3741/$TARBALL"

BUILD_DEPENDS="eudev-dev perl libtool"
SPLIT="pcsc-lite-dev"

compile_rules() {
	./configure \
		--enable-libudev \
		--enable-ipcdir=/run/pcscd \
		--enable-usbdropdir=/usr/lib/pcsc/drivers \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install || return 1

	install -Dm755 $stuff/init.d/pcscd $install/etc/init.d/pcscd
}

genpkg_rules() {
	case $PACKAGE in
		pcsc-lite)
			copy @std
			DEPENDS="eudev"
			SUGGESTED="ccid"
			;;
		*-dev)
			copy @dev
			;;
	esac
}

# Daemon options in: daemons.conf
post_install_pcsc_lite() {
	if ! grep -q 'PCSCD_OPTIONS' "$1/etc/daemons.conf"; then
		cat >> "$1/etc/daemons.conf" <<EOT
# PC/SC smart card daemon options.
PCSCD_OPTIONS=""

EOT
	fi
}
