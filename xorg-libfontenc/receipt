# SliTaz package receipt v2.

PACKAGE="xorg-libfontenc"
VERSION="1.1.3"
CATEGORY="x-window"
SHORT_DESC="Font encoding library"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7lib.html"
REPOLOGY="libfontenc"

TARBALL="libfontenc-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="zlib-dev xorg-xproto xorg-font-util-dev"
SPLIT="xorg-libfontenc-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libfontenc)
			copy @std
			DEPENDS="zlib"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
