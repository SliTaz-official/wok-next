# SliTaz package receipt v2.

PACKAGE="pygtksourceview"
VERSION="2.10.1"
CATEGORY="misc"
SHORT_DESC="Python bindings for GtkSourceView"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL2"
WEB_SITE="http://projects.gnome.org/gtksourceview/pygtksourceview.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://ftp.gnome.org/pub/gnome/sources/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="python-dev python-pygtk-dev gtksourceview-dev python-pygobject2-dev libxml2-dev"
SPLIT="pygtksourceview-dev"

compile_rules() {
	CFLAGS="$CFLAGS $(pkg-config --cflags pygtk-2.0 gtksourceview-2.0)"
	./configure \
		--disable-docs \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		pygtksourceview)
			copy @std
			DEPENDS="gdk-pixbuf glib gtk+ gtksourceview   python python-pygtk python-pygobject2"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
