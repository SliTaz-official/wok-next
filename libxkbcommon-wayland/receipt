# SliTaz package receipt v2.

PACKAGE="libxkbcommon-wayland"
VERSION="0.7.2"
CATEGORY="x-window"
SHORT_DESC="Keyboard handling library using XKB data (Wayland)"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="custom"
WEB_SITE="https://xkbcommon.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/libxkbcommon.html"

TARBALL="libxkbcommon-$VERSION.tar.xz"
WGET_URL="http://xkbcommon.org/download/$TARBALL"

BUILD_DEPENDS="xorg-xkeyboard-config-dev wayland-protocols-dev wayland-dev"
SPLIT="libxkbcommon-wayland-dev"
SIBLINGS="libxkbcommon"

compile_rules() {
	./configure \
		--with-xkb-config-root=/usr/share/X11/xkb \
		--enable-wayland \
		--disable-x11 \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libxkbcommon-wayland)
			copy @std
			;;
		*-dev)
			copy @dev
			;;
	esac
}
