# SliTaz package receipt v2.

PACKAGE="glade3"
VERSION="3.8.6"
CATEGORY="development"
SHORT_DESC="A user interface designer for GTK+2"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2 LGPL2"
WEB_SITE="https://glade.gnome.org/"
REPOLOGY="glade"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="intltool gtk-doc gtk+-dev python-pygtk-dev python-dev itstool"
SPLIT="glade3-python glade3 glade3-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-python)
			copy libgladepython.so
			DEPENDS="glade3 glib python"
			CAT="python|Python bindings"
			;;
		glade3)
			copy @std @rm
			DEPENDS="cairo gdk-pixbuf glib gtk+ libxml2 pango"
			;;
		*-dev)
			copy @dev
			DEPENDS="glade3 glade3-python \
			gtk+-dev libxml2-dev"
			;;
	esac
}
