# SliTaz package receipt v2.

PACKAGE="xorg-xdpyinfo"
VERSION="1.3.2"
CATEGORY="x-window"
SHORT_DESC="Display information utility for X"
MAINTAINER="jozee@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xdpyinfo-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-libXext-dev xorg-libX11-dev \
xorg-libXtst-dev xorg-libxcb-dev xorg-xproto xorg-libXxf86vm-dev \
xorg-libXxf86dga-dev xorg-libXrender-dev xorg-libXcomposite-dev \
xorg-libXinerama-dev xorg-libdmx-dev xorg-libXxf86misc-dev"
PKG_RULE="std"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
	DEPENDS="xorg-libX11 xorg-libXcomposite xorg-libXext xorg-libXi \
	xorg-libXinerama xorg-libXrender xorg-libXtst xorg-libXxf86dga \
	xorg-libXxf86misc xorg-libXxf86vm xorg-libdmx xorg-libxcb"
	TAGS="utility xorg display"
}
