# SliTaz package receipt.

PACKAGE="perl-json"
VERSION="2.97001"
CATEGORY="perl"
SHORT_DESC="JSON - JSON (JavaScript Object Notation) encoder/decoder"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/JSON"
REPOLOGY="perl:json"

TARBALL="JSON-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/I/IS/ISHIGAKI/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
