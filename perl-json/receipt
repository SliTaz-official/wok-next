# SliTaz package receipt.

PACKAGE="perl-json"
VERSION="2.97001"
CATEGORY="perl"
SHORT_DESC="JSON - JSON (JavaScript Object Notation) encoder/decoder"
MAINTAINER="nneul@neulinger.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/JSON"

TARBALL="JSON-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/I/IS/ISHIGAKI/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
