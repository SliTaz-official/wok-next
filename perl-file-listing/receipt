# SliTaz package receipt v2.

PACKAGE="perl-file-listing"
VERSION="6.04"
CATEGORY="perl"
SHORT_DESC="File::Listing - parse directory listing"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/File-Listing"

TARBALL="File-Listing-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/G/GA/GAAS/$TARBALL"

BUILD_DEPENDS="perl-http-date"

compile_rules() {
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="$BUILD_DEPENDS"
}
