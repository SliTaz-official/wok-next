# SliTaz package receipt v2.

PACKAGE="perl-net-http"
VERSION="6.18"
CATEGORY="perl"
SHORT_DESC="Net::HTTP - Low-level HTTP connection (client)"
MAINTAINER="erjo@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Net-HTTP"

TARBALL="Net-HTTP-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/O/OA/OALDERS/$TARBALL"

BUILD_DEPENDS="perl-uri"

compile_rules() {
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-uri"
}
