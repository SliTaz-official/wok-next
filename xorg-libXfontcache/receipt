# SliTaz package receipt v2.

PACKAGE="xorg-libXfontcache"
VERSION="1.0.5"
CATEGORY="x-window"
SHORT_DESC="X-TrueType font cache extension client library"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="libXfontcache-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="gfortran xorg-libX11-dev xorg-libXext-dev xorg-xextproto \
xorg-fontcacheproto"
SPLIT="xorg-libXfontcache-dev"
PKG_RULE="std-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		*-libXfontcache)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXext"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXfontcache xorg-libxcb-dev xorg-fontcacheproto \
			xorg-libX11-dev xorg-libXau-dev xorg-libXdmcp-dev xorg-libXext-dev"
			;;
	esac
}
