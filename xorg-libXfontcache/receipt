# SliTaz package receipt v2.

PACKAGE="xorg-libXfontcache"
VERSION="1.0.5"
CATEGORY="x-window"
SHORT_DESC="X-TrueType font cache extension client library"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="libXfontcache-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="gfortran xorg-libX11-dev xorg-libXext-dev xorg-xextproto \
xorg-fontcacheproto"
SPLIT="xorg-libXfontcache-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXfontcache)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXext"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXfontcache \
			xorg-fontcacheproto xorg-libX11-dev xorg-libXext-dev"
			;;
	esac
}
