PACKAGE="perl-mime-types"
VERSION="2.17"
CATEGORY="perl"
SHORT_DESC="MIME::Types - Definition of MIME types"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/MIME-Types"
REPOLOGY="perl:mime-types"

TARBALL="MIME-Types-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/M/MA/MARKOV/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
