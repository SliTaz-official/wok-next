# SliTaz package receipt.

PACKAGE="perl-mime-types"
VERSION="2.13"
CATEGORY="perl"
SHORT_DESC="MIME::Types - Definition of MIME types"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/MIME-Types"

TARBALL="MIME-Types-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/M/MA/MARKOV/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
