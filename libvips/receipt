# SliTaz package receipt v2.

PACKAGE="libvips"
VERSION="7.42.3"
CATEGORY="utilities"
SHORT_DESC="An image processing library"
MAINTAINER="yuripourre@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="https://jcupitt.github.io/libvips/"

TARBALL="vips-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/supported/${VERSION%.*}/$TARBALL" # FIXME

BUILD_DEPENDS="gtk-doc libtool swig \
gobject-introspection-dev fftw-dev lcms-dev libpng-dev jpeg-dev \
imagemagick-dev tiff-dev zlib-dev libexif-dev gettext-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./bootstrap.sh &&
	autoreconf &&
	./configure \
		--enable-gtk-doc=no &&
	fix libtool &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	case $PACKAGE in
		libvips)
			copy @std
			DEPENDS="fftw liblcms pango libpng jpeg imagemagick libtiff zlib \
			glib libexif openexr liboil"
			TAGS="image"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
