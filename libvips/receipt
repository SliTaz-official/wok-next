# SliTaz package receipt v2.

PACKAGE="libvips"
VERSION="7.42.3"
CATEGORY="utilities"
SHORT_DESC="An image processing library"
MAINTAINER="yuripourre@gmail.com"
LICENSE="LGPL2.1"
WEB_SITE="http://www.vips.ecs.soton.ac.uk/"

TARBALL="vips-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/supported/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="gtk-doc libtool swig \
gobject-introspection-dev fftw-dev lcms-dev libpng16-dev jpeg-dev \
imagemagick-dev tiff-dev zlib-dev libexif-dev gettext"
SPLIT="libvips-dev"

compile_rules() {
	./bootstrap.sh &&
	autoreconf &&
	./configure \
		--enable-gtk-doc=no &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		libvips)
			copy @std
			DEPENDS="fftw lcms pango libpng16 jpeg imagemagick tiff zlib \
			glib libexif openexr liboil"
			TAGS="image"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
