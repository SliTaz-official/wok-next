# SliTaz package receipt.

PACKAGE="perl-file-find-rule"
VERSION="0.34"
CATEGORY="perl"
SHORT_DESC="File::Find::Rule - Alternative interface to File::Find"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/File-Find-Rule"
REPOLOGY="perl:file-find-rule"

TARBALL="File-Find-Rule-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/R/RC/RCLAMP/$TARBALL"

BUILD_DEPENDS="perl-number-compare perl-text-glob"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-number-compare perl-text-glob"
}
