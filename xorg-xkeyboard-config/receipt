# SliTaz package receipt v2.

PACKAGE="xorg-xkeyboard-config"
VERSION="2.24"
CATEGORY="x-window"
SHORT_DESC="Keyboard configuration database for the X Window System"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/xkeyboard-config.html"
REPOLOGY="xkeyboard-config"

TARBALL="xkeyboard-config-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/data/xkeyboard-config/$TARBALL"

BUILD_DEPENDS="libxslt xorg-xorgproto xorg-libX11-dev intltool"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure \
		--with-xkb-base=/usr/share/X11/xkb \
		--with-xkb-rules-symlink=xorg \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-config) copy @std;;
		*-dev)    copy @dev;;
	esac
}
