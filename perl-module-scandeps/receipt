# SliTaz package receipt v2.

PACKAGE="perl-module-scandeps"
VERSION="1.24"
CATEGORY="perl"
SHORT_DESC="Module::ScanDeps - Recursively scan Perl code for dependencies"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Module-ScanDeps"

TARBALL="Module-ScanDeps-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/R/RS/RSCHUPP/$TARBALL"

BUILD_DEPENDS="perl-test-requires"

compile_rules() {
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
