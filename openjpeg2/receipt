# SliTaz package receipt v2.

PACKAGE="openjpeg2"
VERSION="2.3.0"
CATEGORY="graphics"
SHORT_DESC="Open-source C-Library for JPEG 2000 (v. 2.x)"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="BSD"
WEB_SITE="http://www.openjpeg.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/general/openjpeg2.html"
REPOLOGY="openjpeg"

TARBALL="openjpeg-$VERSION.tar.gz"
WGET_URL="https://github.com/uclouvain/openjpeg/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="cmake zlib-dev libpng16-dev tiff-dev lcms2-dev"
SPLIT="openjpeg2-tools openjpeg2-dev"

compile_rules() {
	mkdir build
	cd    build
	cmake \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		.. &&
	make &&
	make install || return 1

	cook_pick_manpages $src/doc/man/*/*
}

genpkg_rules() {
	case $PACKAGE in
		openjpeg2)
			copy *.so*
			;;
		openjpeg2-tools)
			copy bin/
			CAT="graphics|applications"
			DEPENDS="openjpeg2 lcms2 libpng16 tiff"
			;;
		*-dev)
			copy @dev
			;;
	esac
}

