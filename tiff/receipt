# SliTaz package receipt v2.

PACKAGE="tiff"
VERSION="4.0.7"
CATEGORY="graphics"
SHORT_DESC="TIFF images"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="http://www.libtiff.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://download.osgeo.org/libtiff/$TARBALL"

BUILD_DEPENDS="libjpeg-turbo-dev zlib-dev"
SPLIT="tiff-apps tiff-dev"

compile_rules() {
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		tiff)
			copy *.so*
			CAT="graphics|libraries"
			DEPENDS="jpeg-turbo zlib"
			;;
		tiff-apps)
			copy bin/
			CAT="graphics|CLI applications"
			DEPENDS="libjpeg-turbo zlib tiff"
			;;
		*-dev)
			copy @dev
			DEPENDS="tiff tiff-apps libjpeg-turbo-dev zlib-dev"
			;;
	esac
}
