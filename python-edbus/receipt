# SliTaz package receipt v2.

PACKAGE="python-edbus"
VERSION="1.7.0"
CATEGORY="base-system"
SHORT_DESC="Python bindings for edbus"
MAINTAINER="domcox@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://www.enlightenment.org/"

TARBALL="python-e_dbus-$VERSION.tar.bz2"
WGET_URL="http://download.enlightenment.org/releases/BINDINGS/python/$TARBALL"

BUILD_DEPENDS="edbus-dev python-dev dbus-python-dev python-cython dbus-helper \
autoconf automake git subversion libtool"
SPLIT="python-edbus-dev"

compile_rules() {
	./autogen.sh &&
	./configure &&
	make $MAKEFLAGS all &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		python-edbus)
			copy @std
			DEPENDS="edbus dbus-python dbus-helper"
			TAGS="e enlightenment python"
			;;
		*-dev)
			copy @dev
			DEPENDS="edbus-dev python-dev dbus-python-dev dbus-helper"
			;;
	esac
}
