# SliTaz package receipt.

PACKAGE="perl-net-ip"
VERSION="1.26"
CATEGORY="perl"
SHORT_DESC="Net::IP - Perl extension for manipulating IPv4/IPv6 addresses"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Net-IP"
REPOLOGY="perl:net-ip"

TARBALL="Net-IP-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/M/MA/MANU/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
