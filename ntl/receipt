# SliTaz package receipt v2.

PACKAGE="ntl"
VERSION="5.5.2"
CATEGORY="utilities"
SHORT_DESC="A Library for doing Number Theory"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="http://shoup.net/ntl/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/$TARBALL"

BUILD_DEPENDS="gmp-dev gf2x-dev libtool"

compile_rules() {
	case $ARCH in
		x86_64) Arch='nocona';;
		*)      Arch="$ARCH";;
	esac

	cd $src/src
	./configure \
		CFLAGS="-march=$Arch -Os -pipe -fomit-frame-pointer" \
		DEF_PREFIX=/usr \
		NTL_STD_CXX=on \
		NTL_GMP_LIP=on \
		NTL_GF2X_LIB=on \
		&&
	make &&
	sed -i '/^DEF_PREFIX=\/usr$/d' makefile &&
	make DEF_PREFIX=$install/usr install
}

genpkg_rules() {
	copy @dev
}
