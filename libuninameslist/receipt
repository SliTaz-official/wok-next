# SliTaz package receipt v2.

PACKAGE="libuninameslist"
VERSION="0.4.20140731"
CATEGORY="misc"
SHORT_DESC="A Library of Unicode names and annotation data"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="other"
WEB_SITE="https://github.com/fontforge/libuninameslist"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/archive/$VERSION.tar.gz"

BUILD_DEPENDS="autoconf automake libtool bash"
SPLIT="libuninameslist-dev"

compile_rules() {
	autoreconf -i
	automake
	./configure $CONFIGURE_ARGS && make && make install
}

genpkg_rules() {
	case $PACKAGE in
		libuninameslist) copy @std;;
		*-dev) copy @dev;;
	esac
}
