# SliTaz package receipt.

PACKAGE="perl-parse-recdescent"
VERSION="1.967015"
CATEGORY="perl"
SHORT_DESC="Parse::RecDescent - Generate Recursive-Descent Parsers"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Parse-RecDescent"
REPOLOGY="perl:parse-recdescent"

TARBALL="Parse-RecDescent-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/J/JT/JTBRAUN/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
