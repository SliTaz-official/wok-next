# SliTaz package receipt v2.

PACKAGE="links-dfb"
VERSION="2.14"
CATEGORY="network"
SHORT_DESC="Light and fast web browser using Ncurses, X or DirectFB"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://links.twibright.com/"

TARBALL="links-$VERSION.tar.gz"
WGET_URL="http://links.twibright.com/download/$TARBALL"

BUILD_DEPENDS="openssl-dev ncurses-dev jpeg-dev libpng16-dev tiff-dev \
zlib-dev directfb-dev"

compile_rules() {
	sed -i 's/\*last_val/last_val/' dip.c

	./configure \
		--with-directfb \
		--without-bzip2 \
		--enable-graphics \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install || return 1

	install -Dm644 $src/graphics/links.xpm $install/usr/share/pixmaps/links.xpm
}

genpkg_rules() {
	copy @std
	DEPENDS="ncurses openssl jpeg libpng16 tiff zlib libgomp directfb"
	PROVIDE="links"
}
