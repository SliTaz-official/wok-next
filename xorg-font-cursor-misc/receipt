# SliTaz package receipt v2.

PACKAGE="xorg-font-cursor-misc"
VERSION="1.0.3"
CATEGORY="x-window"
SHORT_DESC="Misc bitmap set: cursor"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="other"
WEB_SITE="https://www.x.org/wiki/"
REPOLOGY="font-cursor-misc"

TARBALL="font-cursor-misc-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/font/$TARBALL"

BUILD_DEPENDS="xorg-util-macros xorg-font-util-dev xorg-mkfontdir xorg-bdftopcf"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	TAGS="font"
}

post_install() {
	chroot "$1/" fc-cache -r /usr/share/fonts/X11/misc
}
post_remove() {
	chroot "$1/" fc-cache -r
}
