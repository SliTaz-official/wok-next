PACKAGE="disktype"
VERSION="9"
CATEGORY="system-tools"
SHORT_DESC="Detects the content format of a disk or disk image (file systems, \
partition tables, and boot codes)"
MAINTAINER="db_slitaz@m4x.org"
LICENSE="MIT"
WEB_SITE="http://disktype.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

compile_rules() {
	make &&
	install -Dm755 $src/disktype $install/usr/bin/disktype
}

genpkg_rules() {
	copy @std
}
