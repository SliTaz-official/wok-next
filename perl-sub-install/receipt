# SliTaz package receipt.

PACKAGE="perl-sub-install"
VERSION="0.928"
CATEGORY="perl"
SHORT_DESC="Sub::Install - install subroutines into packages easily"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Sub-Install"
REPOLOGY="perl:sub-install"

TARBALL="Sub-Install-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/R/RJ/RJBS/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
}
