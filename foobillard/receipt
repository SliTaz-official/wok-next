# SliTaz package receipt.

PACKAGE="foobillard"
VERSION="3.0a"
CATEGORY="games"
SHORT_DESC="An OpenGL billiard game for Linux"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://foobillard.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="libsdl-dev freetype-dev libpng16-dev glu mesa-dev \
zlib-dev glu-dev"

compile_rules() {
	sed -i -e 's/-lXaw//' -e 's/-lXi//' src/Makefile.in

	./configure \
		--prefix=/usr \
		--enable-nvidia=no \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	mkdir -p $fs/usr/share
	cp -a $install/usr/bin $fs/usr
	cp -a $install/usr/share/foobillard $fs/usr/share
	DEPENDS="libsdl freetype libpng16 mesa glu"
}
