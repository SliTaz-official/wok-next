PACKAGE="perl-datetime-timezone"
VERSION="2.19"
CATEGORY="perl"
SHORT_DESC="DateTime::TimeZone - Time zone object base class and factory"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/DateTime-TimeZone"
REPOLOGY="perl:datetime-timezone"

TARBALL="DateTime-TimeZone-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DR/DROLSKY/$TARBALL"

BUILD_DEPENDS="perl-class-singleton perl-module-runtime \
perl-namespace-autoclean perl-params-validationcompiler perl-specio \
perl-try-tiny perl-test-requires"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl-class-singleton perl-module-runtime perl-namespace-autoclean \
	perl-params-validationcompiler perl-specio perl-try-tiny"
}
