# SliTaz package receipt v2.

PACKAGE="eom"
VERSION="1.18.2"
CATEGORY="graphics"
SHORT_DESC="An image viewer for MATE"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://github.com/mate-desktop/eom"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/eom/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common yelp-tools gtk-doc itstool \
gobject-introspection-dev libexif-dev lcms2-dev exempi-dev libjpeg-turbo-dev \
dbus-glib-dev librsvg-dev gtk+3-dev mate-desktop-dev gdk-pixbuf-dev \
shared-mime-info-dev libpeas-dev"
SPLIT="eom-dev"

compile_rules() {
	./autogen.sh \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		eom)
			copy @std
			DEPENDS="atk cairo dbus-glib exempi gdk-pixbuf glib \
			gobject-introspection gtk+3 lcms2 libexif libjpeg-turbo libpeas \
			libpeas-gtk librsvg libxml2 mate-desktop xorg-libX11 zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="eom glib-dev gtk+3-dev"
			;;
	esac
	TAGS="MATE"
}
