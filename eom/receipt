# SliTaz package receipt v2.

PACKAGE="eom"
VERSION="1.18.2"
CATEGORY="graphics"
SHORT_DESC="An image viewer for MATE"
MAINTAINER="yuripourre@gmail.com"
LICENSE="GPL2"
WEB_SITE="https://github.com/mate-desktop/eom"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/mate-desktop/eom/archive/v$VERSION.tar.gz"

BUILD_DEPENDS="mate-common yelp-tools gtk-doc itstool \
gobject-introspection-dev libexif-dev lcms2-dev exempi-dev libjpeg-turbo-dev \
dbus-glib-dev librsvg-dev gtk+3-dev mate-desktop-dev gdk-pixbuf-dev \
shared-mime-info-dev libpeas-dev"
SPLIT="eom-dev"

compile_rules() {
	./autogen.sh \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		eom)
			copy @std
			DEPENDS="atk bzlib cairo dbus dbus-glib dconf exempi expat \
			fontconfig freetype gdk-pixbuf glib gobject-introspection gtk+3 \
			lcms2 libcroco libexif libffi libharfbuzz libjpeg-turbo liblzma \
			libpeas libpeas-gtk libpng16 librsvg libxml2 mate-desktop pango \
			pcre startup-notification util-linux-blkid util-linux-mount \
			util-linux-uuid xorg-libX11 xorg-libXau xorg-libXdmcp xorg-libXext \
			xorg-libXrandr xorg-libXrender xorg-libxcb xorg-pixman \
			xorg-xcb-util zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="eom atk-dev bzip2-dev cairo-dev dbus-dev dbus-glib-dev \
			dconf-dev exempi-dev expat-dev fontconfig-dev freetype-dev \
			gdk-pixbuf-dev glib-dev gobject-introspection-dev gtk+3-dev \
			harfbuzz-dev lcms2-dev libcroco-dev libexif-dev libffi-dev \
			libpeas-dev libpng16-dev librsvg-dev libxml2-dev mate-desktop-dev \
			pango-dev pcre-dev startup-notification-dev util-linux-blkid-dev \
			util-linux-mount-dev util-linux-uuid-dev xorg-libX11-dev \
			xorg-libXau-dev xorg-libXdmcp-dev xorg-libXext-dev \
			xorg-libXrandr-dev xorg-libXrender-dev xorg-libxcb-dev \
			xorg-pixman-dev xorg-xcb-util-dev xz-dev zlib-dev"
			;;
	esac
	TAGS="MATE"
}
