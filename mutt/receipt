# SliTaz package receipt v2.

PACKAGE="mutt"
VERSION="1.6.1"
CATEGORY="network"
SHORT_DESC="Small and powerful text-based mail client"
MAINTAINER="paul@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.mutt.org"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="ftp://ftp.mutt.org/pub/mutt/$TARBALL"

BUILD_DEPENDS="libidn-dev ncurses-dev openssl-dev perl cyrus-sasl-dev"

compile_rules() {
	addgroup mail
	sed -i 's/STACK \*/STACK_OF(X509) */' mutt_ssl.c

	./configure \
		--enable-imap \
		--with-ssl=/usr \
		--with-mailpath=/var/mail \
		--enable-pop \
		--enable-smtp \
		--with-sasl \
		$CONFIGURE_ARGS &&
	make &&
	make install

	delgroup mail
}

genpkg_rules() {
	copy @std
	DEPENDS="openssl ncurses zlib libidn libsasl"
	CONFIG_FILES="/etc/Muttrc /etc/mime.types"
}

post_install() {
	chroot "$1/" addgroup mail
}

post_remove() {
	chroot "$1/" delgroup mail
}
