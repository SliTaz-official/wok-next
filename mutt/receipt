# SliTaz package receipt v2.

PACKAGE="mutt"
VERSION="1.10.0"
CATEGORY="network"
SHORT_DESC="Small and powerful text-based mail client"
MAINTAINER="paul@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.mutt.org"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="ftp://ftp.mutt.org/pub/mutt/$TARBALL"

BUILD_DEPENDS="ncurses-dev openssl-dev cyrus-sasl-dev gettext libidn-dev \
opensp perl libxslt docbook-xsl"

compile_rules() {
	addgroup mail

	./configure \
		--enable-imap \
		--with-ssl=/usr \
		--with-mailpath=/var/mail \
		--enable-pop \
		--enable-smtp \
		--with-sasl \
		$CONFIGURE_ARGS &&
	make &&
	make install || return 1

	delgroup mail
}

genpkg_rules() {
	copy @std
	DEPENDS="libidn libsasl ncurses openssl"
	CONFIG_FILES="/etc/Muttrc /etc/mime.types"
}

post_install() {
	chroot "$1/" addgroup mail
}

post_remove() {
	chroot "$1/" delgroup mail
}
