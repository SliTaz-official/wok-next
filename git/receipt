# SliTaz package receipt v2.

PACKAGE="git"
VERSION="2.17.1"
CATEGORY="development"
SHORT_DESC="Fast version control system"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://git-scm.com/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="https://www.kernel.org/pub/software/scm/git/$TARBALL"

BUILD_DEPENDS="zlib-dev openssl-dev curl-dev expat-dev perl python-dev \
tar bzip2 gettext"

compile_rules() {
	./configure \
		--prefix=/usr \
		--with-gitconfig=/etc/gitconfig \
		--libexecdir=/usr/lib \
		--without-tcltk \
		$CONFIGURE_ARGS &&
	make THREADED_DELTA_SEARCH=1 &&
	make THREADED_DELTA_SEARCH=1 DESTDIR=$install install || return 1

	install -Dm755 $stuff/git-daemon $install/etc/init.d/git-daemon
}

genpkg_rules() {
	copy @std
	DEPENDS="zlib openssl curl expat"
}

# edit daemons.conf.
post_install() {
	if ! grep -q 'GIT_OPTIONS' "$1/etc/daemons.conf"; then
		mkdir -p "$1/var/www/git"
		cat >> "$1/etc/daemons.conf" <<EOT
# Git daemon options.
GIT_REPO="/var/www/git/"
GIT_OPTIONS="--detach --syslog --verbose --base-path=$GIT_REPO $GIT_REPO"

EOT
	fi
}
