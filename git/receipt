# SliTaz package receipt v2.

PACKAGE="git"
VERSION="2.20.1"
CATEGORY="development"
SHORT_DESC="Fast version control system"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://git-scm.com/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/general/git.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="https://www.kernel.org/pub/software/scm/git/$TARBALL"
TARBALL_SHA1="58dca49db21f4bebf56f8861f15800f1c57c5ee3"

BUILD_DEPENDS="zlib-dev openssl-dev curl-dev expat-dev perl python-dev tar \
bzip2 gettext"
DEPENDS="zlib openssl curl expat"

CONFIG_FILES="/etc/gitconfig /etc/daemons.conf.d/git-daemon.conf"

compile_rules() {
	./configure \
		--prefix=/usr \
		--with-gitconfig=/etc/gitconfig \
		--without-tcltk \
		$CONFIGURE_ARGS &&
	make THREADED_DELTA_SEARCH=1 &&
	make \
		THREADED_DELTA_SEARCH=1 \
		INSTALL_SYMLINKS=1 \
		DESTDIR=$install install || return 1

	install -Dm755 $stuff/git-daemon      $install/etc/init.d/git-daemon
	install -Dm644 $stuff/git-daemon.conf $install/etc/daemons.conf.d/git-daemon.conf
	mkdir -p $install/var/www/git/
}
