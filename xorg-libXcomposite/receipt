# SliTaz package receipt v2.

PACKAGE="xorg-libXcomposite"
VERSION="0.4.4"
CATEGORY="x-window"
SHORT_DESC="Composite Extension"
MAINTAINER="devel@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/x7lib.html"
REPOLOGY="libxcomposite"

TARBALL="libXcomposite-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-xorgproto xorg-libXfixes-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXcomposite)
			copy @std
			DEPENDS="xorg-libX11"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXcomposite \
			xorg-xorgproto xorg-libX11-dev xorg-libXfixes-dev"
			;;
	esac
}
