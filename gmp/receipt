# SliTaz package receipt v2.

PACKAGE="gmp"
VERSION="6.1.2"
CATEGORY="libdevel"
SHORT_DESC="GNU Multiple Precision Arithmetic Library"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://gmplib.org/"
HOST_ARCH="i486 arm"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$GNU_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="binutils m4 ncurses-dev readline-dev texinfo"
SPLIT="gmp gpm-dev gpm-extra"

# Rules to configure and make the package.
compile_rules()
{
	./configure \
		--enable-cxx \
		--disable-static \
		--docdir=/usr/share/doc/gmp-$VERSION \
		$CONFIGURE_ARGS &&
	# -j > 1 make install fails.
	make && make html && make install && make install-html
}

testsuite()
{
	checklog=$(mktemp)
	make check 2>&1 | tee $checklog
	pass=$(awk '/# PASS:/{total+=$3} ; END{print total}' $checklog)
	echo "$pass / 190 tests passed"
	rm $checklog
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		gmp)   copy @std;;
		*-dev) copy @dev;;
		*-extra)
			CAT="misc|Mouse server for console, extra files."
			DEPENDS="gpm"
			mkdir -p $fs/usr
			cp -a $install/usr/bin $fs/usr
			;;
	esac
}

# Just to be sure when cross-compiling.
testsuite_gpm_extra()
{
	readelf -h $install/usr/bin/gpm-root
}
