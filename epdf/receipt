# SliTaz package receipt v2.

PACKAGE="epdf"
VERSION="79352"
CATEGORY="x-window"
SHORT_DESC="Enlightenment's PDF library"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.enlightenment.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="svn|http://svn.enlightenment.org/svn/e/trunk/PROTO/epdf/"

BUILD_DEPENDS="poppler-dev subversion automake autoconf libtool eina-dev \
ecore-dev evas-dev"
SPLIT="epdf-dev"

compile_rules() {
	./autogen.sh \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		epdf)
			copy @std
			DEPENDS="poppler eina ecore evas"
			;;
		*-dev)
			copy @dev
			DEPENDS="poppler-dev eina-dev ecore-dev evas-dev"
			;;
	esac
}
