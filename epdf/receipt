# SliTaz package receipt v2.

PACKAGE="epdf"
VERSION="79352"
CATEGORY="x-window"
SHORT_DESC="Enlightenment's PDF library"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.enlightenment.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="svn|http://svn.enlightenment.org/svn/e/trunk/PROTO/epdf/"

BUILD_DEPENDS="poppler-dev subversion automake autoconf libtool eina-dev \
ecore-dev evas-dev"
SPLIT="epdf-dev"

compile_rules() {
	./autogen.sh \
		--prefix=/usr \
		$CONFIGURE_ARGS 2>&1 | \
		sed 's|missing: No such|missing: no such|'
	make && make install
}

genpkg_rules() {
	case $PACKAGE in
		epdf)
			mkdir -p $fs/usr/lib
			cp -a $install/usr/bin $fs/usr
			cp -a $install/usr/lib/*.so* $fs/usr/lib
			DEPENDS="poppler eina ecore evas"
			;;
		*-dev)
			mkdir -p $fs/usr/lib
			cp -a $install/usr/include $fs/usr
			cp -a $install/usr/lib/*.*a $fs/usr/lib
			cp -a $install/usr/lib/pkgconfig $fs/usr/lib
			DEPENDS="poppler-dev eina-dev ecore-dev evas-dev"
			;;
	esac
}
