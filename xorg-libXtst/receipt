# SliTaz package receipt v2.

PACKAGE="xorg-libXtst"
VERSION="1.2.3"
CATEGORY="x-window"
SHORT_DESC="Xorg server module"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7lib.html"

TARBALL="libXtst-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-recordproto xorg-libXext-dev xorg-libXi-dev"
SPLIT="xorg-libXtst-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXtst)
			copy @std
			DEPENDS="xorg-libX11 xorg-libXext"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXtst \
			xorg-libX11-dev xorg-libXext-dev xorg-libXi-dev xorg-recordproto \
			xorg-xextproto"
			;;
	esac
}
