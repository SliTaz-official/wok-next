# SliTaz package receipt v2.

PACKAGE="xorg-xcb-util-cursor"
VERSION="0.1.3"
CATEGORY="x-window"
SHORT_DESC="Module that implements the XCB cursor library"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://xcb.freedesktop.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/svn/x/xcb-util-cursor.html"
REPOLOGY="xcb-util-cursor"

TARBALL="xcb-util-cursor-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/xcb/$TARBALL"

BUILD_DEPENDS="xorg-libxcb-dev xorg-xcb-util-dev xorg-xcb-util-renderutil-dev \
xorg-xcb-util-image-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-xcb-util-cursor)
			copy @std
			DEPENDS="xorg-libxcb xorg-xcb-util-image xorg-xcb-util-renderutil"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-xcb-util-cursor \
			xorg-libxcb-dev xorg-xcb-util-image-dev xorg-xcb-util-renderutil-dev"
			;;
	esac
}
