# SliTaz package receipt v2.

PACKAGE="dialog"
VERSION="1.3-20181022"
CATEGORY="base-system"
SHORT_DESC="Script-interpreter which provides a set of curses widgets"
MAINTAINER="devel@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://invisible-island.net/dialog/" # "HTTP/1.1 403 Forbidden" for wget

TARBALL="$PACKAGE-$VERSION.tgz"
WGET_URL="ftp://ftp.invisible-island.net/dialog/$TARBALL"

BUILD_DEPENDS="ncurses-dev gettext-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	./configure \
		--with-ncursesw \
		--enable-nls \
		--enable-widec \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$install install || return 1

	# Config file.
	install -Dm644 $stuff/dialogrc $install/etc/dialogrc

	cook_pick_manpages dialog.3
}

genpkg_rules() {
	case $PACKAGE in
		dialog)
			copy @std
			DEPENDS="ncurses"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
