LICENSE="GPL2"
WEB_SITE="http://www.msweet.org/projects.php?Z2"

TARBALL="$PACKAGE-$VERSION-source.tar.bz2"
WGET_URL="http://www.msweet.org/files/project2/$TARBALL"

compile_rules() {
	./configure --prefix=/usr && make -j 1 &&
	install -Dm755 $src/epm $install/usr/bin/epm
}

genpkg_rules() {
	copy @std
}
