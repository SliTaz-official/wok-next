TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://github.com/michaelrsweet/epm/archive/release-$VERSION.tar.gz" #

compile_rules() {
	./configure --prefix=/usr && make -j 1 &&
	install -Dm755 $src/epm $install/usr/bin/epm
}

genpkg_rules() {
	copy @std
}
