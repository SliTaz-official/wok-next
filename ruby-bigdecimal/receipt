# SliTaz package receipt v2.

PACKAGE="ruby-bigdecimal" # ruby-stdlib already provides bigdecimal
VERSION="1.3.5"
CATEGORY="ruby"
SHORT_DESC="Arbitrary-precision decimal floating-point number class"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://rubygems.org/gems/${PACKAGE#*-}"
HOST_ARCH="i486 x86_64"
REPOLOGY="${PACKAGE/-/:}"

TARBALL="${PACKAGE#*-}-$VERSION.gem"
WGET_URL="https://rubygems.org/downloads/$TARBALL"

BUILD_DEPENDS="ruby-dev"

compile_rules() {
	gem install \
		--no-document \
		--ignore-dependencies \
		--no-user-install \
		--build-root $install \
		$src/$TARBALL &&
	fix gem
}

genpkg_rules() {
	copy @ruby
	DEPENDS="ruby"
}
