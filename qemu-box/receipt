# SliTaz package receipt v2.

PACKAGE="qemu-box"
VERSION="306"
CATEGORY="development"
SHORT_DESC="SliTaz Qemu frontend"
MAINTAINER="devel@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://www.slitaz.org/"
REPOLOGY="-"

TARBALL="slitaz-dev-tools-$VERSION.tar.bz2"
WGET_URL="http://hg.slitaz.org/slitaz-dev-tools/archive/$VERSION.tar.bz2"

SIBLINGS="mirror-tools slitaz-dev-tools slitaz-mercurial-style tazchroot \
tazdev tazwikiss yaff"

compile_rules() {
	cd $src/qemu-box
	make DESTDIR=$install install
}

genpkg_rules() {
	mkdir -p $fs
	cp -a $install/* $fs
	chown -R root.root $fs
	DEPENDS="qemu-light"
}
