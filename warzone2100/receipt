# SliTaz package receipt v2.

PACKAGE="warzone2100"
VERSION="3.2.3"
CATEGORY="games"
SHORT_DESC="3D realtime strategy game on a future Earth"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://wz2100.net/"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="$SF_MIRROR/warzone2100/$TARBALL"

BUILD_DEPENDS="automake perl zip unzip gettext-dev qt5-dev xorg-libX11-dev \
libsdl2-dev libpng16-dev libtheora-dev openal-dev libvorbis-dev glew-dev \
mesa-dev openssl-dev physfs-dev xorg-libXrandr-dev fribidi-dev \
freetype-dev fontconfig-dev openssl-dev git"

compile_rules() {
	# small improvements
	sed -i 's| = |=|' icons/warzone2100.desktop
	rm po/pt_BR.gmo; sed -i 's|\\v||' po/pt_BR.po; msgfmt po/pt_BR.po -o po/pt_BR.gmo

	./autogen.sh &&
	./configure \
		--with-distributor="SliTaz" \
		--with-appdatadir=/usr/share/appdata \
		$CONFIGURE_ARGS &&
	make -C src autorevision.h &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	copy @std hicolor/ *.mo
	DEPENDS="fontconfig freetype fribidi glew glib openssl glu \
	libharfbuzz libogg libpng16 libsdl2 libtheora libvorbis mesa openal \
	physfs qt5-base qt5-script xorg-libX11 xorg-libXrandr zlib   libsdl2-net"
}
