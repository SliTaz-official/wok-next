# SliTaz package receipt.

PACKAGE="perl-number-compare"
VERSION="0.03"
CATEGORY="perl"
SHORT_DESC="Number::Compare - numeric comparisons"
MAINTAINER="devel@slitaz.org"
LICENSE="unknown"
WEB_SITE="https://metacpan.org/release/Number-Compare"
REPOLOGY="perl:number-compare"

TARBALL="Number-Compare-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/R/RC/RCLAMP/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
