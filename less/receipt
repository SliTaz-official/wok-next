# SliTaz package receipt v2.

PACKAGE="less"
VERSION="530"
CATEGORY="base-system"
SHORT_DESC="A terminal based program for viewing text files"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL3"
WEB_SITE="http://www.greenwoodsoftware.com/less"
LFS="http://www.linuxfromscratch.org/lfs/view/stable/chapter06/less.html"
HOST_ARCH="i486 x86_64"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$WEB_SITE/$TARBALL"

BUILD_DEPENDS="ncurses-dev pcre-dev"

compile_rules() {
	./configure \
		--with-regex=pcre \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$install install
}

genpkg_rules() {
	copy @std
	DEPENDS="libpcre ncurses"
	TAGS="LFS"
}
