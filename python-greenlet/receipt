# SliTaz package receipt v2.

PACKAGE="python-greenlet"
VERSION="latest"
CATEGORY="development"
SHORT_DESC="Lightweight in-process concurrent programming"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://pypi.python.org/pypi/greenlet"

BUILD_DEPENDS="python-dev"

compile_rules() {
	pip install --no-compile --root=$DESTDIR greenlet
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*greenlet-||p' $LOGS/$PACKAGE.log)
	copy @std @dev
	DEPENDS="python"
}
