# SliTaz package receipt.

PACKAGE="perl-dbi"
VERSION="1.641"
CATEGORY="perl"
SHORT_DESC="DBI - Database independent interface for Perl"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/DBI"
REPOLOGY="perl:dbi"

TARBALL="DBI-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/T/TI/TIMB/$TARBALL"

BUILD_DEPENDS="perl-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std @dev
	DEPENDS="perl"
}
