# SliTaz package receipt v2.

PACKAGE="owfs"
VERSION="3.2p1"
CATEGORY="misc"
SHORT_DESC="OWFS One Wire File System"
MAINTAINER="l.lemarinel@gmail.com"
LICENSE="GPL2"
WEB_SITE="http://www.owfs.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/owfs/owfs/$VERSION/$TARBALL"

BUILD_DEPENDS="fuse2-dev libusb-dev libusb-compat-dev eudev-dev"

compile_rules() {
	./configure \
		--bindir=/usr/bin \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="fuse2 libusb"
}
