# SliTaz package receipt v2.

PACKAGE="python-elementary"
VERSION="1.7.0"
CATEGORY="base-system"
SHORT_DESC="Python bindings for Elementary"
MAINTAINER="domcox@slitaz.org"
LICENSE="LGPL3"
WEB_SITE="http://www.enlightenment.org/"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="http://download.enlightenment.org/releases/BINDINGS/python/$TARBALL"

BUILD_DEPENDS="shared-mime-info elementary-dev python-evas-dev python-cython \
eudev autoconf automake git subversion libtool"
SPLIT="python-elementary-dev"

compile_rules() {
	./autogen.sh &&
	./configure --prefix=/usr &&
	make $MAKEFLAGS all && make install
}

genpkg_rules() {
	case $PACKAGE in
		python-elementary)
			copy @std
			DEPENDS="elementary python-evas"
			TAGS="e enlightenment python"
			;;
		python-elementary-dev)
			copy @dev
			DEPENDS="python-elementary elementary-dev python-evas-dev"
			;;
	esac
}
