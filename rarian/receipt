# SliTaz package receipt v2.

PACKAGE="rarian"
VERSION="0.8.1"
CATEGORY="misc"
SHORT_DESC="Documentation meta-data library, designed as a replacement for \
Scrollkeeper"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL2 LGPL2.1"
WEB_SITE="http://rarian.freedesktop.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/general/rarian.html"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="gfortran libxslt-dev"
SPLIT="rarian-dev"

compile_rules() {
	./configure \
		--disable-static \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	case $PACKAGE in
		rarian) copy @std;;
		*-dev)  copy @dev;;
	esac
}
