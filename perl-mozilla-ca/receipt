# SliTaz package receipt.

PACKAGE="perl-mozilla-ca"
VERSION="20180117"
CATEGORY="perl"
SHORT_DESC="Mozilla::CA - Mozilla's CA cert bundle in PEM format"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/Mozilla-CA"
REPOLOGY="perl:mozilla-ca"

TARBALL="Mozilla-CA-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/A/AB/ABH/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
