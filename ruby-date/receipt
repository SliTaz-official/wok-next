# SliTaz package receipt v2.

PACKAGE="ruby-date" # ruby-stdlib already provides date
VERSION="1.0.0"
CATEGORY="ruby"
SHORT_DESC="Subclass of Object includes Comparable module for handling dates"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="BSD"
WEB_SITE="https://rubygems.org/gems/${PACKAGE#*-}"
HOST_ARCH="i486 x86_64"
REPOLOGY="${PACKAGE/-/:}"

TARBALL="${PACKAGE#*-}-$VERSION.gem"
WGET_URL="https://rubygems.org/downloads/$TARBALL"

BUILD_DEPENDS="ruby-dev"
SPLIT="$PACKAGE-dev"

compile_rules() {
	gem install \
		--no-document \
		--ignore-dependencies \
		--no-user-install \
		--build-root $install \
		$src/$TARBALL &&
	fix gem
}

genpkg_rules() {
	case $PACKAGE in
		*-dev)
			copy @ruby-dev
			;;
		*)
			copy @ruby
			DEPENDS="ruby"
			;;
	esac
}
