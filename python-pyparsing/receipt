# SliTaz package receipt v2.

PACKAGE="python-pyparsing"
VERSION="latest"
CATEGORY="development"
SHORT_DESC="Python parsing module"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://pypi.org/project/pyparsing/"
REPOLOGY="python:pyparsing"

BUILD_DEPENDS="python"

compile_rules() {
	pip install --no-compile --root=$DESTDIR pyparsing
}

genpkg_rules() {
	VERSION=$(sed -n '/^Successfully installed/ s|.*pyparsing-||p' $LOGS/$PACKAGE.log)
	copy @std
	DEPENDS="python"
}
