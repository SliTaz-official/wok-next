# SliTaz package receipt v2.

PACKAGE="libcaca"
VERSION="0.99.beta19"
CATEGORY="graphics"
SHORT_DESC="Text mode graphics utilities"
MAINTAINER="paul@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://caca.zoy.org/wiki/libcaca"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://caca.zoy.org/files/libcaca/$TARBALL"

BUILD_DEPENDS="zlib-dev xorg-libX11-dev mesa-dev ncurses-dev python imlib2-dev \
pango-dev doxygen cppunit-dev"
SPLIT="python-caca libcaca-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libcaca)
			copy @std
			rm -rf $fs/usr/lib/python2.7/
			DEPENDS="imlib2 ncurses xorg-libX11 zlib"
			;;
		python-caca)
			copy *.py
			DEPENDS="libcaca python"
			;;
		*-dev)
			copy @dev
			DEPENDS="libcaca python-caca ncurses-dev xorg-libX11-dev \
			xorg-libXau-dev xorg-libXdmcp-dev xorg-libxcb-dev zlib-dev"
			;;
	esac
}
