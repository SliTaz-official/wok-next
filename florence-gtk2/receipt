# SliTaz package receipt v2.

PACKAGE="florence-gtk2"
VERSION="0.5.4"
CATEGORY="utilities"
SHORT_DESC="On-screen virtual keyboard (GTK2 version)"
MAINTAINER="psychomaniak@xakep.ru"
LICENSE="GPL"
WEB_SITE="https://sourceforge.net/projects/florence/"
REPOLOGY="florence"

TARBALL="florence-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/florence/$TARBALL"

BUILD_DEPENDS="intltool gconf-dev libx11-dev glib-dev cairo-dev \
librsvg-dev libxml2-dev gtk2-dev gstreamer0-dev libxtst-dev \
at-spi2-core-dev at-spi2-atk-dev gtk2-dev"

compile_rules() {
	./configure \
		--without-panelapplet \
		--without-docs \
		--without-notification \
		$CONFIGURE_ARGS &&
	make -j1 &&
	make -j1 install
}

genpkg_rules() {
	copy @std *.mo
	DEPENDS="gconf at-spi2-core libcairo gdk-pixbuf glib gstreamer0 gtk2 librsvg \
	libxml2 pango libx11 libxtst"
	PROVIDE="florence"
}
