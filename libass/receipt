# SliTaz package receipt v2.

PACKAGE="libass"
VERSION="0.13.6"
CATEGORY="multimedia"
SHORT_DESC="A portable library for SSA/ASS subtitles rendering"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="BSD"
WEB_SITE="https://github.com/libass/libass"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/multimedia/libass.html"

TARBALL="$PACKAGE-$VERSION.tar.xz"
WGET_URL="https://github.com/libass/libass/releases/download/$VERSION/$TARBALL"

BUILD_DEPENDS="yasm-dev freetype-dev fribidi-dev fontconfig-dev"
SPLIT="libass-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libass)
			copy @std
			DEPENDS="bzlib fontconfig freetype fribidi glib libharfbuzz \
			liblzma libpng16 libxml2 pcre zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="libass bzip2-dev fontconfig-dev freetype-dev fribidi-dev \
			glib-dev harfbuzz-dev libpng16-dev libxml2-dev pcre-dev xz-dev \
			zlib-dev"
			;;
	esac
}
