# SliTaz package receipt v2.

PACKAGE="eeze"
VERSION="1.7.10"
CATEGORY="x-window"
SHORT_DESC="EFL Device abstraction library"
MAINTAINER="pankso@slitaz.org"
LICENSE="BSD"
WEB_SITE="http://www.enlightenment.org/"

WGET_URL="http://download.enlightenment.org/releases/$TARBALL"
TARBALL="$PACKAGE-$VERSION.tar.bz2"

BUILD_DEPENDS="ecore-dev eudev-dev"
SPLIT="eeze-dev"

compile_rules() {
	CFLAGS="$CFLAGS -fvisibility=hidden"
	LDFLAGS="$LDFLAGS -fvisibility=hidden"
	export LDFLAGS

	./configure \
		--disable-doc \
		$CONFIGURE_ARGS &&
	make $MAKEFILE && make install
}

genpkg_rules() {
	case $PACKAGE in
		eeze)
			copy @std
			DEPENDS="ecore eudev"
			TAGS="e enlightenment efl"
			;;
		eeze-dev)
			copy @dev
			DEPENDS="ecore-dev eudev-dev pkg-config"
			;;
	esac
}
