# SliTaz package receipt v2.

PACKAGE="dosbox"
VERSION="0.74-2"
CATEGORY="system-tools"
SHORT_DESC="A DOS emulator"
MAINTAINER="devel@slitaz.org"
LICENSE="GPL2"
WEB_SITE="https://www.dosbox.com/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="sdl-dev alsa-lib-dev libpng-dev sdl-net-dev mesa-dev \
glu-dev sdl-sound-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make install
}

genpkg_rules() {
	copy @std
	DEPENDS="alsa-lib libpng sdl sdl-net mesa sdl-sound libx11 \
	zlib"
	TAGS="emulator dos vm86 8086"
}
