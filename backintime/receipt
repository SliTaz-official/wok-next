# SliTaz package receipt v2.

PACKAGE="backintime"
VERSION="1.0.8"
CATEGORY="network"
SHORT_DESC="A simple backup tool for Linux"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://backintime.le-web.org/"

TARBALL="$PACKAGE-${VERSION}_src.tar.gz"
WGET_URL="http://backintime.le-web.org/download/$PACKAGE/$TARBALL"

BUILD_DEPENDS="python rsync meld perl gettext-tools" # python-glade2 python-gnome2

compile_rules() {
	cd $src/common
	# site script isn't used
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="python rsync"
	TAGS="backup"
}
