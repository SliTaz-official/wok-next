# SliTaz package receipt v2.

PACKAGE="sbackup"
VERSION="0.11.4"
CATEGORY="network"
SHORT_DESC="Simple backup"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://sourceforge.net/projects/sbackup/"

TARBALL="${PACKAGE}_$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="python notify-python gettext-base pygtk gvfs fuse2 sshfs-fuse \
curlftpfs desktop-file-utils gettext-tools"

compile_rules() {
	mkdir -p $DESTDIR/usr/share/sbackup
	cp scripts/* $DESTDIR/usr/share/sbackup/
	sed -i 's|dbus force-reload|echo &|;s|gconf-schemas|echo &|' Makefile

	make && make DESTDIR=$DESTDIR/usr install
	# sudo sbackupconfig
}

genpkg_rules() {
	copy @std
	DEPENDS="python notify-python gettext-base pygtk gvfs fuse2 sshfs-fuse \
	curlftpfs desktop-file-utils"
	TAGS="backup"
}
