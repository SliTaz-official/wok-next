# SliTaz package receipt.

PACKAGE="perl-io-html"
VERSION="1.001"
CATEGORY="perl"
SHORT_DESC="IO::HTML - Open an HTML file with automatic charset detection"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/IO-HTML"

TARBALL="IO-HTML-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/C/CJ/CJM/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
}
