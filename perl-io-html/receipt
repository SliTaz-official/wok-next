# SliTaz package receipt v2.

PACKAGE="perl-io-html"
VERSION="1.001"
CATEGORY="perl"
SHORT_DESC="IO::HTML - Open an HTML file with automatic charset detection"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL"
WEB_SITE="https://metacpan.org/release/IO-HTML"
REPOLOGY="perl:io-html"

TARBALL="IO-HTML-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/C/CJ/CJM/$TARBALL"

BUILD_DEPENDS="perl"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
