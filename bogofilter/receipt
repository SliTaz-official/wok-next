# SliTaz package receipt v2.

PACKAGE="bogofilter"
VERSION="1.2.4"
CATEGORY="network"
SHORT_DESC="Mail filter that classifies mail as spam or ham"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2 GPL3"
WEB_SITE="http://bogofilter.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="sqlite3-dev"

compile_rules() {
	./configure \
		--with-database=sqlite3 \
		--sysconfdir=/etc/bogofilter \
		$CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install || return 1

	chmod +x $install/usr/bin/bf_*
}

genpkg_rules() {
	copy @std
	DEPENDS="sqlite3 gsl"
	TAGS="mail email filter spam C"
}
