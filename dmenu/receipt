PACKAGE="dmenu"
VERSION="4.8"
CATEGORY="x-window"
SHORT_DESC="Dynamic menu lauch bar"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="http://tools.suckless.org/dmenu/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://dl.suckless.org/tools/$TARBALL"

BUILD_DEPENDS="xorg-libX11-dev xorg-libXft-dev xorg-libXinerama-dev"

compile_rules() {
	make &&
	make PREFIX=/usr install
}

genpkg_rules() {
	copy @std
	DEPENDS="fontconfig xorg-libX11 xorg-libXft xorg-libXinerama"
	TAGS="launchbar"
}
