# SliTaz package receipt v2.

PACKAGE="dmenu"
VERSION="4.8"
CATEGORY="x-window"
SHORT_DESC="Dynamic menu lauch bar"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="http://tools.suckless.org/dmenu/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://dl.suckless.org/tools/$TARBALL"

BUILD_DEPENDS="libx11-dev libxft-dev libxinerama-dev"

compile_rules() {
	make &&
	make PREFIX=/usr install
}

genpkg_rules() {
	copy @std
	DEPENDS="fontconfig libx11 libxft libxinerama"
	TAGS="launchbar"
}
