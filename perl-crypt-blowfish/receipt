# SliTaz package receipt v2.

PACKAGE="perl-crypt-blowfish"
VERSION="2.14"
CATEGORY="perl"
SHORT_DESC="Crypt::Blowfish - Perl Blowfish encryption module"
MAINTAINER="devel@slitaz.org"
LICENSE="Perl"
WEB_SITE="https://metacpan.org/release/Crypt-Blowfish"
REPOLOGY="perl:crypt-blowfish"

TARBALL="Crypt-Blowfish-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/D/DP/DPARIS/$TARBALL"

BUILD_DEPENDS="perl-dev"

compile_rules() {
	perl Makefile.PL &&
	make &&
	make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
