# SliTaz package receipt.

PACKAGE="xorg-xbacklight"
VERSION="1.2.1"
CATEGORY="x-window"
SHORT_DESC="utility for x-server to set the backlight level using the RandR"
MAINTAINER="jozee@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
TAGS="utility xorg power backlight"

TARBALL="xbacklight-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

DEPENDS="libxcb xcb-util"
BUILD_DEPENDS="xorg-util-macros libxcb-dev xcb-util-dev"
#xorg-libXrandr-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure $CONFIGURE_ARGS && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy bin/
}
