# SliTaz package receipt v2.

PACKAGE="Geomyidae"
VERSION="0.26.1"
CATEGORY="network"
SHORT_DESC="Geomyidae is a daemon for serving the Gopher protocol"
MAINTAINER="allan316@gmail.com"
LICENSE="MIT"
WEB_SITE="http://www.r-36.net/"

TARBALL="geomyidae-$VERSION.tar.gz"
WGET_URL="${WEB_SITE}src/$PACKAGE/$TARBALL"

compile_rules() {
	# Move man page to the right place
	sed -i 's|/man/|/share&|' $src/Makefile

	make && make DESTDIR=$DESTDIR install || return 1

	install -Dm644 $src/index.gph $install/var/gopher/index.gph
}

genpkg_rules() {
	copy @std
}
