# SliTaz package receipt.

PACKAGE="perl-yaml-syck"
VERSION="1.29"
CATEGORY="development"
SHORT_DESC="Fast, lightweight YAML loader and dumper"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="GPL"
WEB_SITE="http://search.cpan.org/disk/YAML-Syck/"

TARBALL="YAML-Syck-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/T/TO/TODDR/$TARBALL"

DEPENDS="perl"
BUILD_DEPENDS="perl"

# Rules to configure and make the package.
compile_rules()
{
	perl Makefile.PL -y &&
	make &&
	make DESTDIR=$DESTDIR install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	mkdir -p $fs/usr
	cp -a $install/usr/lib $fs/usr
}
