PACKAGE="perl-yaml-syck"
VERSION="1.30"
CATEGORY="perl"
SHORT_DESC="YAML::Syck - Fast, lightweight YAML loader and dumper"
MAINTAINER="slaxemulator@gmail.com"
LICENSE="MIT"
WEB_SITE="https://metacpan.org/release/YAML-Syck"
REPOLOGY="perl:yaml-syck"

TARBALL="YAML-Syck-$VERSION.tar.gz"
WGET_URL="https://cpan.metacpan.org/authors/id/T/TO/TODDR/$TARBALL"

BUILD_DEPENDS="perl-dev"

compile_rules() {
	perl Makefile.PL -y &&
	make && make DESTDIR=$install install &&

	chmod -R u+w $install
}

genpkg_rules() {
	copy @std
	DEPENDS="perl"
}
