# SliTaz package receipt v2.

PACKAGE="tuxpaint"
VERSION="0.9.22"
CATEGORY="graphics"
SHORT_DESC="Kid painting program"
MAINTAINER="pankso@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://tuxpaint.org/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="libpng16-dev fribidi-dev librsvg-dev cairo-dev libsdl-dev \
libsdl-mixer-dev libsdl-pango-dev libsdl-image-dev libsdl-ttf-dev \
libpaper-dev python-dev gettext gperf"

compile_rules() {
	make PREFIX=/usr &&
	make PREFIX=/usr DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="libpng16 fribidi librsvg cairo libsdl-mixer libsdl-pango \
	libsdl-image libsdl-ttf libpaper python"
}
