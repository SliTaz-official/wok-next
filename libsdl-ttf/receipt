# SliTaz package receipt v2.

PACKAGE="libsdl-ttf"
VERSION="2.0.11" # version 1.2.2 the last from 1.2 series, but it need freetype1
CATEGORY="x-window"
SHORT_DESC="SDL ttf support"
MAINTAINER="pankso@slitaz.org"
LICENSE="LGPL2.1"
WEB_SITE="http://www.libsdl.org/projects/SDL_ttf/release-1.2.html"

TARBALL="SDL_ttf-$VERSION.tar.gz"
WGET_URL="http://www.libsdl.org/projects/SDL_ttf/release/$TARBALL"

BUILD_DEPENDS="libsdl-dev freetype-dev"
SPLIT="libsdl-ttf-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		libsdl-ttf)
			copy @std
			DEPENDS="freetype libsdl"
			;;
		*-dev)
			copy @dev
			DEPENDS="libsdl-ttf libsdl-dev"
			;;
	esac
}
