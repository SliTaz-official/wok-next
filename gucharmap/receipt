# SliTaz package receipt v2.

PACKAGE="gucharmap"
VERSION="3.0.1"
CATEGORY="utilities"
SHORT_DESC="GNOME Character Map, GTK+2"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="GPL3"
WEB_SITE="https://wiki.gnome.org/action/show/Apps/Gucharmap"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$GNOME_MIRROR/$PACKAGE/${VERSION%.*}/$TARBALL"

BUILD_DEPENDS="itstool libxml2-tools glib-dev gtk+-dev intltool"
SPLIT="gucharmap-dev gucharmap-i18n"

compile_rules() {
	./configure \
		--disable-maintainer-mode \
		--disable-gconf \
		--disable-schemas-install \
		--disable-scrollkeeper \
		--with-gtk=2.0 \
		$CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		gucharmap)
			copy @std
			DEPENDS="gtk+ xorg-libXdamage"
			;;
		gucharmap-dev)
			copy @dev
			DEPENDS="gucharmap"
			;;
		gucharmap-i18n)
			copy locale/
			CAT="localization|language files"
			DEPENDS="gucharmap"
			;;
	esac
}
