# SliTaz package receipt v2.

PACKAGE="xorg-xload"
VERSION="1.1.2"
CATEGORY="x-window"
SHORT_DESC="System load average display for X"
MAINTAINER="pankso@slitaz.org"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"

TARBALL="xload-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/app/$TARBALL"

BUILD_DEPENDS="xorg-libXaw-dev gettext"
PKG_RULE="std"

# Rules to configure and make the package.
compile_rules()
{
	touch /root/missing /missing

	./configure \
		--sysconfdir=/etc \
		--localstatedir=/var \
		$CONFIGURE_ARGS &&
	make &&
	make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	copy @std
	DEPENDS="xorg-libX11 xorg-libXaw xorg-libXmu xorg-libXt"
	CONFIG_FILES="/etc/X11/app-defaults/XLoad"
}
