# SliTaz package receipt v2.

PACKAGE="speex"
VERSION="1.2.0"
CATEGORY="multimedia"
SHORT_DESC="Low bandwith voice codec"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="BSD"
WEB_SITE="https://www.speex.org/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/multimedia/speex.html"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="https://downloads.xiph.org/releases/speex/$TARBALL"

BUILD_DEPENDS="speexdsp-dev libogg-dev"
SPLIT="speex-bin speex-dev"

compile_rules() {
	./configure \
		--disable-static \
		\
		--enable-binaries \
		$CONFIGURE_ARGS &&
	make &&
	make -j1 install
}

genpkg_rules() {
	case $PACKAGE in
		speex)
			copy *.so*
			CAT="multimedia|library"
			;;
		*-bin)
			copy bin/
			CAT="multimedia|encoder and decoder"
			DEPENDS="libogg speex speexdsp"
			;;
		*-dev)
			copy @dev
			;;
	esac
}
