# SliTaz package receipt v2.

PACKAGE="nvclock"
VERSION="0.8b4"
CATEGORY="network"
SHORT_DESC="Small utility which allows users to overclock NVIDIA based video cards"
MAINTAINER="jozee@slitaz.org"
LICENSE="GPL2"
WEB_SITE="http://www.linuxhardware.org/nvclock/"

TARBALL="$PACKAGE$VERSION.tar.gz"
WGET_URL="$WEB_SITE/$TARBALL"

BUILD_DEPENDS="autoconf automake xorg-libX11-dev xorg-libXext-dev"

compile_rules(){
	[ -d $PACKAGE$VERSION ] && mv $PACKAGE$VERSION $PACKAGE-$VERSION
	sed -i 's|prefix}/man|prefix}/share/man|' Makefile*
	autoreconf
	patch -Np1 -i $stuff/$PACKAGE-$VERSION-install.patch

	./configure \
		--prefix=/usr \
		--bindir=/usr/bin &&
	make -j 1 &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	TAGS="power-management"
}
