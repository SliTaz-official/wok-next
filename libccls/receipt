# SliTaz package receipt v2.

PACKAGE="libccls"
VERSION="0.7.0"
CATEGORY="development"
SHORT_DESC="Server library for internet cafe programs"
MAINTAINER="allan316@gmail.com"
LICENSE="BSD"
WEB_SITE="http://ccl.sourceforge.net"

TARBALL="$PACKAGE-$VERSION.tar.bz2"
WGET_URL="$SF_MIRROR/ccl/$TARBALL"

BUILD_DEPENDS="file sqlite3-dev glib-dev openssl-dev"
SPLIT="libccls-dev"

# Rules to configure and make the package.
compile_rules()
{
	./configure $CONFIGURE_ARGS && make && make install
}

# Rules to gen a SliTaz package suitable for Tazpkg.
genpkg_rules()
{
	case $PACKAGE in
		libccls)
			copy @std
			DEPENDS="glib libcrypto libsqlite3 libssl"
			;;
		*-dev)
			copy @dev
			DEPENDS="libccls glib-dev openssl-dev pcre-dev sqlite3-dev"
			;;
	esac
}
