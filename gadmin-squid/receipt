# SliTaz package receipt v2.

PACKAGE="gadmin-squid"
VERSION="0.1.4"
CATEGORY="x-window"
SHORT_DESC="GTK+ configuration tool for SQUID"
MAINTAINER="pascal.bellard@slitaz.org"
LICENSE="GPL3"
WEB_SITE="https://web.archive.org/web/20180218034430/http://dalalven.dtdns.net/linux/gadmintools-webpage/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="http://dalalven.dtdns.net/linux/$PACKAGE/$TARBALL"

BUILD_DEPENDS="gtk+-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	make &&
	make DESTDIR=$DESTDIR install
}

genpkg_rules() {
	copy @std
	DEPENDS="gtk+ squid"
}
