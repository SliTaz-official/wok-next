# SliTaz package receipt v2.

PACKAGE="freeglut"
VERSION="3.0.0"
CATEGORY="x-window"
SHORT_DESC="OpenGL utility toolkit"
MAINTAINER="b1+slitaz@nagel.org"
LICENSE="GPL"
WEB_SITE="http://freeglut.sourceforge.net/"

TARBALL="$PACKAGE-$VERSION.tar.gz"
WGET_URL="$SF_MIRROR/$PACKAGE/$TARBALL"

BUILD_DEPENDS="cmake mesa-dev glu-dev xorg-libXi-dev"
SPLIT="freeglut-dev"

compile_rules() {
	mkdir build
	cd    build
	cmake \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		.. &&
	make &&
	make install || return 1

	chmod 644 $src/doc/*
	cook_pick_docs $src/doc/*
}

genpkg_rules() {
	case $PACKAGE in
		freeglut)
			copy @std
			DEPENDS="mesa xorg-libX11 xorg-libXi xorg-libXxf86vm"
			;;
		*-dev)
			copy @dev
			DEPENDS="freeglut mesa-dev xorg-libX11-dev xorg-libXrandr-dev \
			xorg-libXxf86vm-dev"
			;;
	esac
}
