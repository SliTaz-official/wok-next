# SliTaz package receipt v2.

PACKAGE="xorg-libXfont2"
VERSION="2.0.1"
CATEGORY="x-window"
SHORT_DESC="X font2 handling library for server & utilities"
MAINTAINER="al.bobylev@gmail.com"
LICENSE="MIT"
WEB_SITE="https://www.x.org/wiki/"
LFS="http://www.linuxfromscratch.org/blfs/view/stable/x/x7lib.html"
REPOLOGY="libxfont2"

TARBALL="libXfont2-$VERSION.tar.bz2"
WGET_URL="$XORG_MIRROR/lib/$TARBALL"

BUILD_DEPENDS="xorg-util-macros freetype-dev xorg-xproto xorg-xtrans \
xorg-fontsproto xorg-libfontenc-dev"
SPLIT="xorg-libXfont2-dev"

compile_rules() {
	./configure $CONFIGURE_ARGS &&
	fix libtool &&
	make &&
	make install
}

genpkg_rules() {
	case $PACKAGE in
		*-libXfont2)
			copy @std
			DEPENDS="freetype xorg-libfontenc zlib"
			;;
		*-dev)
			copy @dev
			DEPENDS="xorg-libXfont2 \
			freetype-dev xorg-fontsproto xorg-libfontenc-dev xorg-xproto \
			zlib-dev"
			;;
	esac
}
